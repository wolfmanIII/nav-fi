{% if pagination.total_pages > 1 %}
    <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="text-xs uppercase tracking-[0.2em] text-slate-400">
            Showing {{ pagination.from }}-{{ pagination.to }} of {{ pagination.total }}
        </div>
        <div class="join">
            {% set query = query ?? app.request.query.all %}
            {% set prevPage = pagination.current > 1 ? pagination.current - 1 : 1 %}
            {% set nextPage = pagination.current < pagination.total_pages ? pagination.current + 1 : pagination.total_pages %}
            {% set route = route ?? app.request.attributes.get('_route') %}
            <a class="join-item btn btn-sm btn-outline" href="{{ path(route, query|merge({'page': prevPage})) }}">&laquo;</a>
            {% for page in pagination.pages %}
                {% if page %}
                    <a class="join-item btn btn-sm {% if page == pagination.current %}btn-primary{% else %}btn-outline{% endif %}"
                       href="{{ path(route, query|merge({'page': page})) }}">
                        {{ page }}
                    </a>
                {% else %}
                    <span class="join-item btn btn-sm btn-ghost">â€¦</span>
                {% endif %}
            {% endfor %}
            <a class="join-item btn btn-sm btn-outline" href="{{ path(route, query|merge({'page': nextPage})) }}">&raquo;</a>
        </div>
    </div>
{% endif %}
