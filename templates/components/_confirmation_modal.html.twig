<div data-controller="confirmation">
    <dialog data-confirmation-target="dialog" class="modal backdrop-blur-sm">
        <div class="modal-box bg-slate-950 border border-slate-700 shadow-[0_0_50px_rgba(0,0,0,0.8)] relative overflow-hidden">
            <!-- Decorative Elements -->
            <div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
                {% include 'icons/radar.html.twig' with { dim: 96 } %}
            </div>
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-cyan-500/50 to-transparent"></div>

            <h3 data-confirmation-target="title" class="font-orbitron font-bold text-lg text-cyan-400 uppercase tracking-[0.2em] mb-4 flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-500 animate-pulse"></span>
                Confirmation Required
            </h3>
            
            <p data-confirmation-target="message" class="py-4 font-rajdhani text-slate-300 text-lg leading-relaxed border-y border-slate-800/50">
                Proceed with this operation?
            </p>
            
            <div class="modal-action mt-6">
                <button data-confirmation-target="cancelButton" 
                        data-action="click->confirmation#cancelAction" 
                        class="btn btn-ghost btn-sm font-orbitron tracking-widest text-slate-400 hover:text-slate-200 hover:bg-slate-800">
                    Cancel
                </button>
                <button data-confirmation-target="confirmButton" 
                        data-action="click->confirmation#confirmAction" 
                        class="btn btn-primary btn-sm font-orbitron tracking-widest text-white shadow-[0_0_15px_rgba(6,182,212,0.3)]">
                    Confirm
                </button>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button data-action="click->confirmation#cancelAction">close</button>
        </form>
    </dialog>
</div>
