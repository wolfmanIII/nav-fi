{% extends 'base.html.twig' %}

{% set CAN_CREW_REMOVE = constant('App\\Security\\Voter\\ShipVoter::CREW_REMOVE') %}
{% set can_remove_crew = is_granted(CAN_CREW_REMOVE, ship) %}

{% block title %}Captain Log - Ship Crew{% endblock %}

{% block pageContent %}

    <div class="p-10">

        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/crew.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship crew roster</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">{{ ship.name }}</h1>
                        <p class="text-sm text-cyan-100/80 font-mono break-all">Code: {{ ship.code }}</p>
                        <p class="text-sm text-cyan-100/80">{{ ship.type }} â€” {{ ship.class }}</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button class="btn btn-outline btn-primary btn-sm" onclick="m_crew_select.showModal()" title="Add crew">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    </button>
                </div>
            </div>
        </div>

        {% if ship.mortgageSigned %}
            <div class="alert alert-info alert-outline w-full mb-6">
                <div class="flex items-center gap-3">
                    <span class="flex items-center justify-center animate-spin-slow">
                        {% include 'icons/radar.html.twig' %}
                    </span>
                    <span>The Ship has Mortgage signed! Crew members can not be removed.</span>
                </div>
            </div>
        {% endif %}

        <div class="flow-root">
            <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100" data-controller="bulk-select">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <!-- head -->
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Nickname</th>
                        <th>Surname</th>
                        <th>Roles</th>
                        <th>Captain</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in ship.crews %}
                        <tr>
                            <td>{{ member.code }}</td>
                            <td>{{ member.name }}</td>
                            <td>"{{ member.nickname }}"</td>
                            <td>{{ member.surname }}</td>
                            <td>
                                {% for role in member.shipRoles %}
                                    {{ role.name }}
                                    {% if loop.index != loop.last %}
                                        -
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% if member.captain %}
                                    <div class="flex justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                        </svg>
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_ship_crew_remove', {id: member.id}) }}"
                                   role="button"
                                   class="btn btn-outline btn-error btn-xs"
                                   {% if not can_remove_crew %}disabled{% endif %}
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <dialog id="m_crew_select" class="modal">
            <div class="modal-box w-full max-w-5xl">
                <h3 class="text-lg font-bold mb-4">Select Crew Members</h3>

                {{ form_start(form) }}
                <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100" {{ stimulus_controller('bulk_select') }}>
                    <table class="table border-separate border-spacing-0 inner-bordered-table">
                        <!-- head -->
                        <thead>
                        <tr>
                            <th>
                                <input
                                    type="checkbox"
                                    class="checkbox"
                                    data-bulk-select-target="selectAll"
                                    data-action="change->bulk-select#toggleAll"
                                >
                            </th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Nickname</th>
                            <th>Surname</th>
                            <th>Roles</th>
                            <th>Captain</th>
                        </tr>
                        </thead>
                        <tbody>

                            {% if form.crewSelections|length > 0 %}
                                {% for row in form.crewSelections %}
                                    {% set selection = row.vars.data %}
                                    {% set member = selection.crew %} {# Twig chiama getCrew() #}

                                    <tr>
                                        <td>
                                            {{ form_widget(row.selected, {
                                                attr: {
                                                    class: 'checkbox crew-checkbox',
                                                    'data-bulk-select-target': 'item'
                                                }
                                            }) }}
                                        </td>
                                        <td>{{ member.code }}</td>
                                        <td>{{ member.name }}</td>
                                        <td>"{{ member.nickname }}"</td>
                                        <td>{{ member.surname }}</td>
                                        <td>
                                            {% for role in member.shipRoles %}
                                                {{ role.name }}{% if not loop.last %} - {% endif %}
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if member.captain %}
                                                <div class="flex justify-center">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                         viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                                    </svg>
                                                </div>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="7">No more crew members to add</td>
                                </tr>
                            {% endif %}

                        </tbody>
                    </table>
                </div>

                <div class="modal-action">
                    <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">Save</button>
                    <button type="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4" onclick="m_crew_select.close()">Close</button>
                </div>
                {{ form_end(form) }}

            </div>
            <form method="dialog" class="modal-backdrop">
                <button>close</button>
            </form>
        </dialog>

    </div>

{% endblock %}
