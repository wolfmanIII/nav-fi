{% extends 'base.html.twig' %}

{% set CAN_EDIT = constant('App\\Security\\Voter\\ShipVoter::EDIT') %}
{% set CAN_CREATE = constant('App\\Security\\Voter\\ShipVoter::CREATE') %}
{% set can_edit = is_granted(CAN_EDIT, ship) %}
{% set can_create = is_granted(CAN_CREATE, ship) %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Ship{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4">

        {{ form_start(form) }}

        <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Ship</legend>

            {% if ship.mortgageSigned %}
                <div class="col-span-2">
                    <div class="alert alert-info w-full">
                        The Ship has Mortgage signed! It can not be updated. Use a Ship Amendment to register changes.
                    </div>
                </div>
            {% endif %}

            <div class="col-span-2">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/far-trader.html.twig' %}
                        </div>
                        <div class="flex-1">
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship sheet</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Update your ship</h3>
                            <p class="text-sm text-cyan-100/80">Update class and price before mortgages and embarkations: every jump starts with an aligned bridge.</p>
                        </div>
                        {% if ship.id %}
                            <div class="flex items-start gap-2">
                                {{ tooltip.link('Open ship PDF',
                                                'Ship PDF',
                                                'icons/ship-pdf.html.twig',
                                                path('app_ship_pdf', { id: ship.id }),
                                                { dim: 16, linkClass: 'btn btn-outline btn-secondary btn-sm', attrs: { target: '_blank', rel: 'noopener' } }) }}
                                {% if ship.mortgageSigned %}
                                    {{ tooltip.link('Log ship amendments',
                                                    'Ship amendments',
                                                    'icons/ship-amendment.html.twig',
                                                    path('app_ship_amendment_new', { id: ship.id }),
                                                    { dim: 16, linkClass: 'btn btn-outline btn-info btn-sm' }) }}
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if ship.id %}
                <div class="col-span-2">
                    <label class="block text-slate-300">Code</label>
                    <div class="m-1 w-full"><b>{{ ship.code }}</b></div>
                </div>
            {% endif %}

            <div>
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                {{ form_label(form.type) }}
                {{ form_widget(form.type) }}
                {{ form_errors(form.type) }}
            </div>

            <div>
                {{ form_label(form.class) }}
                {{ form_widget(form.class) }}
                {{ form_errors(form.class) }}
            </div>

            <div>
                {{ form_label(form.campaign) }}
                {{ form_widget(form.campaign) }}
                {{ form_errors(form.campaign) }}
            </div>

            <div>
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                {{ form_errors(form.price) }}
            </div>

       </fieldset>

        {% include 'ship/_details_form.html.twig' with { detailsForm: form.shipDetails } %}

        <div class="flex gap-4">
            <button type="submit"
                    class="btn btn-outline btn-primary mt-4 mb-4"
                    {% if not (ship.id ? can_edit : can_create) %} disabled {% endif %}
            >
                Save
            </button>
            <a href="{{ path('app_ship_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4">Cancel</a>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
