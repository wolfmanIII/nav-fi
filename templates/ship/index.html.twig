{% extends 'base.html.twig' %}

{% block title %}Nav-Fi - Ships{% endblock %}

{% import '_tooltip.html.twig' as tooltip %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/far-trader.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Fleet manifest</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Ships</h1>
                        <p class="text-sm text-cyan-100/80">Classes, mortgages and crewed hulls ready for the next jump.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Launch a new hull',
                                    'Add ship',
                                    'icons/far-trader.html.twig',
                                    path('app_ship_new'),
                                    { dim: 24, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        <div class="alert alert-info alert-outline shadow-sm mb-6">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <div class="text-sm text-slate-200">
                Some records cannot be deleted because they are linked to other logs (campaigns, ships, payments, crew) or locked by a recorded payment.
            </div>
        </div>

        {% set filter_fields %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Campaign</label>
                <select name="campaign" class="select m-1 w-full">
                    <option value="">All campaigns</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>
                            {{ campaign.title }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Name</label>
                <input type="text" name="name" value="{{ filters.name }}" class="input m-1 w-full">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Type / Class</label>
                <input type="text" name="type_class" value="{{ filters.type_class }}" class="input m-1 w-full">
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            form_id: 'ship-filters',
            action: path('app_ship_index'),
            legend: 'Ship search',
            grid_class: 'md:grid-cols-3',
            fields: filter_fields,
            reset_path: path('app_ship_index'),
            is_filtered: filters.campaign or filters.name or filters.type_class
        } %}

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
            {% if ships|length > 0 %}
                {% for ship in ships %}
                    <div class="group relative flex flex-col rounded-xl border border-slate-800 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 p-4 shadow-lg transition-all hover:border-cyan-500/30 hover:shadow-cyan-500/10 hover:-translate-y-1">
                        {# Card Header: Actions & REF #}
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-2">
                                <div class="px-2 py-1 rounded border border-slate-700 bg-slate-800 text-xs font-mono tracking-widest text-slate-400 uppercase">
                                    {% include 'components/code_with_copy.html.twig' with { code: ship.code } %}
                                </div>
                            </div>
                            <div class="flex items-center gap-1">
                                {{ tooltip.link('Tune ship manifest', '', 'icons/action-edit.html.twig', path('app_ship_edit', {id: ship.id}), { dim: 16, linkClass: 'p-2 rounded-lg hover:bg-cyan-500/20 text-slate-400 hover:text-cyan-400' }) }}
                                {% set CAN_DELETE = constant('App\\Security\\Voter\\ShipVoter::DELETE') %}
                                {% set can_delete = is_granted(CAN_DELETE, ship) %}
                                {{ tooltip.link('Decommission hull', '', 'icons/action-trash.html.twig', path('app_ship_delete', {id: ship.id}), {
                                    dim: 16,
                                    linkClass: 'p-2 rounded-lg hover:bg-red-500/20 text-red-400' ~ (can_delete ? '' : ' opacity-50 pointer-events-none')
                                }) }}
                            </div>
                        </div>

                        {# Card Body: Identity #}
                        <div class="mb-4">
                            <h2 class="text-2xl font-bold text-slate-200 group-hover:text-cyan-400 transition-colors uppercase tracking-tight font-orbitron truncate" title="{{ ship.name }}">
                                {{ ship.name }}
                            </h2>
                            <p class="text-sm font-medium text-slate-500 font-rajdhani tracking-widest uppercase">
                                {{ ship.type }} // {{ ship.class }}
                            </p>
                        </div>

                        {# Card Detail: Tech Specs (Price & Mortgage) #}
                        <div class="grid grid-cols-2 gap-2 mb-6 p-2 rounded-lg bg-slate-900/50 border border-slate-800/50">
                            <div class="flex flex-col">
                                <span class="text-[10px] text-slate-500 uppercase tracking-wider font-rajdhani">Hull Cost</span>
                                <span class="text-cyan-300 font-mono text-sm tracking-tight">
                                    {{ ship.price|format_number({ min_fraction_digit: 0, max_fraction_digit: 0, grouping_used: true }, 'decimal', 'default', locale) }} <span class="text-xs text-cyan-500/60">Cr</span>
                                </span>
                            </div>
                            <div class="flex items-center justify-end">
                                {% if ship.mortgageSigned %}
                                    <div class="px-2 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold tracking-wider text-slate-400 uppercase flex items-center gap-1.5 opacity-70" title="Mortgage Signed">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-emerald-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                        SECURED
                                    </div>
                                {% else %}
                                     <div class="px-2 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold tracking-wider text-slate-500 uppercase flex items-center gap-1.5 opacity-50" title="No Mortgage">
                                        UNSECURED
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        {# Card Footer: Campaign & Crew #}
                        <div class="mt-auto pt-4 border-t border-slate-800 flex items-center justify-between gap-2">
                             <div class="flex items-center gap-2 overflow-hidden">
                                {% if ship.campaign %}
                                    <div class="text-cyan-500/50">{% include 'icons/alien-structure-1.html.twig' with { dim: 14 } %}</div>
                                    <span class="text-xs font-bold text-slate-400 uppercase tracking-wider truncate font-rajdhani">{{ ship.campaign.title }}</span>
                                {% else %}
                                     <span class="text-xs text-slate-600 uppercase tracking-wider font-rajdhani italic">No Campaign</span>
                                {% endif %}
                             </div>
                             
                             <a href="{{ path('app_ship_crew', {id: ship.id}) }}" class="flex items-center gap-2 px-3 py-1.5 rounded bg-slate-800 hover:bg-cyan-950/50 border border-slate-700 hover:border-cyan-500/50 text-slate-300 hover:text-cyan-300 transition-all group/btn">
                                <span class="text-[10px] font-bold uppercase tracking-wider">Crew</span>
                                {% include 'icons/crew.html.twig' with { dim: 14 } %}
                             </a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full py-12 text-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <p class="text-slate-500 font-rajdhani tracking-widest uppercase mb-4 text-sm">Drydock is empty // No ships detected</p>
                     {{ tooltip.link('Launch a new hull',
                                    'Initialize Construction',
                                    'icons/far-trader.html.twig',
                                    path('app_ship_new'),
                                    { dim: 20, linkClass: 'btn btn-primary btn-sm btn-outline' }) }}
                </div>
            {% endif %}
        </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_ship_index',
                query: app.request.query.all
            } %}

    </div>

{% endblock %}
