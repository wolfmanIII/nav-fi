{% extends 'pdf/base_pdf.html.twig' %}

{% block title %}Cost Sheet{% endblock %}

{% block document_content %}
    {% set locale = locale ?? 'en' %}
    <div class="mb-6">
        <table class="header-table">
            <tr>
                <td style="text-align: left;">
                    <img src="{{ asset_data_uri('img/nav-fi-logo.png') }}" alt="Nav-Fi&sup3;" class="logo">
                </td>
                <td style="text-align: right;">
                    <p class="text-sm font-bold uppercase tracking-wider text-gray-500 m-0">Disbursement docket</p>
                    <p class="text-xl font-bold text-gray-800 m-0">Payable statement</p>
                    <p class="text-xs text-gray-500 mt-1">
                        Docket ref: {{ cost.code }} |
                        {{ (cost.paymentDay is not null and cost.paymentYear is not null) ? (cost.paymentDay|imperial_date(cost.paymentYear)) : '—' }}
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                        Template: {{ template_version('pdf/cost/SHEET.html.twig') }}
                    </p>
                </td>
            </tr>
        </table>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4 grid grid-cols-2 gap-4">
            <div>
                <div class="text-xs text-gray-500">Title</div>
                <div class="font-bold text-gray-800">{{ cost.title }}</div>
            </div>
            <div>
                <div class="text-xs text-gray-500">Category</div>
                <div class="font-bold text-gray-800">{{ cost.costCategory ? cost.costCategory.description : '—' }}</div>
            </div>
            <div>
                <div class="text-xs text-gray-500">Company</div>
                <div class="font-bold text-gray-800">{{ cost.company ? cost.company.name ~ ' — ' ~ cost.company.code : '—' }}</div>
            </div>
            <div>
                <div class="text-xs text-gray-500">Asset</div>
                <div class="font-bold text-gray-800">{{ cost.financialAccount.asset ? cost.financialAccount.asset.name ~ ' — ' ~ cost.financialAccount.asset.type ~ ' — ' ~ cost.financialAccount.asset.class : '—' }}</div>
            </div>
        </div>
    </div>

    {% if cost.localLaw %}
        <div class="card mb-4">
            <div class="card-body p-4">
                <h2 class="card-title text-lg mb-2">Local Law</h2>
                <table class="table text-sm">
                    <thead>
                    <tr>
                        <th>Short Reference</th>
                        <th>Legal Basis / Article</th>
                        <th>Mandatory Disclaimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ cost.localLaw.shortDescription ?? '—' }}</td>
                        <td>{{ cost.localLaw.description ?? '—' }}</td>
                        <td>{{ cost.localLaw.disclaimer ?? '—' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Line-item register</h2>
            <table class="table text-sm">
                <thead>
                <tr>
                    <th>Description</th>
                    <th style="text-align: right;">Quantity</th>
                    <th style="text-align: right;">Unit Cost (Cr)</th>
                    <th style="text-align: right;">Line Total (Cr)</th>
                </tr>
                </thead>
                <tbody>
                {% set items = cost.detailItems ?? [] %}
                {% if items|length == 0 %}
                    {% set items = [ { description: '—', quantity: null, cost: null } ] %}
                {% endif %}
                {% for item in items %}
                    {% set qty = item.quantity ?? null %}
                    {% set unit = item.cost ?? null %}
                    {% set lineTotal = (qty is not null and unit is not null) ? qty * unit : null %}
                    <tr>
                        <td>{{ item.description ?? '—' }}</td>
                        <td style="text-align: right;">{{ qty is not null ? qty|format_number({ min_fraction_digit: 0, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) : '—' }}</td>
                        <td style="text-align: right;">{{ unit is not null ? unit|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) : '—' }}</td>
                        <td style="text-align: right;">{{ lineTotal is not null ? lineTotal|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) : '—' }}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="3" style="text-align: right; font-weight: 700;">Total (Cr)</td>
                    <td style="text-align: right; font-weight: 700;">
                        {{ cost.amount is not null ? cost.amount|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) : '—' }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% if cost.note %}
        <div class="card mb-4">
            <div class="card-body p-4">
                <h2 class="card-title text-lg mb-2">Notes</h2>
                <div class="text-sm text-gray-500" style="white-space: pre-line;">{{ cost.note }}</div>
            </div>
        </div>
    {% endif %}
{% endblock %}
