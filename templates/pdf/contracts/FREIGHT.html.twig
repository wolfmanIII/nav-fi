{% extends 'base_plain.html.twig' %}

{% block title %}Freight Transport Receipt{% endblock %}
{% block stylesheets %}
    <style>
        body { font-family: 'Inter', 'Segoe UI', sans-serif; font-size: 10px; }
        .card { border: none; border-radius: 8px; background: transparent; page-break-inside: avoid; }
        .no-break { page-break-inside: avoid; }
        .card-body { padding: 10px; }
        .table { width: 100%; border-collapse: collapse; border: 1px solid #d1d5db; background: transparent; }
        .table th, .table td { border: 1px solid #d1d5db; padding: 6px; }
        .table th { text-align: left; }
        .table-borderless { width: 100%; border-collapse: collapse; }
        .table-borderless th, .table-borderless td { border: none; padding: 6px; }
        .signature-table { width: 100%; border-collapse: collapse; }
        .signature-table th, .signature-table td { border: none; padding: 6px; }
        .signature-table th:first-child, .signature-table td:first-child { text-align: left; }
        .signature-table th:last-child, .signature-table td:last-child { text-align: right; }
        .text-right { text-align: right; }
        .mb-4 { margin-bottom: 0.5rem; }
        .mb-6 { margin-bottom: 0.75rem; }
        .mt-3 { margin-top: 0.75rem; }
        .grid { display: grid; }
        .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .gap-4 { gap: 0.75rem; }
        .header-table { width: 100%; border-collapse: collapse; margin-bottom: 0.5rem; }
        .header-table td { vertical-align: middle; }
        .logo { height: 64px; }
        .text-sm { font-size: 0.7rem; }
        .text-lg { font-size: 0.9rem; }
        .text-2xl { font-size: 1.1rem; }
        .font-bold { font-weight: 700; }
        .card-title { font-weight: 700; }
    </style>
{% endblock %}
{% block javascripts %}{% endblock %}

{% block pageContent %}
    <div class="mb-6">
        <table class="header-table">
            <tr>
                <td>
                    <img src="{{ absolute_url(asset('img/captain-log-logo.png')) }}" alt="Captain Log" class="logo">
                </td>
                <td class="text-right">
                    <div class="text-2xl font-bold">Freight Transport Receipt</div>
                    <div class="text-sm font-bold">Code: {{ '{{CONTRACT_ID}}' }}</div>
                    <div class="text-sm font-bold">Status: {{ '{{STATUS}}' }}</div>
                    <div class="text-sm">{{ '{{DATE}}' }}</div>
                </td>
            </tr>
        </table>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Local Law</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Short Reference</th>
                        <th>Legal Basis / Article</th>
                        <th>Mandatory Disclaimer</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{LOCAL_LAW_SHORT_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DISCLAIMER}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Parties</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Shipper (Client)</th>
                        <th>Carrier</th>
                        <th>Vessel</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{SHIPPER_NAME}}' }}<br>Contact: {{ '{{SHIPPER_CONTACT}}' }}</td>
                        <td>{{ '{{CARRIER_NAME}}' }}</td>
                        <td>{{ '{{VESSEL_NAME}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Route & Schedule</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Origin</th>
                        <th>Destination</th>
                        <th>Pickup</th>
                        <th>Delivery ETA</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{ORIGIN}}' }}</td>
                        <td>{{ '{{DESTINATION}}' }}</td>
                        <td>{{ '{{PICKUP_DATE}}' }}</td>
                        <td>{{ '{{DELIVERY_DATE}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Delivery Proof</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Confirmation Date</th>
                        <th>Received By</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{DELIVERY_PROOF_REF}}' }}</td>
                        <td>{{ '{{DELIVERY_PROOF_DATE}}' }}</td>
                        <td>{{ '{{DELIVERY_PROOF_RECEIVED_BY}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Cargo</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Qty / Weight</th>
                        <th>Declared Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{CARGO_DESCRIPTION}}' }}</td>
                        <td>{{ '{{CARGO_QTY}}' }}</td>
                        <td>{{ '{{DECLARED_VALUE}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Payment & Terms</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Payment</th>
                        <th>Liability Limit</th>
                        <th>Cancellation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                        <td>{{ '{{LIABILITY_LIMIT}}' }}</td>
                        <td>{{ '{{CANCELLATION_TERMS}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Notes / Handling</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{NOTES}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4 no-break">
        <div class="card-body p-4">
            <table class="signature-table text-sm">
                <thead>
                    <tr>
                        <th>Shipper</th>
                        <th>Carrier</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><em>{{ '{{SHIPPER_SIGN}}' }}</em></td>
                        <td><em>{{ '{{CARRIER_SIGN}}' }}</em></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
