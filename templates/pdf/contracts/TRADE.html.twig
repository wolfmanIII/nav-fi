{% extends 'base_plain.html.twig' %}

{% block title %}Buy/Sell Deal Receipt{% endblock %}
{% block stylesheets %}
    <style>
        body { font-family: 'Inter', 'Segoe UI', sans-serif; font-size: 10px; }
        .card { border: none; border-radius: 8px; background: transparent; page-break-inside: avoid; }
        .no-break { page-break-inside: avoid; }
        .card-body { padding: 10px; }
        .table { width: 100%; border-collapse: collapse; border: 1px solid #d1d5db; background: transparent; }
        .table th, .table td { border: 1px solid #d1d5db; padding: 6px; }
        .table th { text-align: left; }
        .table-borderless { width: 100%; border-collapse: collapse; }
        .table-borderless th, .table-borderless td { border: none; padding: 6px; }
        .signature-table { width: 100%; border-collapse: collapse; }
        .signature-table th, .signature-table td { border: none; padding: 6px; }
        .signature-table th:first-child, .signature-table td:first-child { text-align: left; }
        .signature-table th:last-child, .signature-table td:last-child { text-align: right; }
        .text-right { text-align: right; }
        .mb-4 { margin-bottom: 0.5rem; }
        .mb-6 { margin-bottom: 0.75rem; }
        .mt-3 { margin-top: 0.75rem; }
        .grid { display: grid; }
        .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .gap-4 { gap: 0.75rem; }
        .header-table { width: 100%; border-collapse: collapse; margin-bottom: 0.5rem; }
        .header-table td { vertical-align: middle; }
        .logo { height: 64px; }
        .text-sm { font-size: 0.7rem; }
        .text-lg { font-size: 0.9rem; }
        .text-2xl { font-size: 1.1rem; }
        .font-bold { font-weight: 700; }
        .card-title { font-weight: 700; }
    </style>
{% endblock %}
{% block javascripts %}{% endblock %}

{% block pageContent %}
    <div class="mb-6">
        <table class="header-table">
            <tr>
                <td>
                    <img src="{{ absolute_url(asset('img/captain-log-logo.png')) }}" alt="Captain Log" class="logo">
                </td>
                <td class="text-right">
                    <div class="text-2xl font-bold">Buy/Sell Deal Receipt</div>
                    <div class="text-sm font-bold">Deal ID: {{ '{{DEAL_ID}}' }}</div>
                    <div class="text-sm">{{ '{{DATE}}' }}</div>
                </td>
            </tr>
        </table>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Local Law</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Short Reference</th>
                        <th>Legal Basis / Article</th>
                        <th>Mandatory Disclaimer</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{LOCAL_LAW_SHORT_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DISCLAIMER}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Parties</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Buyer</th>
                        <th>Seller</th>
                        <th>Exchange Location</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{BUYER_NAME}}' }}<br>Contact: {{ '{{BUYER_CONTACT}}' }}</td>
                        <td>{{ '{{SELLER_NAME}}' }}<br>Contact: {{ '{{SELLER_CONTACT}}' }}</td>
                        <td>{{ '{{LOCATION}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Goods</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Quantity / Units</th>
                        <th>Quality / Grade</th>
                        <th>Batch / Container IDs</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{GOODS_DESCRIPTION}}' }}</td>
                        <td>{{ '{{QTY}}' }}</td>
                        <td>{{ '{{GRADE}}' }}</td>
                        <td>{{ '{{BATCH_IDS}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Pricing & Payment</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Payment Terms</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{UNIT_PRICE}}' }}</td>
                        <td>{{ '{{TOTAL_PRICE}}' }}</td>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Delivery & Terms</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Delivery Method</th>
                        <th>Delivery Date / ETA</th>
                        <th>Transfer Point</th>
                        <th>Transfer Condition</th>
                        <th>As-is / Warranty</th>
                        <th>Warranty Text</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{DELIVERY_METHOD}}' }}</td>
                        <td>{{ '{{DELIVERY_DATE}}' }}</td>
                        <td>{{ '{{TRANSFER_POINT}}' }}</td>
                        <td>{{ '{{TRANSFER_CONDITION}}' }}</td>
                        <td>{{ '{{AS_IS_OR_WARRANTY}}' }}</td>
                        <td>{{ '{{WARRANTY}}' }}</td>
                    </tr>
                </tbody>
            </table>
            <table class="table text-sm mt-3">
                <thead>
                    <tr>
                        <th>Claim Window</th>
                        <th>Cancel / Return Policy</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{CLAIM_WINDOW}}' }}</td>
                        <td>{{ '{{CANCEL_RETURN_POLICY}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Delivery Proof</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Confirmation Date</th>
                        <th>Received By</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{DELIVERY_PROOF_REF}}' }}</td>
                        <td>{{ '{{DELIVERY_PROOF_DATE}}' }}</td>
                        <td>{{ '{{DELIVERY_PROOF_RECEIVED_BY}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{NOTES}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4 no-break">
        <div class="card-body p-4">
            <table class="signature-table text-sm">
                <thead>
                    <tr>
                        <th>Buyer</th>
                        <th>Seller</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><em>{{ '{{BUYER_SIGN}}' }}</em></td>
                        <td><em>{{ '{{SELLER_SIGN}}' }}</em></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
