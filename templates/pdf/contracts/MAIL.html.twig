{% extends 'base_plain.html.twig' %}

{% block title %}Mail Run Receipt{% endblock %}
{% block stylesheets %}
    <style>
        body { font-family: 'Inter', 'Segoe UI', sans-serif; font-size: 10px; }
        .card { border: none; border-radius: 8px; background: transparent; }
        .card-body { padding: 10px; }
        .table { width: 100%; border-collapse: collapse; border: 1px solid #d1d5db; background: transparent; }
        .table th, .table td { border: 1px solid #d1d5db; padding: 6px; }
        .table th { text-align: left; }
        .table-borderless { width: 100%; border-collapse: collapse; }
        .table-borderless th, .table-borderless td { border: none; padding: 6px; }
        .signature-table { width: 100%; border-collapse: collapse; }
        .signature-table th, .signature-table td { border: none; padding: 6px; }
        .signature-table th:first-child, .signature-table td:first-child { text-align: left; }
        .signature-table th:last-child, .signature-table td:last-child { text-align: right; }
        .text-right { text-align: right; }
        .mb-4 { margin-bottom: 0.5rem; }
        .mb-6 { margin-bottom: 0.75rem; }
        .mt-3 { margin-top: 0.75rem; }
        .grid { display: grid; }
        .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .gap-4 { gap: 0.75rem; }
        .header-table { width: 100%; border-collapse: collapse; margin-bottom: 0.5rem; }
        .header-table td { vertical-align: middle; }
        .logo { height: 64px; }
        .text-sm { font-size: 0.7rem; }
        .text-lg { font-size: 0.9rem; }
        .text-2xl { font-size: 1.1rem; }
        .font-bold { font-weight: 700; }
        .card-title { font-weight: 700; }
    </style>
{% endblock %}
{% block javascripts %}{% endblock %}

{% block pageContent %}
    <div class="mb-6">
        <table class="header-table">
            <tr>
                <td>
                    <img src="{{ absolute_url(asset('img/captain-log-logo.png')) }}" alt="Captain Log" class="logo">
                </td>
                <td class="text-right">
                    <div class="text-2xl font-bold">Mail Run Receipt</div>
                    <div class="text-sm font-bold">Run Id: {{ '{{RUN_ID}}' }}</div>
                    <div class="text-sm">Date: {{ '{{DATE}}' }}</div>
                </td>
            </tr>
        </table>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Local Law</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Short Reference</th>
                        <th>Legal Basis / Article</th>
                        <th>Mandatory Disclaimer</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{LOCAL_LAW_SHORT_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DISCLAIMER}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Carrier & Vessel</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Carrier</th>
                        <th>Vessel</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{CARRIER_NAME}}' }}</td>
                        <td>{{ '{{VESSEL_NAME}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Authority Ref.</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Authority</th>
                        <th>Account Ref.</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{AUTHORITY_NAME}}' }}</td>
                        <td><em>{{ '{{AUTHORITY_SIGN}}' }}</em></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Route & Schedule</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Origin</th>
                        <th>Destination</th>
                        <th>Dispatch</th>
                        <th>Delivery ETA</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{ORIGIN}}' }}</td>
                        <td>{{ '{{DESTINATION}}' }}</td>
                        <td>{{ '{{DISPATCH_DATE}}' }}</td>
                        <td>{{ '{{DELIVERY_DATE}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Mail Details</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Mail Type</th>
                        <th>Package Count</th>
                        <th>Total Mass</th>
                        <th>Security Level</th>
                        <th>Seal Codes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{MAIL_TYPE}}' }}</td>
                        <td>{{ '{{PACKAGE_COUNT}}' }}</td>
                        <td>{{ '{{TOTAL_MASS}}' }}</td>
                        <td>{{ '{{SECURITY_LEVEL}}' }}</td>
                        <td>{{ '{{SEAL_CODES}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Payment & Terms</h2>
            <table class="table text-sm mb-6">
                <thead>
                    <tr>
                        <th>Terms</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                    </tr>
                </tbody>
            </table>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Fee</th>
                        <th>Liability Limit</th>
                        <th>Proof of Delivery</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{MAIL_FEE}}' }}</td>
                        <td>{{ '{{LIABILITY_LIMIT}}' }}</td>
                        <td>{{ '{{PROOF_OF_DELIVERY}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mb-4">
        <table class="table text-sm">
            <thead>
                <tr>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ '{{NOTES}}' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <table class="signature-table text-sm">
        <thead>
            <tr>
                <th>Carrier</th>
                <th>Delivery Confirmation</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><em>{{ '{{CARRIER_SIGN}}' }}</em></td>
                <td>{{ '{{PROOF_OF_DELIVERY}}' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
