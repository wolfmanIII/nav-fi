            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Origin</th>
                        <th>Destination</th>
                        <th>Coverage Period</th>
                        <th>Service Level</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{ORIGIN}}' }}</td>
                        <td>{{ '{{DESTINATION}}' }}</td>
                        <td>{{ '{{START_DATE}}' }} â†’ {{ '{{END_DATE}}' }}</td>
                        <td>{{ '{{SERVICE_LEVEL}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Delivery Proof</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Confirmation Date</th>
                        <th>Received By</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{DELIVERY_PROOF_REF}}' }}</td>
                        <td>{{ '{{DELIVERY_PROOF_DATE}}' }}</td>
                        <td>{{ '{{DELIVERY_PROOF_RECEIVED_BY}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Subsidy & Terms</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Subsidy Amount</th>
                        <th>Payment</th>
                        <th>Milestones</th>
                        <th>Reporting</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{SUBSIDY_AMOUNT}}' }}</td>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                        <td>{{ '{{MILESTONES}}' }}</td>
                        <td>{{ '{{REPORTING_REQUIREMENTS}}' }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="grid grid-cols-2 gap-4 text-sm mt-3">
                <div>
                    <h3 class="card-title text-sm mb-1">Proof requirements</h3>
                    <div>{{ '{{PROOF_REQUIREMENTS}}' }}</div>
                </div>
                <div>
                    <h3 class="card-title text-sm mb-1">Non-compliance</h3>
                    <div>{{ '{{NON_COMPLIANCE_TERMS}}' }}</div>
                </div>
            </div>
            <div class="mt-3 text-sm">
                Cancellation: {{ '{{CANCELLATION_TERMS}}' }}
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{NOTES}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4 no-break">
        <div class="card-body p-4">
            <table class="signature-table text-sm">
                <thead>
                    <tr>
                        <th>Authority</th>
                        <th>Recipient / Carrier</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><em>{{ '{{AUTHORITY_SIGN}}' }}</em></td>
                        <td><em>{{ '{{CARRIER_SIGN}}' }}</em></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
