{% extends 'base_plain.html.twig' %}

{% block title %}Interest / Investment Receipt{% endblock %}
{% block stylesheets %}
    <style>
        body { font-family: 'Inter', 'Segoe UI', sans-serif; font-size: 10px; }
        .card { border: none; border-radius: 8px; background: transparent; }
        .card-body { padding: 10px; }
        .table { width: 100%; border-collapse: collapse; border: 1px solid #d1d5db; background: transparent; }
        .table th, .table td { border: 1px solid #d1d5db; padding: 6px; }
        .table th { text-align: left; }
        .table-borderless { width: 100%; border-collapse: collapse; }
        .table-borderless th, .table-borderless td { border: none; padding: 6px; }
        .signature-table { width: 100%; border-collapse: collapse; }
        .signature-table th, .signature-table td { border: none; padding: 6px; }
        .signature-table th:first-child, .signature-table td:first-child { text-align: left; }
        .signature-table th:last-child, .signature-table td:last-child { text-align: right; }
        .text-right { text-align: right; }
        .mb-4 { margin-bottom: 0.5rem; }
        .mb-6 { margin-bottom: 0.75rem; }
        .mt-3 { margin-top: 0.75rem; }
        .grid { display: grid; }
        .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .gap-4 { gap: 0.75rem; }
        .header-table { width: 100%; border-collapse: collapse; margin-bottom: 0.5rem; }
        .header-table td { vertical-align: middle; }
        .logo { height: 64px; }
        .text-sm { font-size: 0.7rem; }
        .text-lg { font-size: 0.9rem; }
        .text-2xl { font-size: 1.1rem; }
        .font-bold { font-weight: 700; }
        .card-title { font-weight: 700; }
    </style>
{% endblock %}
{% block javascripts %}{% endblock %}

{% block pageContent %}
    <div class="mb-6">
        <table class="header-table">
            <tr>
                <td>
                    <img src="{{ absolute_url(asset('img/captain-log-logo.png')) }}" alt="Captain Log" class="logo">
                </td>
                <td class="text-right">
                    <div class="text-2xl font-bold">Interest / Investment Receipt</div>
                    <div class="text-sm font-bold">Receipt ID: {{ '{{RECEIPT_ID}}' }}</div>
                    <div class="text-sm">Date: {{ '{{DATE}}' }}</div>
                </td>
            </tr>
        </table>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Local Law</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Short Reference</th>
                        <th>Legal Basis / Article</th>
                        <th>Mandatory Disclaimer</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{LOCAL_LAW_SHORT_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DESCRIPTION}}' }}</td>
                        <td>{{ '{{LOCAL_LAW_DISCLAIMER}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Parties</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Payer (Bank/Issuer)</th>
                        <th>Payee (Investor)</th>
                        <th>Account / Ref</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{PAYER_NAME}}' }}</td>
                        <td>{{ '{{PAYEE_NAME}}' }}<br>Contact: {{ '{{PAYEE_CONTACT}}' }}</td>
                        <td>{{ '{{ACCOUNT_REF}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Instrument</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Instrument</th>
                        <th>Principal / Balance</th>
                        <th>Rate</th>
                        <th>Period</th>
                        <th>Method</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{INSTRUMENT}}' }}</td>
                        <td>{{ '{{PRINCIPAL}}' }} {{ '{{CURRENCY}}' }}</td>
                        <td>{{ '{{INTEREST_RATE}}' }}%</td>
                        <td>{{ '{{START_DATE}}' }} â†’ {{ '{{END_DATE}}' }}</td>
                        <td>{{ '{{CALC_METHOD}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Payout</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Interest Earned</th>
                        <th>Net Paid</th>
                        <th>Payment Terms</th>
                        <th>Dispute Window</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{INTEREST_EARNED}}' }} {{ '{{CURRENCY}}' }}</td>
                        <td>{{ '{{NET_PAID}}' }} {{ '{{CURRENCY}}' }}</td>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                        <td>{{ '{{DISPUTE_WINDOW}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{NOTES}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <table class="signature-table text-sm">
        <thead>
            <tr>
                <th>Payer</th>
                <th>Payee</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><em>{{ '{{PAYER_SIGN}}' }}</em></td>
                <td><em>{{ '{{PAYEE_SIGN}}' }}</em></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
