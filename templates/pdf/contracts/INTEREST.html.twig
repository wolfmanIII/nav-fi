        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Instrument</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Instrument</th>
                        <th>Principal / Balance</th>
                        <th>Rate</th>
                        <th>Period</th>
                        <th>Method</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{INSTRUMENT}}' }}</td>
                        <td>{{ '{{PRINCIPAL}}' }}</td>
                        <td>{{ '{{INTEREST_RATE}}' }}%</td>
                        <td>{{ '{{START_DATE}}' }} â†’ {{ '{{END_DATE}}' }}</td>
                        <td>{{ '{{CALC_METHOD}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Payout</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Interest Earned</th>
                        <th>Net Paid</th>
                        <th>Payment Terms</th>
                        <th>Dispute Window</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{INTEREST_EARNED}}' }}</td>
                        <td>{{ '{{NET_PAID}}' }}</td>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                        <td>{{ '{{DISPUTE_WINDOW}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{NOTES}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4 no-break">
        <div class="card-body p-4">
            <table class="signature-table text-sm">
                <thead>
                    <tr>
                        <th>Payer</th>
                        <th>Payee</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><em>{{ '{{PAYER_SIGN}}' }}</em></td>
                        <td><em>{{ '{{PAYEE_SIGN}}' }}</em></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
