{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <style>
        .quick-link {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e3e6;
            border-radius: 0.6rem;
            text-decoration: none;
            color: inherit;
            background: #fff;
        }
        .quick-link:hover {
            background: #f8f9fb;
        }
        .quick-link .label {
            margin: 0;
            white-space: normal;
        }
        .quick-link .cta {
            color: #0d6efd;
            font-weight: 600;
        }
    </style>

    <div class="ea-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Pannello di controllo</h1>
            <p class="text-muted mb-0">Link rapidi alle entit√† di contesto e all'indice RAG</p>
        </div>
    </div>

    <div class="row g-3">
        {% for label, url in links %}
            <div class="col-12 col-md-6 col-xl-4">
                <a href="{{ url }}" class="quick-link">
                    <p class="fw-semibold label">{{ label }}</p>
                    <span class="cta">Apri</span>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
