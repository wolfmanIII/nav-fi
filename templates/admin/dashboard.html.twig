{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <style>
        :root {
            --body-bg: #0f172a; /* slate-950 */
            --text-color: #94a3b8; /* slate-400 */
        }
        .content-wrapper { background: transparent !important; }
        
        .nav-fi-dashboard {
            font-family: 'Rajdhani', sans-serif;
            color: #e2e8f0;
        }



        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .dashboard-card {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.25rem;
            background: linear-gradient(135deg, #020617, #0f172a);
            border: 1px solid #1e293b;
            border-radius: 0.75rem;
            text-decoration: none;
            color: #cbd5e1;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
        }

        .dashboard-card::after {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 0.75rem;
            box-shadow: inset 0 0 0 1px rgba(6, 182, 212, 0);
            transition: all 0.2s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #020617, #0f172a, #020617);
            border-color: rgba(6, 182, 212, 0.3); /* cyan-500/30 */
            box-shadow: 0 4px 6px -1px rgba(6, 182, 212, 0.1);
        }

        .dashboard-card:hover::after {
            box-shadow: inset 0 0 0 1px rgba(6, 182, 212, 0.1);
        }

        .dashboard-card span {
            font-weight: 600;
            letter-spacing: 0.05em;
        }

        .dashboard-card .cta {
            color: #22d3ee; /* cyan-400 */
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            background: rgba(6, 182, 212, 0.1);
            padding: 0.25rem 0.75rem;
            border-radius: 0.25rem;
            border: 1px solid rgba(6, 182, 212, 0.2);
            transition: all 0.2s ease;
        }
        
        .dashboard-card:hover .cta {
            background: rgba(6, 182, 212, 0.2);
            color: #cffafe;
            border-color: rgba(6, 182, 212, 0.5);
        }

        /* Override links inside card */
        .dashboard-card:hover .cta {
           text-decoration: none !important;
        }
        a:hover { text-decoration: none; }

    </style>

    <div class="nav-fi-dashboard container-fluid px-2 px-lg-0 mt-3">
        {% include 'components/_hero_header.html.twig' with {
            icon: 'icons/admin.html.twig',
            theme: 'cyan',
            subheader: 'System Administration',
            title: 'Command Console',
            description: 'Low-level entity management and database oversight.'
        } %}

        <div class="dashboard-grid mt-6">
            {% for label, url in links %}
                <a href="{{ url }}" class="dashboard-card">
                    <span>{{ label }}</span>
                    <span class="cta">ACCESS</span>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
