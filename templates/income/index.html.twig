{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Incomes{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/income.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship income</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Incomes</h1>
                        <p class="text-sm text-cyan-100/80">Freight, charter, salvage and contracts: record incoming credits and plan the next jump.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Log incoming credits',
                                    'Add income',
                                    'icons/income.html.twig',
                                    path('app_income_new'),
                                    { dim: 24, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        <div class="alert alert-info alert-outline shadow-sm mb-6">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <div class="text-sm text-slate-200">
                Some records cannot be deleted because they are linked to other logs (campaigns, ships, payments, crew) or locked by a recorded payment.
            </div>
        </div>

        {% set filter_fields %}
            <div>
                <label class="label text-[10px] uppercase tracking-[0.2em] text-cyan-500/60 font-bold">TITLE_DATA</label>
                <input type="text" name="title" value="{{ filters.title }}" class="input w-full bg-slate-950/50 border-slate-800 text-cyan-100 placeholder:text-slate-600 focus:border-cyan-500/50" placeholder="Search by title...">
            </div>
            <div>
                <label class="label text-[10px] uppercase tracking-[0.2em] text-cyan-500/60 font-bold">CAT_ID</label>
                <select name="category" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ALL_SECTORS</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if filters.category == category.id %}selected{% endif %}>
                            {{ category.description }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-[10px] uppercase tracking-[0.2em] text-cyan-500/60 font-bold">VESSEL_NAV</label>
                <select name="ship" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ANY_VESSEL</option>
                    {% for ship in ships %}
                        <option value="{{ ship.id }}" {% if filters.ship == ship.id %}selected{% endif %}>{{ ship.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-[10px] uppercase tracking-[0.2em] text-cyan-500/60 font-bold">OPS_CAMPAIGN</label>
                <select name="campaign" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ALL_OPERATIONS</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            action: path('app_income_index'),
            legend: 'Income search',
            fields: filter_fields,
            reset_path: path('app_income_index'),
            is_filtered: filters.title or filters.category or filters.ship or filters.campaign
        } %}

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
            {% if incomes|length > 0 %}
                {% for income in incomes %}
                    <div class="group relative flex flex-col rounded-xl border border-cyan-500/20 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-8 shadow-lg transition-all hover:border-cyan-500/50 hover:shadow-cyan-500/10 hover:-translate-y-1">
                        {# Card Header: Code & Status #}
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-2">
                                <div class="px-2 py-0.5 rounded border border-cyan-500/40 bg-cyan-500/5 text-[10px] font-mono tracking-widest text-cyan-400 uppercase">
                                    REF: {{ income.code }}
                                </div>
                                {% if income.status %}
                                    <span class="px-2 py-0.5 rounded bg-slate-800 text-[10px] font-bold tracking-tighter uppercase border border-slate-700 text-slate-400">
                                        {{ income.status }}
                                    </span>
                                {% endif %}
                            </div>
                            <div class="flex items-center gap-1">
                                {{ tooltip.link('Edit', '', 'icons/action-edit.html.twig', path('app_income_edit', {id: income.id}), { dim: 18, linkClass: 'p-2.5 rounded-lg hover:bg-cyan-500/20 text-cyan-400' }) }}
                                {{ tooltip.link('Delete', '', 'icons/action-trash.html.twig', path('app_income_delete', {id: income.id}), { dim: 18, linkClass: 'p-2.5 rounded-lg hover:bg-red-500/20 text-red-400' }) }}
                            </div>
                        </div>

                        {# Card Body: Main Content #}
                        <div class="mb-4 grow">
                            <h3 class="text-xl font-bold text-cyan-100 mb-1 group-hover:text-cyan-400 transition-colors uppercase tracking-tight">
                                {{ income.title }}
                            </h3>
                            <div class="flex items-center gap-2 text-xs text-slate-400">
                                {% include 'icons/income.html.twig' with {'dim': 12} %}
                                <span>{{ income.incomeCategory.description }}</span>
                            </div>
                        </div>

                        {# Amount Section #}
                        <div class="mb-6 py-3 px-4 rounded-lg bg-cyan-900/20 border-x-2 border-cyan-500/30">
                            <div class="flex items-end justify-between">
                                <span class="text-[10px] uppercase tracking-widest text-cyan-500/70 font-bold">Projected Revenue</span>
                                <div class="text-2xl font-mono font-bold text-cyan-300">
                                    {{ income.amount|format_number({ min_fraction_digit: 2, max_fraction_digit: 2 }, 'decimal', 'default', locale) }}
                                    <span class="text-xs ml-1 text-cyan-600">Cr</span>
                                </div>
                            </div>
                        </div>

                        {# Vessel & Context #}
                        <div class="grid grid-cols-2 gap-4 mb-4 text-[11px]">
                            <div class="flex flex-col gap-1">
                                <span class="uppercase tracking-tighter text-slate-500">Vessel Assignment</span>
                                <div class="flex items-center gap-2 text-cyan-100">
                                    {% include 'icons/far-trader.html.twig' with {'dim': 14} %}
                                    <span>{{ income.ship ? income.ship.name : 'UNASSIGNED' }}</span>
                                </div>
                            </div>
                            <div class="flex flex-col gap-1">
                                <span class="uppercase tracking-tighter text-slate-500">Operation Area</span>
                                <div class="flex items-center gap-2 text-slate-300">
                                    {% include 'icons/alien-structure-1.html.twig' with {'dim': 14} %}
                                    <span class="truncate">{{ (income.ship and income.ship.campaign) ? income.ship.campaign.title : 'GLOBAL_SPACE' }}</span>
                                </div>
                            </div>
                        </div>

                        {# Timeline #}
                        <div class="pt-4 border-t border-slate-800">
                            <div class="flex justify-between items-center text-[10px] font-mono mb-2">
                                <div class="flex flex-col">
                                    <span class="text-slate-500 uppercase">Signing</span>
                                    <span class="text-cyan-500/80">{{ (income.signingDay is not null and income.signingYear is not null) ? (income.signingDay|imperial_date(income.signingYear)) : 'N/A' }}</span>
                                </div>
                                <div class="flex flex-col text-center">
                                    <span class="text-slate-500 uppercase">Payment</span>
                                    <span class="{{ income.paymentDay ? 'text-emerald-400' : 'text-amber-500' }}">
                                        {{ (income.paymentDay is not null and income.paymentYear is not null) ? (income.paymentDay|imperial_date(income.paymentYear)) : 'PENDING' }}
                                    </span>
                                </div>
                                <div class="flex flex-col text-right">
                                    <span class="text-slate-500 uppercase">Expiry</span>
                                    <span class="text-red-400/80">{{ (income.expirationDay is not null and income.expirationYear is not null) ? (income.expirationDay|imperial_date(income.expirationYear)) : 'STABLE' }}</span>
                                </div>
                            </div>
                            {# Visual Progress Bar #}
                            <div class="h-1 w-full bg-slate-800 rounded-full overflow-hidden">
                                <div class="h-full bg-cyan-500 shadow-[0_0_8px_rgba(6,182,212,0.5)] {{ income.paymentDay ? 'w-full bg-emerald-500 shadow-emerald-500/50' : 'w-1/3' }}"></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full py-20 flex flex-col items-center justify-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <div class="text-slate-500 mb-2">{% include 'icons/income.html.twig' with {'dim': 48} %}</div>
                    <p class="text-slate-400 uppercase tracking-widest text-sm">No active income streams detected</p>
                    <a href="{{ path('app_income_new') }}" class="mt-4 text-cyan-400 hover:text-cyan-300 text-xs font-bold uppercase underline underline-offset-4 decoration-cyan-500/30">Secure initial contract</a>
                </div>
            {% endif %}
        </div>

        {% include 'components/pagination.html.twig' with {
            pagination: pagination,
            route: 'app_income_index',
            query: app.request.query.all
        } %}

    </div>

{% endblock %}
