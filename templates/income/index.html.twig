{% extends 'base.html.twig' %}

{% block title %}Captain Log - Contracts{% endblock %}

{% block pageContent %}

    <div class="p-10">

        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/income.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship income</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Contracts</h1>
                        <p class="text-sm text-cyan-100/80">Freight, charter, salvage and contracts: record incoming credits and plan the next jump.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <a href="{{ path('app_income_new') }}" role="button" class="btn btn-outline btn-primary btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    </a>
                </div>
            </div>
        </div>

        <div class="flow-root">

            <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Ship</th>
                        <th class="text-right">Amount</th>
                        <th class="text-right">Signing</th>
                        <th class="text-right">Payment</th>
                        <th class="text-right">Expiration</th>
                        <th class="text-right">Cancel</th>
                        <th>Campaign</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if incomes|length > 0 %}
                        {% for income in incomes %}
                            <tr>
                                <td>{% include 'components/code_with_copy.html.twig' with { code: income.code } %}</td>
                                <td>{{ income.title }}</td>
                                <td>{{ income.incomeCategory.description }}</td>
                                <td>{{ income.ship.name }}</td>
                                <td class="text-right">{{ income.amount|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ income.signingLocation }} - {{ income.signingDay }}/{{ income.signingYear }}</td>
                                <td class="text-right">
                                    {% if income.paymentDay is not null and income.paymentYear is not null %}
                                        {{ income.paymentDay }}/{{ income.paymentYear }}
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">
                                    {% if income.expirationDay is not null and income.expirationYear is not null %}
                                        {{ income.expirationDay }}/{{ income.expirationYear }}
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">
                                    {% if income.cancelDay is not null and income.cancelYear is not null %}
                                        {{ income.cancelDay }}/{{ income.cancelYear }}
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if income.ship.campaign %}
                                        <div class="flex items-center gap-2">
                                            {% include 'icons/alien-structure-1.html.twig' %}
                                            <span>{{ income.ship.campaign.title }}</span>
                                        </div>
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if income.ship.campaign %}
                                        <div class="flex items-center gap-2">
                                            {% include 'icons/alien-structure-1.html.twig' %}
                                            <span>{{ income.ship.campaign.title }}</span>
                                        </div>
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_income_edit', {id: income.id}) }}" role="button" class="btn btn-outline btn-primary btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon></svg>
                                    </a>
                                    <a href="{{ path('app_income_delete', {id: income.id}) }}" role="button" class="btn btn-outline btn-error btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="11">Insert a new Contract</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>

        </div>

    </div>

{% endblock %}
