        </div>
        {{ form_widget(detail_form.source) }}
        {{ form_errors(detail_form.source) }}
        <input type="checkbox" id="{{ source_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Source</h3>
                <p class="py-2 text-sm">Derelict, distress beacon, wreck registry, or authority assignment.</p>
                <div class="modal-action">
                    <label for="{{ source_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
