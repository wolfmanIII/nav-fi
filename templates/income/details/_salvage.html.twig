<fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        SALVAGE Details
    </legend>

    <div class="col-span-2">
        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-start gap-3">
                <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                    {% include 'icons/income.html.twig' %}
                </div>
                <div>
                    <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Income details</p>
                    <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Salvage claim</h3>
                    <p class="text-sm text-cyan-100/80">Site/source, recovered items, hazards and award/split/dispute terms.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Salvage/recovery claim: site/source, recovery window, recovered items and hazards, award/split terms and dispute process.</p>
    </div>

    {% set case_help_id = detail_form.caseRef.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.caseRef) }}
            <label for="{{ case_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.caseRef) }}
        {{ form_errors(detail_form.caseRef) }}
        <input type="checkbox" id="{{ case_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Case reference</h3>
                <p class="py-2 text-sm">Claim file ID or salvage docket reference.</p>
                <div class="modal-action">
                    <label for="{{ case_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set source_help_id = detail_form.source.vars.id ~ '-help' %}
