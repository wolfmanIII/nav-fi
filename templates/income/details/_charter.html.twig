<fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} CHARTER Details
    </legend>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        <div>
            {{ form_label(detail_form.areaOrRoute) }}
            {{ form_widget(detail_form.areaOrRoute) }}
            {{ form_errors(detail_form.areaOrRoute) }}
        </div>
        <div>
            {{ form_label(detail_form.purpose) }}
            {{ form_widget(detail_form.purpose) }}
            {{ form_errors(detail_form.purpose) }}
        </div>
        <div>
            {{ form_label(detail_form.deposit) }}
            {{ form_widget(detail_form.deposit) }}
            {{ form_errors(detail_form.deposit) }}
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.startDate) }}
            {{ form_widget(detail_form.startDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            {{ form_errors(detail_form.startDate) }}
        </div>
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.endDate) }}
            {{ form_widget(detail_form.endDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
            {{ form_widget(detail_form.endDate.year) }}
            {{ form_widget(detail_form.endDate.day) }}
            {{ form_errors(detail_form.endDate) }}
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div>
            {{ form_label(detail_form.manifestSummary) }}
            {{ form_widget(detail_form.manifestSummary) }}
            {{ form_errors(detail_form.manifestSummary) }}
        </div>
        
        {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.paymentTerms) }}
                <label for "{{ pay_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.paymentTerms) }}
            {{ form_errors(detail_form.paymentTerms) }}
            <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Payment terms</h3>
                    <p class="py-2 text-sm">Specify advance/on-delivery, milestones, currency, and any penalties for late payment.</p>
                    <div class="modal-action">
                        <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        <div>
            {{ form_label(detail_form.extras) }}
            {{ form_widget(detail_form.extras) }}
            {{ form_errors(detail_form.extras) }}
        </div>
        <div>
            {{ form_label(detail_form.damageTerms) }}
            {{ form_widget(detail_form.damageTerms) }}
            {{ form_errors(detail_form.damageTerms) }}
        </div>
        <div>
            {{ form_label(detail_form.cancellationTerms) }}
            {{ form_widget(detail_form.cancellationTerms) }}
            {{ form_errors(detail_form.cancellationTerms) }}
        </div>
    </div>
    
</fieldset>
