<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        CHARTER Details
    </legend>

    {# CORE DATA: Immediately visible, essential for the operation #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        
        {# Area & Purpose #}
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.areaOrRoute, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.areaOrRoute, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Declared operating corridor or patrol span.</div>
            {{ form_errors(detail_form.areaOrRoute) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.purpose, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.purpose, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Primary intent: tour, transport, or special service.</div>
            {{ form_errors(detail_form.purpose) }}
        </div>

        {# Dates #}
        {% set start_help_id = detail_form.startDate.vars.id ~ '-help' %}
        <div data-controller="imperial-date">
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.startDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {% set sd = detail_form.vars.data is defined ? detail_form.vars.data : null %}
            {% set start_day = sd ? sd.startDay : null %}
            {% set start_year = sd ? sd.startYear : null %}
            {% set start_value = (start_day is not null and start_year is not null) ? (start_day|imperial_date(start_year)) : '' %}
            {{ form_widget(detail_form.startDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': start_day ?? '',
                    'data-imperial-date-initial-year': start_year ?? '',
                    'value': start_value,
                }
            }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Charter window activation.</div>
            {{ form_errors(detail_form.startDate.display) }}
        </div>

        {% set end_help_id = detail_form.endDate.vars.id ~ '-help' %}
        <div data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.endDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {% set end_day = sd ? sd.endDay : null %}
            {% set end_year = sd ? sd.endYear : null %}
            {% set end_value = (end_day is not null and end_year is not null) ? (end_day|imperial_date(end_year)) : '' %}
            {{ form_widget(detail_form.endDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': end_day ?? '',
                    'data-imperial-date-initial-year': end_year ?? '',
                    'value': end_value,
                }
            }) }}
            {{ form_widget(detail_form.endDate.year) }}
            {{ form_widget(detail_form.endDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Charter window closeout.</div>
            {{ form_errors(detail_form.endDate.display) }}
        </div>

        <div class="col-span-1 md:col-span-2">
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.manifestSummary, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.manifestSummary, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-20' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Brief passenger/cargo manifest filed for the run.</div>
            {{ form_errors(detail_form.manifestSummary) }}
        </div>
    </div>

    {# EXTENDED DATA: Technical terms, collapsed by default #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
        <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Terms, Payments & Delivery Proofs
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                
                {# Financial Terms #}
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.deposit, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.deposit, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Advance retention securing the vessel.</div>
                    {{ form_errors(detail_form.deposit) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Milestones, currency, and penalties.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                         {{ form_label(detail_form.extras, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.extras, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Fuel, port dues, or pass-throughs.</div>
                    {{ form_errors(detail_form.extras) }}
                </div>

                 <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.cancellationTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.cancellationTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Fees applied if withdrawn.</div>
                    {{ form_errors(detail_form.cancellationTerms) }}
                </div>

                <div class="md:col-span-2">
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.damageTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.damageTerms, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Responsibility for damages or cleanup.</div>
                    {{ form_errors(detail_form.damageTerms) }}
                </div>

                {# Proof of Delivery #}
                <div class="md:col-span-2 border-t border-slate-800 pt-4 mt-2">
                    <h5 class="text-[9px] font-bold font-orbitron tracking-widest text-slate-500 uppercase mb-4">Completion & Proofs</h5>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                             <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Receipt/Protocol ID.</div>
                            {{ form_errors(detail_form.deliveryProofRef) }}
                        </div>

                        <div data-controller="imperial-date">
                             <div class="flex items-baseline h-5 mb-1">
                                 {{ form_label(detail_form.deliveryProofDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {% set proof_day = sd ? sd.deliveryProofDay : null %}
                            {% set proof_year = sd ? sd.deliveryProofYear : null %}
                            {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
                            {{ form_widget(detail_form.deliveryProofDate.display, {
                                attr: {
                                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                                    'data-imperial-date-prev-icon': '«',
                                    'data-imperial-date-next-icon': '»',
                                    'data-imperial-date-initial-day': proof_day ?? '',
                                    'data-imperial-date-initial-year': proof_year ?? '',
                                    'value': proof_value,
                                }
                            }) }}
                            {{ form_widget(detail_form.deliveryProofDate.year) }}
                            {{ form_widget(detail_form.deliveryProofDate.day) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Completion date.</div>
                            {{ form_errors(detail_form.deliveryProofDate.display) }}
                        </div>

                         <div>
                             <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofReceivedBy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofReceivedBy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Authority confirming receipt.</div>
                            {{ form_errors(detail_form.deliveryProofReceivedBy) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </details>
</fieldset>
