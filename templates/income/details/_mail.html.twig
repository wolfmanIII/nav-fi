<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        MAIL Details
    </legend>

    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.origin, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.origin, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Origin hub/port.</div>
            {{ form_errors(detail_form.origin) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.destination, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.destination, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Destination hub/port.</div>
            {{ form_errors(detail_form.destination) }}
        </div>

        {# Dates #}
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set dispatch_day = data.dispatchDay ?? null %}
        {% set dispatch_year = data.dispatchYear ?? null %}
        {% set dispatch_value = (dispatch_day is not null and dispatch_year is not null) ? (dispatch_day|imperial_date(dispatch_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.dispatchDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.dispatchDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': dispatch_day ?? '',
                    'data-imperial-date-initial-year': dispatch_year ?? '',
                    'value': dispatch_value,
                }
            }) }}
            {{ form_widget(detail_form.dispatchDate.year) }}
            {{ form_widget(detail_form.dispatchDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Scheduled dispatch.</div>
            {{ form_errors(detail_form.dispatchDate.display) }}
        </div>

        {% set delivery_day = data.deliveryDay ?? null %}
        {% set delivery_year = data.deliveryYear ?? null %}
        {% set delivery_value = (delivery_day is not null and delivery_year is not null) ? (delivery_day|imperial_date(delivery_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.deliveryDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.deliveryDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': delivery_day ?? '',
                    'data-imperial-date-initial-year': delivery_year ?? '',
                    'value': delivery_value,
                }
            }) }}
            {{ form_widget(detail_form.deliveryDate.year) }}
            {{ form_widget(detail_form.deliveryDate.day) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Scheduled delivery.</div>
            {{ form_errors(detail_form.deliveryDate.display) }}
        </div>

        {# Mail Specs #}
        <div class="grid grid-cols-3 gap-4 col-span-1 md:col-span-2">
            <div>
                 <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.mailType, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.mailType, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                 <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Classification.</div>
                {{ form_errors(detail_form.mailType) }}
            </div>
             <div>
                 <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.packageCount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.packageCount, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                 <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Items/Sacks.</div>
                {{ form_errors(detail_form.packageCount) }}
            </div>
             <div>
                 <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.totalMass, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.totalMass, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                 <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Total mass.</div>
                {{ form_errors(detail_form.totalMass) }}
            </div>
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Security, Payments & Proofs
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.securityLevel, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.securityLevel, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Mandatory Clearance.</div>
                    {{ form_errors(detail_form.securityLevel) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.sealCodes, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.sealCodes, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Tamper-evident IDs.</div>
                    {{ form_errors(detail_form.sealCodes) }}
                </div>

                 <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Contract settlement.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                 <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.liabilityLimit, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.liabilityLimit, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Carrier indemnity cap.</div>
                    {{ form_errors(detail_form.liabilityLimit) }}
                </div>
                
                 <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.proofOfDelivery, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.proofOfDelivery, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Required evidence type.</div>
                    {{ form_errors(detail_form.proofOfDelivery) }}
                </div>

                 {# Proof of Delivery #}
                <div class="md:col-span-2 border-t border-slate-800 pt-4 mt-2">
                    <h5 class="text-[9px] font-bold font-orbitron tracking-widest text-slate-500 uppercase mb-4">Delivery Confirmation</h5>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Receipt/Protocol Ref.</div>
                            {{ form_errors(detail_form.deliveryProofRef) }}
                        </div>

                        {% set proof_day = data.deliveryProofDay ?? null %}
                        {% set proof_year = data.deliveryProofYear ?? null %}
                        {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
                        
                        <div data-controller="imperial-date">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofDate.display, {
                                attr: {
                                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                                    'data-imperial-date-prev-icon': '«',
                                    'data-imperial-date-next-icon': '»',
                                    'data-imperial-date-initial-day': proof_day ?? '',
                                    'data-imperial-date-initial-year': proof_year ?? '',
                                    'value': proof_value,
                                }
                            }) }}
                            {{ form_widget(detail_form.deliveryProofDate.year) }}
                            {{ form_widget(detail_form.deliveryProofDate.day) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Timestamp.</div>
                            {{ form_errors(detail_form.deliveryProofDate.display) }}
                        </div>

                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofReceivedBy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofReceivedBy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Received By.</div>
                            {{ form_errors(detail_form.deliveryProofReceivedBy) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </details>
</fieldset>
