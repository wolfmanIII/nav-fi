<fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        MAIL Details
    </legend>

    <div class="col-span-2">
        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-start gap-3">
                <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                    {% include 'icons/income.html.twig' %}
                </div>
                <div>
                    <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Income details</p>
                    <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Mail dispatch</h3>
                    <p class="text-sm text-cyan-100/80">Route refs, dispatch/delivery windows, mail type and security/liability terms.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Mail run manifest: authority/carrier references, route and dispatch/delivery window, mail type, security level and payment terms.</p>
    </div>

    {% set origin_help_id = detail_form.origin.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.origin) }}
            <label for="{{ origin_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.origin) }}
        {{ form_errors(detail_form.origin) }}
        <input type="checkbox" id="{{ origin_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Origin</h3>
                <p class="py-2 text-sm">Mail dispatch origin port or authority hub.</p>
                <div class="modal-action">
                    <label for="{{ origin_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set destination_help_id = detail_form.destination.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.destination) }}
            <label for="{{ destination_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.destination) }}
        {{ form_errors(detail_form.destination) }}
        <input type="checkbox" id="{{ destination_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Destination</h3>
                <p class="py-2 text-sm">Delivery port or authority hub receiving the mail run.</p>
                <div class="modal-action">
                    <label for="{{ destination_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-2 gap-4">
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set dispatch_day = data ? data.dispatchDay : null %}
        {% set dispatch_year = data ? data.dispatchYear : null %}
        {% set dispatch_value = (dispatch_day is not null and dispatch_year is not null) ? (dispatch_day|imperial_date(dispatch_year)) : '' %}
        {% set dispatch_help_id = detail_form.dispatchDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.dispatchDate) }}
                <label for="{{ dispatch_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.dispatchDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': dispatch_day ?? '',
                    'data-imperial-date-initial-year': dispatch_year ?? '',
                    'value': dispatch_value,
                }
            }) }}
            {{ form_widget(detail_form.dispatchDate.year) }}
            {{ form_widget(detail_form.dispatchDate.day) }}
            {{ form_errors(detail_form.dispatchDate.display) }}
            <input type="checkbox" id="{{ dispatch_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Dispatch date</h3>
                    <p class="py-2 text-sm">Scheduled launch window for the mail run.</p>
                    <div class="modal-action">
                        <label for="{{ dispatch_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set delivery_day = data ? data.deliveryDay : null %}
        {% set delivery_year = data ? data.deliveryYear : null %}
        {% set delivery_value = (delivery_day is not null and delivery_year is not null) ? (delivery_day|imperial_date(delivery_year)) : '' %}
        {% set delivery_help_id = detail_form.deliveryDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.deliveryDate) }}
                <label for="{{ delivery_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.deliveryDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': delivery_day ?? '',
                    'data-imperial-date-initial-year': delivery_year ?? '',
                    'value': delivery_value,
                }
            }) }}
            {{ form_widget(detail_form.deliveryDate.year) }}
            {{ form_widget(detail_form.deliveryDate.day) }}
            {{ form_errors(detail_form.deliveryDate.display) }}
            <input type="checkbox" id="{{ delivery_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Delivery date</h3>
                    <p class="py-2 text-sm">Scheduled delivery window at the destination hub.</p>
                    <div class="modal-action">
                        <label for="{{ delivery_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% set type_help_id = detail_form.mailType.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.mailType) }}
            <label for="{{ type_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.mailType) }}
        {{ form_errors(detail_form.mailType) }}
        <input type="checkbox" id="{{ type_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Mail type</h3>
                <p class="py-2 text-sm">Classify the mail shipment per authority registry.</p>
                <div class="modal-action">
                    <label for="{{ type_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set package_help_id = detail_form.packageCount.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.packageCount) }}
            <label for="{{ package_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.packageCount) }}
        {{ form_errors(detail_form.packageCount) }}
        <input type="checkbox" id="{{ package_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Package count</h3>
                <p class="py-2 text-sm">Number of sealed packages in the run.</p>
                <div class="modal-action">
                    <label for="{{ package_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set mass_help_id = detail_form.totalMass.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.totalMass) }}
            <label for="{{ mass_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.totalMass) }}
        {{ form_errors(detail_form.totalMass) }}
        <input type="checkbox" id="{{ mass_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Total mass</h3>
                <p class="py-2 text-sm">Declared total mass/tonnage for the mail consignment.</p>
                <div class="modal-action">
                    <label for="{{ mass_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set security_help_id = detail_form.securityLevel.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.securityLevel) }}
            <label for="{{ security_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.securityLevel) }}
        {{ form_errors(detail_form.securityLevel) }}
        <input type="checkbox" id="{{ security_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Security level</h3>
                <p class="py-2 text-sm">Authority-mandated security classification for the run.</p>
                <div class="modal-action">
                    <label for="{{ security_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set seal_help_id = detail_form.sealCodes.vars.id ~ '-help' %}
    <div class="col-span-2">
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.sealCodes) }}
            <label for="{{ seal_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.sealCodes) }}
        {{ form_errors(detail_form.sealCodes) }}
        <input type="checkbox" id="{{ seal_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Seal codes</h3>
                <p class="py-2 text-sm">Seal identifiers or tamper-evident tags applied at dispatch.</p>
                <div class="modal-action">
                    <label for="{{ seal_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
    <div class="col-span-2">
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.paymentTerms) }}
            <label for="{{ pay_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.paymentTerms) }}
        {{ form_errors(detail_form.paymentTerms) }}
        <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Payment terms</h3>
                <p class="py-2 text-sm">When and how the mail service is paid (prepaid, COD, staged delivery).</p>
                <div class="modal-action">
                    <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-2 gap-4">
        {% set pod_help_id = detail_form.proofOfDelivery.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.proofOfDelivery) }}
                <label for="{{ pod_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.proofOfDelivery) }}
            {{ form_errors(detail_form.proofOfDelivery) }}
            <input type="checkbox" id="{{ pod_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Proof of delivery</h3>
                    <p class="py-2 text-sm">Select the evidence required to validate delivery (signature, stamp, barcode, secure drop, etc.).</p>
                    <div class="modal-action">
                        <label for="{{ pod_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set liability_help_id = detail_form.liabilityLimit.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.liabilityLimit) }}
                <label for="{{ liability_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.liabilityLimit) }}
            {{ form_errors(detail_form.liabilityLimit) }}
            <input type="checkbox" id="{{ liability_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Liability limit</h3>
                    <p class="py-2 text-sm">Cap on carrier liability for loss or damage.</p>
                    <div class="modal-action">
                        <label for="{{ liability_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-3 gap-4">
        {% set proof_ref_help_id = detail_form.deliveryProofRef.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.deliveryProofRef) }}
                <label for="{{ proof_ref_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.deliveryProofRef) }}
            {{ form_errors(detail_form.deliveryProofRef) }}
            <input type="checkbox" id="{{ proof_ref_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Delivery proof ref</h3>
                    <p class="py-2 text-sm">Receipt or authority protocol confirming delivery.</p>
                    <div class="modal-action">
                        <label for="{{ proof_ref_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set proof_day = data ? data.deliveryProofDay : null %}
        {% set proof_year = data ? data.deliveryProofYear : null %}
        {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
        {% set proof_date_help_id = detail_form.deliveryProofDate.vars.id ~ '-help' %}
        <div data-controller="imperial-date">
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.deliveryProofDate) }}
                <label for="{{ proof_date_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.deliveryProofDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': proof_day ?? '',
                    'data-imperial-date-initial-year': proof_year ?? '',
                    'value': proof_value,
                }
            }) }}
            {{ form_widget(detail_form.deliveryProofDate.year) }}
            {{ form_widget(detail_form.deliveryProofDate.day) }}
            {{ form_errors(detail_form.deliveryProofDate.display) }}
            <input type="checkbox" id="{{ proof_date_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Delivery proof date</h3>
                    <p class="py-2 text-sm">Confirmation timestamp for handoff acceptance.</p>
                    <div class="modal-action">
                        <label for="{{ proof_date_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set proof_received_help_id = detail_form.deliveryProofReceivedBy.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.deliveryProofReceivedBy) }}
                <label for="{{ proof_received_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.deliveryProofReceivedBy) }}
            {{ form_errors(detail_form.deliveryProofReceivedBy) }}
            <input type="checkbox" id="{{ proof_received_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Received by</h3>
                    <p class="py-2 text-sm">Officer or terminal authority who confirmed receipt.</p>
                    <div class="modal-action">
                        <label for="{{ proof_received_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fieldset>
