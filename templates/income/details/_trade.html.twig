<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        TRADE Details
    </legend>

    {% import '_location_picker.html.twig' as location_picker %}
    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="col-span-2">
            {{ location_picker.picker(detail_form.locationSector, detail_form.locationWorld, detail_form.location, 'Location', 'Exchange location or market.') }}
        </div>

        <div class="col-span-2">
           <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.goodsDescription, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.goodsDescription, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Manifest description of lot.</div>
            {{ form_errors(detail_form.goodsDescription) }}
        </div>

        <div class="grid grid-cols-3 gap-4 col-span-2 md:col-span-2">
             <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.qty, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.qty, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Units/dT.</div>
                {{ form_errors(detail_form.qty) }}
            </div>
            
            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.unitPrice, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.unitPrice, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                 <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Price/Unit.</div>
                {{ form_errors(detail_form.unitPrice) }}
            </div>

            <div class="col-span-1">
                 <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.grade, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.grade, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                 <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Quality tier.</div>
                {{ form_errors(detail_form.grade) }}
            </div>
        </div>

         <div class="col-span-2">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.batchIds, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.batchIds, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Container or Lot IDs.</div>
            {{ form_errors(detail_form.batchIds) }}
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Logistics, Terms & Proofs
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                 <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.transferPoint, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.transferPoint, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Handoff site.</div>
                    {{ form_errors(detail_form.transferPoint) }}
                </div>
                
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.transferCondition, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.transferCondition, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Trigger condition (e.g. FOB).</div>
                    {{ form_errors(detail_form.transferCondition) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.deliveryMethod, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.deliveryMethod, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Transport mode.</div>
                    {{ form_errors(detail_form.deliveryMethod) }}
                </div>

                 {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
                 {% set delivery_day = data.deliveryDay ?? null %}
                 {% set delivery_year = data.deliveryYear ?? null %}
                 {% set delivery_value = (delivery_day is not null and delivery_year is not null) ? (delivery_day|imperial_date(delivery_year)) : '' %}
                 
                <div data-controller="imperial-date">
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.deliveryDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.deliveryDate.display, {
                        attr: {
                            'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                            'data-imperial-date-prev-icon': '«',
                            'data-imperial-date-next-icon': '»',
                            'data-imperial-date-initial-day': delivery_day ?? '',
                            'data-imperial-date-initial-year': delivery_year ?? '',
                            'value': delivery_value,
                        }
                    }) }}
                    {{ form_widget(detail_form.deliveryDate.year) }}
                    {{ form_widget(detail_form.deliveryDate.day) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Scheduled delivery.</div>
                    {{ form_errors(detail_form.deliveryDate.display) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Settlement milestones.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                 <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.asIsOrWarranty, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                     {{ form_widget(detail_form.asIsOrWarranty, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Sale condition.</div>
                    {{ form_errors(detail_form.asIsOrWarranty) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.warrantyText, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.warrantyText, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Clauses (if applicable).</div>
                    {{ form_errors(detail_form.warrantyText) }}
                </div>

                <div class="grid grid-cols-2 gap-4 col-span-1">
                     <div>
                        <div class="flex items-baseline h-5 mb-1">
                            {{ form_label(detail_form.claimWindow, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                        </div>
                        {{ form_widget(detail_form.claimWindow, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                        <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Dispute validity.</div>
                        {{ form_errors(detail_form.claimWindow) }}
                    </div>
                    <div>
                         <div class="flex items-baseline h-5 mb-1">
                            {{ form_label(detail_form.returnPolicy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                        </div>
                        {{ form_widget(detail_form.returnPolicy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                         <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Return terms.</div>
                        {{ form_errors(detail_form.returnPolicy) }}
                    </div>
                </div>

                {# Proof of Delivery #}
                <div class="md:col-span-2 border-t border-slate-800 pt-4 mt-2">
                    <h5 class="text-[9px] font-bold font-orbitron tracking-widest text-slate-500 uppercase mb-4">Delivery Confirmation</h5>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Receipt/ID.</div>
                            {{ form_errors(detail_form.deliveryProofRef) }}
                        </div>

                        {% set proof_day = data.deliveryProofDay ?? null %}
                        {% set proof_year = data.deliveryProofYear ?? null %}
                        {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
                        
                        <div data-controller="imperial-date">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofDate.display, {
                                attr: {
                                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                                    'data-imperial-date-prev-icon': '«',
                                    'data-imperial-date-next-icon': '»',
                                    'data-imperial-date-initial-day': proof_day ?? '',
                                    'data-imperial-date-initial-year': proof_year ?? '',
                                    'value': proof_value,
                                }
                            }) }}
                            {{ form_widget(detail_form.deliveryProofDate.year) }}
                            {{ form_widget(detail_form.deliveryProofDate.day) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Timestamp.</div>
                            {{ form_errors(detail_form.deliveryProofDate.display) }}
                        </div>

                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofReceivedBy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofReceivedBy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Recipient.</div>
                            {{ form_errors(detail_form.deliveryProofReceivedBy) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </details>

    {% if purchase_cost_form is defined and purchase_cost_form is not null %}
    <div class="col-span-2 p-4 rounded-xl border border-amber-500/30 bg-amber-500/5 mt-4">
        <div class="flex items-center gap-3 mb-3">
            <div class="p-2 rounded bg-amber-500/20 text-amber-300">
                <div class="animate-spin-slow">
                    {% include 'icons/radar.html.twig' with { dim: 16 } %}
                </div>
            </div>
            <div class="flex-1">
                <h4 class="text-xs font-bold font-orbitron text-amber-100 uppercase tracking-widest">Liquidation Linkage // Purchase Reference</h4>
                <p class="text-[10px] text-amber-300/70 font-rajdhani uppercase">Link this sale to its original purchase cost for profit margin analysis.</p>
            </div>
        </div>
        {{ form_widget(purchase_cost_form) }}
        {{ form_errors(purchase_cost_form) }}
    </div>
    {% endif %}

</fieldset>
