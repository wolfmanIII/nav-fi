<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        FREIGHT Details
    </legend>

    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.origin, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.origin, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Pickup port or berth.</div>
            {{ form_errors(detail_form.origin) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.destination, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.destination, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Delivery port or berth.</div>
            {{ form_errors(detail_form.destination) }}
        </div>

        {# Dates #}
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set pickup_day = data.pickupDay ?? null %}
        {% set pickup_year = data.pickupYear ?? null %}
        {% set pickup_value = (pickup_day is not null and pickup_year is not null) ? (pickup_day|imperial_date(pickup_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.pickupDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.pickupDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': pickup_day ?? '',
                    'data-imperial-date-initial-year': pickup_year ?? '',
                    'value': pickup_value,
                }
            }) }}
            {{ form_widget(detail_form.pickupDate.year) }}
            {{ form_widget(detail_form.pickupDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Scheduled pickup window.</div>
            {{ form_errors(detail_form.pickupDate.display) }}
        </div>

        {% set delivery_day = data.deliveryDay ?? null %}
        {% set delivery_year = data.deliveryYear ?? null %}
        {% set delivery_value = (delivery_day is not null and delivery_year is not null) ? (delivery_day|imperial_date(delivery_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.deliveryDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.deliveryDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': delivery_day ?? '',
                    'data-imperial-date-initial-year': delivery_year ?? '',
                    'value': delivery_value,
                }
            }) }}
            {{ form_widget(detail_form.deliveryDate.year) }}
            {{ form_widget(detail_form.deliveryDate.day) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Target delivery window.</div>
            {{ form_errors(detail_form.deliveryDate.display) }}
        </div>

        {# Cargo #}
        <div class="col-span-1 md:col-span-2">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.cargoDescription, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.cargoDescription, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Manifest summary & handling notes.</div>
            {{ form_errors(detail_form.cargoDescription) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.cargoQty, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.cargoQty, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Quantity/Mass/dT.</div>
            {{ form_errors(detail_form.cargoQty) }}
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Liabilities, Payment & Proofs
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.declaredValue, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.declaredValue, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Cargo value for insurance/claims.</div>
                    {{ form_errors(detail_form.declaredValue) }}
                </div>
                
                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.liabilityLimit, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.liabilityLimit, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Maximum carrier liability cap.</div>
                    {{ form_errors(detail_form.liabilityLimit) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Milestones and currency.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.cancellationTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.cancellationTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Withdrawal penalties.</div>
                    {{ form_errors(detail_form.cancellationTerms) }}
                </div>

                 {# Proof of Delivery #}
                <div class="md:col-span-2 border-t border-slate-800 pt-4 mt-2">
                    <h5 class="text-[9px] font-bold font-orbitron tracking-widest text-slate-500 uppercase mb-4">Delivery Confirmation</h5>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Receipt/Protocol ID.</div>
                            {{ form_errors(detail_form.deliveryProofRef) }}
                        </div>

                        {% set proof_day = data.deliveryProofDay ?? null %}
                        {% set proof_year = data.deliveryProofYear ?? null %}
                        {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
                        
                        <div data-controller="imperial-date">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofDate.display, {
                                attr: {
                                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                                    'data-imperial-date-prev-icon': '«',
                                    'data-imperial-date-next-icon': '»',
                                    'data-imperial-date-initial-day': proof_day ?? '',
                                    'data-imperial-date-initial-year': proof_year ?? '',
                                    'value': proof_value,
                                }
                            }) }}
                            {{ form_widget(detail_form.deliveryProofDate.year) }}
                            {{ form_widget(detail_form.deliveryProofDate.day) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Handover timestamp.</div>
                            {{ form_errors(detail_form.deliveryProofDate.display) }}
                        </div>

                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofReceivedBy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofReceivedBy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Receiving officer/authority.</div>
                            {{ form_errors(detail_form.deliveryProofReceivedBy) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </details>
</fieldset>
