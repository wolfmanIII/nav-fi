 <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} FREIGHT Details
    </legend>

    <div>
        {{ form_label(detail_form.origin) }}
        {{ form_widget(detail_form.origin) }}
        {{ form_errors(detail_form.origin) }}
    </div>
    <div>
        {{ form_label(detail_form.destination) }}
        {{ form_widget(detail_form.destination) }}
        {{ form_errors(detail_form.destination) }}
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div class="col-span-1 grid grid-cols-2 gap-4">
            <div>
                {{ form_label(detail_form.pickupDay) }}
                {{ form_widget(detail_form.pickupDay) }}
                {{ form_errors(detail_form.pickupDay) }}
            </div>
            <div>
                {{ form_label(detail_form.pickupYear) }}
                {{ form_widget(detail_form.pickupYear) }}
                {{ form_errors(detail_form.pickupYear) }}
            </div>
        </div>
        <div class="col-span-1 grid grid-cols-2 gap-4">
            <div>
                {{ form_label(detail_form.deliveryDay) }}
                {{ form_widget(detail_form.deliveryDay) }}
                {{ form_errors(detail_form.deliveryDay) }}
            </div>
            <div>
                {{ form_label(detail_form.deliveryYear) }}
                {{ form_widget(detail_form.deliveryYear) }}
                {{ form_errors(detail_form.deliveryYear) }}
            </div>
        </div>
    </div>


    <div class="col-span-3">
        {{ form_label(detail_form.cargoDescription) }}
        {{ form_widget(detail_form.cargoDescription) }}
        {{ form_errors(detail_form.cargoDescription) }}
    </div>
    <div>
        {{ form_label(detail_form.cargoQty) }}
        {{ form_widget(detail_form.cargoQty) }}
        {{ form_errors(detail_form.cargoQty) }}
    </div>
    <div>
        {{ form_label(detail_form.declaredValue) }}
        {{ form_widget(detail_form.declaredValue) }}
        {{ form_errors(detail_form.declaredValue) }}
    </div>
    {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
    <div class="col-span-3">
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.paymentTerms) }}
            <label for="{{ pay_help_id }}" class="badge badge-outline badge-info cursor-pointer">?</label>
        </div>
        {{ form_widget(detail_form.paymentTerms) }}
        {{ form_errors(detail_form.paymentTerms) }}
        <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Payment terms</h3>
                <p class="py-2 text-sm">Describe when and how freight is paid (advance, on delivery, milestones, currency).</p>
                <div class="modal-action">
                    <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    {% set liab_help_id = detail_form.liabilityLimit.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.liabilityLimit) }}
            <label for="{{ liab_help_id }}" class="badge badge-outline badge-info cursor-pointer">?</label>
        </div>
        {{ form_widget(detail_form.liabilityLimit) }}
        {{ form_errors(detail_form.liabilityLimit) }}
        <input type="checkbox" id="{{ liab_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Liability limit</h3>
                <p class="py-2 text-sm">Cap on carrier liability for loss/damage; set to Cr value or leave blank if not limited.</p>
                <div class="modal-action">
                    <label for="{{ liab_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-span-3">
        {{ form_label(detail_form.cancellationTerms) }}
        {{ form_widget(detail_form.cancellationTerms) }}
        {{ form_errors(detail_form.cancellationTerms) }}
    </div>
</fieldset>
