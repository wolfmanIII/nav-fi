<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        PRIZE Details
    </legend>

    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.legalBasis, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.legalBasis, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Authority/Charter Clause.</div>
            {{ form_errors(detail_form.legalBasis) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.caseRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.caseRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Docket ID.</div>
            {{ form_errors(detail_form.caseRef) }}
        </div>

        <div class="col-span-1 md:col-span-2">
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.prizeDescription, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.prizeDescription, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Asset/Cargo summary.</div>
            {{ form_errors(detail_form.prizeDescription) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.estimatedValue, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.estimatedValue, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Appraised total.</div>
            {{ form_errors(detail_form.estimatedValue) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.disposition, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.disposition, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Fate (e.g. Auctioned, Retained).</div>
            {{ form_errors(detail_form.disposition) }}
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Terms, Splits & Triggers
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Distribution schedule.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.shareSplit, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.shareSplit, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Crew allocation %.</div>
                    {{ form_errors(detail_form.shareSplit) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.awardTrigger, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.awardTrigger, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Adjudication/Release condition.</div>
                    {{ form_errors(detail_form.awardTrigger) }}
                </div>
            </div>
        </div>
    </details>
</fieldset>
