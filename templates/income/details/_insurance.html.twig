<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        INSURANCE Details
    </legend>

    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.incidentRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.incidentRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Case/Log ID.</div>
            {{ form_errors(detail_form.incidentRef) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.incidentLocation, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.incidentLocation, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Sector/System.</div>
            {{ form_errors(detail_form.incidentLocation) }}
        </div>

        {# Dates #}
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set incident_day = data.incidentDay ?? null %}
        {% set incident_year = data.incidentYear ?? null %}
        {% set incident_value = (incident_day is not null and incident_year is not null) ? (incident_day|imperial_date(incident_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.incidentDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.incidentDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': incident_day ?? '',
                    'data-imperial-date-initial-year': incident_year ?? '',
                    'value': incident_value,
                }
            }) }}
            {{ form_widget(detail_form.incidentDate.year) }}
            {{ form_widget(detail_form.incidentDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Event timestamp.</div>
            {{ form_errors(detail_form.incidentDate.display) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.incidentCause, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.incidentCause, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Declared cause.</div>
            {{ form_errors(detail_form.incidentCause) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.lossType, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.lossType, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Classification.</div>
            {{ form_errors(detail_form.lossType) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.verifiedLoss, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.verifiedLoss, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Assessed value.</div>
            {{ form_errors(detail_form.verifiedLoss) }}
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Coverage, Terms & Settlement
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                 <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.deductible, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.deductible, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Retained portion.</div>
                    {{ form_errors(detail_form.deductible) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.acceptanceEffect, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.acceptanceEffect, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Legal impact.</div>
                    {{ form_errors(detail_form.acceptanceEffect) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Payout schedule.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.subrogationTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.subrogationTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Rights transfer.</div>
                    {{ form_errors(detail_form.subrogationTerms) }}
                </div>

                <div class="col-span-1 md:col-span-2">
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.coverageNotes, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.coverageNotes, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Exclusions/Special notes.</div>
                    {{ form_errors(detail_form.coverageNotes) }}
                </div>
            </div>
        </div>
    </details>
</fieldset>
