<fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} INSURANCE Details
    </legend>

    <div class="col-span-3">
        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-start gap-3">
                <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                    {% include 'icons/income.html.twig' %}
                </div>
                <div>
                    <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Income details</p>
                    <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Insurance claim</h3>
                    <p class="text-sm text-cyan-100/80">Incident facts, loss type, verified loss and settlement terms.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Insurance claim statement: incident facts, loss type, verified amounts, coverage notes and payout/subrogation terms.</p>
    </div>

    <div>
        {{ form_label(detail_form.incidentRef) }}
        {{ form_widget(detail_form.incidentRef) }}
        {{ form_errors(detail_form.incidentRef) }}
    </div>
    {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
    {% set incident_day = data ? data.incidentDay : null %}
    {% set incident_year = data ? data.incidentYear : null %}
    {% set incident_value = incident_day is not null and incident_year is not null ? incident_day|format('%03d') ~ '/' ~ incident_year : '' %}
    <div data-controller="imperial-date">
        {{ form_label(detail_form.incidentDate) }}
        {{ form_widget(detail_form.incidentDate.display, {
            attr: {
                'data-imperial-date-prev-icon': '«',
                'data-imperial-date-next-icon': '»',
                'data-imperial-date-initial-day': incident_day ?? '',
                'data-imperial-date-initial-year': incident_year ?? '',
                'value': incident_value,
            }
        }) }}
        {{ form_widget(detail_form.incidentDate.year) }}
        {{ form_widget(detail_form.incidentDate.day) }}
        {{ form_errors(detail_form.incidentDate) }}
    </div>
    <div>
        {{ form_label(detail_form.incidentLocation) }}
        {{ form_widget(detail_form.incidentLocation) }}
        {{ form_errors(detail_form.incidentLocation) }}
    </div>
    <div>
        {{ form_label(detail_form.incidentCause) }}
        {{ form_widget(detail_form.incidentCause) }}
        {{ form_errors(detail_form.incidentCause) }}
    </div>
    <div>
        {{ form_label(detail_form.lossType) }}
        {{ form_widget(detail_form.lossType) }}
        {{ form_errors(detail_form.lossType) }}
    </div>
    <div>
        {{ form_label(detail_form.verifiedLoss) }}
        {{ form_widget(detail_form.verifiedLoss) }}
        {{ form_errors(detail_form.verifiedLoss) }}
    </div>
    <div>
        {{ form_label(detail_form.deductible) }}
        {{ form_widget(detail_form.deductible) }}
        {{ form_errors(detail_form.deductible) }}
    </div>

    <div>
        {{ form_label(detail_form.acceptanceEffect) }}
        {{ form_widget(detail_form.acceptanceEffect) }}
        {{ form_errors(detail_form.acceptanceEffect) }}
    </div>

    {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
    <div class="col-span-3">
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.paymentTerms) }}
            <label for="{{ pay_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.paymentTerms) }}
        {{ form_errors(detail_form.paymentTerms) }}
        <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Payment terms</h3>
                <p class="py-2 text-sm">How and when the insurer pays the claim (advance, final settlement, conditions).</p>
                <div class="modal-action">
                    <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div>
            {{ form_label(detail_form.subrogationTerms) }}
            {{ form_widget(detail_form.subrogationTerms) }}
            {{ form_errors(detail_form.subrogationTerms) }}
        </div>
        <div>
            {{ form_label(detail_form.coverageNotes) }}
            {{ form_widget(detail_form.coverageNotes) }}
            {{ form_errors(detail_form.coverageNotes) }}
        </div>
    </div>
</fieldset>
