<fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        SERVICES Details
    </legend>

    <div class="col-span-2">
        <div class="relative overflow-hidden rounded-2xl bg-slate-950 border border-slate-800 p-6 shadow-lg">
             <div class="absolute top-0 right-0 p-4 opacity-10">
                {% include 'icons/income.html.twig' with { dim: 128, class: 'text-cyan-500' } %}
            </div>
            <div class="relative z-10 flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
                <div>
                     <div class="flex items-center gap-2 text-cyan-500/80 mb-1">
                        {% include 'icons/income.html.twig' with { dim: 16 } %}
                        <p class="text-xs uppercase tracking-[0.3em] font-orbitron font-bold">Income details</p>
                    </div>
                    <h3 class="text-2xl font-bold text-white tracking-tight flex items-center gap-3 font-orbitron">
                        Service workorder
                    </h3>
                    <p class="text-xs text-slate-500 font-mono uppercase tracking-wider mt-1">
                        Scope, schedule, parts/materials and payment/liability clauses.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Service work order brief: vessel/asset, scheduled window, scope, parts/materials, risks and payment/extras/liability clauses.</p>
    </div>

    {% set location_help_id = detail_form.location.vars.id ~ '-help' %}
    <div>
        <div class="flex items-baseline justify-between h-5 mb-1">
            {{ form_label(detail_form.location, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            <label for="{{ location_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
        </div>
        {{ form_widget(detail_form.location) }}
        {{ form_errors(detail_form.location) }}
        <input type="checkbox" id="{{ location_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Location</h3>
                <p class="py-2 text-sm">Service site, dock, or orbital facility where work is performed.</p>
                <div class="modal-action">
                    <label for="{{ location_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set service_help_id = detail_form.serviceType.vars.id ~ '-help' %}
    <div>
        <div class="flex items-baseline justify-between h-5 mb-1">
            {{ form_label(detail_form.serviceType, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            <label for="{{ service_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
        </div>
        {{ form_widget(detail_form.serviceType) }}
        {{ form_errors(detail_form.serviceType) }}
        <input type="checkbox" id="{{ service_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Service type</h3>
                <p class="py-2 text-sm">Primary service class defined by port operations.</p>
                <div class="modal-action">
                    <label for="{{ service_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set requested_help_id = detail_form.requestedBy.vars.id ~ '-help' %}
    <div>
        <div class="flex items-baseline justify-between h-5 mb-1">
            {{ form_label(detail_form.requestedBy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            <label for="{{ requested_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
        </div>
        {{ form_widget(detail_form.requestedBy) }}
        {{ form_errors(detail_form.requestedBy) }}
        <input type="checkbox" id="{{ requested_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Requested by</h3>
                <p class="py-2 text-sm">Authority or client that issued the work order.</p>
                <div class="modal-action">
                    <label for="{{ requested_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-2 gap-4">
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set start_day = data.startDay ?? null %}
        {% set start_year = data.startYear ?? null %}
        {% set start_value = (start_day is not null and start_year is not null) ? (start_day|imperial_date(start_year)) : '' %}
        {% set start_help_id = detail_form.startDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.startDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ start_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.startDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': start_day ?? '',
                    'data-imperial-date-initial-year': start_year ?? '',
                    'value': start_value,
                }
            }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            {{ form_errors(detail_form.startDate.display) }}
            <input type="checkbox" id="{{ start_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Start date</h3>
                    <p class="py-2 text-sm">Service start window in imperial day/year.</p>
                    <div class="modal-action">
                        <label for="{{ start_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set end_day = data.endDay ?? null %}
        {% set end_year = data.endYear ?? null %}
        {% set end_value = (end_day is not null and end_year is not null) ? (end_day|imperial_date(end_year)) : '' %}
        {% set end_help_id = detail_form.endDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.endDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ end_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.endDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': end_day ?? '',
                    'data-imperial-date-initial-year': end_year ?? '',
                    'value': end_value,
                }
            }) }}
            {{ form_widget(detail_form.endDate.year) }}
            {{ form_widget(detail_form.endDate.day) }}
            {{ form_errors(detail_form.endDate.display) }}
            <input type="checkbox" id="{{ end_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">End date</h3>
                    <p class="py-2 text-sm">Service completion or ETA window.</p>
                    <div class="modal-action">
                        <label for="{{ end_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% set work_help_id = detail_form.workSummary.vars.id ~ '-help' %}
    <div class="col-span-2">
        <div class="flex items-baseline justify-between h-5 mb-1">
            {{ form_label(detail_form.workSummary, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            <label for="{{ work_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
        </div>
        {{ form_widget(detail_form.workSummary) }}
        {{ form_errors(detail_form.workSummary) }}
        <input type="checkbox" id="{{ work_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Work summary</h3>
                <p class="py-2 text-sm">Scope of work and deliverables performed.</p>
                <div class="modal-action">
                    <label for="{{ work_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-2 gap-4">
        {% set parts_help_id = detail_form.partsMaterials.vars.id ~ '-help' %}
        <div>
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.partsMaterials, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ parts_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.partsMaterials) }}
            {{ form_errors(detail_form.partsMaterials) }}
            <input type="checkbox" id="{{ parts_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Parts / materials</h3>
                    <p class="py-2 text-sm">Parts, consumables, or materials used during service.</p>
                    <div class="modal-action">
                        <label for="{{ parts_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set risks_help_id = detail_form.risks.vars.id ~ '-help' %}
        <div>
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.risks, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ risks_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.risks) }}
            {{ form_errors(detail_form.risks) }}
            <input type="checkbox" id="{{ risks_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Risks</h3>
                    <p class="py-2 text-sm">Operational hazards or constraints acknowledged by both parties.</p>
                    <div class="modal-action">
                        <label for="{{ risks_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% set pay_help_id = detail_form.paymentTerms.vars.id ~ '-help' %}
    <div class="col-span-2">
        <div class="flex items-baseline justify-between h-5 mb-1">
            {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            <label for="{{ pay_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
        </div>
        {{ form_widget(detail_form.paymentTerms) }}
        {{ form_errors(detail_form.paymentTerms) }}
        <input type="checkbox" id="{{ pay_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Payment terms</h3>
                <p class="py-2 text-sm">Service billing: deposits, milestones, acceptance criteria, and due dates.</p>
                <div class="modal-action">
                    <label for="{{ pay_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-3 gap-4">
        {% set extras_help_id = detail_form.extras.vars.id ~ '-help' %}
        <div>
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.extras, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ extras_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.extras) }}
            {{ form_errors(detail_form.extras) }}
            <input type="checkbox" id="{{ extras_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Extras</h3>
                    <p class="py-2 text-sm">Additional charges outside the base service scope.</p>
                    <div class="modal-action">
                        <label for="{{ extras_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set cancel_help_id = detail_form.cancellationTerms.vars.id ~ '-help' %}
        <div>
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.cancellationTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ cancel_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.cancellationTerms) }}
            {{ form_errors(detail_form.cancellationTerms) }}
            <input type="checkbox" id="{{ cancel_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Cancellation terms</h3>
                    <p class="py-2 text-sm">Fees or penalties for canceling the work order.</p>
                    <div class="modal-action">
                        <label for="{{ cancel_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set liab_help_id = detail_form.liabilityLimit.vars.id ~ '-help' %}
        <div>
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.liabilityLimit, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ liab_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.liabilityLimit) }}
            {{ form_errors(detail_form.liabilityLimit) }}
            <input type="checkbox" id="{{ liab_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Liability limit</h3>
                    <p class="py-2 text-sm">Cap on liability for the provided service (damages, downtime, or losses). Leave blank if unlimited.</p>
                    <div class="modal-action">
                        <label for="{{ liab_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-3 gap-4">
        {% set proof_ref_help_id = detail_form.deliveryProofRef.vars.id ~ '-help' %}
        <div>
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.deliveryProofRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ proof_ref_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.deliveryProofRef) }}
            {{ form_errors(detail_form.deliveryProofRef) }}
            <input type="checkbox" id="{{ proof_ref_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Delivery proof ref</h3>
                    <p class="py-2 text-sm">Receipt or protocol ID confirming service completion.</p>
                    <div class="modal-action">
                        <label for="{{ proof_ref_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set proof_day = data.deliveryProofDay ?? null %}
        {% set proof_year = data.deliveryProofYear ?? null %}
        {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
        {% set proof_date_help_id = detail_form.deliveryProofDate.vars.id ~ '-help' %}
        <div data-controller="imperial-date">
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.deliveryProofDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ proof_date_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.deliveryProofDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': proof_day ?? '',
                    'data-imperial-date-initial-year': proof_year ?? '',
                    'value': proof_value,
                }
            }) }}
            {{ form_widget(detail_form.deliveryProofDate.year) }}
            {{ form_widget(detail_form.deliveryProofDate.day) }}
            {{ form_errors(detail_form.deliveryProofDate.display) }}
