<fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} CONTRACT Details
    </legend>

    <div class="col-span-3">
        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-start gap-3">
                <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                    {% include 'icons/income.html.twig' %}
                </div>
                <div>
                    <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Income details</p>
                    <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Contract engagement</h3>
                    <p class="text-sm text-cyan-100/80">Patron, scope, schedule window and pay/bonus/expenses clauses.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Mission / job engagement: patron, scope/objective, schedule window, pay/bonus/expenses and restrictions/confidentiality.</p>
    </div>

    <div>
        {{ form_label(detail_form.jobType) }}
        {{ form_widget(detail_form.jobType) }}
        {{ form_errors(detail_form.jobType) }}
    </div>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        <div>
            {{ form_label(detail_form.location) }}
            {{ form_widget(detail_form.location) }}
            {{ form_errors(detail_form.location) }}
        </div>
        <div>
            {{ form_label(detail_form.objective) }}
            {{ form_widget(detail_form.objective) }}
            {{ form_errors(detail_form.objective) }}
        </div>
        <div>
            {{ form_label(detail_form.successCondition) }}
            {{ form_widget(detail_form.successCondition) }}
            {{ form_errors(detail_form.successCondition) }}
        </div>
    </div>

    {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
    {% set start_day = data ? data.startDay : null %}
    {% set start_year = data ? data.startYear : null %}
    {% set start_value = start_day is not null and start_year is not null ? start_day|format('%03d') ~ '/' ~ start_year : '' %}
    {% set deadline_day = data ? data.deadlineDay : null %}
    {% set deadline_year = data ? data.deadlineYear : null %}
    {% set deadline_value = deadline_day is not null and deadline_year is not null ? deadline_day|format('%03d') ~ '/' ~ deadline_year : '' %}
    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.startDate) }}
            {{ form_widget(detail_form.startDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': start_day ?? '',
                    'data-imperial-date-initial-year': start_year ?? '',
                    'value': start_value,
                }
            }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            {{ form_errors(detail_form.startDate) }}
        </div>
        <div class="col-span-1" data-controller="imperial-date">
            {{ form_label(detail_form.deadlineDate) }}
            {{ form_widget(detail_form.deadlineDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': deadline_day ?? '',
                    'data-imperial-date-initial-year': deadline_year ?? '',
                    'value': deadline_value,
                }
            }) }}
            {{ form_widget(detail_form.deadlineDate.year) }}
            {{ form_widget(detail_form.deadlineDate.day) }}
            {{ form_errors(detail_form.deadlineDate) }}
        </div>
    </div>
    
    <div>
        {{ form_label(detail_form.bonus) }}
        {{ form_widget(detail_form.bonus) }}
        {{ form_errors(detail_form.bonus) }}
    </div>
    <div>
        {{ form_label(detail_form.deposit) }}
        {{ form_widget(detail_form.deposit) }}
        {{ form_errors(detail_form.deposit) }}
    </div>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        <div>
            {{ form_label(detail_form.expensesPolicy) }}
            {{ form_widget(detail_form.expensesPolicy) }}
            {{ form_errors(detail_form.expensesPolicy) }}
        </div>
        <div>
            {{ form_label(detail_form.restrictions) }}
            {{ form_widget(detail_form.restrictions) }}
            {{ form_errors(detail_form.restrictions) }}
        </div>
        <div>
            {{ form_label(detail_form.confidentialityLevel) }}
            {{ form_widget(detail_form.confidentialityLevel) }}
            {{ form_errors(detail_form.confidentialityLevel) }}
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        <div>
            {{ form_label(detail_form.failureTerms) }}
            {{ form_widget(detail_form.failureTerms) }}
            {{ form_errors(detail_form.failureTerms) }}
        </div>
        <div>
            {{ form_label(detail_form.cancellationTerms) }}
            {{ form_widget(detail_form.cancellationTerms) }}
            {{ form_errors(detail_form.cancellationTerms) }}
        </div>
    </div>

</fieldset>
