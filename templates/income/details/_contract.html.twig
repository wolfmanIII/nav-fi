<fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
    <legend class="fieldset-legend">
        {% include 'icons/income.html.twig' %} CONTRACT Details
    </legend>

    <div class="col-span-3">
        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-start gap-3">
                <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                    {% include 'icons/income.html.twig' %}
                </div>
                <div>
                    <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Income details</p>
                    <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Contract engagement</h3>
                    <p class="text-sm text-cyan-100/80">Patron, scope, schedule window and pay/bonus/expenses clauses.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 alert alert-info alert-outline shadow-sm flex items-start gap-2">
        <span class="pt-0.5 animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
        <p class="text-sm">Mission / job engagement: patron, scope/objective, schedule window, pay/bonus/expenses and restrictions/confidentiality.</p>
    </div>

    {% set job_help_id = detail_form.jobType.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.jobType) }}
            <label for="{{ job_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.jobType) }}
        {{ form_errors(detail_form.jobType) }}
        <input type="checkbox" id="{{ job_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Job type</h3>
                <p class="py-2 text-sm">Contract classification for the engagement (escort, survey, recovery, bounty, etc.).</p>
                <div class="modal-action">
                    <label for="{{ job_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        {% set location_help_id = detail_form.location.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.location) }}
                <label for="{{ location_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.location) }}
            {{ form_errors(detail_form.location) }}
            <input type="checkbox" id="{{ location_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Location</h3>
                    <p class="py-2 text-sm">Primary theater of operation or jurisdiction where the contract applies.</p>
                    <div class="modal-action">
                        <label for="{{ location_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set objective_help_id = detail_form.objective.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.objective) }}
                <label for="{{ objective_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.objective) }}
            {{ form_errors(detail_form.objective) }}
            <input type="checkbox" id="{{ objective_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Objective</h3>
                    <p class="py-2 text-sm">Mission goal and deliverable criteria required by the patron.</p>
                    <div class="modal-action">
                        <label for="{{ objective_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set success_help_id = detail_form.successCondition.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.successCondition) }}
                <label for="{{ success_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.successCondition) }}
            {{ form_errors(detail_form.successCondition) }}
            <input type="checkbox" id="{{ success_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Success condition</h3>
                    <p class="py-2 text-sm">Define the acceptance condition that triggers completion.</p>
                    <div class="modal-action">
                        <label for="{{ success_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
    {% set start_day = data ? data.startDay : null %}
    {% set start_year = data ? data.startYear : null %}
    {% set start_value = start_day is not null and start_year is not null ? start_day|format('%03d') ~ '/' ~ start_year : '' %}
    {% set deadline_day = data ? data.deadlineDay : null %}
    {% set deadline_year = data ? data.deadlineYear : null %}
    {% set deadline_value = deadline_day is not null and deadline_year is not null ? deadline_day|format('%03d') ~ '/' ~ deadline_year : '' %}
    <div class="col-span-3 grid grid-cols-2 gap-4">
        {% set start_help_id = detail_form.startDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.startDate) }}
                <label for="{{ start_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.startDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': start_day ?? '',
                    'data-imperial-date-initial-year': start_year ?? '',
                    'value': start_value,
                }
            }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            {{ form_errors(detail_form.startDate) }}
            <input type="checkbox" id="{{ start_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Start date</h3>
                    <p class="py-2 text-sm">Contract activation window in imperial day/year.</p>
                    <div class="modal-action">
                        <label for="{{ start_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set deadline_help_id = detail_form.deadlineDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.deadlineDate) }}
                <label for="{{ deadline_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.deadlineDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': deadline_day ?? '',
                    'data-imperial-date-initial-year': deadline_year ?? '',
                    'value': deadline_value,
                }
            }) }}
            {{ form_widget(detail_form.deadlineDate.year) }}
            {{ form_widget(detail_form.deadlineDate.day) }}
            {{ form_errors(detail_form.deadlineDate) }}
            <input type="checkbox" id="{{ deadline_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Deadline</h3>
                    <p class="py-2 text-sm">Cutoff for completion or reporting as defined by the patron.</p>
                    <div class="modal-action">
                        <label for="{{ deadline_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {% set bonus_help_id = detail_form.bonus.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.bonus) }}
            <label for="{{ bonus_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.bonus) }}
        {{ form_errors(detail_form.bonus) }}
        <input type="checkbox" id="{{ bonus_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Bonus</h3>
                <p class="py-2 text-sm">Performance or speed bonus triggered by mission conditions.</p>
                <div class="modal-action">
                    <label for="{{ bonus_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>
    {% set deposit_help_id = detail_form.deposit.vars.id ~ '-help' %}
    <div>
        <div class="flex items-center gap-2">
            {{ form_label(detail_form.deposit) }}
            <label for="{{ deposit_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
        </div>
        {{ form_widget(detail_form.deposit) }}
        {{ form_errors(detail_form.deposit) }}
        <input type="checkbox" id="{{ deposit_help_id }}" class="modal-toggle hidden" />
        <div class="modal" role="dialog">
            <div class="modal-box">
                <h3 class="font-bold">Deposit</h3>
                <p class="py-2 text-sm">Advance retention to secure the contract slot.</p>
                <div class="modal-action">
                    <label for="{{ deposit_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-3 gap-4">
        {% set expenses_help_id = detail_form.expensesPolicy.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.expensesPolicy) }}
                <label for="{{ expenses_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.expensesPolicy) }}
            {{ form_errors(detail_form.expensesPolicy) }}
            <input type="checkbox" id="{{ expenses_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Expenses policy</h3>
                    <p class="py-2 text-sm">Define reimbursable costs, caps, and audit requirements.</p>
                    <div class="modal-action">
                        <label for="{{ expenses_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set restrictions_help_id = detail_form.restrictions.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.restrictions) }}
                <label for="{{ restrictions_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.restrictions) }}
            {{ form_errors(detail_form.restrictions) }}
            <input type="checkbox" id="{{ restrictions_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Restrictions</h3>
                    <p class="py-2 text-sm">Operational limits, no-fly zones, or prohibited methods.</p>
                    <div class="modal-action">
                        <label for="{{ restrictions_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set confidentiality_help_id = detail_form.confidentialityLevel.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.confidentialityLevel) }}
                <label for="{{ confidentiality_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.confidentialityLevel) }}
            {{ form_errors(detail_form.confidentialityLevel) }}
            <input type="checkbox" id="{{ confidentiality_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Confidentiality level</h3>
                    <p class="py-2 text-sm">Disclosure tier for mission data and client identity.</p>
                    <div class="modal-action">
                        <label for="{{ confidentiality_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-3 grid grid-cols-2 gap-4">
        {% set failure_help_id = detail_form.failureTerms.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.failureTerms) }}
                <label for="{{ failure_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.failureTerms) }}
            {{ form_errors(detail_form.failureTerms) }}
            <input type="checkbox" id="{{ failure_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Failure terms</h3>
                    <p class="py-2 text-sm">Penalties, forfeitures, or remediation required on non‑performance.</p>
                    <div class="modal-action">
                        <label for="{{ failure_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
        {% set cancel_help_id = detail_form.cancellationTerms.vars.id ~ '-help' %}
        <div>
            <div class="flex items-center gap-2">
                {{ form_label(detail_form.cancellationTerms) }}
                <label for="{{ cancel_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
            </div>
            {{ form_widget(detail_form.cancellationTerms) }}
            {{ form_errors(detail_form.cancellationTerms) }}
            <input type="checkbox" id="{{ cancel_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box">
                    <h3 class="font-bold">Cancellation terms</h3>
                    <p class="py-2 text-sm">Withdrawals, off-ramps, and the cost of early termination.</p>
                    <div class="modal-action">
                        <label for="{{ cancel_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

</fieldset>
