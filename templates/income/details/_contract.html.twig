<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        CONTRACT Details
    </legend>

    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.jobType, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.jobType, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Classification (e.g. Escort, Survey).</div>
            {{ form_errors(detail_form.jobType) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.location, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.location, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Operational theater/Jurisdiction.</div>
            {{ form_errors(detail_form.location) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.objective, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.objective, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Mission goal.</div>
            {{ form_errors(detail_form.objective) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.successCondition, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.successCondition, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Completion criteria.</div>
            {{ form_errors(detail_form.successCondition) }}
        </div>

        {# Dates #}
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set start_day = data.startDay ?? null %}
        {% set start_year = data.startYear ?? null %}
        {% set start_value = (start_day is not null and start_year is not null) ? (start_day|imperial_date(start_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.startDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.startDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': start_day ?? '',
                    'data-imperial-date-initial-year': start_year ?? '',
                    'value': start_value,
                }
            }) }}
            {{ form_widget(detail_form.startDate.year) }}
            {{ form_widget(detail_form.startDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Top of window.</div>
            {{ form_errors(detail_form.startDate.display) }}
        </div>

        {% set deadline_day = data.deadlineDay ?? null %}
        {% set deadline_year = data.deadlineYear ?? null %}
        {% set deadline_value = (deadline_day is not null and deadline_year is not null) ? (deadline_day|imperial_date(deadline_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.deadlineDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.deadlineDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': deadline_day ?? '',
                    'data-imperial-date-initial-year': deadline_year ?? '',
                    'value': deadline_value,
                }
            }) }}
            {{ form_widget(detail_form.deadlineDate.year) }}
            {{ form_widget(detail_form.deadlineDate.day) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Hard cutoff.</div>
             {{ form_errors(detail_form.deadlineDate.display) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.bonus, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.bonus, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Performance/Speed kicker.</div>
            {{ form_errors(detail_form.bonus) }}
        </div>

        <div>
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.deposit, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.deposit, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Upfront retainer.</div>
            {{ form_errors(detail_form.deposit) }}
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Terms, Expenses & Failures
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.expensesPolicy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.expensesPolicy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Reimbursement rules.</div>
                    {{ form_errors(detail_form.expensesPolicy) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.restrictions, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.restrictions, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Operational limits/RoE.</div>
                    {{ form_errors(detail_form.restrictions) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.confidentialityLevel, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.confidentialityLevel, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">NDA / Clearance tier.</div>
                    {{ form_errors(detail_form.confidentialityLevel) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.failureTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.failureTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Penalties for failure.</div>
                    {{ form_errors(detail_form.failureTerms) }}
                </div>

                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.cancellationTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.cancellationTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Withdrawal clauses.</div>
                    {{ form_errors(detail_form.cancellationTerms) }}
                </div>
            </div>
        </div>
    </details>
</fieldset>
