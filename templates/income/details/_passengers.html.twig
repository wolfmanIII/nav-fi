<fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
    <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">
        PASSENGER Details
    </legend>

    {# CORE DATA #}
    <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.origin, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.origin, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Departure port/orbital.</div>
            {{ form_errors(detail_form.origin) }}
        </div>

        <div>
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.destination, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.destination, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Arrival port/orbital.</div>
            {{ form_errors(detail_form.destination) }}
        </div>

        {# Dates #}
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set dep_day = data.departureDay ?? null %}
        {% set dep_year = data.departureYear ?? null %}
        {% set dep_value = (dep_day is not null and dep_year is not null) ? (dep_day|imperial_date(dep_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.departureDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.departureDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': dep_day ?? '',
                    'data-imperial-date-initial-year': dep_year ?? '',
                    'value': dep_value,
                }
            }) }}
            {{ form_widget(detail_form.departureDate.year) }}
            {{ form_widget(detail_form.departureDate.day) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Scheduled lift-off.</div>
            {{ form_errors(detail_form.departureDate.display) }}
        </div>

        {% set arr_day = data.arrivalDay ?? null %}
        {% set arr_year = data.arrivalYear ?? null %}
        {% set arr_value = (arr_day is not null and arr_year is not null) ? (arr_day|imperial_date(arr_year)) : '' %}
        
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.arrivalDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.arrivalDate.display, {
                attr: {
                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': arr_day ?? '',
                    'data-imperial-date-initial-year': arr_year ?? '',
                    'value': arr_value,
                }
            }) }}
            {{ form_widget(detail_form.arrivalDate.year) }}
            {{ form_widget(detail_form.arrivalDate.day) }}
             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Scheduled arrival.</div>
            {{ form_errors(detail_form.arrivalDate.display) }}
        </div>

        {# Passenger Info #}
        <div class="grid grid-cols-2 gap-4 col-span-1">
             <div>
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.classOrBerth, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.classOrBerth, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Deck tier/Class.</div>
                {{ form_errors(detail_form.classOrBerth) }}
            </div>
             <div>
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(detail_form.qty, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(detail_form.qty, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Seats/Berths.</div>
                {{ form_errors(detail_form.qty) }}
            </div>
        </div>
        
        <div class="col-span-1">
             <div class="flex items-baseline h-5 mb-1">
                {{ form_label(detail_form.passengerNames, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
            </div>
            {{ form_widget(detail_form.passengerNames, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'placeholder': 'e.g. Mal Reynolds, Zoe Washburne...' } }) }}
            <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Manifest roster (comma separated).</div>
            {{ form_errors(detail_form.passengerNames) }}
        </div>
    </div>

    {# EXTENDED DATA #}
    <details class="group collapse collapse-arrow col-span-2 mt-2 border border-slate-800 bg-slate-950/20 rounded-lg">
         <summary class="collapse-title text-[10px] font-bold font-orbitron tracking-widest text-slate-400 uppercase cursor-pointer hover:bg-slate-900/50 transition-colors">
            Contact, Baggage & Policies
        </summary>
        
        <div class="collapse-content pt-4 border-t border-slate-800/50">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.passengerContact, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.passengerContact, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Primary comms handle.</div>
                    {{ form_errors(detail_form.passengerContact) }}
                </div>

                <div class="grid grid-cols-2 gap-4">
                     <div>
                         <div class="flex items-baseline h-5 mb-1">
                            {{ form_label(detail_form.baggageAllowance, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                        </div>
                        {{ form_widget(detail_form.baggageAllowance, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                        <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Included mass.</div>
                        {{ form_errors(detail_form.baggageAllowance) }}
                    </div>
                     <div>
                         <div class="flex items-baseline h-5 mb-1">
                            {{ form_label(detail_form.extraBaggage, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                        </div>
                        {{ form_widget(detail_form.extraBaggage, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                        <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Excess billed.</div>
                        {{ form_errors(detail_form.extraBaggage) }}
                    </div>
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.paymentTerms, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.paymentTerms, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Ticket settlement terms.</div>
                    {{ form_errors(detail_form.paymentTerms) }}
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(detail_form.refundChangePolicy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(detail_form.refundChangePolicy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                     <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Cancellation rules.</div>
                    {{ form_errors(detail_form.refundChangePolicy) }}
                </div>

                 {# Proof of Delivery #}
                <div class="md:col-span-2 border-t border-slate-800 pt-4 mt-2">
                    <h5 class="text-[9px] font-bold font-orbitron tracking-widest text-slate-500 uppercase mb-4">Boarding / Debarking Confirmation</h5>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofRef, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofRef, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Protocol Ref.</div>
                            {{ form_errors(detail_form.deliveryProofRef) }}
                        </div>

                        {% set proof_day = data.deliveryProofDay ?? null %}
                        {% set proof_year = data.deliveryProofYear ?? null %}
                        {% set proof_value = (proof_day is not null and proof_year is not null) ? (proof_day|imperial_date(proof_year)) : '' %}
                        
                        <div data-controller="imperial-date">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofDate.display, {
                                attr: {
                                    'class': 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                                    'data-imperial-date-prev-icon': '«',
                                    'data-imperial-date-next-icon': '»',
                                    'data-imperial-date-initial-day': proof_day ?? '',
                                    'data-imperial-date-initial-year': proof_year ?? '',
                                    'value': proof_value,
                                }
                            }) }}
                            {{ form_widget(detail_form.deliveryProofDate.year) }}
                            {{ form_widget(detail_form.deliveryProofDate.day) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Time of Check.</div>
                            {{ form_errors(detail_form.deliveryProofDate.display) }}
                        </div>

                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(detail_form.deliveryProofReceivedBy, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(detail_form.deliveryProofReceivedBy, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                             <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">Terminal Officer.</div>
                            {{ form_errors(detail_form.deliveryProofReceivedBy) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </details>
</fieldset>
