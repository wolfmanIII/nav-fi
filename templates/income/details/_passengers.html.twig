            }) }}
            {{ form_widget(detail_form.arrivalDate.year) }}
            {{ form_widget(detail_form.arrivalDate.day) }}
            {{ form_errors(detail_form.arrivalDate.display) }}
            <input type="checkbox" id="{{ arr_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Arrival date</h3>
                    <p class="py-2 text-sm">Declared arrival slot, used for port clearance and passenger routing.</p>
                    <div class="modal-action">
                        <label for="{{ arr_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

