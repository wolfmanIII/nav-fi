            <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                <h3 class="font-bold">Destination</h3>
                <p class="py-2 text-sm">Arrival port or orbital. Match the authority registry where passengers disembark.</p>
                <div class="modal-action">
                    <label for="{{ destination_help_id }}" class="btn btn-primary">Close</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-span-2 grid grid-cols-2 gap-4">
        {% set data = detail_form.vars.data is defined ? detail_form.vars.data : null %}
        {% set dep_day = data ? data.departureDay : null %}
        {% set dep_year = data ? data.departureYear : null %}
        {% set dep_value = (dep_day is not null and dep_year is not null) ? (dep_day|imperial_date(dep_year)) : '' %}
        {% set dep_help_id = detail_form.departureDate.vars.id ~ '-help' %}
        <div class="col-span-1" data-controller="imperial-date">
            <div class="flex items-baseline justify-between h-5 mb-1">
                {{ form_label(detail_form.departureDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                <label for="{{ dep_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
            </div>
            {{ form_widget(detail_form.departureDate.display, {
                attr: {
                    'data-imperial-date-prev-icon': '«',
                    'data-imperial-date-next-icon': '»',
                    'data-imperial-date-initial-day': dep_day ?? '',
                    'data-imperial-date-initial-year': dep_year ?? '',
                    'value': dep_value,
                }
            }) }}
            {{ form_widget(detail_form.departureDate.year) }}
            {{ form_widget(detail_form.departureDate.day) }}
            {{ form_errors(detail_form.departureDate.display) }}
            <input type="checkbox" id="{{ dep_help_id }}" class="modal-toggle hidden" />
            <div class="modal" role="dialog">
                <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                    <h3 class="font-bold">Departure date</h3>
                    <p class="py-2 text-sm">Scheduled lift-off window in imperial day/year.</p>
                    <div class="modal-action">
                        <label for="{{ dep_help_id }}" class="btn btn-primary">Close</label>
                    </div>
                </div>
            </div>
        </div>

        {% set arr_day = data ? data.arrivalDay : null %}
        {% set arr_year = data ? data.arrivalYear : null %}
        {% set arr_value = (arr_day is not null and arr_year is not null) ? (arr_day|imperial_date(arr_year)) : '' %}
