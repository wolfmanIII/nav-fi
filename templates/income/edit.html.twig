{% extends 'base.html.twig' %}

{% block title %}Captain Log - Income{% endblock %}

{% block pageContent %}
    {% set CAN_CREATE = constant('App\\Security\\Voter\\IncomeVoter::CREATE') %}
    {% set CAN_EDIT = constant('App\\Security\\Voter\\IncomeVoter::EDIT') %}
    {% set can_create = is_granted(CAN_CREATE, income) %}
    {% set can_edit = is_granted(CAN_EDIT, income) %}

    <div class="flex flex-col items-stretch gap-4">

        {{ form_start(form) }}

        {{ form_widget(form._token) }}

        <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">{% include 'icons/income.html.twig' %} Income</legend>

            <div class="col-span-3">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/income.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship income</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Log your income</h3>
                            <p class="text-sm text-cyan-100/80">Contracts, freight and charter: keep them tidy here to know when you can fund the next jump.</p>
                        </div>
                    </div>
                </div>
            </div>
            {% if income.id %}
                <div class="col-span-3">
                    <div class="alert alert-warning alert-outline shadow-sm w-full">
                        <div class="flex items-start gap-3">
                            <div class="pt-0.5 animate-spin-slow text-warning">
                                {% include 'icons/radar.html.twig' %}
                            </div>
                            <div>
                                <div class="font-semibold">Category warning</div>
                                <p class="text-sm opacity-80">Changing the Income category will wipe the data of the previously saved category.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-span-3">
                    <label class="block text-slate-300">Code</label>
                    <div class="m-1 w-full"><b>{{ income.code }}</b></div>
                </div>
            {% endif %}

            <div class="col-span-2">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="col-span-1">
                {{ form_label(form.localLaw) }}
                {{ form_widget(form.localLaw) }}
                {{ form_errors(form.localLaw) }}
            </div>

            <div class="col-span-3 grid grid-cols-1 gap-4">
                <div class="alert alert-info alert-outline shadow-sm mt-2">
                    <span class="flex items-center justify-center animate-spin-slow">
                        {% include 'icons/radar.html.twig' %}
                    </span>
                    <div class="text-xs text-slate-200">
                        Select a campaign to unlock the ship list for this income.
                        <div class="mt-1">
                            Log the campaign and hull only after the crew accepts the contract—no payout enters the ledger before the crew signs on.
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-span-3 grid grid-cols-2 gap-4" data-controller="campaign-ship">
                <div>
                    {{ form_label(form.campaign) }}
                    {{ form_widget(form.campaign) }}
                    {{ form_errors(form.campaign) }}
                </div>
                <div>
                    {{ form_label(form.ship) }}
                    {{ form_widget(form.ship) }}
                    {{ form_errors(form.ship) }}
                </div>
            </div>

            <div class="col-span-1">
                {{ form_label(form.company) }}
                {{ form_widget(form.company) }}
                {{ form_errors(form.company) }}
            </div>

            <div class="col-span-1">
                {{ form_label(form.incomeCategory) }}
                {{ form_widget(form.incomeCategory) }}
                {{ form_errors(form.incomeCategory) }}
            </div>

            <div class="col-span-1">
                {% set status_help_id = form.status.vars.id ~ '-help' %}
                <div class="flex items-center gap-2">
                    {{ form_label(form.status) }}
                    <label for="{{ status_help_id }}" class="badge badge-outline badge-info cursor-pointer badge-xs">?</label>
                </div>
                {{ form_widget(form.status) }}
                {{ form_errors(form.status) }}
                <input type="checkbox" id="{{ status_help_id }}" class="modal-toggle hidden" />
                <div class="modal" role="dialog">
                    <div class="modal-box">
                        <div class="flex items-center gap-2">
                            <span class="animate-spin-slow">{% include 'icons/radar.html.twig' %}</span>
                            <h3 class="font-bold">Contract status</h3>
                        </div>
                        <p class="py-2 text-sm">Status is auto-managed: Draft until a signing date is recorded, then it locks to Signed.</p>
                        <div class="modal-action">
                            <label for="{{ status_help_id }}" class="btn btn-primary">Close</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-span-1">
                {{ form_label(form.signingLocation) }}
                {{ form_widget(form.signingLocation) }}
                {{ form_errors(form.signingLocation) }}
            </div>

            <div class="col-span-1" data-controller="imperial-date">
                {{ form_label(form.signingDate) }}
                {{ form_widget(form.signingDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.signingDate.year) }}
                {{ form_widget(form.signingDate.day) }}
                {{ form_errors(form.signingDate) }}
            </div>

            <div class="col-span-1">
                {{ form_label(form.amount) }}
                {{ form_widget(form.amount) }}
                {{ form_errors(form.amount) }}
            </div>

            <div class="col-span-1" data-controller="imperial-date">
                <div class="flex items-center gap-1">
                    {{ form_label(form.paymentDate) }}
                </div>
                {{ form_widget(form.paymentDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.paymentDate.year) }}
                {{ form_widget(form.paymentDate.day) }}
                {{ form_errors(form.paymentDate) }}
            </div>

            <div class="col-span-1" data-controller="imperial-date">
                <div class="flex items-center gap-1">
                    {{ form_label(form.expirationDate) }}
                </div>
                {{ form_widget(form.expirationDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.expirationDate.year) }}
                {{ form_widget(form.expirationDate.day) }}
                {{ form_errors(form.expirationDate) }}
            </div>
        </fieldset>

        {% if form.charterDetails is defined %}
            {% include 'income/details/_charter.html.twig' with { detail_form: form.charterDetails } %}
        {% endif %}
        {% if form.subsidyDetails is defined %}
            {% include 'income/details/_subsidy.html.twig' with { detail_form: form.subsidyDetails } %}
        {% endif %}
        {% if form.freightDetails is defined %}
            {% include 'income/details/_freight.html.twig' with { detail_form: form.freightDetails } %}
        {% endif %}
        {% if form.passengersDetails is defined %}
            {% include 'income/details/_passengers.html.twig' with { detail_form: form.passengersDetails } %}
        {% endif %}
        {% if form.servicesDetails is defined %}
            {% include 'income/details/_services.html.twig' with { detail_form: form.servicesDetails } %}
        {% endif %}
        {% if form.insuranceDetails is defined %}
            {% include 'income/details/_insurance.html.twig' with { detail_form: form.insuranceDetails } %}
        {% endif %}
        {% if form.mailDetails is defined %}
            {% include 'income/details/_mail.html.twig' with { detail_form: form.mailDetails } %}
        {% endif %}
        {% if form.interestDetails is defined %}
            {% include 'income/details/_interest.html.twig' with { detail_form: form.interestDetails } %}
        {% endif %}
        {% if form.tradeDetails is defined %}
            {% include 'income/details/_trade.html.twig' with { detail_form: form.tradeDetails } %}
        {% endif %}
        {% if form.salvageDetails is defined %}
            {% include 'income/details/_salvage.html.twig' with { detail_form: form.salvageDetails } %}
        {% endif %}
        {% if form.prizeDetails is defined %}
            {% include 'income/details/_prize.html.twig' with { detail_form: form.prizeDetails } %}
        {% endif %}
        {% if form.contractDetails is defined %}
            {% include 'income/details/_contract.html.twig' with { detail_form: form.contractDetails } %}
        {% endif %}

        <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">{% include 'icons/income.html.twig' %} Note</legend>
            <div class="col-span-3">
                {{ form_label(form.note) }}
                {{ form_widget(form.note) }}
                {{ form_errors(form.note) }}
            </div>
        </fieldset>

        {% if income.id %}
            <fieldset class="fieldset grid grid-cols-3 bg-base-200 border-base-300 gap-4 p-4 border border-warning rounded w-full">
                <legend class="fieldset-legend">{% include 'icons/income.html.twig' %} Cancellation</legend>
                <div class="col-span-3">
                    <div class="grid grid-cols-3 gap-4 items-end">
                        <div class="col-span-2" data-controller="imperial-date">
                            {{ form_label(form.cancelDate) }}
                            {{ form_widget(form.cancelDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                            {{ form_widget(form.cancelDate.year) }}
                            {{ form_widget(form.cancelDate.day) }}
                            {{ form_errors(form.cancelDate) }}
                        </div>
                        <div class="alert alert-warning alert-outline">
                            <div class="pt-0.5 animate-spin-slow text-warning">
                                {% include 'icons/radar.html.twig' %}
                            </div>
                            Fill only if the contract was canceled: this date closes its validity window
                        </div>
                    </div>
                </div>
            </fieldset>
        {% endif %}

        <button type="submit"
                class="btn btn-outline btn-primary mt-4 mb-4 mr-4"
                {% if not (income.id ? can_edit : can_create) %} disabled {% endif %}
        >
            Save
        </button>
        {% if income.id %}
            <a href="{{ path('app_income_pdf', { id: income.id }) }}" target="_blank" class="btn btn-outline btn-secondary mt-4 mb-4 mr-4">
                PDF
            </a>
        {% endif %}
        <a href="{{ path('app_income_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form, { render_rest: false }) }}

    </div>

{% endblock %}
