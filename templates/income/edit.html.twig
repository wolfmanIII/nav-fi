{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Income{% endblock %}

{% block pageContent %}
    {% set CAN_CREATE = constant('App\\Security\\Voter\\IncomeVoter::CREATE') %}
    {% set CAN_EDIT = constant('App\\Security\\Voter\\IncomeVoter::EDIT') %}
    {% set can_create = is_granted(CAN_CREATE, income) %}
    {% set can_edit = is_granted(CAN_EDIT, income) %}
    {% import '_tooltip.html.twig' as tooltip %}

        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/income.html.twig',
            theme: 'cyan',
            subheader: 'Asset income // Contract Registry',
            title: 'LOG INCOME',
            titleSuffix: '// Revenues',
            description: 'Contracts, freight and charter: fund the next jump.'
        } %}
            {% import '_tooltip.html.twig' as tooltip %}
            {% block content %}
                {# Session Date Indicator #}
                {% set campaign = income.financialAccount.asset.campaign ?? income.financialAccount.campaign ?? null %}
                {% if campaign %}
                    <div class="flex flex-wrap gap-2 mt-3">
                        <div class="badge badge-neutral gap-1.5 px-2.5 py-1.5 text-[10px] font-mono border border-slate-700">
                            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span class="font-bold tracking-wider text-slate-400">{{ campaign.title }}:</span>
                            <span class="text-slate-300">{{ campaign.sessionDay|imperial_date(campaign.sessionYear) }}</span>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}
            {% block actions %}
                {% if income.id %}
                    {{ tooltip.link('Open income PDF', 'Income PDF', 'icons/pdf.html.twig', path('app_income_pdf', { id: income.id }), { dim: 16, linkClass: 'btn btn-outline btn-primary btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase', position: 'tooltip-left', attrs: { target: '_blank', rel: 'noopener' } }) }}
                {% endif %}
                <a href="{{ path('app_income_index') }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
            {% endblock %}
        {% endembed %}

        {% if income.paymentDay is not null and income.paymentYear is not null %}
            <div class="alert alert-info alert-outline shadow-sm mb-6 border-cyan-500/50 bg-cyan-500/5">
                <div class="animate-spin-slow text-cyan-500">
                    {% include 'icons/radar.html.twig' with { dim: 24 } %}
                </div>
                <div class="text-sm font-rajdhani uppercase tracking-widest font-bold text-cyan-200">
                    Income is marked as <span class="text-cyan-500">PAID</span>. Handle modifications with tactical caution to maintain log integrity.
                </div>
            </div>
        {% endif %}



        {{ form_start(form, { attr: { 'data-controller': 'form-visibility income-ledger' } }) }}
        {{ form_widget(form._token) }}

        {% if income.id %}
            <div class="alert alert-warning bg-amber-500/10 border-amber-500/30 text-amber-500 text-xs rounded-lg mb-6 py-2">
                <div class="flex gap-2 items-center">
                    <div class="animate-spin-slow text-current">
                        {% include 'icons/radar.html.twig' with { dim: 16 } %}
                    </div>
                    <span class="font-bold font-rajdhani tracking-widest uppercase">Warning: Changing category will overwrite specific detail items.</span>
                </div>
            </div>
        {% endif %}

        {# ASSET CONTEXT (Moved to Top) #}
        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-controller="campaign-asset">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Asset Context</legend>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.campaign) }}
                {{ form_errors(form.campaign) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.asset, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.asset, { attr: { 
                    'class': 'select select-bordered w-full bg-slate-950/50 border-slate-700',
                    'data-campaign-asset-target': 'asset',
                    'data-controller': 'year-limit',
                    'data-year-limit-default-value': form.asset.vars.attr['data-year-limit-default-value'] ?? '',
                    'data-income-ledger-target': 'asset',
                    'data-form-visibility-target': 'trigger',
                    'data-action': 'change->year-limit#onAssetChange change->income-ledger#onAssetChange change->form-visibility#toggle'
                }}) }}
                {{ form_errors(form.asset) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Primary Data</legend>

            <div class="col-span-2">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.title, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.title, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.amount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.amount, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.amount) }}
            </div>

            <div class="col-span-2 md:col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.paymentDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.paymentDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.paymentDate.year) }}
                {{ form_widget(form.paymentDate.day) }}
                {{ form_errors(form.paymentDate.display) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-teal-500/80 uppercase">Financial Ledger</legend>

            {# CREDIT SIDE (Receiver) #}
            <div class="col-span-1 space-y-4">
                <div class="pb-2 border-b border-slate-800 mb-2">
                   <h4 class="text-[10px] uppercase tracking-widest font-bold font-orbitron text-emerald-400/80">Credit // Receiving Account</h4>
                </div>
                
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.financialAccount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.financialAccount, { attr: { 
                        'class': 'select select-bordered w-full bg-slate-950/50 border-slate-700',
                        'data-income-ledger-target': 'financialAccount',
                        'data-action': 'change->income-ledger#onAccountChange'
                    }}) }}
                    {{ form_errors(form.financialAccount) }}
                    {% if form.financialAccount.vars.help is defined %}
                        <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">{{ form.financialAccount.vars.help }}</div>
                    {% endif %}
                </div>

                <div class="p-3 rounded border border-slate-800 bg-slate-950/30" data-income-ledger-target="newLedgerSection">
                    <p class="text-[9px] uppercase tracking-widest font-bold font-orbitron text-slate-500 mb-2">Or open new account</p>
                    <div class="grid grid-cols-1 gap-3">
                        <div>
                             <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(form.bank, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(form.bank, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                            {{ form_errors(form.bank) }}
                            {% if form.bank.vars.help is defined %}
                                <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">{{ form.bank.vars.help }}</div>
                            {% endif %}
                        </div>
                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(form.bankName, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(form.bankName, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 placeholder-slate-600' } }) }}
                            {{ form_errors(form.bankName) }}
                            {% if form.bankName.vars.help is defined %}
                                <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">{{ form.bankName.vars.help }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {# DEBIT SIDE (Payer / Source) #}
            <div class="col-span-1 space-y-4" data-controller="exclusive-visibility">
                 <div class="pb-2 border-b border-slate-800 mb-2">
                   <h4 class="text-[10px] uppercase tracking-widest font-bold font-orbitron text-red-400/80">Debit // Payer Source</h4>
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.company, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.company, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700', 'data-exclusive-visibility-target': 'trigger', 'data-action': 'change->exclusive-visibility#check' } }) }}
                    {{ form_errors(form.company) }}
                    {% if form.company.vars.help is defined %}
                        <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">{{ form.company.vars.help }}</div>
                    {% endif %}
                </div>
                
                <div class="p-3 rounded border border-slate-800 bg-slate-950/30" data-exclusive-visibility-target="target">
                    <p class="text-[9px] uppercase tracking-widest font-bold font-orbitron text-slate-500 mb-2">Or new company</p>
                    <div class="grid grid-cols-3 gap-3">
                        <div class="col-span-2">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(form.patronAlias, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(form.patronAlias, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50 placeholder-slate-600' } }) }}
                            {{ form_errors(form.patronAlias) }}
                             {% if form.patronAlias.vars.help is defined %}
                                <div class="text-[10px] text-slate-500 mt-1 font-rajdhani uppercase tracking-wider">{{ form.patronAlias.vars.help }}</div>
                            {% endif %}
                        </div>
                         <div class="col-span-1">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(form.payerCompanyRole, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(form.payerCompanyRole, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                            {{ form_errors(form.payerCompanyRole) }}
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Classification & Law</legend>
            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.incomeCategory, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.incomeCategory, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.incomeCategory) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.localLaw, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.localLaw, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.localLaw) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Status & Location</legend>

            <div class="col-span-2 md:col-span-1">
                {% set status_help_id = form.status.vars.id ~ '-help' %}
                <div class="flex items-baseline justify-between h-5 mb-1">
                    {{ form_label(form.status, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    <label for="{{ status_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
                </div>
                {{ form_widget(form.status, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.status) }}
                <input type="checkbox" id="{{ status_help_id }}" class="modal-toggle hidden" />
                <div class="modal" role="dialog">
                    <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                        <h3 class="font-bold text-cyan-100 font-orbitron uppercase tracking-widest text-sm mb-4">Tactical Info: Contract Status</h3>
                        <p class="py-2 text-sm text-slate-300 font-rajdhani">Status is auto-managed: Draft until a signing date is recorded, then it locks to Signed.</p>
                        <div class="modal-action">
                            <label for="{{ status_help_id }}" class="btn btn-primary btn-sm btn-outline font-orbitron uppercase text-[10px]">Close</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.signingLocation, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.signingLocation, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.signingLocation) }}
            </div>

            <div class="col-span-2 md:col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.signingDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.signingDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.signingDate.year) }}
                {{ form_widget(form.signingDate.day) }}
                {{ form_errors(form.signingDate.display) }}
            </div>

            <div class="col-span-2 md:col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.expirationDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.expirationDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.expirationDate.year) }}
                {{ form_widget(form.expirationDate.day) }}
                {{ form_errors(form.expirationDate.display) }}
            </div>
        </fieldset>



        <turbo-frame id="income-details-frame" data-form-visibility-target="container">
            {% set category = income.incomeCategory.code ?? null %}
            {% if category %}
                {% include 'income/details/_' ~ category|lower ~ '.html.twig' with { 
                    detail_form: form.details, 
                    purchase_cost_form: form.purchaseCost ?? null 
                } %}
            {% endif %}
        </turbo-frame>

        <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-8 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-slate-400 uppercase">Operational Notes</legend>
            <div>
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.note, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.note, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-24 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Enter tactical notes here...' } }) }}
                {{ form_errors(form.note) }}
            </div>
        </fieldset>

        {% if income.id %}
            <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-red-900/30 gap-6 p-6 rounded-xl shadow-inner mb-8 relative" data-form-visibility-target="container">
                <legend class="px-3 py-1 rounded bg-red-900/20 border border-red-900/40 text-[10px] font-bold font-orbitron tracking-[0.3em] text-rose-500 uppercase">Decommissioning // Cancellation</legend>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-start">
                    {% if income.isCancelled() %}
                        <div class="col-span-1 md:col-span-2 p-4 rounded-lg bg-rose-500/10 border border-rose-500/30 flex items-center gap-3 mb-2 animate-pulse">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-rose-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                            </svg>
                            <div class="flex flex-col">
                                <span class="text-xs font-bold font-orbitron text-rose-400 uppercase tracking-widest">Tactical Alert: Asset Income Voided</span>
                                <span class="text-[10px] font-rajdhani text-rose-300/80 uppercase">This contract has been officially cancelled. It will remain in the manifest but excluded from future fiscal projections.</span>
                            </div>
                        </div>
                    {% endif %}
                    <div data-controller="imperial-date">
                        <div class="flex items-baseline h-5 mb-1">
                            {{ form_label(form.cancelDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                        </div>
                        {{ form_widget(form.cancelDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                        {{ form_widget(form.cancelDate.year) }}
                        {{ form_widget(form.cancelDate.day) }}
                        {{ form_errors(form.cancelDate.display) }}
                    </div>
                    <div class="p-4 rounded-lg bg-red-500/5 border border-red-500/10 text-[10px] text-red-400/70 font-rajdhani tracking-widest uppercase flex items-center">
                        Protocol: Fill only if the contract was canceled. This date closes its validity window permanently.
                    </div>
                </div>
            </fieldset>
        {% endif %}

        <div class="flex items-center justify-end gap-3 mb-10">
            {% if income.id and can_edit %}
                <a href="{{ path('app_income_delete', {id: income.id}) }}" 
                   class="btn btn-ghost text-rose-500 hover:text-rose-400 hover:bg-rose-900/20 font-orbitron uppercase text-[10px] tracking-widest font-bold mr-auto"
                   onclick="return confirm('WARNING: This will permanently erase this financial record. Are you sure?');">
                    Delete Record
                </a>
            {% endif %}
            <a href="{{ path('app_income_index') }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Abort Changes</a>
            <button type="submit"
                    class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10"
                    {% if not (income.id ? can_edit : can_create) %} disabled {% endif %}
            >
                Confirm Entry // Commit to Log
            </button>
        </div>

        {{ form_end(form, { render_rest: false }) }}

{% endblock %}
