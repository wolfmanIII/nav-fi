{% extends 'base_plain.html.twig' %}

{% block title %}Service Work Order{% endblock %}
{% block stylesheets %}
    <style>
        body { font-family: 'Inter', 'Segoe UI', sans-serif; }
        .card { border: none; border-radius: 8px; background: #ffffff; }
        .card-body { padding: 10px; }
        .table { width: 100%; border-collapse: collapse; border: 1px solid #d1d5db; }
        .table th, .table td { border: 1px solid #d1d5db; padding: 6px; }
        .table th { text-align: left; }
        .text-right { text-align: right; }
        .mb-4 { margin-bottom: 0.5rem; }
        .mb-6 { margin-bottom: 0.75rem; }
        .grid { display: grid; }
        .grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .gap-4 { gap: 0.75rem; }
        .header-table { width: 100%; border-collapse: collapse; margin-bottom: 0.5rem; }
        .header-table td { vertical-align: middle; }
        .logo { height: 64px; }
        .text-sm { font-size: 0.9rem; }
        .text-lg { font-size: 1.125rem; }
        .text-2xl { font-size: 1.5rem; }
        .font-bold { font-weight: 700; }
        .card-title { font-weight: 700; }
    </style>
{% endblock %}
{% block javascripts %}{% endblock %}

{% block pageContent %}
    <div class="mb-6">
        <table class="header-table">
            <tr>
                <td>
                    <img src="{{ absolute_url(asset('img/captain-log-logo.png')) }}" alt="Captain Log" class="logo">
                </td>
                <td class="text-right">
                    <div class="text-2xl font-bold">Service Work Order</div>
                    <div class="text-sm font-bold">Service ID: {{ '{{SERVICE_ID}}' }}</div>
                    <div class="text-sm">Date: {{ '{{DATE}}' }}</div>
                </td>
            </tr>
        </table>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Parties</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Provider</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{CUSTOMER_NAME}}' }}<br>Contact: {{ '{{CUSTOMER_CONTACT}}' }}</td>
                        <td>{{ '{{PROVIDER_NAME}}' }}</td>
                        <td>{{ '{{LOCATION}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Asset & Schedule</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Vessel / Asset</th>
                        <th>Reg / ID</th>
                        <th>Requested By</th>
                        <th>Start</th>
                        <th>End / ETA</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{VESSEL_NAME}}' }}</td>
                        <td>{{ '{{VESSEL_ID}}' }}</td>
                        <td>{{ '{{REQUESTED_BY}}' }}</td>
                        <td>{{ '{{START_DATE}}' }}</td>
                        <td>{{ '{{END_DATE}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Service Details</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Service Type</th>
                        <th>Work Summary</th>
                        <th>Parts / Materials</th>
                        <th>Risks / Constraints</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{SERVICE_TYPE}}' }}</td>
                        <td>{{ '{{WORK_SUMMARY}}' }}</td>
                        <td>{{ '{{PARTS_MATERIALS}}' }}</td>
                        <td>{{ '{{RISKS}}' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <h2 class="card-title text-lg mb-2">Payment & Terms</h2>
            <table class="table text-sm">
                <thead>
                    <tr>
                        <th>Payment</th>
                        <th>Extras</th>
                        <th>Liability Limit</th>
                        <th>Cancellation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ '{{PAYMENT_TERMS}}' }}</td>
                        <td>{{ '{{EXTRAS}}' }}</td>
                        <td>{{ '{{LIABILITY_LIMIT}}' }}</td>
                        <td>{{ '{{CANCELLATION_TERMS}}' }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="mt-3 text-sm">
                Notes: {{ '{{NOTES}}' }}
            </div>
        </div>
    </div>

    <table class="table text-sm">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Provider</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ '{{CUSTOMER_SIGN}}' }}</td>
                <td>{{ '{{PROVIDER_SIGN}}' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
