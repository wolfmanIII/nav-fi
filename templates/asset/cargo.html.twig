{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Cargo Hold{% endblock %}

{% block pageContent %}
    <div class="p-10">

        {# ASSET HEADER #}
        {# ASSET HEADER #}
        {% set theme = asset.category == 'base' ? 'amber' : (asset.category == 'team' ? 'emerald' : 'cyan') %}
        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/cube.html.twig',
            theme: theme,
            subheader: 'Inventory Management // Cargo',
            title: 'CARGO HOLD',
            titleSuffix: '// ' ~ asset.name,
            description: 'Manage inventory and liquidation of trade goods.'
        } %}
            {% block actions %}
                <a href="{{ path('app_asset_edit', { id: asset.id }) }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    Back to Asset
                </a>
            {% endblock %}
        {% endembed %}

        {# CARGO GRID #}
        {% if cargoItems|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for item in cargoItems %}
                    <div class="card bg-slate-950 border border-slate-800 shadow-xl overflow-hidden group hover:border-amber-500/30 transition-all">
                        <div class="p-6 relative z-10">
                            <div class="flex justify-between items-start mb-4">
                                <span class="badge badge-outline border-slate-700 text-slate-400 font-mono text-[10px] uppercase tracking-widest">
                                    {{ item.paymentDay|imperial_date(item.paymentYear) }}
                                </span>
                                <span class="text-xs font-bold text-amber-500 font-mono">
                                    {{ item.amount|number_format(0, '.', ',') }} Cr
                                </span>
                            </div>

                            <h3 class="text-lg font-bold text-white mb-2 font-rajdhani uppercase tracking-wide">
                                {{ item.title|replace({'Purchase Cargo: ': ''}) }}
                            </h3>

                            <div class="text-xs text-slate-500 font-mono mb-6 line-clamp-2">
                                {{ item.note|default('No additional manifest notes.') }}
                            </div>

                            <div class="border-t border-slate-800 pt-4 flex justify-between items-center">
                                <div class="text-[10px] uppercase text-slate-600 font-bold tracking-widest">
                                    Origin: <span class="text-slate-400">{{ item.targetDestination|default('Unknown') }}</span>
                                </div>
                                <button onclick="liquidation_modal_{{ item.id }}.showModal()" class="btn btn-xs btn-outline border-amber-500/50 text-amber-400 hover:bg-amber-500 hover:text-black hover:border-amber-500 font-orbitron tracking-wider">
                                    Liquidate
                                </button>
                            </div>
                        </div>
                        
                        {# Decoration #}
                        <div class="absolute bottom-0 right-0 p-4 opacity-5 pointer-events-none group-hover:scale-110 transition-transform">
                             {% include 'icons/cube.html.twig' with { dim: 64 } %}
                        </div>

                        {# LIQUIDATION MODAL #}
                        <dialog id="liquidation_modal_{{ item.id }}" class="modal bg-black/80 backdrop-blur-sm">
                            <div class="modal-box bg-slate-900 border border-amber-500/30 shadow-[0_0_50px_rgba(245,158,11,0.1)]">
                                <h3 class="font-bold text-lg text-amber-400 font-orbitron uppercase tracking-wider mb-4">Liquidate Cargo</h3>
                                
                                {% set marketPrice = marketValues[item.id]|default(0) %}
                                {% set profit = marketPrice - item.amount %}
                                {% set isProfitable = profit >= 0 %}
                                {# Extract Initial Estimate from Details #}
                                {% set initialMarkup = 1.5 %}
                                {% for detail in item.detailItems %}
                                    {% if detail.markup_estimate is defined %}
                                        {% set initialMarkup = detail.markup_estimate %}
                                    {% endif %}
                                {% endfor %}
                                {% set estimatedRevenue = item.amount * initialMarkup %}

                                {% set roi = 0 %}
                                {% if item.amount > 0 %}
                                    {% set roi = ((marketPrice - item.amount) / item.amount) * 100 %}
                                {% endif %}

                                <div class="grid grid-cols-2 gap-4 mb-6 bg-slate-950 p-4 rounded border border-slate-800">
                                    <div class="space-y-4">
                                        <div>
                                            <div class="text-[10px] uppercase text-slate-500 font-bold tracking-widest mb-1">Initial Cost</div>
                                            <div class="text-slate-300 font-mono text-lg">{{ item.amount|format_number({min_fraction_digit: 2, max_fraction_digit: 2}, 'decimal', 'default', app.request.locale) }} <span class="text-xs text-slate-500">Cr</span></div>
                                        </div>
                                        <div>
                                            <div class="text-[10px] uppercase text-slate-500 font-bold tracking-widest mb-1">Initial Estimate</div>
                                            <div class="text-slate-400 font-mono text-sm border-b border-dashed border-slate-700 inline-block" title="Expected {{ initialMarkup }}x Multiplier">
                                                ~{{ estimatedRevenue|format_number({min_fraction_digit: 2, max_fraction_digit: 2}, 'decimal', 'default', app.request.locale) }} Cr
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-right space-y-4">
                                        <div>
                                            <div class="text-[10px] uppercase text-slate-500 font-bold tracking-widest mb-1">Market Value</div>
                                            <div class="font-mono text-xl font-bold {{ isProfitable ? 'text-emerald-400' : 'text-rose-400' }}">
                                                {{ marketPrice|format_number({min_fraction_digit: 2, max_fraction_digit: 2}, 'decimal', 'default', app.request.locale) }} <span class="text-xs text-emerald-500/50">Cr</span>
                                            </div>
                                        </div>
                                        <div>
                                            <span class="badge {{ isProfitable ? 'badge-success' : 'badge-error' }} badge-outline font-mono text-xs">
                                                {{ roi > 0 ? '+' : '' }}{{ roi|format_number({min_fraction_digit: 1, max_fraction_digit: 1}, 'decimal', 'default', app.request.locale) }}% Return
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-span-2 border-t border-slate-800 pt-2 flex justify-between items-center mt-2">
                                        <span class="text-[10px] uppercase text-slate-500 font-bold tracking-widest">Net Profit</span>
                                        <span class="font-mono text-sm {{ isProfitable ? 'text-emerald-500' : 'text-rose-500' }} drop-shadow-[0_0_5px_rgba(0,0,0,0.5)]">
                                            {{ isProfitable ? '+' : '' }}{{ profit|format_number({min_fraction_digit: 2, max_fraction_digit: 2}, 'decimal', 'default', app.request.locale) }} Cr
                                        </span>
                                    </div>
                                </div>
                                
                                <form method="POST" action="{{ path('app_asset_cargo_sell', {id: asset.id, costId: item.id}) }}">
                                    <div class="grid grid-cols-2 gap-4 mb-6">
                                        <div class="form-control">
                                            <label class="label"><span class="label-text text-slate-400 text-xs uppercase font-bold">Location</span></label>
                                            {# Pre-fill with Target Destination (the intended market) #}
                                            <input type="text" name="location" class="input input-bordered input-sm bg-slate-950 border-slate-700 text-white" value="{{ item.targetDestination|default('Current System') }}">
                                        </div>
                                        <div class="form-control">
                                            <label class="label"><span class="label-text text-slate-400 text-xs uppercase font-bold">Local Law</span></label>
                                            <select name="localLaw" class="select select-bordered select-sm bg-slate-950 border-slate-700 text-white" required>
                                                <option value="" disabled selected>-- Select Jurisdiction --</option>
                                                {% for law in localLaws %}
                                                    <option value="{{ law.id }}">{{ law.shortDescription|default(law.code) }}</option>
                                                {% endfor %}
                                            </select>
                                            <label class="label">
                                                <span class="label-text-alt text-slate-600">Jurisdiction governing this sale.</span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-2 gap-4 mb-6">
                                        <div class="form-control">
                                            <label class="label"><span class="label-text text-slate-400 text-xs uppercase font-bold">Date</span></label>
                                             <div class="flex gap-1">
                                                <input type="number" name="day" class="input input-bordered input-sm bg-slate-950 border-slate-700 text-white w-16" value="{{ item.paymentDay|default(1) }}">
                                                <input type="number" name="year" class="input input-bordered input-sm bg-slate-950 border-slate-700 text-white flex-1" value="{{ item.paymentYear|default(1105) }}">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-action flex justify-between">
                                        <button type="button" class="btn btn-ghost hover:bg-slate-800 text-slate-400" onclick="liquidation_modal_{{ item.id }}.close()">Cancel</button>
                                        <button type="submit" class="btn bg-amber-600 hover:bg-amber-500 text-black border-0 font-orbitron tracking-widest text-xs">Confirm Sale</button>
                                    </div>
                                </form>
                            </div>
                            <form method="dialog" class="modal-backdrop">
                                <button>close</button>
                            </form>
                        </dialog>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="flex flex-col items-center justify-center py-20 border border-dashed border-slate-800 rounded-xl bg-slate-900/20">
                <div class="p-4 rounded-full bg-slate-800 text-slate-600 mb-4">
                    {% include 'icons/cube.html.twig' with { dim: 48 } %}
                </div>
                <h3 class="text-xl font-bold text-slate-400 font-rajdhani uppercase tracking-widest">Cargo Hold Empty</h3>
                <p class="text-slate-600 font-mono text-sm mt-2">No speculative trade goods found on this asset.</p>
                <a href="{{ path('app_cube_index') }}" class="btn btn-outline border-slate-700 text-emerald-500 hover:bg-emerald-900/20 hover:border-emerald-500 mt-6 uppercase font-orbitron tracking-widest text-xs">
                    Find Opportunities
                </a>
            </div>
        {% endif %}

    </div>
{% endblock %}
