{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Asset Amendment{% endblock %}

{% block pageContent %}
    <div class="flex flex-col items-stretch gap-4">
        {{ form_start(form) }}

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Asset Amendment</legend>

            <div class="col-span-2">
                <div class="relative overflow-hidden rounded-xl border border-rose-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-amber-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(244,63,94,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(245,158,11,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-rose-500/10 border border-rose-400/40">
                            {% include 'icons/ship-components.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-rose-300/70">Amendment docket</p>
                            <h3 class="font-semibold text-rose-100 text-xl leading-tight font-orbitron uppercase">Patch a signed hull</h3>
                            <p class="text-sm text-rose-100/80 font-rajdhani tracking-widest uppercase">Logged amendments preserve mortgage integrity while documenting post‑signature upgrades.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-span-2">
                <label class="block text-slate-300">Asset</label>
                <div class="m-1 w-full"><b>{{ asset.name }} — {{ asset.type }} ({{ asset.class }})</b></div>
            </div>

            <div class="col-span-1">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="col-span-1">
                {{ form_label(form.cost) }}
                {{ form_widget(form.cost, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.cost) }}
            </div>

            <div class="col-span-2">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-24 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Enter amendment details here...' } }) }}
                {{ form_errors(form.description) }}
            </div>
        </fieldset>

        {% include 'asset/_details_form.html.twig' with { detailsForm: form.patchDetails, is_amendment: true } %}

        <div class="flex gap-4 mb-8">
            <button type="submit" class="btn btn-primary font-orbitron uppercase tracking-widest text-[10px] px-8">Confirm Patch</button>
            <a href="{{ path('app_asset_edit', { id: asset.id }) }}" role="button" class="btn btn-outline btn-sm font-orbitron uppercase tracking-widest text-[10px]">Abort Changes</a>
        </div>

        {{ form_end(form) }}

        {% if amendments|length > 0 %}
            <div class="card mt-6 border border-slate-800 bg-slate-900/40 p-6 rounded-xl shadow-inner mb-8">
                <h3 class="text-[10px] font-bold font-orbitron uppercase tracking-[0.3em] text-cyan-500/80 mb-6">Recorded amendments</h3>
                <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner">
                    <table class="table table-xs w-full border-separate border-spacing-0">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Title</th>
                                <th>Effective date</th>
                                <th>Cost</th>
                                <th>Summary</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for amendment in amendments %}
                                {% set summary_id = 'cost-summary-' ~ (amendment.id ?? loop.index) %}
                                <tr>
                                    <td>{% include 'components/code_with_copy.html.twig' with { code: amendment.code } %}</td>
                                    <td>{{ amendment.title }}</td>
                                    <td>
                                        {{ (amendment.effectiveDay is not null and amendment.effectiveYear is not null) ? (amendment.effectiveDay|imperial_date(amendment.effectiveYear)) : '—' }}
                                    </td>
                                    <td>{{ amendment.cost ? amendment.cost.title : '—' }}</td>
                                    <td>
                                        {% if amendment.cost %}
                                            <label for="{{ summary_id }}" class="btn btn-outline btn-info btn-xs">
                                                {% include 'icons/cost.html.twig' with { dim: 14 } %}
                                            </label>
                                            <input type="checkbox" id="{{ summary_id }}" class="modal-toggle hidden" />
                                            <div class="modal" role="dialog">
                                                <div class="modal-box">
                                                    <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                                                        <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                                                             style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                                                        </div>
                                                        <div class="relative p-4 flex items-start gap-3">
                                                            <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                                                                {% include 'icons/cost.html.twig' %}
                                                            </div>
                                                            <div>
                                                                <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Cost dossier</p>
                                                                <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Amendment cost brief</h3>
                                                                <p class="text-sm text-cyan-100/80">Audit snapshot tied to the selected Cost ref.</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 grid gap-3 text-sm">
                                                        <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                            <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Cost code</div>
                                                            <div class="text-cyan-100 font-semibold">{{ amendment.cost.code }}</div>
                                                        </div>
                                                        <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                            <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Title</div>
                                                            <div class="text-cyan-100 font-semibold">{{ amendment.cost.title }}</div>
                                                        </div>
                                                        <div class="grid grid-cols-2 gap-3">
                                                            <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                                <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Amount</div>
                                                                <div class="text-cyan-100 font-semibold">
                                                                    {{ amendment.cost.amount|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', app.request.locale ?? 'en') }} Cr
                                                                </div>
                                                            </div>
                                                            <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                                <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Payment date</div>
                                                                <div class="text-cyan-100 font-semibold">
                                                                    {{ (amendment.cost.paymentDay is not null and amendment.cost.paymentYear is not null) ? (amendment.cost.paymentDay|imperial_date(amendment.cost.paymentYear)) : '—' }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                            <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Company</div>
                                                            <div class="text-cyan-100 font-semibold">{{ amendment.cost.company ? amendment.cost.company.name : '—' }}</div>
                                                        </div>
                                                        <div class="grid grid-cols-2 gap-3">
                                                            <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                                <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Category</div>
                                                                <div class="text-cyan-100 font-semibold">
                                                                    {% if amendment.cost.costCategory %}
                                                                        {{ amendment.cost.costCategory.code }} — {{ amendment.cost.costCategory.description }}
                                                                    {% else %}
                                                                        —
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            <div class="rounded-lg border border-cyan-500/20 bg-slate-900/40 p-3">
                                                                <div class="text-[0.65rem] uppercase tracking-[0.25em] text-cyan-300/70">Local law</div>
                                                                <div class="text-cyan-100 font-semibold">
                                                                    {% if amendment.cost.localLaw %}
                                                                        {{ amendment.cost.localLaw.code }} — {{ amendment.cost.localLaw.shortDescription ?? '—' }}
                                                                    {% else %}
                                                                        —
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-action">
                                                        <label for="{{ summary_id }}" class="btn btn-primary">Close</label>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            —
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
