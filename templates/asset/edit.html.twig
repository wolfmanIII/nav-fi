{% extends 'base.html.twig' %}

{% set CAN_EDIT = constant('App\\Security\\Voter\\AssetVoter::EDIT') %}
{% set CAN_CREATE = constant('App\\Security\\Voter\\AssetVoter::CREATE') %}
{% set can_edit = is_granted(CAN_EDIT, asset) %}
{% set can_create = is_granted(CAN_CREATE, asset) %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Nav-Fi&sup3; - Asset{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4">

        {{ form_start(form) }}

        {% set hero_color = 'cyan' %}
        {% set hero_icon = 'icons/far-trader.html.twig' %}
        {% if asset.category == 'base' %}
            {% set hero_color = 'amber' %}
            {% set hero_icon = 'icons/spaceport.html.twig' %}
        {% elseif asset.category == 'team' %}
            {% set hero_color = 'emerald' %}
            {% set hero_icon = 'icons/team.html.twig' %}
        {% endif %}

        {% embed 'components/_hero_header.html.twig' with {
            icon: hero_icon,
            theme: hero_color,
            subheader: asset.category == 'team' ? 'Unit Dossier // Personnel Registry' : 'Asset sheet // Hull Registry',
            title: asset.category == 'team' ? 'UPDATE UNIT' : 'UPDATE ASSET',
            titleSuffix: '// Configuration',
            description: asset.category == 'team'
                ? 'Update roster and unit status: every operation starts with an aligned team.'
                : 'Update class and price before mortgages and embarkations: every jump starts with an aligned bridge.',
            asset: asset
        } %}
            {% import '_tooltip.html.twig' as tooltip %}
            {% block actions %}
                <a href="{{ path('app_asset_index') }}?category={{ asset.category }}&view=categorical" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
                {% if asset.id %}
                    {{ tooltip.link('Manage Inventory',
                                    'Cargo Hold',
                                    'icons/cube.html.twig',
                                    path('app_asset_cargo', { id: asset.id }),
                                    { dim: 16, linkClass: 'btn btn-outline btn-' ~ hero_color ~ ' btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase' }) }}

                    {{ tooltip.link('View operational ledger',
                                    'HULL LEDGER',
                                    'icons/radar.html.twig',
                                    path('app_asset_ledger', { id: asset.id }),
                                    { dim: 16, linkClass: 'btn btn-outline btn-' ~ hero_color ~ ' btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase' }) }}

                    {{ tooltip.link('Open asset PDF',
                                    'Asset PDF',
                                    'icons/ship-pdf.html.twig',
                                    path('app_asset_pdf', { id: asset.id }),
                                    { dim: 16, linkClass: 'btn btn-outline btn-ghost btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase text-slate-400', attrs: { target: '_blank', rel: 'noopener' } }) }}
                    {% if asset.mortgageSigned %}
                        {{ tooltip.link('Log amendments',
                                        'Amendments',
                                        'icons/ship-amendment.html.twig',
                                        path('app_asset_amendment_new', { id: asset.id }),
                                        { dim: 16, linkClass: 'btn btn-outline btn-info btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase' }) }}
                    {% endif %}
                {% endif %}
            {% endblock %}
        {% endembed %}

        {% if asset.mortgageSigned %}
            <div class="alert alert-info alert-outline border-cyan-500/50 bg-cyan-950/30 mb-6">
                <div class="animate-spin-slow text-cyan-500">
                    {% include 'icons/radar.html.twig' with { dim: 24 } %}
                </div>
                <div>
                   <div class="text-[10px] font-rajdhani uppercase tracking-widest font-bold text-cyan-500 mb-1">
                        Imperial Bank Protocol // Active Lien
                   </div>
                   <div class="text-sm text-cyan-100 font-light">
                        MORTGAGE LOCK DETECTED. Hull specifications are bound to asset collateral.
                        <span class="opacity-70">Direct overrides are authorized but will be flagged for audit. Use AMENDMENTS for authorized upgrades.</span>
                   </div>
                </div>
            </div>
        {% endif %}

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Primary Registry</legend>

            {% if asset.id %}
                <div class="col-span-2">
                    <div class="flex items-baseline h-5 mb-1">
                        <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Fleet Asset // Registry Code</label>
                    </div>
                    <div class="px-3 py-2 rounded bg-slate-950/50 border border-slate-800 font-mono text-cyan-400 text-sm"><b>{{ asset.code }}</b></div>
                </div>
            {% endif %}

            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Asset // Category</label>
                </div>
                <div class="px-3 py-2 rounded bg-slate-950/50 border border-slate-800 font-mono text-cyan-400 text-sm"><b>{{ asset.category|capitalize }}</b></div>
            </div>

            <div class="col-span-1" data-asset-target="nameField">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.name, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.name, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.name) }}
            </div>

            {% if form.type is defined %}
                <div class="col-span-1">
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.type, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.type, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                    {{ form_errors(form.type) }}
                </div>
            {% endif %}

            {% if form.class is defined %}
                <div class="col-span-1">
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.class, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.class, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                    {{ form_errors(form.class) }}
                </div>
            {% endif %}


            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.price, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.price, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50 font-mono text-amber-400' } }) }}
                {{ form_errors(form.price) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Mission Sync</legend>
            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.campaign, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.campaign) }}
            </div>



            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.financialAccount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.financialAccount, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                <div class="mt-1">{{ form_help(form.financialAccount) }}</div>
                {{ form_errors(form.financialAccount) }}
            </div>

            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.bank, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.bank, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                <div class="mt-1">{{ form_help(form.bank) }}</div>
                {{ form_errors(form.bank) }}
            </div>

            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.bankName, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.bankName, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                <div class="mt-1">{{ form_help(form.bankName) }}</div>
                {{ form_errors(form.bankName) }}
            </div>
        </fieldset>

        <div id="technical-details-wrapper" class="{% if asset.category == 'team' %}hidden{% endif %}" data-asset-category="{{ asset.category }}">
            {% if form.shipDetails is defined %}
                {% include 'asset/_ship_details_form.html.twig' with { form: form.shipDetails } %}
            {% elseif form.baseDetails is defined %}
                {% include 'asset/_base_details_form.html.twig' with { form: form.baseDetails } %}
            {% elseif form.assetDetails is defined %}
                {% include 'asset/_details_form.html.twig' with { detailsForm: form.assetDetails } %}
            {% endif %}
        </div>

        <div class="flex items-center justify-end gap-3 mb-10">
            {{ form_row(form._token) }}
            <a href="{{ path('app_asset_index', {category: asset.category}) }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Abort Changes</a>
            <button type="submit"
                    class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10"
                    {% if not (asset.id ? can_edit : can_create) %} disabled {% endif %}
            >
                Save Protocol // Commit Entry
            </button>
        </div>

        {{ form_end(form, {'render_rest': false}) }}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const technicalWrapper = document.getElementById('technical-details-wrapper');
            const selected = technicalWrapper.dataset.assetCategory;

            function updateVisibility() {
                if (selected === 'team') {
                    technicalWrapper.classList.add('hidden');
                } else {
                    technicalWrapper.classList.remove('hidden');
                }
            }

            // Controllo iniziale
            updateVisibility();
        });
    </script>

{% endblock %}
