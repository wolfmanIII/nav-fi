{% extends 'base.html.twig' %}

{% set CAN_CREW_REMOVE = constant('App\\Security\\Voter\\AssetVoter::CREW_REMOVE') %}
{% set can_remove_crew = is_granted(CAN_CREW_REMOVE, asset) %}

{% block title %}Nav-Fi&sup3; - Asset Crew{% endblock %}

{% import '_tooltip.html.twig' as tooltip %}

{% block pageContent %}

    <div class="">

        {% set theme = asset.category == 'base' ? 'amber' : (asset.category == 'team' ? 'emerald' : 'cyan') %}
        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/crew.html.twig',
            theme: theme,
            subheader: 'Asset Crew Roster // Personnel',
            title: asset.name,
            titleSuffix: '// ' ~ asset.code,
            description: asset.type ~ ' — ' ~ asset.class
        } %}
            {% block actions %}
                <a href="{{ path('app_asset_index') }}?category={{ asset.category }}&view=categorical" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
            {% endblock %}
        {% endembed %}

        {% if asset.mortgageSigned %}
            <div class="alert alert-info alert-outline border-cyan-500/50 bg-cyan-950/30 mb-6">
                <div class="animate-spin-slow text-cyan-500">
                    {% include 'icons/radar.html.twig' with { dim: 24 } %}
                </div>
                <div>
                   <div class="text-[10px] font-rajdhani uppercase tracking-widest font-bold text-cyan-500 mb-1">
                        Imperial Bank Protocol // Active Lien
                   </div>
                   <div class="text-sm text-cyan-100 font-light">
                        MORTGAGE LOCK DETECTED. Personnel manifest is bound to asset valuation.
                        <span class="opacity-70">Direct overrides are authorized but will be flagged for audit.</span>
                   </div>
                </div>
            </div>
        {% endif %}

        <div class="flow-root">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" data-controller="bulk-select">
            {% if asset.crews|length > 0 %}
                {% for member in asset.crews %}
                    <div class="border border-slate-700 bg-slate-950/40 rounded-lg p-4 relative group hover:border-cyan-500/30 transition-all duration-300 shadow-lg hover:shadow-cyan-500/5">
                        {# Header Section #}
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2 mb-0.5">
                                    <h3 class="font-bold text-cyan-100 text-sm font-orbitron uppercase tracking-wider truncate">
                                        {{ member.name }} {{ member.surname }}
                                    </h3>
                                    {% if member.captain %}
                                        <div class="text-amber-400 shrink-0" title="Captain">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                                <p class="text-[10px] text-slate-500 italic font-mono truncate">{{ member.nickname ?: 'No Callsign' }}</p>
                            </div>
                            <div class="font-mono text-[9px] text-slate-400 bg-slate-900 border border-slate-700/50 px-2 py-0.5 rounded shadow-inner shrink-0 scale-90 origin-right">
                                {% include 'components/code_with_copy.html.twig' with { code: member.code } %}
                            </div>
                        </div>

                        {# Data Section #}
                        <div class="space-y-4 mb-5">
                            <div>
                                <div class="flex items-baseline h-5 mb-1">
                                    <span class="text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Bridge Roles</span>
                                </div>
                                <div class="flex flex-wrap gap-1.5 min-h-[20px]">
                                    {% if member.assetRoles|length > 0 %}
                                        {% for role in member.assetRoles %}
                                            <span class="bg-cyan-500/10 border border-cyan-500/30 text-cyan-400 text-[9px] px-1.5 py-0.5 rounded font-mono uppercase tracking-tighter">{{ role.name }}</span>
                                        {% endfor %}
                                    {% else %}
                                        <span class="text-slate-600 text-[9px] uppercase font-mono tracking-widest">// No roles assigned</span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-2">
                                <div>
                                    <div class="flex items-baseline h-5 mb-1">
                                        <span class="text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Active Date</span>
                                    </div>
                                    <p class="font-mono text-xs text-slate-300 bg-slate-900/40 px-2 py-1 rounded border border-slate-800/50 text-center">
                                        {% if member.activeDay and member.activeYear %}
                                            {{ member.activeDay|imperial_date(member.activeYear) }}
                                        {% else %}
                                            <span class="text-slate-600">—</span>
                                        {% endif %}
                                    </p>
                                </div>
                                <div>
                                    <div class="flex items-baseline h-5 mb-1">
                                        <span class="text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Status</span>
                                    </div>
                                    {% if member.status == constant('App\\Entity\\Crew::STATUS_PENDING') %}
                                         <div class="flex items-center gap-1.5 px-2 py-1 bg-amber-500/5 border border-amber-500/20 rounded">
                                            <span class="w-1.5 h-1.5 rounded-full bg-amber-500 animate-pulse"></span>
                                            <span class="text-[9px] text-amber-400/80 font-bold font-orbitron uppercase tracking-widest">Pending</span>
                                        </div>
                                    {% elseif member.status == constant('App\\Entity\\Crew::STATUS_ACTIVE') %}
                                        <div class="flex items-center gap-1.5 px-2 py-1 bg-emerald-500/5 border border-emerald-500/20 rounded">
                                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
                                            <span class="text-[9px] text-emerald-400/80 font-bold font-orbitron uppercase tracking-widest">Active</span>
                                        </div>
                                    {% else %}
                                        <div class="flex items-center gap-1.5 px-2 py-1 bg-slate-500/5 border border-slate-500/20 rounded">
                                            <span class="w-1.5 h-1.5 rounded-full bg-slate-500"></span>
                                            <span class="text-[9px] text-slate-400/80 font-bold font-orbitron uppercase tracking-widest">{{ member.status|default('Unknown') }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {# Actions Section #}
                        <div class="flex items-center justify-end gap-2 pt-3 border-t border-slate-800/80">
                            {% set role_label = 'Bridge Assignments' %}
                            {% if asset.category == 'base' %}
                                {% set role_label = 'Command Roster' %}
                            {% elseif asset.category == 'team' %}
                                {% set role_label = 'Tactical Roles' %}
                            {% endif %}
                            {{ tooltip.button(
                                "Configure tactical clearance and operational " ~ (asset.category == 'ship' ? 'bridge' : (asset.category == 'base' ? 'station' : 'team')) ~ " assignments",
                                role_label,
                                'icons/roles.html.twig',
                                {
                                    position: 'tooltip-left',
                                    dim: 14,
                                    showLabel: true,
                                    buttonClass: 'btn btn-ghost btn-xs text-cyan-400 hover:bg-cyan-500/20 px-2 gap-2 font-bold font-orbitron uppercase tracking-[0.2em] scale-90 origin-right',
                                    attrs: {
                                        onclick: "document.getElementById('crew_roles_" ~ member.id ~ "').showModal()"
                                    }
                                }
                            ) }}

                            {{ tooltip.link('Remove this crew member from the asset',
                                'Remove crew',
                                'icons/action-trash.html.twig',
                                path('app_asset_crew_remove', {id: member.id}),
                                { 
                                    position: 'tooltip-left',
                                    dim: 14,
                                    linkClass: 'btn btn-ghost btn-xs text-red-500/60 hover:text-red-400 hover:bg-red-500/10 px-2 group/btn' ~ (can_remove_crew ? '' : ' opacity-30 pointer-events-none'),
                                    attrs: can_remove_crew ? {
                                        'data-turbo-method': 'post',
                                        'data-turbo-confirm': 'Are you sure you want to remove this crew member? This change will be logged in the asset history.',
                                        'data-confirm-title': 'Remove Crew?',
                                        'data-confirm-type': 'warning',
                                        'data-confirm-text': 'Discharge',
                                        'data-confirm-cancel': 'Cancel'
                                    } : {'aria-disabled': 'true'}
                                }) }}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full border-2 border-dashed border-slate-800 rounded-xl p-12 text-center bg-slate-900/20">
                    <div class="flex flex-col items-center gap-3">
                        <div class="p-3 rounded-full bg-slate-800 border border-slate-700 text-slate-500">
                            {% include 'icons/crew.html.twig' with { dim: 24 } %}
                        </div>
                        <p class="text-xs text-slate-500 font-rajdhani uppercase tracking-widest font-bold">// No crew assigned to this asset module</p>
                    </div>
                </div>
            {% endif %}
        </div>
        </div>

        <section class="mt-10 space-y-4">
            {% set filter_fields %}
                <div>
                    <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Name / Surname</label>
                    <input
                        type="text"
                        name="crew_search"
                        value="{{ crewFilters.search }}"
                        class="input m-1 w-full"
                        placeholder="Enter name or surname">
                </div>
                <div>
                    <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Callsign</label>
                    <input
                        type="text"
                        name="crew_nickname"
                        value="{{ crewFilters.nickname }}"
                        class="input m-1 w-full"
                        placeholder="Enter callsign">
                </div>
            {% endset %}
            {% set filter_hidden %}
                <input type="hidden" name="crew_page" value="1">
            {% endset %}
            {% include 'components/index_filters.html.twig' with {
                action: path('app_asset_crew', {id: asset.id}),
                legend: 'Unassigned crew',
                grid_class: 'md:grid-cols-2',
                fields: filter_fields,
                reset_path: path('app_asset_crew', {id: asset.id}),
                submit_label: 'Search crew',
                form_attrs: { autocomplete: 'off' },
                hidden_fields: filter_hidden,
                is_filtered: crewFilters.search or crewFilters.nickname
            } %}

            <div class="rounded-xl border border-base-content/10 bg-base-100 p-4 shadow-inner">
                {{ form_start(form, {
                    attr: {
                        'action': path('app_asset_crew', {id: asset.id}),
                        'class': 'space-y-4'
                    }
                }) }}
                {{ form_widget(form._token) }}
                <input type="hidden" name="crew_search" value="{{ crewFilters.search }}">
                <input type="hidden" name="crew_nickname" value="{{ crewFilters.nickname }}">
                <input type="hidden" name="crew_page" value="{{ crewPagination.current }}">
                {{ form_errors(form) }}

                <div class="flex items-center justify-between text-sm text-slate-500">
                    <span>Showing {{ crewPagination.from }}–{{ crewPagination.to }} of {{ crewPagination.total }} available crew</span>
                    <div class="tooltip tooltip-left" data-tip="Assign the checked crew to this asset">
                        <button type="submit" class="btn btn-outline btn-primary btn-xs">Add selected crew</button>
                    </div>
                </div>

                <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner" data-controller="bulk-select">
                    <table class="table table-xs w-full border-separate border-spacing-0">
                        <thead>
                        <tr class="border-b border-slate-800">
                            <th class="bg-slate-900/50 w-10">
                                <input type="checkbox"
                                       class="checkbox checkbox-xs checkbox-primary border-slate-700"
                                       data-bulk-select-target="selectAll"
                                       data-action="change->bulk-select#toggleAll">
                            </th>
                            <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Code</th>
                            <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Name</th>
                            <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Callsign</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-800/50">
                        {% if form.crewSelections|length > 0 %}
                            {% for row in form.crewSelections %}
                                {% set selection = row.vars.data %}
                                {% set crew = selection.crew %}
                                <tr class="hover:bg-cyan-500/5 transition-colors text-slate-300">
                                    <td class="p-2 text-center">
                                        {{ form_widget(row.selected, {
                                            attr: {
                                                class: 'checkbox checkbox-xs checkbox-primary border-slate-700 crew-checkbox',
                                                'data-bulk-select-target': 'item'
                                            }
                                        }) }}
                                    </td>
                                    <td class="font-mono text-xs p-2">{% include 'components/code_with_copy.html.twig' with { code: crew.code } %}</td>
                                    <td class="font-mono text-xs p-2 font-bold">{{ crew.name }} {{ crew.surname }}</td>
                                    <td class="font-mono text-xs p-2 text-slate-500 italic">{{ crew.nickname ?: '—' }}</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-xs text-slate-500 font-rajdhani uppercase tracking-widest py-8">// No crew match filters</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>

                {% include 'components/pagination.html.twig' with {
                    pagination: crewPagination,
                    route: 'app_asset_crew',
                    route_params: {'id': asset.id},
                    query: app.request.query.all,
                    page_param: 'crew_page'
                } %}

                {{ form_end(form) }}
            </div>
        </section>

        {% for member in asset.crews %}
            {% set roleForm = roleForms[member.id] ?? null %}
            {% if roleForm %}
                <dialog id="crew_roles_{{ member.id }}"
                        class="modal"
                        data-controller="role-selector"
                        data-action="show->role-selector#prepareSelection close->role-selector#resetSelection cancel->role-selector#resetSelection">
                    <div class="modal-box w-full max-w-3xl">
                        <h3 class="font-semibold text-cyan-100 text-lg mb-2">Assign Roles — {{ member.name }} {{ member.surname }}</h3>
                        {{ form_start(roleForm, {
                            action: path('app_asset_crew_assign_roles', {assetId: asset.id, crewId: member.id}),
                            method: 'POST',
                            attr: { autocomplete: 'off' }
                        }) }}
                        <div class="alert alert-info alert-outline mb-4 flex items-center gap-2">
                            <span class="flex items-center justify-center animate-spin-slow">
                                {% include 'icons/radar.html.twig' %}
                            </span>
                            <div class="text-xs">Select one or more bridge roles and confirm to update the crew profile.</div>
                        </div>
                        <div>
                        {{ form_widget(roleForm.assetRoles, {
                            attr: {
                                class: 'hidden',
                                'data-role-selector-target': 'select',
                                autocomplete: 'off'
                            }
                        }) }}
                        <div class="flex flex-wrap gap-2" data-role-selector-target="chips"></div>
                        </div>
                        <div class="modal-action">
                            <button type="submit" class="btn btn-outline btn-primary btn-sm">Save</button>
                            <button type="button" class="btn btn-outline btn-default btn-sm" onclick="document.getElementById('crew_roles_{{ member.id }}').close()">Close</button>
                        </div>
                        {{ form_end(roleForm) }}
                    </div>
                </dialog>
            {% endif %}
        {% endfor %}

    </div>

{% endblock %}
