{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Assets{% endblock %}

{% import '_tooltip.html.twig' as tooltip %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% set active_category = app.request.query.get('category') %}
                        {% set is_categorical = app.request.query.get('view') == 'categorical' %}
                        
                        {% if is_categorical %}
                            {% if active_category == 'ship' %}
                                {% include 'icons/far-trader.html.twig' %}
                            {% elseif active_category == 'base' %}
                                {% include 'icons/spaceport.html.twig' %}
                            {% elseif active_category == 'team' %}
                                {% include 'icons/team.html.twig' %}
                            {% endif %}
                        {% else %}
                            {% include 'icons/assets.html.twig' %}
                        {% endif %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Registry manifest</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">
                            {% if is_categorical %}
                                {{ active_category|capitalize }} Assets
                            {% else %}
                                Global Assets
                            {% endif %}
                        </h1>
                        <p class="text-sm text-cyan-100/80">Registry of mission-critical assets, hulls, and tactical units.</p>
                    </div>
                </div>
                <div class="flex flex-wrap gap-2">
                    {% if not is_categorical or active_category == 'ship' %}
                        {{ tooltip.link('Launch a new vessel',
                                        'Add Ship',
                                        'icons/far-trader.html.twig',
                                        path('app_asset_new', { category: 'ship' }),
                                        { position: 'tooltip-left', dim: 20, linkClass: 'btn btn-outline btn-primary btn-sm gap-2' }) }}
                    {% endif %}
                    
                    {% if not is_categorical or active_category == 'base' %}
                        {{ tooltip.link('Establish a new station',
                                        'Add Base',
                                        'icons/spaceport.html.twig',
                                        path('app_asset_new', { category: 'base' }),
                                        { position: 'tooltip-left', dim: 20, linkClass: 'btn btn-outline btn-amber btn-sm gap-2' }) }}
                    {% endif %}

                    {% if not is_categorical or active_category == 'team' %}
                        {{ tooltip.link('Register a tactical unit',
                                        'Add Team',
                                        'icons/team.html.twig',
                                        path('app_asset_new', { category: 'team' }),
                                        { position: 'tooltip-left', dim: 20, linkClass: 'btn btn-outline btn-emerald btn-sm gap-2' }) }}
                    {% endif %}
                </div>
            </div>
        </div>



        {% set filter_fields %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">OPS_CAMPAIGN</label>
                <select name="campaign" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ALL_OPERATIONS</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>
                            {{ campaign.title }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            {% if not is_categorical %}
                <div>
                    <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">CATEGORY</label>
                    <select name="category" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                        <option value="">ALL_CATEGORIES</option>
                        <option value="base" {% if filters.category == 'base' %}selected{% endif %}>Base</option>
                        <option value="ship" {% if filters.category == 'ship' %}selected{% endif %}>Ship</option>
                        <option value="team" {% if filters.category == 'team' %}selected{% endif %}>Team</option>
                    </select>
                </div>
            {% else %}
                <input type="hidden" name="category" value="{{ active_category }}">
                <input type="hidden" name="view" value="categorical">
            {% endif %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">ASSET_NAME</label>
                <input type="text" name="name" value="{{ filters.name }}" class="input w-full bg-slate-950/50 border-slate-800 text-cyan-100 placeholder:text-slate-600 focus:border-cyan-500/50" placeholder="Search by name...">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">TYPE_CLASS</label>
                <input type="text" name="type_class" value="{{ filters.type_class }}" class="input w-full bg-slate-950/50 border-slate-800 text-cyan-100 placeholder:text-slate-600 focus:border-cyan-500/50" placeholder="Filter by type or class...">
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            form_id: 'asset-filters',
            action: path('app_asset_index'),
            legend: 'Asset search',
            grid_class: is_categorical ? 'md:grid-cols-3' : 'md:grid-cols-4',
            fields: filter_fields,
            reset_path: path('app_asset_index', is_categorical ? { category: active_category, view: 'categorical' } : {}),
            is_filtered: filters.campaign or filters.name or filters.type_class or (not is_categorical and filters.category)
        } %}

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
            {% if assets|length > 0 %}
                {% for asset in assets %}
                    <div class="group relative flex flex-col rounded-xl border border-slate-800 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 p-4 shadow-lg transition-all hover:border-cyan-500/30 hover:shadow-cyan-500/10 hover:-translate-y-1">
                        {# Card Header: Actions & REF #}
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-2">
                                <div class="px-2 py-1 rounded border border-slate-700 bg-slate-800 text-xs font-mono tracking-widest text-slate-400 uppercase">
                                    {% include 'components/code_with_copy.html.twig' with { code: asset.code } %}
                                </div>
                            </div>
                            <div class="flex items-center gap-1">
                                {{ tooltip.link('View Financial Ledger', '', 'icons/handbook.html.twig', path('app_asset_ledger', {id: asset.id}), { position: 'tooltip-left', dim: 16, linkClass: 'p-2 rounded-lg hover:bg-cyan-500/20 text-slate-400 hover:text-cyan-400' }) }}
                                {{ tooltip.link('Tune asset manifest', '', 'icons/action-edit.html.twig', path('app_asset_edit', {id: asset.id}), { position: 'tooltip-left', dim: 16, linkClass: 'p-2 rounded-lg hover:bg-cyan-500/20 text-slate-400 hover:text-cyan-400' }) }}
                                {% set CAN_DELETE = constant('App\\Security\\Voter\\AssetVoter::DELETE') %}
                                {% set can_delete = is_granted(CAN_DELETE, asset) %}
                                {{ tooltip.link('Decommission asset', '', 'icons/action-trash.html.twig', path('app_asset_delete', {id: asset.id}), {
                                    position: 'tooltip-left',
                                    dim: 16,
                                    linkClass: 'p-2 rounded-lg hover:bg-red-500/20 text-red-400' ~ (can_delete ? '' : ' opacity-50 pointer-events-none')
                                }) }}
                            </div>
                        </div>

                        {# Card Body: Identity #}
                        <div class="mb-4">
                            <div class="flex items-start justify-between">
                                <h2 class="text-2xl font-bold text-slate-200 group-hover:text-cyan-400 transition-colors uppercase tracking-tight font-orbitron truncate" title="{{ asset.name }}">
                                    {{ asset.name }}
                                </h2>
                                
                                <div class="opacity-50 group-hover:opacity-100 transition-opacity">
                                    {% if asset.category == 'team' %}
                                        <div class="text-emerald-500" title="Team / Mercenary Unit">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="9" cy="7" r="4"></circle>
                                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                            </svg>
                                        </div>
                                    {% elseif asset.category == 'base' %}
                                        <div class="text-amber-500" title="Base / Station">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M3 21h18"></path>
                                                <path d="M5 21V7l8-4 8 4v14"></path>
                                                <path d="M9 10a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2"></path>
                                            </svg>
                                        </div>
                                    {% else %}
                                        <div class="text-cyan-500" title="Starship">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                               <path d="M2 20h20"></path>
                                               <path d="M5 20v-8a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8"></path>
                                               <path d="M12 10V4"></path>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {% if asset.category != 'team' %}
                                <p class="text-sm font-medium text-slate-500 font-rajdhani tracking-widest uppercase">
                                    {{ asset.type }} // {{ asset.class }}
                                </p>
                            {% else %}
                                 <p class="text-sm font-medium text-emerald-500/50 font-rajdhani tracking-widest uppercase">
                                    Personnel Unit
                                </p>
                            {% endif %}
                        </div>

                        {# Card Detail: Tech Specs (Price & Mortgage) #}
                        <div class="grid grid-cols-2 gap-2 mb-6 p-2 rounded-lg bg-slate-900/50 border border-slate-800/50">
                            <div class="flex flex-col">

                                <span class="text-[10px] text-slate-500 uppercase tracking-wider font-rajdhani">Asset Value</span>
                                <span class="text-cyan-300 font-mono text-sm tracking-tight">
                                    {{ asset.price|format_number({ min_fraction_digit: 0, max_fraction_digit: 0, grouping_used: true }, 'decimal', 'default', locale) }} <span class="text-xs text-cyan-500/60">Cr</span>
                                </span>
                            </div>
                            <div class="flex items-center justify-end">
                                {% if asset.mortgageSigned %}
                                    <div class="px-2 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold tracking-wider text-slate-400 uppercase flex items-center gap-1.5 opacity-70" title="Mortgage Signed">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-emerald-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                        SECURED
                                    </div>
                                {% else %}
                                     <div class="px-2 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold tracking-wider text-slate-500 uppercase flex items-center gap-1.5 opacity-50" title="No Mortgage">
                                        UNSECURED
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        {# Card Footer: Campaign & Crew #}
                        <div class="mt-auto pt-4 border-t border-slate-800 flex items-center justify-between gap-2">
                             <div class="flex items-center gap-2 overflow-hidden">
                                {% if asset.campaign %}
                                    <div class="text-cyan-500/50">{% include 'icons/alien-structure-1.html.twig' with { dim: 14 } %}</div>
                                    <span class="text-xs font-bold text-slate-400 uppercase tracking-wider truncate font-rajdhani">{{ asset.campaign.title }}</span>
                                {% else %}
                                     <span class="text-xs text-slate-600 uppercase tracking-wider font-rajdhani italic">No Mission</span>
                                {% endif %}
                             </div>
                             
                             <a href="{{ path('app_asset_crew', {id: asset.id}) }}" class="flex items-center gap-2 px-3 py-1.5 rounded bg-slate-800 hover:bg-cyan-950/50 border border-slate-700 hover:border-cyan-500/50 text-slate-300 hover:text-cyan-300 transition-all group/btn">
                                <span class="text-[10px] font-bold uppercase tracking-wider">Crew</span>
                                {% include 'icons/crew.html.twig' with { dim: 14 } %}
                             </a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full py-12 text-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <p class="text-slate-500 font-rajdhani tracking-widest uppercase mb-4 text-sm">Registry is empty // No assets detected</p>
                    {% set category = app.request.query.get('category') %}
                    {% set icon = 'icons/assets.html.twig' %}
                    {% if category == 'ship' %}
                        {% set icon = 'icons/far-trader.html.twig' %}
                    {% elseif category == 'base' %}
                        {% set icon = 'icons/spaceport.html.twig' %}
                    {% elseif category == 'team' %}
                        {% set icon = 'icons/team.html.twig' %}
                    {% endif %}

                     {{ tooltip.link('Launch a new asset',
                                    'Initialize Asset',
                                    icon,
                                    path('app_asset_new', { category: category }),
                                    { position: 'tooltip-center', dim: 20, linkClass: 'btn btn-primary btn-sm btn-outline gap-2' }) }}
                </div>
            {% endif %}
        </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_asset_index',
                query: app.request.query.all
            } %}

    </div>

{% endblock %}
