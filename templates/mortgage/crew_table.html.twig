<div class="w-full space-y-4">
    <label class="block">
        <span class="text-[10px] font-bold font-rajdhani tracking-widest text-slate-400 uppercase">
            Active Personnel Manifest // Crew Dossiers
        </span>
    </label>

    <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner">
        <table class="table table-xs w-full border-separate border-spacing-0">
            <thead>
                <tr class="border-b border-slate-800">
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Code</th>
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Personnel Name</th>
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Role Allocation</th>
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50 text-center">Command Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-800/50">
            {% for member in mortgage.ship.crews %}
                {% if member.isVisibleInMortgage(mortgage.signingYear, mortgage.signingDay) %}
                    <tr class="hover:bg-cyan-500/5 transition-colors">
                        <td class="p-2 font-mono text-xs text-cyan-400 font-bold uppercase">{{ member.code }}</td>
                        <td class="p-2 font-rajdhani text-[13px] text-slate-300 uppercase tracking-wide">
                            {{ member.name }} <span class="text-cyan-500/80 font-bold">"{{ member.nickname }}"</span> {{ member.surname }}
                        </td>
                        <td class="p-2 font-rajdhani text-xs text-slate-400 uppercase tracking-widest">
                            {% for role in member.shipRoles %}
                                <span class="px-1.5 py-0.5 rounded bg-slate-800 border border-slate-700 text-slate-300">{{ role.name }}</span>
                                {% if not loop.last %}<span class="mx-1 text-slate-600">//</span>{% endif %}
                            {% endfor %}
                        </td>
                        <td class="p-2">
                            {% if member.captain %}
                                <div class="flex justify-center text-amber-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                         viewBox="0 0 24 24" fill="currentColor" stroke="currentColor"
                                         stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                    </svg>
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
