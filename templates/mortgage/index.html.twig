{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Mortgages{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="p-10">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/handbook.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship finances</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Mortgages</h1>
                        <p class="text-sm text-cyan-100/80">Mortgages, installments and penalties per ship: keep an eye on interests before the next jump.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Record new financing',
                                    'Add mortgage',
                                    'icons/mortgage.html.twig',
                                    path('app_mortgage_new'),
                                    { dim: 24, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        <div class="alert alert-info alert-outline shadow-sm mb-6">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <div class="text-sm text-slate-200">
                Some records cannot be deleted because they are linked to other logs (campaigns, ships, payments, crew) or locked by a recorded payment.
            </div>
        </div>

        <form method="get" action="{{ path('app_mortgage_index') }}" class="mb-6">
            <fieldset class="rounded-xl border border-cyan-500/30 bg-slate-900/60 p-4">
                <legend class="px-2 text-xs uppercase tracking-[0.2em] text-cyan-300/70">Mortgage search</legend>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Name</label>
                        <input type="text" name="name" value="{{ filters.name }}" class="input m-1 w-full">
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Ship</label>
                        <select name="ship" class="select m-1 w-full">
                            <option value="">All ships</option>
                            {% for ship in ships %}
                                <option value="{{ ship.id }}" {% if filters.ship == ship.id %}selected{% endif %}>{{ ship.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Campaign</label>
                        <select name="campaign" class="select m-1 w-full">
                            <option value="">All campaigns</option>
                            {% for campaign in campaigns %}
                                <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Search</button>
                    <a href="{{ path('app_mortgage_index') }}" class="btn btn-ghost btn-sm">Reset</a>
                </div>
            </fieldset>
        </form>

        <div class="flow-root">

            <div class="overflow-x-auto overflow-y-visible rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <!-- head -->
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Ship</th>
                        <th class="text-right">Ship Price(Cr)</th>
                        <th class="text-right">Ship Cost(Cr)</th>
                        <th>Signed</th>
                        <th>Campaign</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if mortgages|length > 0 %}
                        {% for mortgage in mortgages %}
                            <tr>
                                <td>{% include 'components/code_with_copy.html.twig' with { code: mortgage.code } %}</td>
                                <td>{{ mortgage.name }}</td>
                                <td>{{ mortgage.ship.name }}</td>
                                <td class="text-right">{{ mortgage.ship.price|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td class="text-right">{{ mortgage.calculateShipCost|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td>
                                    <div class="flex justify-center">
                                        {% if mortgage.signed %}
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                        {% else %}
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                                <line x1="6" y1="6" x2="18" y2="18"></line>
                                            </svg>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    {% if mortgage.ship.campaign %}
                                        <div class="flex items-center gap-2">
                                            {% include 'icons/alien-structure-1.html.twig' %}
                                            <span>{{ mortgage.ship.campaign.title }}</span>
                                        </div>
                                    {% else %}
                                        <span class="opacity-60">â€”</span>
                                    {% endif %}
                                </td>
                                <td class="flex items-center gap-2">
                                    {{ tooltip.link('Recalibrate financing',
                                                    'Edit mortgage',
                                                    'icons/action-edit.html.twig',
                                                    path('app_mortgage_edit', {id: mortgage.id}),
                                                    { dim: 14, linkClass: 'btn btn-outline btn-primary btn-xs' }) }}
                                    {% set CAN_DELETE = constant('App\\Security\\Voter\\MortgageVoter::DELETE') %}
                                    {% set can_delete = is_granted(CAN_DELETE, mortgage) %}
                                    {{ tooltip.link('Cancel mortgage',
                                                    'Delete mortgage',
                                                    'icons/action-trash.html.twig',
                                                    path('app_mortgage_delete', {id: mortgage.id}),
                                                    {
                                                        dim: 14,
                                                        linkClass: 'btn btn-outline btn-error btn-xs' ~ (can_delete ? '' : ' opacity-50 pointer-events-none'),
                                                        attrs: can_delete ? {} : {'aria-disabled': 'true'}
                                                    }) }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8">Insert a new mortgage</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_mortgage_index',
                query: app.request.query.all
            } %}

        </div>

    </div>

{% endblock %}
