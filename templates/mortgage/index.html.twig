{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Mortgages{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6 overflow-hidden">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-center gap-4">
                    <div class="p-2.5 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/handbook.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-[10px] tracking-[0.3em] text-cyan-300/70 font-bold font-orbitron mb-0.5">Ship finances // Debt Manifest</p>
                        <h1 class="text-2xl font-bold text-cyan-100 leading-tight font-orbitron uppercase">Mortgages</h1>
                        <p class="text-xs text-cyan-100/60 font-rajdhani tracking-widest uppercase">Mortgages, installments and penalties per ship: keep an eye on interests.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Record new financing',
                                    'Add mortgage',
                                    'icons/mortgage.html.twig',
                                    path('app_mortgage_new'),
                                    { dim: 20, linkClass: 'btn btn-outline btn-primary btn-sm px-4', position: 'tooltip-left' }) }}
                </div>
            </div>
        </div>

        <div class="alert alert-info alert-outline shadow-sm mb-6">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <div class="text-sm text-slate-200">
                Some records cannot be deleted because they are linked to other logs (campaigns, ships, payments, crew) or locked by a recorded payment.
            </div>
        </div>

        {% set filter_fields %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">DEBT_NAME</label>
                <input type="text" name="name" value="{{ filters.name }}" class="input w-full bg-slate-950/50 border-slate-800 text-cyan-100 placeholder:text-slate-600 focus:border-cyan-500/50" placeholder="Search by name...">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">VESSEL_NAV</label>
                <select name="ship" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ANY_VESSEL</option>
                    {% for ship in ships %}
                        <option value="{{ ship.id }}" {% if filters.ship == ship.id %}selected{% endif %}>{{ ship.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">OPS_CAMPAIGN</label>
                <select name="campaign" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ALL_OPERATIONS</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            action: path('app_mortgage_index'),
            legend: 'Mortgage search',
            grid_class: 'md:grid-cols-3',
            fields: filter_fields,
            reset_path: path('app_mortgage_index'),
            is_filtered: filters.name or filters.ship or filters.campaign
        } %}

        <div class="grid grid-cols-1 gap-6 mb-8">
            {% if mortgages|length > 0 %}
                {% for mortgage in mortgages %}
                    <div class="group relative flex flex-col lg:flex-row gap-6 rounded-xl border border-cyan-500/20 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-4 shadow-lg transition-all hover:border-cyan-500/50 hover:shadow-cyan-500/10 hover:-translate-y-1">
                        {# Left Section: Info & Title #}
                        <div class="flex-1">
                            {# Card Header: Actions & REF #}
                            <div class="flex items-center justify-between mb-4 lg:mb-6">
                                <div class="flex items-center gap-2">
                                    <div class="px-2.5 py-1 rounded border border-cyan-500/20 bg-cyan-500/5 text-xs font-mono tracking-widest text-cyan-400/80 uppercase">
                                        REF: {{ mortgage.code }}
                                    </div>
                                    <span class="px-2.5 py-1 rounded bg-slate-800 text-xs font-bold tracking-tighter uppercase border border-slate-700 {{ mortgage.signed ? 'text-cyan-400 border-cyan-500/30' : 'text-amber-500 border-amber-500/30' }}">
                                        {{ mortgage.signed ? 'S_AUTHORIZED' : 'P_UNSIGNED' }}
                                    </span>
                                </div>
                                <div class="flex items-center gap-1">
                                    {{ tooltip.link('Edit', '', 'icons/action-edit.html.twig', path('app_mortgage_edit', {id: mortgage.id}), { dim: 16, linkClass: 'p-2 rounded-lg hover:bg-cyan-500/20 text-cyan-400' }) }}
                                    {% set CAN_DELETE = constant('App\\Security\\Voter\\MortgageVoter::DELETE') %}
                                    {% set can_delete = is_granted(CAN_DELETE, mortgage) %}
                                    {{ tooltip.link('Delete', '', 'icons/action-trash.html.twig', path('app_mortgage_delete', {id: mortgage.id}), {
                                        dim: 16,
                                        linkClass: 'p-2 rounded-lg hover:bg-red-500/20 text-red-400' ~ (can_delete ? '' : ' opacity-50 pointer-events-none')
                                    }) }}
                                </div>
                            </div>

                            <div class="mb-6">
                                <h3 class="text-3xl font-bold text-cyan-100 mb-1 group-hover:text-cyan-400 transition-colors uppercase tracking-tight">
                                    {{ mortgage.name }}
                                </h3>
                                <div class="flex items-center gap-2 text-sm text-slate-400">
                                    {% include 'icons/company.html.twig' with {'dim': 14} %}
                                    <span>{{ mortgage.company ? mortgage.company.name : 'SHADOW_BANKING_ORG' }}</span>
                                </div>
                            </div>

                            {# Stats Matrix #}
                            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
                                <div class="p-4 rounded-lg bg-slate-950/40 border border-slate-800 transition-colors hover:border-cyan-500/20">
                                    <span class="text-sm uppercase text-slate-500 font-semibold mb-1 block tracking-widest">Rate (Interests)</span>
                                    <span class="text-xl font-mono text-cyan-100">{{ mortgage.interestRate.annualInterestRate|format_number({ max_fraction_digit: 1 }) }}%</span>
                                </div>
                                <div class="p-4 rounded-lg bg-slate-950/40 border border-slate-800 transition-colors hover:border-cyan-500/20">
                                    <span class="text-sm uppercase text-slate-500 font-semibold mb-1 block tracking-widest">Duration</span>
                                    <span class="text-xl font-mono text-cyan-100">{{ mortgage.interestRate.duration }}m</span>
                                </div>
                                <div class="p-4 rounded-lg bg-slate-950/40 border border-slate-800 transition-colors hover:border-cyan-500/20">
                                    <span class="text-sm uppercase text-slate-500 font-semibold mb-1 block tracking-widest">Principal</span>
                                    <span class="text-xl font-mono text-cyan-300 font-bold">{{ mortgage.calculate.ship_cost|format_number({ max_fraction_digit: 0 }) }}</span>
                                </div>
                                <div class="p-4 rounded-lg bg-slate-950/40 border border-slate-800 transition-colors hover:border-cyan-500/20">
                                    <span class="text-sm uppercase text-slate-500 font-bold mb-1 block tracking-widest">Per-Burn Cut</span>
                                    <span class="text-xl font-mono text-cyan-400 font-bold">{{ mortgage.calculate.total_monthly_payment|format_number({ max_fraction_digit: 0 }) }}</span>
                                </div>
                            </div>

                            <div class="flex items-center gap-6 text-sm">
                                <div class="flex flex-col gap-1">
                                    <span class="uppercase tracking-tighter text-slate-500 font-semibold">Vessel Assignment</span>
                                    <div class="flex items-center gap-2 text-cyan-100">
                                        {% include 'icons/far-trader.html.twig' with {'dim': 16} %}
                                        <span class="font-bold">{{ mortgage.ship.name }}</span>
                                    </div>
                                </div>
                                <div class="flex flex-col gap-1">
                                    <span class="uppercase tracking-tighter text-slate-500 font-semibold">Operation Area</span>
                                    <div class="flex items-center gap-2 text-slate-300">
                                        {% include 'icons/alien-structure-1.html.twig' with {'dim': 16} %}
                                        <span class="truncate">{{ mortgage.ship.campaign ? mortgage.ship.campaign.title : 'GENERAL_OPERATIONS' }}</span>
                                    </div>
                                </div>
                            </div>

                            {# Progress Indicator (Full width in its section) #}
                            <div class="pt-2">
                                 <div class="flex justify-between items-center text-sm font-mono mb-2 uppercase tracking-widest text-slate-600">
                                    <span>Agreement Progress</span>
                                    <span>{{ mortgage.signed ? '100%' : '0%' }}_VERIFIED</span>
                                </div>
                                <div class="h-2 w-full bg-slate-950 rounded-full overflow-hidden p-[1px] border border-slate-800">
                                    <div class="h-full rounded-full transition-all duration-1000 {{ mortgage.signed ? 'w-full bg-cyan-500 shadow-[0_0_8px_rgba(6,182,212,0.6)]' : 'w-[5%] bg-amber-500' }}"></div>
                                </div>
                            </div>
                        </div>

                        {# Right Section: Metrics & Actions #}
                        <div class="lg:w-96 flex flex-col justify-between border-t lg:border-t-0 lg:border-l border-slate-800 pt-6 lg:pt-0 lg:pl-10">

                             <div class="flex flex-col gap-4">
                                <div class="py-6 px-8 rounded-lg bg-slate-950 border-x-2 border-slate-800 flex items-center justify-between">
                                    <span class="text-xs uppercase tracking-widest text-slate-500 font-bold">Market Value</span>
                                    <div class="text-xl font-mono font-bold text-slate-300">
                                        {{ mortgage.ship.price|format_number({ max_fraction_digit: 0 }, 'decimal', 'default', locale) }}
                                        <span class="text-xs text-slate-600">Cr</span>
                                    </div>
                                </div>
                                <div class="py-6 px-8 rounded-lg bg-cyan-900/10 border-x-2 border-cyan-500/20 flex items-center justify-between">
                                    <span class="text-xs uppercase tracking-widest text-cyan-500/70 font-bold">Total Liability</span>
                                    <div class="text-xl font-mono font-bold text-cyan-300">
                                        {{ mortgage.calculateShipCost|format_number({ max_fraction_digit: 0 }, 'decimal', 'default', locale) }}
                                        <span class="text-xs text-cyan-600">Cr</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full py-20 flex flex-col items-center justify-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <div class="text-slate-500 mb-2">{% include 'icons/handbook.html.twig' with {'dim': 48} %}</div>
                    <p class="text-slate-400 uppercase tracking-widest text-sm">No active debt manifest detected</p>
                    <a href="{{ path('app_mortgage_new') }}" class="mt-4 text-cyan-400 hover:text-cyan-300 text-xs font-bold uppercase underline underline-offset-4 decoration-cyan-500/30">Initiate vessel financing</a>
                </div>
            {% endif %}
        </div>

        {% include 'components/pagination.html.twig' with {
            pagination: pagination,
            route: 'app_mortgage_index',
            query: app.request.query.all
        } %}

    </div>

{% endblock %}
