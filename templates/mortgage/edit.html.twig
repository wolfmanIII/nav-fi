{% extends 'base.html.twig' %}

{% set CAN_EDIT = constant('App\\Security\\Voter\\MortgageVoter::EDIT') %}
{% set CAN_CREATE = constant('App\\Security\\Voter\\MortgageVoter::CREATE') %}
{% set CAN_SIGN = constant('App\\Security\\Voter\\MortgageVoter::SIGN') %}
{% set CAN_PAY = constant('App\\Security\\Voter\\MortgageVoter::PAY_INSTALLMENT') %}
{% set CAN_PDF = constant('App\\Security\\Voter\\MortgageVoter::CREATE_PDF') %}
{% set can_edit = is_granted(CAN_EDIT, mortgage) %}
{% set can_create = is_granted(CAN_CREATE, mortgage) %}
{% set can_sign = is_granted(CAN_SIGN, mortgage) %}
{% set can_pay = is_granted(CAN_PAY, mortgage) %}
{% set can_pdf = is_granted(CAN_PDF, mortgage) %}

{% block title %}Captain Log - Mortgage{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-center gap-4">
    
        {{ form_start(form) }}

        <fieldset class="fieldset bg-base-200 border-base-300 gap-4 p-4 border rounded w-315">
            <legend class="fieldset-legend">Mortgage</legend>

            <div class="w-full mb-2">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/handbook.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Ship mortgage</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Finance your ship</h3>
                            <p class="text-sm text-cyan-100/80">Calculate costs, interests and insurance before signing: every jump starts with clean numbers.</p>
                        </div>
                    </div>
                </div>
            </div>

            {% if mortgage.id %}
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="label mt-1 mb-1">Code</label>
                        <div><b>{{ mortgage.code }}</b></div>
                    </div>

                    <div class="{{ mortgage.signed ? 'alert alert-info alert-outline' : '' }}">
                        <label class="label mt-1 mb-1">Signed</label>
                        {% if mortgage.signed %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                    <line x1="6" y1="6" x2="18" y2="18"></line>
                            </svg>
                        {% endif %}
                    </div>

                </div>
            {% endif %}

                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <div class="flex items-center gap-1">
                            {{ form_label(form.ship) }}
                            {% if form.ship.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                        </div>
                        {{ form_widget(form.ship) }}
                        {{ form_errors(form.ship) }}
                    </div>
                    <div class="col-span-2" data-controller="imperial-date">
                        <div class="flex items-center gap-1">
                            {{ form_label(form.startDate) }}
                            {% if form.startDate.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                        </div>
                        {{ form_widget(form.startDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                        {{ form_widget(form.startDate.year) }}
                        {{ form_widget(form.startDate.day) }}
                        {{ form_errors(form.startDate) }}
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <div class="flex items-center gap-1">
                            {{ form_label(form.company) }}
                            {% if form.company.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                        </div>
                        {{ form_widget(form.company) }}
                        {{ form_errors(form.company) }}
                    </div>

                    <div>
                        <div class="flex items-center gap-1">
                            {{ form_label(form.localLaw) }}
                            {% if form.localLaw.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                        </div>
                        {{ form_widget(form.localLaw) }}
                        {{ form_errors(form.localLaw) }}
                    </div>
                </div>

                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <div class="flex items-center gap-1">
                            {{ form_label(form.discount) }}
                        </div>
                        {{ form_widget(form.discount) }}
                        {{ form_errors(form.discount) }}
                    </div>
                    <div>
                        <div class="flex items-center gap-1">
                            {{ form_label(form.shipShares) }}
                        </div>
                        {{ form_widget(form.shipShares) }}
                        {{ form_errors(form.shipShares) }}
                    </div>
                    <div>
                        <div class="flex items-center gap-1">
                            {{ form_label(form.advancePayment) }}
                        </div>
                        {{ form_widget(form.advancePayment) }}
                        {{ form_errors(form.advancePayment) }}
                    </div>
                </div>

            <div class="grid grid-cols-2 gap-4">
                {{ include('mortgage/interest_rate_table.html.twig') }}
                {{ include('mortgage/insurance_table.html.twig') }}
            </div>

            {% if mortgage.id %}
                <div class="grid grid-cols-1 gap-4">
                    {{ include('mortgage/mortgage_summary.html.twig') }}
                </div>
                <div class="grid grid-cols-1 gap-4">
                    {{ include('mortgage/crew_table.html.twig') }}
                </div>
            {% endif %}

        </fieldset>

        <button
            type="submit"
            name="action" value="save"
            class="btn btn-outline btn-primary mt-4 mb-4 mr-4"
            {% if not (mortgage.id ? can_edit : can_create) %} disabled {% endif %}
        >Save</button>

        <button
            type="submit"
            name="action" value="sign"
            class="btn btn-outline btn-warning mt-4 mb-4 mr-4"
            {% if not can_sign %} disabled {% endif %}
        >Sign</button>

        {% if mortgage.id and is_granted('ROLE_ADMIN') %}
            <form method="post" action="{{ path('app_mortgage_unsigned', {id: mortgage.id}) }}" class="inline-block">
                <input type="hidden" name="_token" value="{{ csrf_token('mortgage_unsigned_' ~ mortgage.id) }}">
                <button
                    type="submit"
                    class="btn btn-outline btn-error mt-4 mb-4 mr-4"
                    {% if not mortgage.signed %}disabled{% endif %}
                >
                    Unsign
                </button>
            </form>
        {% endif %}

        {% if mortgage.id %}
            <a
                href="{{ path('app_mortgage_pdf', {id: mortgage.id}) }}"
                role="button"
                target="_blank"
                class="btn btn-outline btn-secondary mt-4 mb-4 mr-4"
                {% if not can_pdf %} disabled {% endif %}
            >PDF</a>
        {% else %}
            <a
                href="#"
                role="button"
                target="_blank"
                class="btn btn-outline btn-secondary mt-4 mb-4 mr-4"
                disabled
            >PDF</a>
        {% endif %}
        <a href="{{ path('app_mortgage_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form) }}

        <dialog id="coverage_modal" class="modal">
            <div class="modal-box">
                <h3 class="text-lg font-bold">Insurance Coverage</h3>
                <p class="py-4">Press ESC key or click the button below to close</p>
                <div class="modal-action">
                <form method="dialog">
                    <!-- if there is a button in form, it will close the modal -->
                    <button class="btn">Close</button>
                </form>
                </div>
            </div>
        </dialog>

        <dialog id="interest_rate_modal" class="modal">
            <div class="modal-box">
                <h3 class="text-lg font-bold">Hello!</h3>
                <p class="py-4">Press ESC key or click the button below to close</p>
                <div class="modal-action">
                <form method="dialog">
                    <!-- if there is a button in form, it will close the modal -->
                    <button class="btn">Close</button>
                </form>
                </div>
            </div>
        </dialog>

        {% if can_pay %}
            <dialog id="pay_installment_modal" class="modal">
                <div class="modal-box">
                    <header class="prose">
                        <h3>Payment</h3>
                    </header>

                    {{ form_start(form, {
                        action: path('app_mortgage_pay', {id: mortgage.id}),
                        method: 'POST'
                    }) }}
                    <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
                        <legend class="fieldset-legend">Installment</legend>
                        <div class="col-span-2" data-controller="imperial-date">
                            <label class="label">Payment Date</label>
                            {{ form_widget(payment_form.paymentDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                            {{ form_widget(payment_form.paymentDate.year) }}
                            {{ form_widget(payment_form.paymentDate.day) }}
                        </div>
                        <div>
                            <label class="label">Payment(Cr)</label>
                            {{ form_widget(payment_form.payment) }}
                        </div>
                    </fieldset>

                    <div class="modal-action">
                        <button
                            type="submit"
                            name="action" value="save"
                            class="btn btn-outline btn-primary mt-4 mb-4 mr-4"
                            {% if not can_pay %} disabled {% endif %}
                        >Pay</button>
                        <a href="{{ path('app_mortgage_edit', {id: mortgage.id}) }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>
                    </div>
                    {{ form_end(payment_form) }}
                </div>
                <form method="dialog">
                    <!-- if there is a button in form, it will close the modal -->
                    <button class="btn">Close</button>
                </form>
            </dialog>
        {% endif %}

    </div>

{% endblock %}
