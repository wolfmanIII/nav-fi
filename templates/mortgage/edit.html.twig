{% extends 'base.html.twig' %}

{% set CAN_EDIT = constant('App\\Security\\Voter\\MortgageVoter::EDIT') %}
{% set CAN_CREATE = constant('App\\Security\\Voter\\MortgageVoter::CREATE') %}
{% set CAN_SIGN = constant('App\\Security\\Voter\\MortgageVoter::SIGN') %}
{% set CAN_PAY = constant('App\\Security\\Voter\\MortgageVoter::PAY_INSTALLMENT') %}
{% set CAN_PDF = constant('App\\Security\\Voter\\MortgageVoter::CREATE_PDF') %}
{% set can_edit = is_granted(CAN_EDIT, mortgage) %}
{% set can_create = is_granted(CAN_CREATE, mortgage) %}
{% set can_sign = is_granted(CAN_SIGN, mortgage) %}
{% set can_pay = is_granted(CAN_PAY, mortgage) %}
{% set can_pdf = is_granted(CAN_PDF, mortgage) %}
{% set can_set_start_date = is_granted(constant('App\\Security\\Voter\\MortgageVoter::SET_START_DATE'), mortgage) %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Nav-Fi&sup3; - Mortgage{% endblock %}

{% block pageContent %}

        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/handbook.html.twig',
            theme: 'cyan',
            subheader: 'Asset mortgage // Hull Financing',
            title: 'MORTGAGE SETUP',
            titleSuffix: '// Financing',
            description: 'Calculate costs and interests: fund the asset acquisition.',
            asset: mortgage.asset
        } %}
            {% import '_tooltip.html.twig' as tooltip %}
            {% block content %}
            {% endblock %}
            {% block actions %}
                <a href="{{ path('app_mortgage_index') }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
                {% if mortgage.id and can_pdf %}
                    {{ tooltip.link('Open mortgage PDF', 'Mortgage PDF', 'icons/ship-pdf.html.twig', path('app_mortgage_pdf', { id: mortgage.id }), { dim: 16, linkClass: 'btn btn-outline btn-primary btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase', position: 'tooltip-left', attrs: { target: '_blank', rel: 'noopener' } }) }}
                {% endif %}
            {% endblock %}
        {% endembed %}

        {% if mortgage.signed %}
            <div class="alert alert-info alert-outline shadow-sm mb-6 border-cyan-500/50 bg-cyan-500/5">
                <div class="animate-spin-slow text-cyan-500">
                    {% include 'icons/radar.html.twig' with { dim: 24 } %}
                </div>
                <div class="text-sm font-rajdhani uppercase tracking-widest font-bold text-cyan-200">
                    Mortgage is <span class="text-cyan-500">SIGNED</span>. Handle modifications with tactical caution to maintain log integrity.
                    {% if not mortgage.startDay %}
                        <div class="mt-2 text-warning font-extrabold animate-pulse">
                            ⚠ ATTENTION: First Installment Date not finalized. Please schedule it.
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {{ form_start(form, { attr: { id: 'mortgage_form', 'data-controller': 'form-visibility financial-lock campaign-asset' } }) }}

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Asset Deployment</legend>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.campaign, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.campaign) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.asset, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.asset, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700', 'data-form-visibility-target': 'trigger', 'data-financial-lock-target': 'asset', 'data-action': 'change->form-visibility#toggle change->financial-lock#check' } }) }}
                {{ form_errors(form.asset) }}
            </div>

            {# SEZIONE DIPENDENTE DALL'ASSET #}
            <div class="col-span-2 grid grid-cols-2 gap-6 contents" data-form-visibility-target="container">
                <div class="col-span-2 md:col-span-1">
                    <div class="flex items-baseline h-5 mb-1">
                        <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">First Installment Date</label>
                    </div>
                    <div class="flex items-center gap-2">
                        <input type="text" readonly disabled
                            class="input input-bordered w-full bg-slate-950/50 border-slate-700 text-slate-400 font-mono text-sm"
                            value="{{ mortgage.startDay ? (mortgage.startDay|imperial_date(mortgage.startYear)) : 'Not Scheduled' }}">
                        
                        {% if can_set_start_date %}
                            <button type="button" class="btn btn-square btn-outline btn-warning" onclick="document.getElementById('start_date_modal').showModal();" title="Set First Installment Date">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                            </button>
                        {% endif %}
                    </div>
                </div>

                <div class="col-span-2 md:col-span-1">
                    <div class="flex items-baseline h-5 mb-1">
                        <label class="block text-slate-100 text-[10px] uppercase tracking-widest font-bold font-orbitron">Authorization // signing Date</label>
                    </div>
                    <div class="flex items-center gap-2">
                        <p class="mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">AUTHORIZATION PROTOCOL: </p>
                        <p class="text-xs font-mono text-cyan-400 font-bold uppercase mt-1">
                            {% if mortgage.signed %}
                                <span class="animate-pulse mr-2">●</span>
                                AUTH_LOG: {{ mortgage.signingDay|imperial_date(mortgage.signingYear) }}
                            {% else %}
                                <span class="opacity-50 font-rajdhani uppercase tracking-tighter">Awaiting Authorization Signature</span>
                            {% endif %}
                        </p>
                    </div>
                </div>

                <div class="col-span-2">
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.localLaw, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.localLaw, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    {{ form_errors(form.localLaw) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-teal-500/80 uppercase">Financial Ledger</legend>

            {# DEBIT SIDE #}
            <div class="col-span-1 space-y-4">
                <div class="pb-2 border-b border-slate-800 mb-2">
                   <h4 class="text-[10px] uppercase tracking-widest font-bold font-orbitron text-red-400/80">Debit // Paying Account</h4>
                </div>
                
                <div>
                     <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.financialAccount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.financialAccount, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700', 'data-financial-lock-target': 'debitAccount' } }) }}
                    {{ form_help(form.financialAccount) }}
                    {{ form_errors(form.financialAccount) }}
                </div>

                <div class="p-3 rounded border border-slate-800 bg-slate-950/30" data-financial-lock-target="debitCreation">
                    <p class="text-[9px] uppercase tracking-widest font-bold font-orbitron text-slate-500 mb-2">Or open new account</p>
                    <div class="grid grid-cols-1 gap-3">
                        <div>
                             <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(form.bank, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(form.bank, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                            {{ form_help(form.bank) }}
                            {{ form_errors(form.bank) }}
                        </div>
                        <div>
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(form.bankName, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(form.bankName, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                            {{ form_help(form.bankName) }}
                            {{ form_errors(form.bankName) }}
                        </div>
                    </div>
                </div>
            </div>

            {# CREDIT SIDE #}
            <div class="col-span-1 space-y-4" data-controller="exclusive-visibility">
                 <div class="pb-2 border-b border-slate-800 mb-2">
                   <h4 class="text-[10px] uppercase tracking-widest font-bold font-orbitron text-emerald-400/80">Credit // Lending Institution</h4>
                </div>

                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.company, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.company, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700', 'data-exclusive-visibility-target': 'trigger', 'data-action': 'change->exclusive-visibility#check' } }) }}
                    {{ form_errors(form.company) }}
                </div>
                
                 <div class="p-3 rounded border border-slate-800 bg-slate-950/30" data-exclusive-visibility-target="target">
                    <p class="text-[9px] uppercase tracking-widest font-bold font-orbitron text-slate-500 mb-2">Or register new lender</p>
                    <div>
                        <div class="flex items-baseline h-5 mb-1">
                            {{ form_label(form.creditInstitutionName, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                        </div>
                        {{ form_widget(form.creditInstitutionName, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                        {{ form_help(form.creditInstitutionName) }}
                        {{ form_errors(form.creditInstitutionName) }}
                    </div>
                </div>
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Financial Architecture</legend>

            <div class="col-span-1 md:col-span-1 lg:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.discount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.discount, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.discount) }}
            </div>

            <div class="col-span-1 md:col-span-1 lg:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.assetShares, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.assetShares, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.assetShares) }}
            </div>

            <div class="col-span-1 md:col-span-1 lg:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.advancePayment, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.advancePayment, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.advancePayment) }}
            </div>

            <div class="col-span-full grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div>
                    {{ include('mortgage/interest_rate_table.html.twig') }}
                </div>
                <div>
                    {{ include('mortgage/insurance_table.html.twig') }}
                </div>
            </div>
        </fieldset>

        {% if mortgage.id %}
            <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative" data-form-visibility-target="container">
                <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-emerald-500/80 uppercase">Amortization Logs</legend>
                {{ include('mortgage/mortgage_summary.html.twig') }}
                {{ include('mortgage/crew_table.html.twig') }}
            </fieldset>
        {% endif %}

        <div class="flex items-center justify-end gap-3 mb-10">
            <a href="{{ path('app_mortgage_index') }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Abort Changes</a>

            {% if mortgage.id %}
                {% set disabledClass = mortgage.signed ? '' : ' opacity-60 pointer-events-none' %}
                <a href="{{ path('app_mortgage_unsign', {id: mortgage.id}) }}" class="btn btn-outline btn-error btn-sm font-orbitron uppercase text-[10px] tracking-widest font-bold {{ disabledClass }}">Unsign Asset</a>
            {% endif %}

            {% if not mortgage.signed and mortgage.asset and not mortgage.asset.hasCaptain %}
                 <div class="flex items-center gap-2 bg-red-500/10 border border-red-500/20 px-4 py-2 rounded text-red-400 text-[10px] font-orbitron uppercase tracking-widest font-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                    Warning: Active Captain Required for Authorization
                </div>
            {% endif %}

            {% if sign_form %}
            <button type="button" class="btn btn-outline btn-warning btn-sm px-6 font-orbitron uppercase text-[10px] tracking-widest font-bold" {% if not can_sign %} disabled {% endif %} onclick="document.getElementById('sign_modal').showModal();">
                Authorize Signature
            </button>
            {% endif %}

            <button type="submit" form="mortgage_form" name="action" value="save" class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10" {% if not (mortgage.id ? can_edit : can_create) %} disabled {% endif %}>
                Confirm Allocation // Commit to Log
            </button>
        </div>

        {{ form_end(form) }}
 

        <dialog id="coverage_modal" class="modal">
            <div class="modal-box w-11/12 max-w-5xl">
                <h3 class="font-bold text-cyan-100 text-lg font-orbitron uppercase tracking-widest mb-6 flex items-center gap-3">
                    <div class="p-2 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/lifebuoy.html.twig' %}
                    </div>
                    <span>Insurance Coverage Dossier</span>
                </h3>
                {% if form.insurance.vars.choices is defined and form.insurance.vars.choices|length > 0 %}
                    <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner">
                        <table class="table table-xs w-full border-separate border-spacing-0">
                            <thead>
                                <tr class="border-b border-slate-800">
                                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Plan Name</th>
                                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50 text-right">Cost (% Asset Price)</th>
                                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50 text-right">Refund (% Asset Value)</th>
                                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Coverage Protocol</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-800/50">
                            {% for choice in form.insurance.vars.choices %}
                                {% set ins = choice.data %}
                                <tr class="hover:bg-cyan-500/5 transition-colors text-slate-300">
                                    <td class="p-2 font-rajdhani text-xs tracking-widest uppercase font-bold">{{ ins.name }}</td>
                                    <td class="text-right p-2 font-mono text-xs">
                                        {{ ins.annualCost|format_number({ min_fraction_digit: 2, max_fraction_digit: 2 }, 'decimal', 'default', app.request.locale ?? 'en') }}
                                    </td>
                                    <td class="text-right p-2 font-mono text-xs">
                                        {{ ins.lossRefund is not null ? ins.lossRefund|format_number({ min_fraction_digit: 2, max_fraction_digit: 2 }, 'decimal', 'default', app.request.locale ?? 'en') }}
                                    </td>
                                    <td class="p-2">
                                        {% if ins.coverage %}
                                            <ul class="list-none space-y-0.5 text-xs font-rajdhani uppercase tracking-wide">
                                                {% for item in ins.coverage %}
                                                    <li class="flex items-center gap-1.5">
                                                        <span class="w-1 h-1 rounded-full bg-cyan-500/50"></span>
                                                        {{ item }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <span class="text-slate-500 italic">—</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="py-4">No insurance records available.</p>
                {% endif %}
                <div class="modal-action mt-6 gap-3">
                    <form method="dialog">
                        <button class="btn btn-ghost btn-sm font-orbitron uppercase text-[10px] tracking-widest font-bold text-slate-500 hover:text-slate-200">Terminate Session</button>
                    </form>
                </div>
            </div>
        </dialog>

        <dialog id="interest_rate_modal" class="modal">
            <div class="modal-box w-11/12 max-w-xl">
                <h3 class="font-bold text-cyan-100 text-lg font-orbitron uppercase tracking-widest mb-6 flex items-center gap-3">
                    <div class="p-2 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/interest-rate.html.twig' %}
                    </div>
                    <span>Financial Bond Registry</span>
                </h3>
                <p class="py-2 text-[11px] text-slate-400 font-rajdhani uppercase tracking-widest leading-relaxed">
                    This table shows how the bank prices your asset: duration (years), price multipliers/dividers, and the annual interest rate. Pick the correct band before signing so the 13-period schedule reflects the agreed terms and the Mission session clock.
                </p>
                <div class="modal-action mt-6 gap-3">
                    <form method="dialog">
                        <button class="btn btn-ghost btn-sm font-orbitron uppercase text-[10px] tracking-widest font-bold text-slate-500 hover:text-slate-200">Terminate Session</button>
                    </form>
                </div>
            </div>
        </dialog>

        {% set asset = mortgage.asset ?? null %}
        {% set sessionDay = asset ? (asset.campaign ? asset.campaign.sessionDay : asset.sessionDay) : null %}
        {% set sessionYear = asset ? (asset.campaign ? asset.campaign.sessionYear : asset.sessionYear) : null %}
        {% set sessionValue = (sessionDay is not null and sessionYear is not null) ? (sessionDay|imperial_date(sessionYear)) : '—' %}
        {% if sign_form %}
        <dialog id="sign_modal" class="modal">
            <div class="modal-box w-11/12 max-w-xl border border-primary/20 shadow-[0_0_15px_rgba(59,130,246,0.3)] bg-slate-900">
                <header class="mb-6 border-b border-primary/10 pb-4">
                    <h3 class="font-bold text-cyan-100 text-lg font-orbitron uppercase tracking-widest flex items-center gap-2">
                         <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
                        Confirm Authorization
                    </h3>
                    <p class="text-xs text-amber-200/70 font-rajdhani tracking-widest uppercase mt-1">Target Session: <b class="text-warning text-sm">{{ sessionValue }}</b></p>
                </header>
                
                {{ form_start(sign_form, {'attr': {'class': 'space-y-6'}}) }}
                    
                    <fieldset class="bg-slate-950/40 border border-slate-800 p-4 rounded-xl shadow-inner relative group hover:border-cyan-500/30 transition-colors duration-300">
                        <legend class="px-2 py-0.5 rounded bg-slate-900 border border-slate-800 text-[9px] font-bold font-orbitron tracking-[0.2em] text-cyan-500/80 uppercase mb-2">Location Data</legend>
                        <div class="form-control gap-1">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(sign_form.signingLocation, null, {'label_attr': {'class': 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50'}}) }}
                            </div>
                            {{ form_widget(sign_form.signingLocation, {'attr': {'class': 'input input-bordered w-full bg-slate-950/80 border-slate-700/50 focus:border-cyan-500/50 focus:bg-slate-900 font-rajdhani text-sm py-2 h-10 transition-all placeholder:text-slate-700'}}) }}
                            {{ form_errors(sign_form.signingLocation) }}
                        </div>
                    </fieldset>

                    <fieldset class="bg-slate-950/40 border border-slate-800 p-4 rounded-xl shadow-inner relative group hover:border-amber-500/30 transition-colors duration-300">
                        <legend class="px-2 py-0.5 rounded bg-slate-900 border border-slate-800 text-[9px] font-bold font-orbitron tracking-[0.2em] text-amber-500/80 uppercase mb-2">Payment Schedule [Optional]</legend>
                         
                        <div class="form-control" data-controller="imperial-date">
                             <div class="flex items-baseline justify-between h-5 mb-1">
                                {{ form_label(sign_form.startDate, null, {'label_attr': {'class': 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50'}}) }}
                                <span class="badge badge-xs badge-ghost text-[9px] uppercase tracking-widest opacity-50">Manual Override</span>
                             </div>
                             
                            <div class="flex items-center gap-3">
                                 <div class="flex-1">
                                    {{ form_widget(sign_form.startDate.display, {'attr': {'class': 'input input-bordered w-full bg-slate-950/80 border-slate-700/50 focus:border-amber-500/50 focus:bg-slate-900 font-mono text-sm py-2 h-10 text-center tracking-wider text-amber-100 placeholder:text-slate-800', 'placeholder': 'YYYY-DDD'}}) }}
                                </div>
                                {{ form_widget(sign_form.startDate.year) }}
                                {{ form_widget(sign_form.startDate.day) }}
                            </div>
                            {{ form_errors(sign_form.startDate.display) }}

                            <div class="mt-4 flex items-center gap-3 p-3 rounded-lg bg-amber-500/10 border border-amber-500/20">
                                <div class="text-amber-500 animate-spin-slow shrink-0">
                                    {% include 'icons/radar.html.twig' with { dim: 20 } %}
                                </div>
                                <p class="text-xs text-amber-100/80 leading-snug font-rajdhani tracking-wide">
                                    <strong class="text-amber-400 block mb-0.5">Start Date Rule:</strong>
                                    If specified, the first installment will be scheduled for this date.<br>
                                    Target Date must be on or after <strong>{{ sessionValue }}</strong>.
                                </p>
                            </div>
                        </div>
                    </fieldset>

                    <div class="modal-action mt-6 gap-3 pt-4 border-t border-slate-800">
                        <button type="button" class="btn btn-ghost btn-sm font-orbitron uppercase text-[10px] tracking-widest font-bold text-slate-500 hover:text-slate-200" onclick="document.getElementById('sign_modal').close();">Abort Session</button>
                        <button type="submit" class="btn btn-warning btn-sm px-6 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-amber-500/10 hover:shadow-amber-500/30 hover:bg-amber-500 hover:text-slate-900 border-amber-600">
                            Confirm Authorization
                        </button>
                    </div>
                {{ form_end(sign_form) }}
            </div>
            <form method="dialog" class="modal-backdrop">
                <button>close</button>
            </form>
        </dialog>
        {% endif %}

        {% if start_date_form %}
        <dialog id="start_date_modal" class="modal">
            <div class="modal-box w-11/12 max-w-xl">
                <header class="mb-6">
                    <h3 class="font-bold text-cyan-100 text-lg font-orbitron uppercase tracking-widest">Schedule First Installment</h3>
                    <p class="text-xs text-amber-200/70 font-rajdhani tracking-widest uppercase">Target Session: <b class="text-warning text-sm">{{ sessionValue }}</b></p>
                </header>
                {{ form_start(start_date_form) }}
                    <fieldset class="bg-slate-900/40 border border-slate-800 gap-4 p-4 rounded-xl shadow-inner w-full mb-6 relative">
                        <legend class="px-2 py-0.5 rounded bg-slate-800 border border-slate-700 text-[9px] font-bold font-orbitron tracking-[0.2em] text-cyan-500/80 uppercase">Scheduling Protocol</legend>
                         {% if mortgage.signingYear is defined and mortgage.signingYear is not null %}
                            <div class="alert alert-warning py-2 px-3 mb-4 rounded border-amber-500/30 bg-amber-900/20 text-xs">
                                <span class="font-semibold text-amber-200">Signed Date:</span> {{ mortgage.signingDay }}/{{ mortgage.signingYear }}
                            </div>
                        {% endif %}

                        <div class="col-span-2" data-controller="imperial-date">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(start_date_form.startDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(start_date_form.startDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                            {{ form_widget(start_date_form.startDate.year) }}
                            {{ form_widget(start_date_form.startDate.day) }}
                            {{ form_errors(start_date_form.startDate.display) }}
                        </div>
                        <div class="mt-4 flex items-center gap-3 p-3 rounded-lg bg-slate-800/50 border border-slate-700">
                             <div class="text-slate-500 animate-spin-slow shrink-0">
                                {% include 'icons/radar.html.twig' with { dim: 16 } %}
                            </div>
                            <p class="text-xs text-slate-400 leading-snug font-rajdhani tracking-wide">
                                <strong>Constraint:</strong> Date must be on or after the Signing Date.
                            </p>
                        </div>
                    </fieldset>
                    <div class="modal-action mt-6 gap-3">
                        <button type="button" class="btn btn-ghost btn-sm font-orbitron uppercase text-[10px] tracking-widest font-bold text-slate-500 hover:text-slate-200" onclick="document.getElementById('start_date_modal').close();">Cancel Protocol</button>
                        <button
                            type="submit"
                            class="btn btn-warning btn-sm px-6 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-amber-500/10"
                        >
                            Set Schedule
                        </button>
                    </div>
                {{ form_end(start_date_form) }}
            </div>
        </dialog>
        {% endif %}

        {% if can_pay %}
            <dialog id="pay_installment_modal" class="modal">
                <div class="modal-box">
                    <header class="mb-6">
                        <h3 class="font-bold text-cyan-100 text-lg font-orbitron uppercase tracking-widest">Execute Payment</h3>
                        <p class="text-[10px] text-cyan-100/60 font-rajdhani tracking-widest uppercase">Initiate credit transfer protocol.</p>
                    </header>

                    {{ form_start(form, {
                        action: path('app_mortgage_pay', {id: mortgage.id}),
                        method: 'POST'
                    }) }}
                    <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-4 p-4 rounded-xl shadow-inner w-full mb-6 relative">
                        <legend class="px-2 py-0.5 rounded bg-slate-800 border border-slate-700 text-[9px] font-bold font-orbitron tracking-[0.2em] text-cyan-500/80 uppercase">Installment Authorization</legend>
                        <div class="col-span-2" data-controller="imperial-date">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(payment_form.paymentDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(payment_form.paymentDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                            {{ form_widget(payment_form.paymentDate.year) }}
                            {{ form_widget(payment_form.paymentDate.day) }}
                            {{ form_errors(payment_form.paymentDate.display) }}
                        </div>
                        <div class="col-span-2">
                            <div class="flex items-baseline h-5 mb-1">
                                {{ form_label(payment_form.payment, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                            </div>
                            {{ form_widget(payment_form.payment, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50 font-mono text-sm' } }) }}
                            {{ form_errors(payment_form.payment) }}
                        </div>
                    </fieldset>

                    <div class="modal-action mt-6 gap-3">
                        <a href="{{ path('app_mortgage_edit', {id: mortgage.id}) }}" role="button" class="btn btn-ghost btn-sm font-orbitron uppercase text-[10px] tracking-widest font-bold text-slate-500 hover:text-slate-200">Abort Protocol</a>
                        <button
                            type="submit"
                            name="action" value="save"
                            class="btn btn-primary btn-sm px-6 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10"
                            {% if not can_pay %} disabled {% endif %}
                        >Execute Transfer</button>
                    </div>
                    {{ form_end(payment_form) }}
                </div>
            </dialog>
        {% endif %}


{% endblock %}
