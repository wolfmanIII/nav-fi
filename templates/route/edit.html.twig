{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Route{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4">
        {{ form_start(form) }}

        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/routes.html.twig',
            theme: 'cyan',
            subheader: 'Cartography // Astrogation',
            title: 'FLIGHT PATH',
            titleSuffix: '// Navigation',
            description: 'Establish sectors, hex-coords and jump-logic: the map is NOT the territory.'
        } %}
            {% block actions %}
                <a href="{{ path('app_route_index') }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
            {% endblock %}
        {% endembed %}

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Navigation Plan</legend>
            {% if form_errors(form) %}
                <div class="col-span-2">
                    <div class="alert alert-error alert-outline shadow-sm">
                        <div class="animate-spin-slow text-current">
                            {% include 'icons/radar.html.twig' with { dim: 24 } %}
                        </div>
                        <div class="text-sm text-slate-200">
                            {{ form_errors(form) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if route.id %}
                <div class="col-span-2">
                    <div class="flex items-baseline h-5 mb-1">
                        <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Route Code // Navigation ID</label>
                    </div>
                    <div class="px-3 py-2 rounded bg-slate-950/50 border border-slate-800 font-mono text-cyan-400 text-sm"><b>{{ route.code }}</b></div>
                </div>
            {% endif %}

            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.name, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.name, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4" data-controller="campaign-asset">
                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.campaign, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    {{ form_errors(form.campaign) }}
                </div>
                <div>
                    <div class="flex items-baseline h-5 mb-1">
                        {{ form_label(form.asset, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    </div>
                    {{ form_widget(form.asset, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                    {{ form_errors(form.asset) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Telemetry Overrides</legend>
            <div class="col-span-2">
                <div class="alert alert-info alert-outline shadow-sm border-amber-500/30 bg-amber-500/5">
                    <div class="animate-spin-slow text-amber-500">
                        {% include 'icons/radar.html.twig' with { dim: 24 } %}
                    </div>
                    <div class="text-xs text-slate-200 font-rajdhani">
                        <span class="block uppercase tracking-wider font-bold text-amber-200">Asset Data Sync</span>
                        <span class="block opacity-80">Jump Rating and Single-jump Fuel are sourced from the asset's registered components. Overrides authorized for tactical scenarios.</span>
                    </div>
                </div>
            </div>
            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.jumpRating, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.jumpRating, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.jumpRating) }}
            </div>
            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    <label class="mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50">Total Distance</label>
                </div>
                <input type="text" class="input input-bordered w-full bg-slate-950/50 border-slate-700 font-mono text-cyan-400 cursor-not-allowed" value="{{ route.jumpDistance }} parsecs" readonly disabled>
            </div>
            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.fuelEstimate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.fuelEstimate, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                <p class="text-[10px] text-slate-500 mt-1 italic uppercase tracking-wider font-rajdhani">Estimated tons per jump segment.</p>
                {{ form_errors(form.fuelEstimate) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Flight Schedule</legend>
            <div class="col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.startDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.startDate.display, {
                    attr: {
                        class: 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                        'data-imperial-date-prev-icon': '¬´',
                        'data-imperial-date-next-icon': '¬ª',
                    }
                }) }}
                {{ form_widget(form.startDate.year) }}
                {{ form_widget(form.startDate.day) }}
                {{ form_errors(form.startDate.display) }}
            </div>
            <div class="col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.destDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.destDate.display, {
                    attr: {
                        class: 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                        'data-imperial-date-prev-icon': '¬´',
                        'data-imperial-date-next-icon': '¬ª',
                    }
                }) }}
                {{ form_widget(form.destDate.year) }}
                {{ form_widget(form.destDate.day) }}
                {{ form_errors(form.destDate.display) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative"
                  data-controller="route-waypoints"
                  data-route-waypoints-lookup-url-value="{{ path('app_route_waypoint_lookup') }}">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Waypoints</legend>
            <div class="flex items-center justify-between mb-2">
                <h4 class="text-[10px] uppercase tracking-widest font-rajdhani font-bold text-slate-500">Route waypoints</h4>
                <button type="button" class="btn btn-outline btn-xs font-orbitron uppercase tracking-widest text-[9px]" data-action="route-waypoints#openModal">+ Add Waypoint</button>
            </div>

            {# TABLE DISPLAY #}
            <div class="overflow-x-auto">
                <table class="table table-xs w-full">
                    <thead>
                        <tr class="text-[9px] uppercase tracking-widest font-orbitron text-slate-400">
                            <th class="w-10">#</th>
                            <th>Hex</th>
                            <th>Sector</th>
                            <th>World</th>
                            <th>UWP</th>
                            <th>Jump</th>
                            <th class="w-20 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody data-route-waypoints-target="tableBody">
                        {% for index, child in form.waypoints %}
                            <tr class="hover:bg-slate-800/50 transition-colors" data-waypoint-index="{{ index }}">
                                <td class="font-mono text-slate-500">{{ index + 1 }}</td>
                                <td class="font-mono text-cyan-400">{{ child.vars.value.hex ?? '' }}</td>
                                <td>{{ child.vars.value.sector ?? '' }}</td>
                                <td>{{ child.vars.value.world ?? '' }}</td>
                                <td class="font-mono text-cyan-400">{{ child.vars.value.uwp ?? '' }}</td>
                                <td class="font-mono">{{ child.vars.value.jumpDistance ?? '' }}</td>
                                <td class="text-right">
                                    <button type="button" class="btn btn-ghost btn-xs text-cyan-400 hover:text-cyan-300" data-action="route-waypoints#editWaypoint" data-index="{{ index }}" title="Edit">‚úèÔ∏è</button>
                                    <button type="button" class="btn btn-ghost btn-xs text-red-400 hover:text-red-300" data-action="route-waypoints#removeWaypoint" data-index="{{ index }}" title="Delete">üóëÔ∏è</button>
                                </td>
                                {# Hidden inputs for form submission #}
                                <td class="hidden">
                                    {{ form_widget(child.hex) }}
                                    {{ form_widget(child.sector) }}
                                    {{ form_widget(child.world) }}
                                    {{ form_widget(child.uwp) }}
                                    {{ form_widget(child.jumpDistance) }}
                                    {{ form_widget(child.notes) }}
                                    {{ form_widget(child.position) }}
                                </td>
                            </tr>
                        {% else %}
                            <tr data-route-waypoints-target="emptyRow">
                                <td colspan="7" class="text-center text-slate-500 italic py-4">No waypoints defined. Click "Add Waypoint" to begin.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# MODAL FOR ADD/EDIT #}
            <dialog data-route-waypoints-target="modal" class="modal">
                <div class="modal-box bg-slate-900 border border-slate-700 max-w-2xl">
                    <h3 class="font-orbitron text-lg font-bold text-cyan-400 uppercase tracking-widest mb-4" data-route-waypoints-target="modalTitle">Add Waypoint</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">Hex</label>
                            <input type="text" data-route-waypoints-target="inputHex" class="input input-bordered input-sm w-full bg-slate-950/50 border-slate-800 focus:border-cyan-500/50" placeholder="e.g. 1905" data-action="blur->route-waypoints#lookup">
                        </div>
                        <div>
                            <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">Sector</label>
                            <input type="text" data-route-waypoints-target="inputSector" class="input input-bordered input-sm w-full bg-slate-950/50 border-slate-800 focus:border-cyan-500/50" placeholder="e.g. Spinward Marches" data-action="blur->route-waypoints#lookup">
                        </div>
                        <div>
                            <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">World</label>
                            <input type="text" data-route-waypoints-target="inputWorld" class="input input-bordered input-sm w-full bg-slate-950/50 border-slate-800 focus:border-cyan-500/50" placeholder="e.g. Regina">
                        </div>
                        <div>
                            <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">UWP <span class="text-slate-500 normal-case">(auto-filled)</span></label>
                            <input type="text" data-route-waypoints-target="inputUwp" class="input input-bordered input-sm w-full bg-slate-900 border-slate-800 text-cyan-400 font-mono cursor-not-allowed" placeholder="Auto-filled on save" readonly>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">Notes</label>
                            <textarea data-route-waypoints-target="inputNotes" class="textarea textarea-bordered textarea-sm w-full bg-slate-950/50 border-slate-800 h-16 focus:border-cyan-500/50 font-rajdhani" placeholder="Node specific notes..."></textarea>
                        </div>
                        <div class="md:col-span-2">
                            <p class="text-[9px] text-slate-500 italic">üí° Jump Distance is calculated automatically based on hex coordinates when you save the route.</p>
                        </div>
                    </div>
                    <div class="modal-action">
                        <button type="button" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest" data-action="route-waypoints#closeModal">Cancel</button>
                        <button type="button" class="btn btn-primary font-orbitron uppercase text-[10px] tracking-widest" data-action="route-waypoints#saveWaypoint">Save Waypoint</button>
                    </div>
                </div>
                <form method="dialog" class="modal-backdrop">
                    <button>close</button>
                </form>
            </dialog>

            {# PROTOTYPE TEMPLATE FOR NEW ROWS (hidden, used by JS) #}
            <template data-route-waypoints-target="rowPrototype">
                <tr class="hover:bg-slate-800/50 transition-colors" data-waypoint-index="__INDEX__">
                    <td class="font-mono text-slate-500">__NUM__</td>
                    <td class="font-mono text-cyan-400" data-cell="hex"></td>
                    <td data-cell="sector"></td>
                    <td data-cell="world"></td>
                    <td class="font-mono text-cyan-400" data-cell="uwp"></td>
                    <td class="font-mono" data-cell="jump"></td>
                    <td class="text-right">
                        <button type="button" class="btn btn-ghost btn-xs text-cyan-400 hover:text-cyan-300" data-action="route-waypoints#editWaypoint" data-index="__INDEX__" title="Edit">‚úèÔ∏è</button>
                        <button type="button" class="btn btn-ghost btn-xs text-red-400 hover:text-red-300" data-action="route-waypoints#removeWaypoint" data-index="__INDEX__" title="Delete">üóëÔ∏è</button>
                    </td>
                    <td class="hidden" data-cell="inputs"></td>
                </tr>
            </template>

            {# PROTOTYPE FOR HIDDEN INPUTS #}
            <template data-route-waypoints-target="inputsPrototype">
                {{ form_widget(form.waypoints.vars.prototype.hex) }}
                {{ form_widget(form.waypoints.vars.prototype.sector) }}
                {{ form_widget(form.waypoints.vars.prototype.world) }}
                {{ form_widget(form.waypoints.vars.prototype.uwp) }}
                {{ form_widget(form.waypoints.vars.prototype.jumpDistance) }}
                {{ form_widget(form.waypoints.vars.prototype.notes) }}
                {{ form_widget(form.waypoints.vars.prototype.position) }}
            </template>
        </fieldset>

        <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-slate-400 uppercase">Route Notes</legend>
            <div class="mb-4">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.description, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.description, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-24 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Dossier summary...' } }) }}
                {{ form_errors(form.description) }}
            </div>
            <div>
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.notes, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.notes, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-32 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Enter detailed tactical notes here...' } }) }}
                {{ form_errors(form.notes) }}
            </div>
        </fieldset>

        <div class="flex items-center justify-end gap-3 mb-10">
            <a href="{{ path('app_route_index') }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Abort Changes</a>
            <button type="submit"
                    class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10"
            >
                Confirm Route // Commit to Log
            </button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
