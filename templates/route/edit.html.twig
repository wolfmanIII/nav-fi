{% extends 'base.html.twig' %}

{% block title %}Nav-Fi - Route{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4">
        {{ form_start(form) }}

        <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Route</legend>

            <div class="col-span-2">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/routes.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Route drafting</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Navigation plan</h3>
                            <p class="text-sm text-cyan-100/80">Define ship, campaign and waypoints, then validate jump limits.</p>
                        </div>
                    </div>
                </div>
            </div>
            {% if form_errors(form) %}
                <div class="col-span-2">
                    <div class="alert alert-error alert-outline shadow-sm">
                        <div class="animate-spin-slow text-current">
                            {% include 'icons/radar.html.twig' with { dim: 24 } %}
                        </div>
                        <div class="text-sm text-slate-200">
                            {{ form_errors(form) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if route.id %}
                <div class="col-span-2">
                    <label class="block text-slate-300">Code</label>
                    <div class="m-1 w-full"><b>{{ route.code }}</b></div>
                </div>
            {% endif %}

            <div>
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="col-span-2 grid grid-cols-2 gap-4" data-controller="campaign-ship">
                <div>
                    {{ form_label(form.campaign) }}
                    {{ form_widget(form.campaign) }}
                    {{ form_errors(form.campaign) }}
                </div>
                <div>
                    {{ form_label(form.ship) }}
                    {{ form_widget(form.ship) }}
                    {{ form_errors(form.ship) }}
                </div>
            </div>
            <div class="col-span-2">
                <div class="alert alert-info alert-outline shadow-sm">
                    <div class="animate-spin-slow text-current">
                        {% include 'icons/radar.html.twig' with { dim: 24 } %}
                    </div>
                    <div class="text-sm text-slate-200">
                        Jump Rating and <b>Single-jump Fuel</b> are sourced from the ship’s registered components. Fill them only if you need to override the ship‑details telemetry for this route.
                    </div>
                </div>
            </div>
            <div>
                {{ form_label(form.jumpRating) }}
                {{ form_widget(form.jumpRating) }}
                {{ form_errors(form.jumpRating) }}
            </div>
            <div>
                {{ form_label(form.fuelEstimate) }}
                {{ form_widget(form.fuelEstimate) }}
                <p class="text-xs text-slate-400 mt-1 italic">Estimated fuel for the current/next jump segment.</p>
                {{ form_errors(form.fuelEstimate) }}
            </div>

            <div data-controller="imperial-date">
                {{ form_label(form.startDate) }}
                {{ form_widget(form.startDate.display, {
                    attr: {
                        'data-imperial-date-prev-icon': '«',
                        'data-imperial-date-next-icon': '»',
                    }
                }) }}
                {{ form_widget(form.startDate.year) }}
                {{ form_widget(form.startDate.day) }}
                {{ form_errors(form.startDate.display) }}
            </div>
            <div data-controller="imperial-date">
                {{ form_label(form.destDate) }}
                {{ form_widget(form.destDate.display, {
                    attr: {
                        'data-imperial-date-prev-icon': '«',
                        'data-imperial-date-next-icon': '»',
                    }
                }) }}
                {{ form_widget(form.destDate.year) }}
                {{ form_widget(form.destDate.day) }}
                {{ form_errors(form.destDate.display) }}
            </div>
        </fieldset>

        <fieldset class="fieldset grid grid-cols-1 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full"
                  data-controller="route-waypoints"
                  data-route-waypoints-target="collection"
                  data-route-waypoints-lookup-url-value="{{ path('app_route_waypoint_lookup') }}">
            <legend class="fieldset-legend">Waypoints</legend>
            <div class="flex items-center justify-between">
                <h4 class="font-semibold text-cyan-100">Route waypoints</h4>
                <button type="button" class="btn btn-outline btn-xs" data-action="route-waypoints#addItem">+ Add</button>
            </div>
            <div class="space-y-2" data-route-waypoints-target="list">
                {% for child in form.waypoints %}
                    <div class="collection-item border border-base-300 rounded p-3 bg-base-100 relative">
                        <button type="button"
                                class="btn btn-ghost btn-xs absolute right-2 top-2"
                                data-action="route-waypoints#removeItem">&times;</button>
                        <div class="grid grid-cols-1 md:grid-cols-5 gap-3">
                            <div>
                                {{ form_label(child.hex) }}
                                {{ form_widget(child.hex) }}
                                {{ form_errors(child.hex) }}
                            </div>
                            <div>
                                {{ form_label(child.sector) }}
                                {{ form_widget(child.sector) }}
                                {{ form_errors(child.sector) }}
                                <p class="text-xs text-slate-400 mt-1">Sector name must be T5SS abbreviation (e.g. Spinward Marches => spin).</p>
                            </div>
                            <div>
                                {{ form_label(child.world) }}
                                {{ form_widget(child.world) }}
                                {{ form_errors(child.world) }}
                            </div>
                            <div class="route-waypoint-highlight">
                                {{ form_label(child.uwp) }}
                                {{ form_widget(child.uwp) }}
                                {{ form_errors(child.uwp) }}
                                <p class="text-xs text-slate-400 mt-1">Auto-filled after submit from TravellerMap sector data.</p>
                            </div>
                            <div class="route-waypoint-highlight">
                                {{ form_label(child.jumpDistance) }}
                                {{ form_widget(child.jumpDistance) }}
                                {{ form_errors(child.jumpDistance) }}
                                <p class="text-xs text-slate-400 mt-1">Calculated after submit from the waypoint sequence.</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            {{ form_label(child.notes) }}
                            {{ form_widget(child.notes) }}
                            {{ form_errors(child.notes) }}
                        </div>
                        {{ form_widget(child.position) }}
                    </div>
                {% endfor %}
            </div>
            <template data-route-waypoints-target="prototype">
                <div class="collection-item border border-base-300 rounded p-3 bg-base-100 relative">
                    <button type="button"
                            class="btn btn-ghost btn-xs absolute right-2 top-2"
                            data-action="route-waypoints#removeItem">&times;</button>
                    <div class="grid grid-cols-1 md:grid-cols-5 gap-3">
                        <div>
                            {{ form_label(form.waypoints.vars.prototype.hex) }}
                            {{ form_widget(form.waypoints.vars.prototype.hex) }}
                            {{ form_errors(form.waypoints.vars.prototype.hex) }}
                        </div>
                        <div>
                            {{ form_label(form.waypoints.vars.prototype.sector) }}
                            {{ form_widget(form.waypoints.vars.prototype.sector) }}
                            {{ form_errors(form.waypoints.vars.prototype.sector) }}
                            <p class="text-xs text-slate-400 mt-1">Sector name or T5SS abbreviation (e.g. Spinward Marches / SM).</p>
                        </div>
                        <div>
                            {{ form_label(form.waypoints.vars.prototype.world) }}
                            {{ form_widget(form.waypoints.vars.prototype.world) }}
                            {{ form_errors(form.waypoints.vars.prototype.world) }}
                        </div>
                        <div class="route-waypoint-highlight">
                                {{ form_label(form.waypoints.vars.prototype.uwp) }}
                            {{ form_widget(form.waypoints.vars.prototype.uwp) }}
                            {{ form_errors(form.waypoints.vars.prototype.uwp) }}
                            <p class="text-xs text-slate-400 mt-1">Auto-filled after submit from TravellerMap sector data.</p>
                        </div>
                        <div class="route-waypoint-highlight">
                                {{ form_label(form.waypoints.vars.prototype.jumpDistance) }}
                            {{ form_widget(form.waypoints.vars.prototype.jumpDistance) }}
                            {{ form_errors(form.waypoints.vars.prototype.jumpDistance) }}
                            <p class="text-xs text-slate-400 mt-1">Calculated after submit from the waypoint sequence.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        {{ form_label(form.waypoints.vars.prototype.notes) }}
                        {{ form_widget(form.waypoints.vars.prototype.notes) }}
                        {{ form_errors(form.waypoints.vars.prototype.notes) }}
                    </div>
                    {{ form_widget(form.waypoints.vars.prototype.position) }}
                </div>
            </template>
        </fieldset>

        <fieldset class="fieldset grid grid-cols-1 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Route Notes</legend>
            <div>
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div>
                {{ form_label(form.notes) }}
                {{ form_widget(form.notes) }}
                {{ form_errors(form.notes) }}
            </div>
        </fieldset>

        <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">Save</button>
        <a href="{{ path('app_route_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form) }}
    </div>

{% endblock %}
