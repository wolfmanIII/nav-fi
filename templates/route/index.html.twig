{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Nav-Fi - Routes{% endblock %}

{% block pageContent %}

    <div class="">
        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/routes.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Navigation lanes</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Routes</h1>
                        <p class="text-sm text-cyan-100/80">Plan your jumps and keep each ship aligned with the session timeline.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Create a new route',
                                    'Add route',
                                    'icons/routes.html.twig',
                                    path('app_route_new'),
                                    { position: 'tooltip-left', dim: 24, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        {% set filter_fields %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Name</label>
                <input type="text" name="name" value="{{ filters.name }}" class="input m-1 w-full">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Ship</label>
                <select name="ship" class="select m-1 w-full">
                    <option value="">All ships</option>
                    {% for ship in ships %}
                        <option value="{{ ship.id }}" {% if filters.ship == ship.id %}selected{% endif %}>{{ ship.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Campaign</label>
                <select name="campaign" class="select m-1 w-full">
                    <option value="">All campaigns</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            action: path('app_route_index'),
            legend: 'Route search',
            fields: filter_fields,
            reset_path: path('app_route_index'),
            grid_class: 'md:grid-cols-2 lg:grid-cols-3',
            is_filtered: filters.name or filters.ship or filters.campaign
        } %}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {% if routes|length > 0 %}
                {% for route in routes %}
                    <div class="group relative flex flex-col rounded-xl border border-slate-800 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 p-4 shadow-lg transition-all hover:border-emerald-500/30 hover:shadow-emerald-500/10 hover:-translate-y-1">
                        {# Card Header: Name & Actions #}
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-2">
                                <div class="px-2 py-1 rounded border border-slate-700 bg-slate-800 text-xs font-mono tracking-widest text-slate-400 uppercase">
                                    {% include 'components/code_with_copy.html.twig' with { code: route.code } %}
                                </div>
                                <h2 class="text-sm font-bold text-slate-200 group-hover:text-emerald-400 transition-colors uppercase tracking-tight truncate max-w-[150px]" title="{{ route.name }}">
                                    {{ route.name }}
                                </h2>
                            </div>
                            <div class="flex items-center gap-1">
                                {{ tooltip.link('Inspect route', '', 'icons/search.html.twig', path('app_route_details', { id: route.id }), { position: 'tooltip-left', dim: 16, linkClass: 'p-2 rounded-lg hover:bg-emerald-500/20 text-slate-400 hover:text-emerald-400' }) }}
                                {{ tooltip.link('Edit route', '', 'icons/action-edit.html.twig', path('app_route_edit', { id: route.id }), { position: 'tooltip-left', dim: 16, linkClass: 'p-2 rounded-lg hover:bg-emerald-500/20 text-slate-400 hover:text-emerald-400' }) }}
                                {{ tooltip.link('Delete route', '', 'icons/action-trash.html.twig', path('app_route_delete', { id: route.id }), { position: 'tooltip-left', dim: 16, linkClass: 'p-2 rounded-lg hover:bg-red-500/20 text-red-400' }) }}
                            </div>
                        </div>

                        {# Card Body: Astrogation Flow #}
                        <div class="flex items-center justify-between mb-4 p-3 bg-slate-900/50 rounded-lg border border-slate-800/50">
                            <div class="text-center w-1/3">
                                <div class="text-[10px] text-slate-500 uppercase tracking-widest font-rajdhani mb-0.5">Origin</div>
                                <div class="font-mono text-emerald-400 font-bold text-sm">
                                    {{ route.startWorld ? route.startWorld ~ '(' ~ (route.startHex ?? '????') ~ ')' : (route.startHex ?? '????') }}
                                </div>
                            </div>
                            <div class="flex-grow border-t border-dashed border-slate-700 mx-2 relative h-px">
                                 <div class="absolute -top-2 left-1/2 -ml-1 text-slate-600 text-xs">âž¤</div>
                            </div>
                            <div class="text-center w-1/3">
                                 <div class="text-[10px] text-slate-500 uppercase tracking-widest font-rajdhani mb-0.5">Dest</div>
                                <div class="font-mono text-emerald-400 font-bold text-sm">
                                    {{ route.destWorld ? route.destWorld ~ '(' ~ (route.destHex ?? '????') ~ ')' : (route.destHex ?? '????') }}
                                </div>
                            </div>
                        </div>

                        {# Spec Grid #}
                        <div class="grid grid-cols-2 gap-2 mb-4">
                             <div class="p-2 rounded bg-slate-800/30 border border-slate-700/50 flex flex-col items-center">
                                <span class="text-[9px] text-slate-500 uppercase tracking-widest">Jump Dist</span>
                                <span class="text-slate-200 font-mono font-bold">{{ route.jumpDistance ?? '-' }} <span class="text-[9px] text-slate-600">PC</span></span>
                             </div>
                             <div class="p-2 rounded bg-slate-800/30 border border-slate-700/50 flex flex-col items-center">
                                <span class="text-[9px] text-slate-500 uppercase tracking-widest">Total Route Fuel</span>
                                <span class="text-slate-200 font-mono font-bold">{{ route_total_fuel(route) ?? '-' }} <span class="text-[9px] text-slate-600">TONS</span></span>
                             </div>
                        </div>

                        {# Footer: Linkages #}
                        <div class="mt-auto pt-3 border-t border-slate-800 flex items-center justify-between gap-2">
                             <div class="flex items-center gap-2 overflow-hidden max-w-[60%]">
                                {% if route.ship %}
                                    <span class="text-cyan-500/50">{% include 'icons/far-trader.html.twig' with { dim: 12 } %}</span>
                                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wider truncate" title="Assigned Ship">{{ route.ship.name }}</span>
                                {% else %}
                                     <span class="text-[10px] text-slate-600 uppercase italic">Unassigned</span>
                                {% endif %}
                             </div>
                             
                            {% if route.startHex %}
                                <a href="https://travellermap.com/?marker_hex={{ route.startHex }}" target="_blank" rel="noopener" class="flex items-center gap-2 px-3 py-1.5 rounded bg-slate-800 hover:bg-emerald-950/30 border border-slate-700 hover:border-emerald-500/50 text-slate-400 hover:text-emerald-400 transition-all group/map" title="Open chart on TRAVELLERMAP.COM">
                                    <span class="text-[10px] font-bold uppercase tracking-wider">TRAVELLERMAP.COM</span>
                                    {% include 'icons/travellermap.html.twig' with { dim: 14 } %}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                 <div class="col-span-full py-16 text-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <p class="text-slate-500 font-rajdhani tracking-widest uppercase mb-6 text-sm">Nav computer empty // No routes plotted</p>
                     {{ tooltip.link('Create a new route',
                                    'Plot Course',
                                    'icons/routes.html.twig',
                                    path('app_route_new'),
                                    { position: 'tooltip-left', dim: 24, linkClass: 'btn btn-primary btn-outline' }) }}
                </div>
            {% endif %}
        </div>

        {% if pagination.total > 0 %}
            {% include 'components/pagination.html.twig' with { pagination: pagination, path: 'app_route_index' } %}
        {% endif %}
    </div>

{% endblock %}
