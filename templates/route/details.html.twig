{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Route{% endblock %}

{% block pageContent %}
    {# Debug: Explicitly load Leaflet CSS to ensure tiles render correctly #}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />

    <div class="flex flex-col items-stretch gap-6" 
    <div class="flex flex-col items-stretch gap-6" 
         data-controller="route-tile-map route-waypoint-modal" 
         data-route-tile-map-base-url-value="https://travellermap.com"
         data-route-tile-map-current-hex-value="{{ currentHex }}"
         data-route-tile-map-current-sector-value="{{ currentSector }}"
         data-route-map-base-url-value="https://travellermap.com"
         data-route-map-current-hex-value="{{ currentHex }}"
         data-route-map-current-sector-value="{{ currentSector }}"
         {% set waypoints_payload = [] %}
         {% for w in route.waypoints %}
             {% set waypoints_payload = waypoints_payload|merge([{hex: w.hex, sector: w.sector, name: w.world, active: w.active}]) %}
         {% endfor %}
         data-route-tile-map-waypoints-value="{{ waypoints_payload|json_encode }}"
         data-route-map-waypoints-value="{{ waypoints_payload|json_encode }}"
         data-route-waypoint-modal-add-url-value="{{ path('app_route_waypoint_add', {id: route.id}) }}"
         data-route-waypoint-modal-delete-url-value="{{ path('app_route_waypoint_delete', {id: route.id, waypointId: '__ID__'}) }}"
         data-route-waypoint-modal-lookup-url-value="{{ path('app_route_waypoint_lookup') }}"
         data-route-waypoint-modal-route-id-value="{{ route.id }}"
         data-route-waypoint-modal-recalculate-url-value="{{ path('app_route_recalculate', {id: route.id}) }}">
        <div class="relative rounded-2xl bg-slate-950 border border-slate-800 shadow-lg mb-6">
            <div class="absolute inset-0 overflow-hidden rounded-2xl pointer-events-none">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    {% include 'icons/routes.html.twig' with { dim: 128, class: 'text-cyan-500' } %}
                </div>
            </div>
            <div class="relative z-10 p-6 flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
                <div>
                     <div class="flex items-center gap-2 text-cyan-500/80 mb-1">
                        {% include 'icons/routes.html.twig' with { dim: 16 } %}
                        <p class="text-xs uppercase tracking-[0.3em] font-orbitron font-bold">Route Dossier // Details</p>
                    </div>
                    <h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight flex items-center gap-3 font-orbitron">
                        {{ route.name }}
                        <span class="text-xs align-top opacity-50 font-mono pt-2 normal-case tracking-normal text-slate-400">
                            // {{ route.startHex ?? 'Unknown' }} &rarr; {{ route.destHex ?? 'Unknown' }}
                        </span>
                    </h1>
                    <p class="text-xs text-slate-500 font-mono uppercase tracking-wider mt-1">
                        {{ route.description ?? 'Navigation data and waypoint sequence.' }}
                    </p>
                    <div class="flex gap-2 mt-2">
                        {% if route.avoidRedZones %}
                            <div class="badge badge-error gap-1 text-[10px] uppercase font-bold tracking-wider text-white">
                                {% include 'icons/shield.html.twig' with {dim: 12} %}
                                Avoid Red Zones
                            </div>
                        {% endif %}
                        {% if route.preferHighPort %}
                            <div class="badge badge-info gap-1 text-[10px] uppercase font-bold tracking-wider text-white">
                                {% include 'icons/starport.html.twig' with {dim: 12} %}
                                Require Starport
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="flex flex-wrap gap-2">
                    <a href="{{ path('app_route_index') }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                        {% include 'icons/back.html.twig' %}
                    </a>
                    <a href="{{ path('app_route_edit', { id: route.id }) }}" class="btn btn-outline btn-primary btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                       {% include 'icons/routes.html.twig' %}
                    </a>
                    <a href="{{ mapUrl }}" target="_blank" rel="noopener" class="btn btn-outline btn-info btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase flex items-center">
                        {% include 'icons/travellermap.html.twig' with { dim: 16 } %}
                        TRAVELLERMAP.COM
                    </a>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
            <div class="rounded-xl border border-base-300 bg-base-200 p-4">
                <div class="text-xs uppercase tracking-[0.2em] text-slate-400">Asset</div>
                <div class="text-lg text-cyan-100">{{ route.asset.name }}</div>
            </div>
            <div class="rounded-xl border border-base-300 bg-base-200 p-4">
                <div class="text-xs uppercase tracking-[0.2em] text-slate-400">Mission</div>
                <div class="text-lg text-cyan-100">{{ route.campaign ? route.campaign.title : '—' }}</div>
            </div>
            <div class="rounded-xl border border-base-300 bg-base-200 p-4">
                <div class="text-xs uppercase tracking-[0.2em] text-slate-400">Jump Rating / Total Route Fuel</div>
                <div class="text-lg text-cyan-100">
                    {{ route.asset.jumpDriveRating ?? '—' }} / {{ route_total_fuel(route) ?? '—' }}
                </div>
            </div>
        </div>

        {# Gratitude Section #}
        <div class="p-4 rounded-xl border border-emerald-500/20 bg-emerald-500/5 flex items-start gap-4 shadow-inner">
            <div class="p-2 rounded-lg bg-emerald-500/10 text-emerald-400">
                {% include 'icons/travellermap.html.twig' with { dim: 20 } %}
            </div>
            <div class="flex-grow">
                <p class="text-[10px] uppercase tracking-[0.2em] font-bold text-emerald-500/60 mb-1">Incoming Transmission // Nav-Data Source</p>
                <p class="text-sm text-slate-300 leading-relaxed italic">
                    The cartographic data and sector coordinates that make this route possible are provided by the tireless work of the Imperial cartographers at <span class="text-emerald-400 font-bold">TRAVELLERMAP.COM</span>. Without their support, every jump would be a blind leap into the void of subspace.
                    <br>
                    <span class="text-xs text-emerald-400/80 mt-1 block">"From scout to scout, or rather from junior scouts to the greatest explorers of the galaxy, thank you so much!"</span>
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <div class="rounded-xl border border-base-300 bg-base-200 p-4 h-full relative">
                <div class="text-sm uppercase tracking-[0.2em] text-slate-400 mb-2">
                    <span class="flex items-center gap-2">
                        {% include 'icons/travellermap.html.twig' with { dim: 20 } %}
                        TRAVELLERMAP.COM
                    </span>
                </div>
                
                <!-- Loading Overlay -->
                <div data-route-map-target="overlay" 
                     class="hidden absolute inset-0 z-10 flex items-center justify-center bg-slate-950/95 backdrop-blur-sm rounded-lg border-2 border-cyan-500/30">
                    <div class="flex flex-col items-center gap-4 p-8">
                        <!-- Animated radar/scanner -->
                        <div class="relative w-24 h-24">
                            <div class="absolute inset-0 rounded-full border-2 border-cyan-500/30 animate-ping"></div>
                            <div class="absolute inset-2 rounded-full border-2 border-cyan-400/50 animate-pulse"></div>
                            <div class="absolute inset-4 rounded-full bg-gradient-to-br from-cyan-500/20 to-blue-500/20 animate-spin" style="animation-duration: 3s;"></div>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <svg class="w-12 h-12 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                                </svg>
                            </div>
                        </div>
                        
                        <!-- Loading text -->
                        <div class="text-center space-y-2">
                            <div class="font-orbitron uppercase tracking-[0.3em] text-cyan-400 text-lg font-bold animate-pulse">
                                NAV SYNC
                            </div>
                            <div class="font-rajdhani uppercase tracking-[0.2em] text-cyan-300/70 text-sm">
                                // Establishing jump coordinates
                            </div>
                            <div class="flex gap-1 justify-center mt-3">
                                <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse" style="animation-delay: 0s;"></div>
                                <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse" style="animation-delay: 0.2s;"></div>
                                <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse" style="animation-delay: 0.4s;"></div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Map Wrapper with Overlay -->
                <div class="relative w-full h-[600px] rounded-lg border border-base-300 bg-slate-950 overflow-hidden group">
                    <!-- Map Container -->
                    <div
                        data-route-map-target="container"
                        data-route-tile-map-target="container"
                        class="absolute inset-0 z-0 bg-slate-950"
                    ></div>

                    <!-- Sci-Fi Overlay (Permanent) -->
                    <div class="absolute inset-0 z-20 pointer-events-none select-none rounded-lg overflow-hidden map-scanline-overlay"></div>

                    <!-- Loading Overlay (Restored & Blocking) -->
                    <div data-route-tile-map-target="overlay" 
                         class="absolute inset-0 z-50 flex items-center justify-center bg-slate-950 transition-opacity duration-1000">
                        <div class="flex flex-col items-center gap-4 p-8">
                            <!-- Animated radar/scanner -->
                            <div class="relative w-24 h-24">
                                <div class="absolute inset-0 rounded-full border-2 border-cyan-500/30 animate-ping"></div>
                                <div class="absolute inset-2 rounded-full border-2 border-cyan-400/50 animate-pulse"></div>
                                <div class="absolute inset-4 rounded-full bg-gradient-to-br from-cyan-500/20 to-blue-500/20 animate-spin" style="animation-duration: 3s;"></div>
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <svg class="w-12 h-12 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                                    </svg>
                                </div>
                            </div>
                            
                            <!-- Loading text -->
                            <div class="text-center space-y-2">
                                <div class="font-orbitron uppercase tracking-[0.3em] text-cyan-400 text-lg font-bold animate-pulse">
                                    NAV SYNC
                                </div>
                                <div class="font-rajdhani uppercase tracking-[0.2em] text-cyan-300/70 text-sm">
                                    // Establishing jump coordinates
                                </div>
                                <div class="flex gap-1 justify-center mt-3">
                                    <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse" style="animation-delay: 0s;"></div>
                                    <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse" style="animation-delay: 0.2s;"></div>
                                    <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse" style="animation-delay: 0.4s;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Travel Toolbar Overlay (HUD) -->
                <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-30 flex items-center gap-4 px-6 py-3 rounded-full bg-slate-950/80 backdrop-blur-md border border-cyan-500/30 shadow-[0_0_30px_rgba(34,211,238,0.1)] transition-all duration-300 hover:bg-slate-950/95"
                     data-controller="route-travel"
                     data-route-travel-id-value="{{ route.id }}"
                     data-route-travel-active-value="{{ route.active ? 'true' : 'false' }}"
                     data-route-travel-has-invalid-jumps-value="{{ hasInvalidJumps ? 'true' : 'false' }}">

                    <button class="btn btn-sm btn-circle btn-ghost text-cyan-500 disabled:opacity-20 hover:bg-cyan-500/10 transition-all duration-300"
                            data-action="route-travel#rewind"
                            data-route-travel-target="rewind"
                            title="Rewind (Previous Waypoint)">
                        {% include 'icons/rewind.html.twig' %}
                    </button>

                    <button class="btn btn-md btn-circle btn-outline border-cyan-500 text-cyan-400 hover:bg-cyan-500/20 hover:border-cyan-400 shadow-[0_0_15px_rgba(34,211,238,0.3)] transition-all duration-300 relative group"
                            data-action="route-travel#togglePlay"
                            data-route-travel-target="play"
                            title="Toggle Travel Mode">
                         <div class="absolute inset-0 rounded-full border border-cyan-400 opacity-0 group-hover:animate-ping"></div>
                        {% include 'icons/play.html.twig' %}
                    </button>

                    <button class="btn btn-sm btn-circle btn-ghost text-cyan-500 disabled:opacity-20 hover:bg-cyan-500/10 transition-all duration-300"
                            data-action="route-travel#forward"
                            data-route-travel-target="forward"
                            title="Forward (Next Waypoint)">
                        {% include 'icons/forward.html.twig' %}
                    </button>
                    
                    <div class="hidden absolute -right-8" data-route-travel-target="statusIndicator">
                        <span class="loading loading-spinner loading-xs text-cyan-500"></span>
                    </div>
                </div>
            </div>

            <div class="rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner flex flex-col">


                {# Header con pulsante Add e Warning #}
                <div class="flex items-center justify-between p-4 border-b border-slate-800 bg-slate-900/50">
                    <span class="font-orbitron text-[10px] uppercase tracking-[0.3em] text-slate-400">Waypoints</span>
                    
                    <div class="flex items-center gap-2">
                        {# Warning / Recalculate #}
                        <div class="flex items-center gap-4 {{ hasInvalidJumps ? '' : 'hidden' }}"
                            data-route-waypoint-modal-target="invalidJumpAlert">
                            
                            <div class="hidden xl:flex items-center gap-2 text-red-500 animate-pulse">
                                {% include 'icons/radar.html.twig' with { dim: 14 } %}
                                <span class="text-[10px] uppercase tracking-widest font-bold font-orbitron">Invalid Jump</span>
                            </div>

                            {% import '_tooltip.html.twig' as UI %}
                            {{ UI.button(
                                'Recalculate Route',
                                'Recalculate',
                                'icons/recalculate.html.twig',
                                {
                                    dim: 16,
                                    position: 'tooltip-left',
                                    buttonClass: 'btn btn-sm btn-outline btn-error gap-2 font-orbitron text-[10px] tracking-widest uppercase hover:bg-red-500/20',
                                    attrs: { 'data-action': 'route-waypoint-modal#recalculate' }
                                }
                            ) }}
                        </div>

                        <div class="tooltip tooltip-left" data-tip="Add Waypoint">
                            <button type="button"
                                    class="btn btn-primary btn-sm font-orbitron"
                                    data-action="route-waypoint-modal#openModal">
                                {% include 'icons/waypoint.html.twig' with {dim: 16} %}
                            </button>
                        </div>
                    </div>
                </div>

                {# Modale #}
                <dialog class="modal" data-route-waypoint-modal-target="modal">
                    <div class="modal-box bg-slate-900 border border-slate-700">
                        <h3 class="font-orbitron text-lg font-bold text-cyan-400 uppercase tracking-widest mb-6">Add Waypoint</h3>
                        {{ form_start(waypointForm, {
                            'attr': {
                                'data-action': 'submit->route-waypoint-modal#submit',
                                'data-route-waypoint-modal-target': 'form',
                                'data-controller': 'dependent-select',
                                'data-dependent-select-url-value': path('api_sector_worlds')
                            }
                        }) }}
                            <div class="grid grid-cols-2 gap-4 mb-4 relative">
                                {# Radar Overlay centered on the form #}
                                <div class="loader-overlay">
                                    <div class="radar-loader"></div>
                                    <div class="radar-loader-label">SYNCING DATA</div>
                                </div>
                                <div class="col-span-1">
                                    <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">Sector (OTU)</label>
                                    {{ form_widget(waypointForm.sector, {
                                        'attr': {
                                            'data-route-waypoint-modal-target': 'inputSector',
                                            'data-action': 'change->dependent-select#change'
                                        }
                                    }) }}
                                </div>
                                <div class="col-span-1">
                                    <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">World Selection</label>
                                    {{ form_widget(waypointForm.worldChoice, {
                                        'attr': {
                                            'data-route-waypoint-modal-target': 'inputWorldChoice',
                                            'data-action': 'change->route-waypoint-modal#onWorldChoiceChange'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="mb-6">
                                <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50 mb-1">Notes</label>
                                {{ form_widget(waypointForm.notes, {
                                    'attr': {
                                        'class': 'textarea textarea-bordered textarea-sm w-full bg-slate-950/50 border-slate-800 h-20 focus:border-cyan-500/50 font-rajdhani',
                                        'placeholder': 'Optional notes...',
                                        'data-route-waypoint-modal-target': 'inputNotes'
                                    }
                                }) }}
                            </div>
                            {{ form_widget(waypointForm.world, { 'attr': { 'data-route-waypoint-modal-target': 'inputWorld' } }) }}
                            {{ form_widget(waypointForm.hex, { 'attr': { 'data-route-waypoint-modal-target': 'inputHex' } }) }}
                            {{ form_widget(waypointForm.uwp, { 'attr': { 'data-route-waypoint-modal-target': 'inputUwp' } }) }}
                            {{ form_widget(waypointForm.position) }}
                            {{ form_widget(waypointForm.jumpDistance) }}
                            <div class="modal-action">
                                <button type="button" class="btn btn-ghost" data-action="route-waypoint-modal#closeModal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Add Waypoint</button>
                            </div>
                        {{ form_end(waypointForm) }}
                    </div>
                    <form method="dialog" class="modal-backdrop">
                        <button>close</button>
                    </form>
                </dialog>
                
                {# Tabella #}
                <div class="overflow-x-auto flex-grow relative min-h-[300px] h-[600px]">
                    {# Loading Overlay (Recalculate) - Scoped to table #}
                    <div data-route-waypoint-modal-target="loadingOverlay" 
                         class="hidden absolute inset-0 z-10 flex items-center justify-center bg-slate-950/95 transition-opacity duration-300">
                        <div class="flex flex-col items-center gap-4">
                            <div class="relative w-16 h-16">
                                <div class="absolute inset-0 rounded-full border-2 border-cyan-500/30 animate-[spin_3s_linear_infinite]"></div>
                                <div class="absolute inset-2 rounded-full border-t-2 border-cyan-400 animate-[spin_2s_linear_infinite_reverse]"></div>
                            </div>
                            <div class="font-orbitron text-xs tracking-[0.2em] text-cyan-500/80 animate-pulse text-center">
                                OPTIMIZING JUMP PATH<br>
                                <span class="text-[10px] opacity-70 font-rajdhani">// PLEASE WAIT</span>
                            </div>
                        </div>
                    </div>

                    <table class="table table-sm w-full border-separate border-spacing-0">
                    <thead>
                    <tr class="border-b border-slate-800">
                        <th class="bg-slate-900/50 w-12"></th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">#</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Sector</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">World</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Hex</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">UWP</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50 text-right">Distance(pc)</th>
                        <th class="bg-slate-900/50 w-12"></th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800/50" data-route-waypoint-modal-target="tableBody">
                    {% if route.waypoints|length > 0 %}
                        {% for waypoint in route.waypoints %}
                            <tr class="transition-colors text-slate-300 {{ waypoint.active ? 'bg-cyan-900/20 shadow-[inset_0_0_20px_rgba(34,211,238,0.1)] border-l-2 border-cyan-500' : 'hover:bg-emerald-500/5' }}">
                                <td class="text-center p-2">
                                    {% if waypoint.hex %}
                                        <button type="button"
                                                class="btn btn-ghost btn-xs text-[10px] uppercase font-bold tracking-widest text-slate-400 hover:text-emerald-400 hover:bg-emerald-500/10 flex items-center gap-1.5"
                                                data-action="route-tile-map#jump"
                                                data-route-map-target="button"
                                                data-hex="{{ waypoint.hex }}"
                                                data-sector="{{ waypoint.sector }}">
                                            {% include 'icons/travellermap.html.twig' with { dim: 12 } %}
                                            MAP
                                        </button>
                                    {% else %}
                                        <span class="opacity-30">—</span>
                                    {% endif %}
                                </td>
                                <td class="font-mono text-xs p-2 text-slate-500">{{ waypoint.position }}</td>
                                <td class="font-mono text-xs p-2">{{ waypoint.sector ?? '—' }}</td>
                                {% set zone = world_zone(waypoint.sector, waypoint.hex) %}
                                <td class="p-2">
                                    <span class="badge badge-sm font-mono font-bold {{ zone == 'R' ? 'badge-error text-white' : (zone == 'A' ? 'badge-warning text-black' : 'badge-ghost text-slate-300') }}">
                                        {{ waypoint.world ?? '—' }}
                                    </span>
                                </td>
                                <td class="font-mono text-xs p-2 border-r border-slate-800/50 font-bold text-emerald-400">{{ waypoint.hex }}</td>
                                <td class="font-mono text-xs p-2">{{ waypoint.uwp ?? '—' }}</td>
                                <td class="font-mono text-xs p-2 text-right text-emerald-300">{{ waypoint.jumpDistance ?? '—' }}</td>
                                <td class="text-center p-2">
                                    {% if is_granted('waypoint_delete', waypoint) %}
                                        <button type="button"
                                                class="btn btn-ghost btn-xs text-red-500 hover:text-red-400 hover:bg-red-500/10"
                                                data-action="route-waypoint-modal#deleteWaypoint"
                                                data-waypoint-id="{{ waypoint.id }}">
                                            {% include 'icons/action-trash.html.twig' with { dim: 14 } %}
                                        </button>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr class="empty-row" data-route-waypoint-modal-target="emptyRow">
                            <td colspan="8" class="text-center text-slate-500 font-rajdhani uppercase tracking-widest text-xs py-8">
                                // No waypoints mapped
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
