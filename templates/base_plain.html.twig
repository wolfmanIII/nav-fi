          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bg-base-200 min-h-screen">
    <div class="flex flex-col items-center justify-center min-h-screen px-4 py-8">
        <div class="w-full max-w-6xl bg-base-100 shadow-xl border border-base-300 rounded-2xl p-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div role="alert" class="alert alert-{{ label }} alert-outline mb-3">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block pageContent %}{% endblock %}
        </div>
    </div>
</body>
</html>
