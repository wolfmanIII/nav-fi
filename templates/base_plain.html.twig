<!DOCTYPE html>
<html data-theme="business" lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{% block title %}Nav-Fi&sup3;{% endblock %}</title>
    
    <link rel="icon" href="{{ asset('img/favicon.ico') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('img/favicon-16.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('img/favicon-32.png') }}">
    <link rel="icon" type="image/png" sizes="48x48" href="{{ asset('img/favicon-48.png') }}">
    <link rel="icon" type="image/png" sizes="64x64" href="{{ asset('img/favicon-64.png') }}">
    <link rel="icon" type="image/png" sizes="128x128" href="{{ asset('img/favicon-128.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('img/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('img/android-chrome-192.png') }}">
    <link rel="icon" type="image/png" sizes="512x512" href="{{ asset('img/android-chrome-512.png') }}">
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}">

    {% block stylesheets %}
        <style>
            .watermark {
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%) rotate(-45deg);
                font-size: 80pt;
                color: rgba(220, 38, 38, 0.15);
                z-index: 1000;
                pointer-events: none;
                white-space: nowrap;
                font-family: sans-serif;
                font-weight: bold;
                border: 10pt solid rgba(220, 38, 38, 0.15);
                padding: 20pt;
                text-transform: uppercase;
            }
        </style>
    {% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bg-base-200 min-h-screen">
    <div class="flex flex-col items-stretch justify-start min-h-screen">
        <div class="w-full px-0">
            <div class="relative isolate overflow-hidden w-full p-6 min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-cyan-950/30 text-cyan-100">
                <div class="absolute inset-0 opacity-30" aria-hidden="true">
                    <div class="absolute -left-10 -top-10 h-64 w-64 rounded-full bg-cyan-500 blur-3xl"></div>
                    <div class="absolute bottom-0 right-0 h-72 w-72 rounded-full bg-indigo-500 blur-3xl"></div>
                </div>
                <div class="relative">
                    {% if watermark is defined %}{{ watermark|raw }}{% else %}{{ '{{WATERMARK}}' }}{% endif %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div role="alert" class="alert alert-{{ label }} alert-outline mb-3 w-full">
                        <div class="animate-spin-slow text-current">
                            {% include 'icons/radar.html.twig' with { dim: 24 } %}
                        </div>
                        <div>{{ message|raw }}</div>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block pageContent %}{% endblock %}
                </div>
            </div>
        </div>
    </div>  
</body>
</html>
