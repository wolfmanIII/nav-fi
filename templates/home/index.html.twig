{% extends 'base.html.twig' %}

{% block title %}Nav-Fi - Ship Log{% endblock %}

{% block pageContent %}
    <div class="space-y-6">
        {# HEADER / STATUS BAR #}
        <div class="relative overflow-hidden rounded-2xl bg-slate-950 border border-slate-800 p-6 shadow-lg">
             <div class="absolute top-0 right-0 p-4 opacity-20">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-32 h-32 text-cyan-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.5"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
            </div>
            <div class="relative z-10 flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
                <div>
                     <div class="flex items-center gap-2 text-cyan-400/80 mb-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="size-4">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M3 12h18M8 7l-2 5 2 5M16 7l2 5-2 5"></path>
                        </svg>
                        <p class="text-xs uppercase tracking-[0.3em] font-orbitron font-bold">Traveller // Imperial Drift Lane</p>
                    </div>
                    <h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight">
                        Bridge Operations
                    </h1>
                </div>
                </div>
            </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 items-start">
            
            {# LEFT COLUMN: TACTICAL MENU #}
            <div class="lg:col-span-4 space-y-6">
                <div class="rounded-2xl bg-gradient-to-b from-slate-900 to-slate-950 border border-cyan-500/20 p-6 relative overflow-hidden group">
                     <div class="absolute inset-0 bg-cyan-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none"></div>
                     
                     <h2 class="text-xs uppercase tracking-[0.2em] text-cyan-400 font-bold mb-6 flex items-center gap-2">
                        <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 animate-pulse"></span>
                        Tactical Command
                     </h2>

                     <div class="grid grid-cols-2 gap-3">
                         <a href="{{ path('app_operation_guide') }}" class="flex flex-col items-center justify-center p-4 rounded-lg bg-slate-950 border border-slate-800 hover:border-cyan-500/30 hover:bg-slate-900 transition-all text-center group">
                            <div class="text-cyan-500 mb-2 group-hover:scale-110 transition-transform">{% include 'icons/operations-checklist.html.twig' with { dim: 20 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">OPS CHECKLIST</span>
                        </a>

                         <a href="{{ path('app_operations_flow') }}" class="flex flex-col items-center justify-center p-4 rounded-lg bg-slate-950 border border-slate-800 hover:border-cyan-500/30 hover:bg-slate-900 transition-all text-center group">
                            <div class="text-cyan-500 mb-2 group-hover:scale-110 transition-transform">{% include 'icons/operations-flow.html.twig' with { dim: 20 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">MISSION FLOW</span>
                        </a>

                        <a href="{{ path('app_campaign_index') }}" class="flex flex-col items-center justify-center p-4 rounded-lg bg-slate-950 border border-slate-800 hover:border-purple-500/30 hover:bg-slate-900 transition-all text-center group">
                            <div class="text-purple-400 mb-2 group-hover:scale-110 transition-transform">{% include 'icons/alien-structure-1.html.twig' with { dim: 20 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">INIT MISSION</span>
                        </a>

                         <a href="{{ path('app_ship_index') }}" class="flex flex-col items-center justify-center p-4 rounded-lg bg-slate-950 border border-slate-800 hover:border-blue-500/30 hover:bg-slate-900 transition-all text-center group">
                            <div class="text-blue-400 mb-2 group-hover:scale-110 transition-transform">{% include 'icons/far-trader.html.twig' with { dim: 20 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">SHIPYARD</span>
                        </a>

                        <a href="{{ path('app_route_index') }}" class="col-span-2 flex items-center justify-center gap-2 p-3 rounded-lg bg-slate-950 border border-slate-800 hover:border-emerald-500/30 hover:bg-slate-900 transition-all group">
                             <div class="text-emerald-400 group-hover:text-white">{% include 'icons/routes.html.twig' with { dim: 16 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">CHART ROUTES</span>
                        </a>
                     </div>
                </div>

                <div class="rounded-2xl bg-slate-900/50 border border-slate-800 p-6">
                    <h3 class="text-xs uppercase tracking-[0.2em] text-slate-500 font-bold mb-4">Financial Core</h3>
                    <div class="grid grid-cols-2 gap-3">
                         <a href="{{ path('app_mortgage_index') }}" class="flex flex-col items-center justify-center p-4 rounded-lg bg-slate-950 border border-slate-800 hover:border-red-500/30 hover:bg-slate-900 transition-all text-center group">
                            <div class="text-red-400 mb-2 group-hover:scale-110 transition-transform">{% include 'icons/handbook.html.twig' with { dim: 20 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">DEBT</span>
                        </a>
                        <a href="{{ path('app_annual_budget_index') }}" class="flex flex-col items-center justify-center p-4 rounded-lg bg-slate-950 border border-slate-800 hover:border-amber-500/30 hover:bg-slate-900 transition-all text-center group">
                            <div class="text-amber-400 mb-2 group-hover:scale-110 transition-transform">{% include 'icons/annual-budget.html.twig' with { dim: 20 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">BUDGET</span>
                        </a>
                         <a href="{{ path('app_cost_index') }}" class="col-span-2 flex items-center justify-center gap-2 p-3 rounded-lg bg-slate-950 border border-slate-800 hover:border-slate-600 hover:bg-slate-900 transition-all group">
                             <div class="text-slate-400 group-hover:text-white">{% include 'icons/cost.html.twig' with { dim: 16 } %}</div>
                            <span class="text-xs font-bold text-slate-300 group-hover:text-white">MISSION OUTFLOW LOGS</span>
                        </a>
                    </div>
                </div>
            </div>

            {# MIDDLE / RIGHT COLUMN: BRIEFING & STATUS #}
            <div class="lg:col-span-8 space-y-6">
                
                {# Briefing Card #}
                <div class="rounded-2xl bg-gradient-to-br from-slate-900 via-slate-900 to-cyan-950/10 border border-slate-800 p-8 shadow-xl relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-64 h-64 bg-cyan-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
                    
                    <h2 class="text-xl font-bold text-white mb-4 flex items-center gap-2">
                        <span class="text-cyan-400">///</span> Mission Briefing
                    </h2>
                    
                    <div class="prose prose-invert prose-sm max-w-none text-slate-400 leading-relaxed">
                        <p>
                            <strong class="text-white">Nav-Fi</strong> is the holo-console for your Traveller campaign. 
                            Synchronize ships, crew, and one-to-one mortgages per hull against real session dates. 
                            Generate contract & ship PDFs with local law clauses instantly.
                        </p>
                        <p class="mt-2 text-sm border-l-2 border-cyan-500/30 pl-4 py-1 italic">
                            Session timeline logs capture each clock update with JSON snapshots for audit-grade continuity. 
                            Signed hulls stay editable through Ship Amendments, while costs feed calculated totals automatically.
                        </p>
                    </div>

                    <div class="mt-6 flex items-center gap-4 text-xs font-mono text-cyan-600/60 uppercase tracking-widest">
                         <span>SECURE_CONN_ESTABLISHED</span>
                         <span class="hidden md:inline">|</span>
                         <span class="hidden md:inline">ENCRYPTION: QUANTUM-8</span>
                    </div>
                </div>

                {# Grid of 4 Status Cards #}
                 <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                     
                     <div class="rounded-xl bg-slate-900 border border-slate-800 p-5 hover:border-cyan-500/30 hover:bg-slate-800/50 transition-all group">
                         <div class="flex items-start justify-between mb-4">
                            <div class="p-2 rounded-lg bg-cyan-950/30 text-cyan-400 group-hover:bg-cyan-900/40">
                                {% include 'icons/far-trader.html.twig' with { dim: 20 } %}
                            </div>
                            <span class="text-[10px] text-cyan-700 font-bold tracking-widest uppercase bg-cyan-950/20 px-2 py-1 rounded">Reg_Fleet</span>
                         </div>
                         <h3 class="text-lg font-bold text-white mb-1">Vessel Assets</h3>
                         <p class="text-sm text-slate-500 leading-relaxed">
                             Ship sheets, mortgage status, crew registers, and printable PDFs with amendment logs.
                         </p>
                     </div>

                     <div class="rounded-xl bg-slate-900 border border-slate-800 p-5 hover:border-purple-500/30 hover:bg-slate-800/50 transition-all group">
                         <div class="flex items-start justify-between mb-4">
                            <div class="p-2 rounded-lg bg-purple-950/30 text-purple-400 group-hover:bg-purple-900/40">
                                {% include 'icons/crew.html.twig' with { dim: 20 } %}
                            </div>
                            <span class="text-[10px] text-purple-700 font-bold tracking-widest uppercase bg-purple-950/20 px-2 py-1 rounded">Crew_Mann</span>
                         </div>
                         <h3 class="text-lg font-bold text-white mb-1">Ops Personnel</h3>
                         <p class="text-sm text-slate-500 leading-relaxed">
                             Bridge roles and status timelines aligned to the session jump clock.
                         </p>
                     </div>

                     <div class="rounded-xl bg-slate-900 border border-slate-800 p-5 hover:border-red-500/30 hover:bg-slate-800/50 transition-all group">
                         <div class="flex items-start justify-between mb-4">
                            <div class="p-2 rounded-lg bg-red-950/30 text-red-400 group-hover:bg-red-900/40">
                                {% include 'icons/handbook.html.twig' with { dim: 20 } %}
                            </div>
                            <span class="text-[10px] text-red-700 font-bold tracking-widest uppercase bg-red-950/20 px-2 py-1 rounded">Liabilities</span>
                         </div>
                         <h3 class="text-lg font-bold text-white mb-1">Debt & Contracts</h3>
                         <p class="text-sm text-slate-500 leading-relaxed">
                             Track rates, penalties, and signed agreements ready for port flash.
                         </p>
                     </div>

                      <div class="rounded-xl bg-slate-900 border border-slate-800 p-5 hover:border-emerald-500/30 hover:bg-slate-800/50 transition-all group">
                         <div class="flex items-start justify-between mb-4">
                            <div class="p-2 rounded-lg bg-emerald-950/30 text-emerald-400 group-hover:bg-emerald-900/40">
                                {% include 'icons/annual-budget.html.twig' with { dim: 20 } %}
                            </div>
                            <span class="text-[10px] text-emerald-700 font-bold tracking-widest uppercase bg-emerald-950/20 px-2 py-1 rounded">Cycle_Bal</span>
                         </div>
                         <h3 class="text-lg font-bold text-white mb-1">Performance Matrix</h3>
                         <p class="text-sm text-slate-500 leading-relaxed">
                             Aggregated income, upkeep, and debt on a single mission strip.
                         </p>
                     </div>

                 </div>

                 {# Badge Cluster #}
                  <div class="flex flex-wrap gap-2 pt-2">
                        {% for badge in ['Jump Ready', 'Owner Secured', 'Quick Scan', 'Session Timeline', 'Imp. Date', 'Cost Detail', 'Contract PDF', 'Vector Map'] %}
                             <span class="px-3 py-1.5 rounded border border-slate-800 bg-slate-950 text-xs text-slate-400 uppercase tracking-wider hover:border-slate-700 hover:text-slate-300 transition-colors cursor-default font-medium">
                                {{ badge }}
                             </span>
                        {% endfor %}
                 </div>

            </div>
        </div>

        {# BOTTOM GRID: FEATURES (Tighter) #}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-6 border-t border-slate-800/50 mt-8">
             {% for feature in [
                 { icon: 'M2 12h2 M20 12h2 M7 12h10 M12 5a7 7 0 1 0 0 14', title: 'Lean Rules', desc: 'Essentials-only interfaces.', code: 'SCEN_ARCH' },
                 { icon: 'M12 3l7 4v6c0 4-3 6-7 8-4-2-7-4-7-8V7z M12 11a2.5 2.5 0 1 0 0-5', title: 'Ownership', desc: 'Secure hull ledgers.', code: 'SEC_UPLINK' },
                 { icon: 'M12 2l3 7 7 .5-5.5 4.5 1.8 7-6.3-4-6.3 4 1.8-7L2 9.5 9 9z', title: 'Briefing', desc: 'Aligned job specs.', code: 'DEBRIEF' },
                 { icon: 'M3 18v-2l5-4 4 3 4-6 5 4v5H3z M3 14v-1 M3 22h18', title: 'Economics', desc: 'Fuel burns per vessel.', code: 'ECON_ANL' },
             ] %}
            <div class="p-4 rounded-xl bg-slate-900/30 border border-slate-800/60 hover:bg-slate-800/60 transition-colors group">
                <div class="flex items-center gap-2 text-cyan-600 mb-2 group-hover:text-cyan-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="{{ feature.icon }}"></path>
                    </svg>
                    <span class="text-[10px] font-mono font-bold uppercase">{{ feature.code }}</span>
                </div>
                <h4 class="text-sm font-bold text-slate-300">{{ feature.title }}</h4>
                <p class="text-xs text-slate-500 mt-1">{{ feature.desc }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
