<!DOCTYPE html>
<html data-theme="abyss" lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{% block title %}Captain Log{% endblock %}</title>
    
    <link rel="icon" href="{{ asset('img/favicon.ico') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('img/favicon-16.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('img/favicon-32.png') }}">
    <link rel="icon" type="image/png" sizes="48x48" href="{{ asset('img/favicon-48.png') }}">
    <link rel="icon" type="image/png" sizes="64x64" href="{{ asset('img/favicon-64.png') }}">
    <link rel="icon" type="image/png" sizes="128x128" href="{{ asset('img/favicon-128.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('img/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('img/android-chrome-192.png') }}">
    <link rel="icon" type="image/png" sizes="512x512" href="{{ asset('img/android-chrome-512.png') }}">
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}">

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

    <div class="drawer lg:drawer-open">
        <input id="my-drawer-4" type="checkbox" class="drawer-toggle"/>

        <!-- CONTENUTO PAGINA -->
        <div class="drawer-content flex flex-col min-h-screen">
            <nav class="navbar w-full sticky top-0 z-30 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-800 text-cyan-100">
                <!-- Bottone: visibile solo su schermi piccoli -->
                <div class="flex-none lg:hidden">
                    <label for="my-drawer-4"
                           aria-label="open sidebar"
                           class="btn btn-square btn-ghost drawer-button">
                        <!-- icona -->
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                             stroke-linejoin="round" stroke-linecap="round"
                             stroke-width="2" fill="none" stroke="currentColor"
                             class="my-1.5 inline-block size-4">
                            <path d="M4 6h16"></path>
                            <path d="M4 12h16"></path>
                            <path d="M4 18h16"></path>
                        </svg>
                    </label>
                </div>

                <div class="flex-none px-4">
                    <img src="{{ asset('img/captain-log-logo.png') }}" width="64" alt="logo">
                </div>
                <div class="flex-none text-[42px]">
                    <b>Captain Log</b>
                </div>

                <div class="flex-1"></div>

                <div class="flex-none px-4">
                    {% if app.user %}
                        <div class="flex items-center gap-2">
                            <img src="{{ app.user.gravatarUrl(32) }}"
                                 alt="avatar"
                                 class="w-8 h-8 rounded-full border border-base-300">
                            <span class="text-sm opacity-80">{{ app.user.userIdentifier }}</span>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <span class="badge badge-error badge-outline badge-sm">Super Admin</span>
                            {% elseif is_granted('ROLE_ADMIN') %}
                                <span class="badge badge-warning badge-outline badge-sm">Admin</span>
                            {% endif %}
                            <form method="post" action="{{ path('app_logout') }}">
                                <button class="btn btn-sm btn-outline">Logout</button>
                            </form>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline">Login</a>
                    {% endif %}
                </div>
            </nav>

            <div class="p-4">

                <div class="flex flex-col items-center gap-4">
                    {% for label, messages in app.flashes %}
                        <fieldset class="fieldset bg-base-200 border-base-300 gap-4 p-4 border rounded w-315">
                            {% for message in messages %}
                                <div role="alert" class="alert alert-{{ label }} alert-outline">
                                    <span class="animate-spin-slow">
                                        {% include 'icons/radar.html.twig' %}
                                    </span>
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </fieldset>
                    {% endfor %}
                </div>

                {% block pageContent %}{% endblock %}
            </div>

            <footer class="footer sm:footer-horizontal footer-center bg-neutral text-base-content p-4 sticky top-[100vh]">
                <aside class="text-sm uppercase tracking-[0.25em] text-slate-200/80">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="size-5 opacity-80">
                            <path d="M3 12h18"></path>
                            <path d="M8 7l-2 5 2 5"></path>
                            <path d="M16 7l2 5-2 5"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                        <span>Captain Log // Imperial drift lane</span>
                    </div>
                </aside>
            </footer>

        </div>

        <!-- SIDEBAR -->
        {% include '_sidebar.html.twig' %}
    </div>

</body>
</html>
