{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block pageContent %}
<div class="">
    {# Header Section #}
    <div class="relative rounded-2xl bg-slate-950 border border-slate-800 shadow-lg mb-6">
         <div class="absolute inset-0 overflow-hidden rounded-2xl pointer-events-none">
            <div class="absolute top-0 right-0 p-4 opacity-10">
                {% include 'icons/dossier.html.twig' with { dim: 128, class: 'text-cyan-500' } %}
            </div>
        </div>
        <div class="relative z-10 p-6 flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
            <div>
                 <div class="flex items-center gap-2 text-cyan-500/80 mb-1">
                    {% include 'icons/dossier.html.twig' with { dim: 16 } %}
                    <p class="text-xs uppercase tracking-[0.3em] font-orbitron font-bold">Traveller Identity</p>
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight flex items-center gap-3 font-orbitron">
                    OFFICER DOSSIER
                </h1>
                <p class="text-xs text-slate-500 font-mono uppercase tracking-wider mt-1">
                    Manage your credentials, biometric security and bridge access permissions.
                </p>
            </div>
            <div class="flex gap-2">
                <a href="{{ path('app_logout') }}" class="btn btn-outline btn-info btn-sm gap-2 uppercase tracking-wide font-orbitron text-[10px]">
                    {% include 'icons/logout.html.twig' with {'dim': 16} %}
                    Jack Out
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {# Account Information Card #}
        <div class="card bg-slate-800 border border-cyan-500/20 shadow-xl overflow-hidden">
            <div class="p-6">
                <div class="flex items-center gap-3 mb-6">
                    <div class="text-cyan-400">
                        {% include 'icons/terminal.html.twig' with {'dim': 20} %}
                    </div>
                    <h2 class="text-xl font-semibold text-cyan-100 uppercase tracking-wider">Nav-Fi&sup3; Credentials</h2>
                </div>
                
                <div class="space-y-4">
                    <div class="bg-slate-900/50 p-4 rounded border border-slate-700/50">
                        <p class="text-xs uppercase tracking-[0.2em] text-cyan-300/50 mb-1">Comms Channel / Email</p>
                        <p class="text-cyan-100">{{ user.email }}</p>
                    </div>

                    {% if user.googleId %}
                        <div class="bg-blue-900/20 p-4 rounded border border-blue-500/20">
                            <p class="text-xs uppercase tracking-[0.2em] text-blue-300/50 mb-1">Neural Linked Account</p>
                            <div class="flex items-center gap-2 text-blue-200">
                                <svg viewBox="0 0 24 24" width="16" height="16" xmlns="http://www.w3.org/2000/svg" class="fill-current">
                                    <path d="M12.48 10.92v3.28h7.84c-.24 1.84-.908 3.152-1.928 4.172-1.228 1.228-3.212 2.508-6.152 2.508-4.964 0-8.736-4.008-8.736-8.964s3.772-8.964 8.736-8.964c2.812 0 4.888 1.112 6.388 2.528l2.324-2.324C18.496 1.484 15.828 0 12.48 0 5.864 0 0 5.372 0 12s5.864 12 12.48 12c3.6 0 6.324-1.188 8.52-3.48 2.268-2.268 2.988-5.46 2.988-8.112 0-.78-.06-1.548-.18-2.504H12.48z"/>
                                </svg>
                                <span>Authenticated via Google Core</span>
                            </div>
                        </div>
                    {% endif %}
                    
                    {# Gravatar Info #}
                    <div class="bg-cyan-900/20 p-4 rounded border border-cyan-500/20">
                        <p class="text-xs uppercase tracking-[0.2em] text-cyan-300/50 mb-2">Visual Identity Protocol</p>
                        <div class="flex items-start gap-3">
                            <div class="mt-0.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div class="space-y-2">
                                <p class="text-sm text-cyan-100/90">
                                    Your avatar image is sourced from <strong>Gravatar</strong>, a globally recognized avatar service linked to your email address.
                                </p>
                                <a href="https://gravatar.com" target="_blank" rel="noopener noreferrer" 
                                   class="inline-flex items-center gap-2 text-xs text-cyan-400 hover:text-cyan-300 transition-colors group/link">
                                    <span class="uppercase tracking-wider font-bold">Configure Your Gravatar</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 transition-transform group-hover/link:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-xs text-slate-400 italic">
                        Logged in as: <span class="text-cyan-400">{{ user.userIdentifier }}</span>
                    </div>
                </div>
            </div>
        </div>

        {# Security / 2FA Card #}
        <div class="card bg-slate-800 border border-cyan-500/20 shadow-xl overflow-hidden">
            <div class="p-6">
                <div class="flex items-center gap-3 mb-6">
                    <div class="text-cyan-400">
                        <span class="flex items-center justify-center animate-spin-slow">
                            {% include 'icons/radar.html.twig' with {'dim': 20} %}
                        </span>
                    </div>
                    <h2 class="text-xl font-semibold text-cyan-100 uppercase tracking-wider">Biometric Lock</h2>
                </div>

                <div class="flex flex-col h-full">
                    {% if user.isGoogleAuthenticatorEnabled() %}
                        <div class="flex items-start gap-4 p-4 rounded bg-green-950/20 border border-green-500/30 text-green-100 mb-6">
                            <div class="mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div>
                                <p class="font-bold">Sub-Space Frequency Locked</p>
                                <p class="text-sm opacity-80">Two-Factor Authentication is currently securing your bridge access.</p>
                            </div>
                        </div>
                        
                        <div class="mt-auto">
                            <a href="{{ path('app_profile_2fa_disable') }}" class="btn btn-outline btn-error btn-sm">
                                Request De-authorization
                            </a>
                            <p class="text-xs uppercase tracking-widest text-slate-500 mt-2">Security protocols enforced</p>
                        </div>
                    {% else %}
                        <div class="flex items-start gap-4 p-4 rounded bg-yellow-950/20 border border-yellow-500/30 text-yellow-100 mb-6">
                            <div class="mt-1 animate-pulse">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                            </div>
                            <div>
                                <p class="font-bold">Frequency Unsecured</p>
                                <p class="text-sm opacity-80">Your transponder is currently unprotected. Enable 2FA to prevent unauthorized jumps.</p>
                            </div>
                        </div>
                        
                        <div class="mt-auto">
                            <a href="{{ path('app_profile_2fa_enable') }}" class="btn btn-primary bg-cyan-600 hover:bg-cyan-700 text-white border-0 shadow-lg shadow-cyan-900/20 w-full lg:w-fit">
                                Tune 2FA Frequency
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
