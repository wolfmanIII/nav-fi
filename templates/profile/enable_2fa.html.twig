{% extends 'base.html.twig' %}

{% block title %}Enable 2FA{% endblock %}


{% block pageContent %}
<div class="">
    {# Header Section #}
    <div class="relative overflow-hidden rounded-2xl bg-slate-950 border border-slate-800 p-6 shadow-lg mb-6">
         <div class="absolute top-0 right-0 p-4 opacity-10">
            {% include 'icons/tuning.html.twig' with { dim: 128, class: 'text-cyan-500' } %}
        </div>
        <div class="relative z-10 flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
            <div>
                 <div class="flex items-center gap-2 text-cyan-500/80 mb-1">
                    {% include 'icons/tuning.html.twig' with { dim: 16 } %}
                    <p class="text-xs uppercase tracking-[0.3em] font-orbitron font-bold">Security Protocols</p>
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight flex items-center gap-3 font-orbitron">
                    TRANSPONDER TUNING
                </h1>
                <p class="text-xs text-slate-500 font-mono uppercase tracking-wider mt-1">
                    Synchronize your terminal with your personal neural-link device.
                </p>
            </div>
        </div>
    </div>

    <div class="max-w-2xl mx-auto">
        <div class="card bg-slate-800 border border-cyan-500/20 shadow-xl overflow-hidden">
            <div class="p-8">
                <div class="space-y-8">
                    {# Step 1 #}
                    <div>
                        <div class="flex items-center gap-3 mb-4">
                            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-cyan-500/20 border border-cyan-500/50 text-cyan-400 text-xs font-bold">1</span>
                            <h3 class="text-lg font-semibold text-cyan-100 uppercase tracking-wide">Scanner Uplink</h3>
                        </div>
                        <p class="mb-6 text-cyan-100/70 text-sm">
                            Scan the following biometric pattern with your Authenticator device to establish a secure handshake.
                        </p>

                        <div class="flex justify-center">
                            <div class="relative p-1 bg-gradient-to-br from-cyan-500 via-blue-500 to-purple-500 rounded-lg shadow-[0_0_20px_rgba(34,211,238,0.2)]">
                                <div class="bg-white p-4 rounded-md">
                                    <img src="{{ qr_code_data_uri(qrCodeContent) }}" alt="2FA QR Code" class="block w-64 h-64 sm:w-[300px] sm:h-[300px]" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="divider before:bg-cyan-500/10 after:bg-cyan-500/10"></div>

                    {# Step 2 #}
                    <div>
                        <div class="flex items-center gap-3 mb-4">
                            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-cyan-500/20 border border-cyan-500/50 text-cyan-400 text-xs font-bold">2</span>
                            <h3 class="text-lg font-semibold text-cyan-100 uppercase tracking-wide">Neural Verification</h3>
                        </div>
                        <p class="mb-6 text-cyan-100/70 text-sm">
                            Enter the 6-digit synchronization code generated by your device to finalize the encryption lock.
                        </p>

                        <form action="{{ path('app_profile_2fa_verify') }}" method="post" class="max-w-xs mx-auto">
                            <div class="form-control mb-6">
                                <input type="text" name="code" 
                                       placeholder="000 000" 
                                       inputmode="numeric" 
                                       pattern="[0-9]*" 
                                       maxlength="6"
                                       class="input input-lg w-full bg-slate-900 text-cyan-400 border-cyan-700/50 focus:border-cyan-400 text-center text-2xl tracking-[0.5em] font-mono shadow-inner" 
                                       required autofocus>
                            </div>
                            
                            <div class="flex flex-col gap-3">
                                <button type="submit" class="btn btn-primary bg-cyan-600 hover:bg-cyan-700 text-white border-0 shadow-lg shadow-cyan-900/20">
                                    Initiate Secure Lock
                                </button>
                                <a href="{{ path('app_profile') }}" class="btn btn-ghost btn-xs text-slate-500 hover:text-cyan-400 uppercase tracking-widest">
                                    Abort Synchronization
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
