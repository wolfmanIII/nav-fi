{% extends 'base.html.twig' %}

{% block title %}Nav-Fi - Campaign{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4">

        {{ form_start(form) }}

        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-start gap-4">
                <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                    {% include 'icons/campaign.html.twig' %}
                </div>
                <div>
                    <p class="uppercase text-[10px] tracking-[0.3em] text-cyan-300/70 font-bold font-orbitron mb-0.5">Strategic Dossier // Mission Registry</p>
                    <h3 class="font-bold text-cyan-100 text-2xl leading-tight font-orbitron uppercase">Campaign Registry</h3>
                    <p class="text-xs text-cyan-100/60 font-rajdhani tracking-widest uppercase truncate">Title and operational framework: define the scope of your fleet's journey.</p>
                </div>
            </div>
        </div>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Mission Parameters</legend>

            <div class="col-span-2">
                <div class="alert alert-info alert-outline shadow-sm mt-2">
                    <div class="animate-spin-slow text-current">
                        {% include 'icons/radar.html.twig' with { dim: 24 } %}
                    </div>
                    <div class="text-sm text-slate-200">
                        <span class="block">Establish the mission year-zero to enable the session timestamp.</span>
                    </div>
                </div>
            </div>

            {% if campaign.id %}
                <div class="col-span-2">
                    <label class="block text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron mb-1 opacity-50">Campaign ID // Mission Code</label>
                    <div class="px-3 py-2 rounded bg-slate-950/50 border border-slate-800 font-mono text-cyan-400 text-sm"><b>{{ campaign.code }}</b></div>
                </div>
            {% endif %}

            <div class="col-span-2">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.title, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.title, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.title) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Temporal Sync</legend>
            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.startingYear, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.startingYear, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50 font-mono text-amber-400' } }) }}
                {{ form_errors(form.startingYear) }}
            </div>

            {% set sess_day = campaign.sessionDay %}
            {% set sess_year = campaign.sessionYear %}
{% set sess_value = (sess_day is not null and sess_year is not null) ? (sess_day|imperial_date(sess_year)) : "" %}
            <div class="col-span-1" data-controller="imperial-date session-date-lock"
                 data-session-date-lock-starting-selector="#campaign_startingYear">
                {{ form_label(form.sessionDate) }}
                {{ form_widget(form.sessionDate.display, {
                    attr: {
                        class: 'input input-bordered w-full bg-slate-950/50 border-slate-700',
                        'data-imperial-date-prev-icon': '«',
                        'data-imperial-date-next-icon': '»',
                        'data-imperial-date-initial-day': sess_day ?? '',
                        'data-imperial-date-initial-year': sess_year ?? '',
                        'value': sess_value,
                        'data-session-date-lock-target': 'dateDisplay',
                    }
                }) }}
                {{ form_widget(form.sessionDate.year, { attr: { 'data-session-date-lock-target': 'yearInput' } }) }}
                {{ form_widget(form.sessionDate.day, { attr: { 'data-session-date-lock-target': 'dayInput' } }) }}
                {{ form_errors(form.sessionDate.display) }}
            </div>

        </fieldset>

        <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-8 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-slate-400 uppercase">Operational Notes</legend>
            <div>
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-32 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Enter strategic objective or mission background...' } }) }}
                {{ form_errors(form.description) }}
            </div>
        </fieldset>

        <div class="flex items-center justify-end gap-3 mb-10">
            <a href="{{ path('app_campaign_index') }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Abort Changes</a>
            <button type="submit"
                    class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10"
            >
                Confirm Mission // Commit to Log
            </button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
