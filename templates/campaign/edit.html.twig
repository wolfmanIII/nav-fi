{% extends 'base.html.twig' %}

{% block title %}Captain Log - Campaign{% endblock %}

{% block pageContent %}
    <div class="p-10">
        <header class="prose">
            <h1>
                {% if campaign.id %}Edit Campaign{% else %}New Campaign{% endif %}
            </h1>
        </header>

        <div class="alert alert-info alert-outline shadow-sm mb-4 mt-4">
            <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6.7 12.1 3 22l9.9-3.7"/><path d="m4.9 19.3 4.2-4.2"/><path d="M10.6 21.8 20 10.4 13.6 4l-9.3 9.3"/><path d="m13.8 6.2 4 4"/><path d="m16.4 13.6-4-4"/></svg>
                <div>
                    <h3 class="font-semibold">Campaign</h3>
                    <p class="text-sm opacity-80">Titolo, descrizione e anno di inizio; sessionDay/sessionYear saranno gestiti a parte.</p>
                </div>
            </div>
        </div>

        {{ form_start(form, {attr: {class: 'grid grid-cols-1 gap-4 max-w-2xl'}}) }}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.startingYear) }}

            <div>
                <button class="btn btn-primary" type="submit">Save</button>
                <a href="{{ path('app_campaign_index') }}" role="button" class="btn btn-outline btn-default ml-2">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
