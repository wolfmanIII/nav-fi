{% extends 'base.html.twig' %}

{% block title %}Captain Log - Campaign{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4">

        {{ form_start(form) }}

        <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Campaign</legend>

            <div class="col-span-2">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/alien-structure-1.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Campaign setup</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Campaign</h3>
                            <p class="text-sm text-cyan-100/80">Titolo, descrizione, anno di inizio e session date della campagna.</p>
                        </div>
                    </div>
                </div>
            </div>

            {% if campaign.id %}
                <div>
                    <label class="label">Code</label>
                    <div><b>{{ campaign.code }}</b></div>
                </div>
                <div></div>
            {% endif %}

            <div>
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <div>
                {{ form_label(form.startingYear) }}
                {{ form_widget(form.startingYear) }}
                {{ form_errors(form.startingYear) }}
            </div>

            {% set sess_day = campaign.sessionDay %}
            {% set sess_year = campaign.sessionYear %}
            {% set sess_value = sess_day is not null and sess_year is not null ? sess_day|format('%03d') ~ '/' ~ sess_year : '' %}
            <div data-controller="imperial-date session-date-lock"
                 data-session-date-lock-starting-selector="#campaign_startingYear">
                {{ form_label(form.sessionDate) }}
                {{ form_widget(form.sessionDate.display, {
                    attr: {
                        'data-imperial-date-prev-icon': '«',
                        'data-imperial-date-next-icon': '»',
                        'data-imperial-date-initial-day': sess_day ?? '',
                        'data-imperial-date-initial-year': sess_year ?? '',
                        'value': sess_value,
                        'data-session-date-lock-target': 'dateDisplay',
                    }
                }) }}
                {{ form_widget(form.sessionDate.year, { attr: { 'data-session-date-lock-target': 'yearInput' } }) }}
                {{ form_widget(form.sessionDate.day, { attr: { 'data-session-date-lock-target': 'dayInput' } }) }}
                <p class="text-xs text-cyan-200/80 mt-1" data-session-date-lock-target="help">Imposta prima lo starting year per abilitare la session date.</p>
                {{ form_errors(form.sessionDate) }}
            </div>

            <div class="col-span-2">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

        </fieldset>

        <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">Save</button>
        <a href="{{ path('app_campaign_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form) }}
    </div>

{% endblock %}
