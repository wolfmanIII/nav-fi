{% extends 'base.html.twig' %}

{% block title %}Captain Log - Campaign Details{% endblock %}

{% block pageContent %}

    <div class="p-10 space-y-6">
        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/alien-structure-1.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Campaign dossier</p>
                        <h1 class="text-3xl font-semibold text-cyan-100">{{ campaign.title }}</h1>
                        <div class="mt-2 text-sm text-cyan-100/80">
                            <span class="font-mono px-2 py-1 rounded bg-cyan-500/10 border border-cyan-400/30">Code: {{ campaign.code }}</span>
                        </div>
                        {% if campaign.description %}
                            <p class="mt-3 text-slate-100/80 leading-relaxed">{{ campaign.description }}</p>
                        {% endif %}
                    </div>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-3 min-w-[280px]">
                    <div class="stat bg-slate-900/60 border border-cyan-500/30 shadow-sm flex flex-col items-center justify-center text-center min-w-[140px]">
                        <div class="stat-title text-cyan-200/70 text-center w-full">Starting Year</div>
                        <div class="stat-value text-cyan-100 text-2xl text-center w-full">{{ campaign.startingYear ?? '—' }}</div>
                    </div>
                    <div class="stat bg-slate-900/60 border border-cyan-500/30 shadow-sm flex flex-col items-center justify-center text-center min-w-[140px]">
                        <div class="stat-title text-cyan-200/70 text-center w-full">Session Day</div>
                        <div class="stat-value text-cyan-100 text-2xl text-center w-full">{{ campaign.sessionDay ?? '—' }}</div>
                    </div>
                    <div class="stat bg-slate-900/60 border border-cyan-500/30 shadow-sm flex flex-col items-center justify-center text-center min-w-[140px]">
                        <div class="stat-title text-cyan-200/70 text-center w-full">Session Year</div>
                        <div class="stat-value text-cyan-100 text-2xl text-center w-full">{{ campaign.sessionYear ?? '—' }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-between">
            <div class="prose">
                <h2 class="flex items-center gap-2">
                    <span>Ships assigned</span>
                    <span class="badge badge-outline badge-sm">{{ campaign.ships|length }}</span>
                </h2>
                <p class="text-sm opacity-70">Fleet roster attached to this expedition.</p>
            </div>

        <button class="btn btn-outline btn-primary btn-xs mt-5 mb-5" onclick="m_ship_select.showModal()">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
        </button>
        </div>

        <div class="overflow-x-auto rounded-box border border-cyan-500/20 bg-base-100 shadow-md">
            <table class="table border-separate border-spacing-0 inner-bordered-table">
                <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Class</th>
                    <th class="text-right">Price(Cr)</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for ship in campaign.ships %}
                    <tr>
                        <td>{% include 'components/code_with_copy.html.twig' with { code: ship.code } %}</td>
                        <td>{{ ship.name }}</td>
                        <td>{{ ship.type }}</td>
                        <td>{{ ship.class }}</td>
                        <td class="text-right">{{ ship.price|number_format(2, ',', '.') }}</td>
                        <td>
                            <a href="{{ path('app_campaign_ship_remove', {id: ship.id}) }}"
                               role="button"
                               class="btn btn-outline btn-error btn-xs">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No ships in this campaign.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <dialog id="m_ship_select" class="modal">
            <div class="modal-box w-full max-w-5xl">
                <h3 class="text-lg font-bold mb-4">Select Ships</h3>

                {{ form_start(form) }}
                <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100" data-controller="bulk-select">
                    <table class="table border-separate border-spacing-0 inner-bordered-table">
                        <thead>
                        <tr>
                            <th>
                                <input
                                    type="checkbox"
                                    class="checkbox"
                                    data-bulk-select-target="selectAll"
                                    data-action="change->bulk-select#toggleAll"
                                >
                            </th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Class</th>
                            <th class="text-right">Price(Cr)</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% if form.shipSelections|length > 0 %}
                                {% for row in form.shipSelections %}
                                    {% set selection = row.vars.data %}
                                    {% set ship = selection.ship %}
                                    <tr>
                                        <td>
                                            {{ form_widget(row.selected, {
                                                attr: {
                                                    class: 'checkbox crew-checkbox',
                                                    'data-bulk-select-target': 'item'
                                                }
                                            }) }}
                                        </td>
                                        <td>{% include 'components/code_with_copy.html.twig' with { code: ship.code } %}</td>
                                        <td>{{ ship.name }}</td>
                                        <td>{{ ship.type }}</td>
                                        <td>{{ ship.class }}</td>
                                        <td class="text-right">{{ ship.price|number_format(2, ',', '.') }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="6">No ships available to add.</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>

                <div class="modal-action">
                    <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">Save</button>
                    <button type="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4" onclick="m_ship_select.close()">Close</button>
                </div>
                {{ form_end(form) }}
            </div>
            <form method="dialog" class="modal-backdrop">
                <button>close</button>
            </form>
        </dialog>

    </div>

{% endblock %}
