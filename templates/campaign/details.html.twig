{% extends 'base.html.twig' %}

{% block title %}Nav-Fi - Mission Details{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="space-y-6">
        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/alien-structure-1.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Mission tracking</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">{{ campaign.title }}</h1>
                        <p class="text-sm text-cyan-100/80">Session clock, asset roster and mission metadata in one view.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <div class="tooltip tooltip-left" data-tip="Update session date">
                        <button class="btn btn-outline btn-secondary btn-md" onclick="m_calendar.showModal()">
                            {% include 'icons/calendar.html.twig' %}
                        </button>
                    </div>
                    <div class="tooltip tooltip-left" data-tip="Assign assets to mission">
                        <button class="btn btn-outline btn-primary btn-md" onclick="m_ship_select.showModal()">
                            {% include 'icons/far-trader.html.twig' %}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="rounded-xl bg-slate-900/50 border border-slate-800 shadow-md p-4 mb-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-slate-500">
                <div class="flex flex-col gap-1">
                    <span class="uppercase text-xs tracking-[0.2em] text-slate-400">Code</span>
                    <span class="font-mono text-slate-200 break-all">{{ campaign.code }}</span>
                </div>
                <div class="flex flex-col gap-1">
                    <span class="uppercase text-xs tracking-[0.2em] text-slate-400">Starting Year</span>
                    <span class="text-slate-200">{{ campaign.startingYear ?? '—' }}</span>
                </div>
                <div class="flex flex-col gap-1">
                    <span class="uppercase text-xs tracking-[0.2em] text-slate-400">Session Date</span>
                    <span class="text-slate-200">
                        {% if campaign.sessionDay and campaign.sessionYear %}
                            {{ (campaign.sessionDay is not null and campaign.sessionYear is not null) ? (campaign.sessionDay|imperial_date(campaign.sessionYear)) : '—' }}
                        {% else %}
                            —
                        {% endif %}
                    </span>
                </div>
            </div>
            {% if campaign.description %}
                <div class="mt-6 border-t border-base-content/10 pt-3 text-sm text-slate-300">
                    <div class="uppercase text-xs tracking-[0.2em] text-cyan-300/70 mb-2">Navlog // Operation brief</div>
                    {{ campaign.description }}
                </div>
            {% endif %}
        </div>

        <div class="my-6 flex items-center justify-center gap-3">
            <div class="flex-1 h-px bg-gradient-to-r from-transparent via-cyan-500/30 to-cyan-500/50"></div>
            <div class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-500/40 animate-pulse"></span>
                <span class="w-2 h-2 rounded-full bg-cyan-400 shadow-[0_0_8px_rgba(34,211,238,0.6)]"></span>
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-500/40 animate-pulse" style="animation-delay: 0.5s"></span>
            </div>
            <div class="flex-1 h-px bg-gradient-to-l from-transparent via-cyan-500/30 to-cyan-500/50"></div>
        </div>

        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-4">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(56,189,248,0.2), transparent 40%), radial-gradient(circle at 80% 40%, rgba(34,211,238,0.2), transparent 35%);">
            </div>
            <div class="relative p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="p-2 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/spaceport.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.3em] text-cyan-300/70">Asset manifest</p>
                        <h2 class="text-xl font-semibold text-cyan-100">Assets assigned</h2>
                        <p class="text-sm text-cyan-100/70">Roster locked to this operation docket.</p>
                    </div>
                </div>
                <span class="badge badge-outline badge-sm text-cyan-100 border-cyan-400/60">{{ campaign.ships|length }}</span>
            </div>
        </div>

        <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner">
            <table class="table table-xs w-full border-separate border-spacing-0">
                <thead>
                <tr class="border-b border-slate-800">
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Code</th>
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Asset</th>
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Credits</th>
                    <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Action</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-slate-800/50">
                {% for ship in campaign.ships %}
                    <tr class="hover:bg-cyan-500/5 transition-colors text-slate-300">
                        <td class="font-mono text-xs p-2">{% include 'components/code_with_copy.html.twig' with { code: ship.code } %}</td>
                        <td class="font-mono text-xs p-2 font-bold text-cyan-100">{{ ship.name }} — {{ ship.type }} — {{ ship.class }}</td>
                        <td class="font-mono text-xs p-2 text-emerald-400">
                            {{ ship.credits|format_number({ min_fraction_digit: 0, max_fraction_digit: 0, grouping_used: true }, 'decimal', 'default', locale) }} <span class="text-[10px] text-slate-500">Cr</span>
                        </td>
                        <td>
                            <div class="tooltip tooltip-left" data-tip="View crew">
                                <button type="button"
                                        class="btn btn-outline btn-info btn-xs"
                                        onclick="document.getElementById('crew_{{ ship.id }}').showModal()">
                                    {% include 'icons/crew.html.twig' with { dim: 14 } %}
                                </button>
                            </div>
                            <div class="tooltip tooltip-left" data-tip="View Ledger">
                                <a href="{{ path('app_asset_ledger', {id: ship.id}) }}"
                                   role="button"
                                   class="btn btn-outline btn-warning btn-xs text-amber-400">
                                    {% include 'icons/handbook.html.twig' with { dim: 14 } %}
                                </a>
                            </div>
                            {% set can_remove = is_granted('SHIP_CAMPAIGN_REMOVE', ship) %}
                            <div class="tooltip tooltip-left" data-tip="{{ can_remove ? 'Remove ship' : 'Blocked by linked records' }}">
                                <a href="{{ path('app_campaign_ship_remove', {id: ship.id}) }}"
                                   role="button"
                                   class="btn btn-outline btn-error btn-xs{{ can_remove ? '' : ' opacity-50 pointer-events-none' }}"
                                   {% if not can_remove %}aria-disabled="true"{% endif %}>
                                    {% include 'icons/action-trash.html.twig' with { dim: 14 } %}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No assets in this mission.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# Crew modals per ship #}
        {% for ship in campaign.ships %}
            <dialog id="crew_{{ ship.id }}" class="modal">
                <div class="modal-box w-full max-w-3xl">
                    <h3 class="text-lg font-bold mb-4">Personnel — {{ ship.name }}</h3>
                    <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner">
                        <table class="table table-xs w-full border-separate border-spacing-0">
                            <thead>
                            <tr class="border-b border-slate-800">
                                <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Name</th>
                                <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Roles</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-800/50">
                            {% if ship.crews is defined and ship.crews|length > 0 %}
                                {% for crew in ship.crews %}
                                    <tr class="hover:bg-cyan-500/5 transition-colors text-slate-300">
                                        <td class="font-mono text-xs p-2">
                                            {% if crew.isCaptain() %}<span class="text-amber-400">★</span> {% endif %}
                                            <span class="font-bold text-cyan-100">{{ crew.name }} {{ crew.surname }}</span>
                                        </td>
                                        <td class="font-mono text-xs p-2">
                                            {% if crew.shipRoles is defined and crew.shipRoles|length > 0 %}
                                                {{ crew.shipRoles|map(r => r.name)|join(', ') }}
                                            {% else %}
                                                —
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2">No crew members assigned.</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-action">
                        <button type="button" class="btn btn-outline btn-sm" onclick="document.getElementById('crew_{{ ship.id }}').close()">Close</button>
                    </div>
                </div>
                <form method="dialog" class="modal-backdrop">
                    <button>close</button>
                </form>
            </dialog>
        {% endfor %}

        <dialog id="m_ship_select" class="modal">
            <div class="modal-box w-full max-w-5xl">
                <h3 class="text-lg font-bold mb-4">Select Assets</h3>

                {{ form_start(form) }}
                <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner" data-controller="bulk-select">
                    <table class="table table-xs w-full border-separate border-spacing-0">
                        <thead>
                        <tr class="border-b border-slate-800">
                            <th class="bg-slate-900/50 w-10">
                                <input
                                    type="checkbox"
                                    class="checkbox checkbox-xs checkbox-primary border-slate-700"
                                    data-bulk-select-target="selectAll"
                                    data-action="change->bulk-select#toggleAll"
                                >
                            </th>
                            <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Code</th>
                            <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Asset</th>
                            <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Captain(★)</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-800/50">
                            {% if form.shipSelections|length > 0 %}
                                {% for row in form.shipSelections %}
                                    {% set selection = row.vars.data %}
                                    {% set ship = selection.ship %}
                                    <tr class="hover:bg-cyan-500/5 transition-colors text-slate-300">
                                        <td class="p-2 text-center">
                                            {{ form_widget(row.selected, {
                                                attr: {
                                                    class: 'checkbox checkbox-xs checkbox-primary border-slate-700 crew-checkbox',
                                                    'data-bulk-select-target': 'item'
                                                }
                                            }) }}
                                        </td>
                                        <td class="font-mono text-xs p-2">{% include 'components/code_with_copy.html.twig' with { code: ship.code } %}</td>
                                        <td class="font-mono text-xs p-2 font-bold text-cyan-100">{{ ship.name }} — {{ ship.type }} — {{ ship.class }}</td>
                                        <td class="font-mono text-xs p-2">{{ ship.captain }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="6">No assets available to add.</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>

                <div class="modal-action">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Save</button>
                    <button type="button" class="btn btn-outline btn-sm" onclick="m_ship_select.close()">Close</button>
                </div>
                {{ form_end(form) }}
            </div>
            <form method="dialog" class="modal-backdrop">
                <button>close</button>
            </form>
        </dialog>

        <dialog id="m_calendar" class="modal">
            <div class="modal-box w-full max-w-xl">
                <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line><rect x="8" y="14" width="3" height="3"></rect><rect x="13" y="14" width="3" height="3"></rect></svg>
                    Update Session
                </h3>

                {{ form_start(calendar_form) }}
                <div class="grid grid-cols-1 gap-4">
                    <div data-controller="imperial-date">
                        {{ form_label(calendar_form.display) }}
                        {{ form_widget(calendar_form.display, {
                            attr: {
                                'data-imperial-date-prev-icon': '«',
                                'data-imperial-date-next-icon': '»',
                            }
                        }) }}
                        {{ form_widget(calendar_form.year) }}
                        {{ form_widget(calendar_form.day) }}
                        {{ form_errors(calendar_form.display) }}
                    </div>
                </div>
                <div class="modal-action">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Save</button>
                    <button type="button" class="btn btn-outline btn-sm" onclick="m_calendar.close()">Close</button>
                </div>
                {{ form_end(calendar_form) }}
            </div>
            <form method="dialog" class="modal-backdrop">
                <button>close</button>
            </form>
        </dialog>

        <div class="my-6 flex items-center justify-center gap-3">
            <div class="flex-1 h-px bg-gradient-to-r from-transparent via-cyan-500/30 to-cyan-500/50"></div>
            <div class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-500/40 animate-pulse"></span>
                <span class="w-2 h-2 rounded-full bg-cyan-400 shadow-[0_0_8px_rgba(34,211,238,0.6)]"></span>
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-500/40 animate-pulse" style="animation-delay: 0.5s"></span>
            </div>
            <div class="flex-1 h-px bg-gradient-to-l from-transparent via-cyan-500/30 to-cyan-500/50"></div>
        </div>

        <div>
            <div class="relative overflow-hidden rounded-xl border border-cyan-500/20 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-md mb-4">
                <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                     style="background: radial-gradient(circle at 25% 20%, rgba(45,212,191,0.22), transparent 45%), radial-gradient(circle at 80% 30%, rgba(56,189,248,0.22), transparent 40%);">
                </div>
                <div class="relative p-4 flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="p-2 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/calendar.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.3em] text-cyan-300/70">Session archive</p>
                            <h2 class="text-xl font-semibold text-cyan-100">Session timeline</h2>
                            <p class="text-sm text-cyan-100/70">Clock changes with full mission snapshots.</p>
                        </div>
                    </div>
                    <span class="badge badge-outline badge-sm text-cyan-100 border-cyan-400/60">{{ session_logs|length }}</span>
                </div>
            </div>
            <div class="overflow-x-auto rounded-xl border border-slate-800 bg-slate-950/40 shadow-inner">
                <table class="table table-xs w-full border-separate border-spacing-0">
                    <thead>
                    <tr class="border-b border-slate-800">
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Recorded</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Session</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Operator</th>
                        <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Snapshot</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800/50">
                    {% if session_logs is defined and session_logs|length > 0 %}
                        {% for log in session_logs %}
                            {% set log_id = 'session_log_' ~ log.id %}
                            {% set snapshot = log.payload.snapshot ?? null %}
                            {% set ships_count = snapshot and snapshot.ships is defined ? snapshot.ships|length : 0 %}
                            <tr class="hover:bg-cyan-500/5 transition-colors text-slate-300">
                                <td class="font-mono text-xs p-2">{{ log.createdAt ? log.createdAt|date('Y-m-d H:i') : '—' }}</td>
                                <td class="font-mono text-xs p-2">
                                    {{ log.sessionDay is not null and log.sessionYear is not null
                                        ? (log.sessionDay|imperial_date(log.sessionYear))
                                        : '—' }}
                                </td>
                                <td class="font-mono text-xs p-2">{{ log.user ? log.user.email : 'System' }}</td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <span class="badge badge-outline badge-sm">Assets {{ ships_count }}</span>
                                        <button type="button" class="btn btn-outline btn-info btn-xs" onclick="document.getElementById('{{ log_id }}').showModal()">
                                            View snapshot
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            <dialog id="{{ log_id }}" class="modal">
                                <div class="modal-box w-full max-w-4xl">
                                    <h3 class="text-lg font-bold mb-3">Session snapshot</h3>
                                    <div class="text-xs uppercase tracking-[0.2em] text-slate-400 mb-2">
                                        {{ log.createdAt ? log.createdAt|date('Y-m-d H:i') : '—' }} •
                                        {{ log.sessionDay is not null and log.sessionYear is not null
                                            ? (log.sessionDay|imperial_date(log.sessionYear))
                                            : '—' }}
                                    </div>
                                    <div class="overflow-auto max-h-[60vh] rounded-box border border-base-content/10 bg-base-100 p-3 text-xs font-mono whitespace-pre" data-controller="highlight">
                                        <pre><code class="language-json">{{ log.payload|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                    </div>
                                    <div class="modal-action">
                                        <button type="button" class="btn btn-outline btn-sm" onclick="document.getElementById('{{ log_id }}').close()">Close</button>
                                    </div>
                                </div>
                                <form method="dialog" class="modal-backdrop">
                                    <button>close</button>
                                </form>
                            </dialog>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4">No session logs recorded yet.</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_campaign_details',
                route_params: { id: campaign.id },
                query: app.request.query.all
            } %}
        </div>

    </div>

{% endblock %}
