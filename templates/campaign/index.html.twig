{% extends 'base.html.twig' %}

{% block title %}Captain Log - Campaigns{% endblock %}

{% block pageContent %}

    <div class="p-10">

        <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/alien-structure-1.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Campaign tracking</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Campaigns</h1>
                        <p class="text-sm text-cyan-100/80">Titles, session dates and ship links to keep your voyages aligned.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <a href="{{ path('app_campaign_new') }}" role="button" class="btn btn-outline btn-primary btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    </a>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
            <table class="table border-separate border-spacing-0 inner-bordered-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th class="text-right">Starting Year</th>
                        <th class="text-right">Session Day/Year</th>
                        <th class="text-right">Ships</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% if campaigns|length > 0 %}
                        {% for campaign in campaigns %}
                            <tr>
                                <td>{{ campaign.title }}</td>
                                <td class="max-w-lg">
                                    {% if campaign.description %}
                                        <div class="truncate">{{ campaign.description }}</div>
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">{{ campaign.startingYear ?? '—' }}</td>
                                <td class="text-right">
                                    {% if campaign.sessionDay and campaign.sessionYear %}
                                        {{ campaign.sessionDay }}/{{ campaign.sessionYear }}
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">{{ campaign.ships|length }}</td>
                                <td>
                                    <a href="{{ path('app_campaign_details', {id: campaign.id}) }}" role="button" class="btn btn-outline btn-secondary btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
                                    </a>
                                    <a href="{{ path('app_campaign_edit', {id: campaign.id}) }}" role="button" class="btn btn-outline btn-primary btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon></svg>
                                    </a>
                                    <a href="{{ path('app_campaign_delete', {id: campaign.id}) }}" role="button" class="btn btn-outline btn-error btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6">No campaigns yet.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
