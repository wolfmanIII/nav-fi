{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Campaigns{% endblock %}

{% block pageContent %}

    <div class="p-10">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/alien-structure-1.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Campaign tracking</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Campaigns</h1>
                        <p class="text-sm text-cyan-100/80">Titles, session dates and ship links to keep your voyages aligned.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Create a new session',
                                    'Add campaign',
                                    'icons/alien-structure-1.html.twig',
                                    path('app_campaign_new'),
                                    { dim: 24, linkClass: 'btn btn-outline btn-primary btn-md' }) }}
                </div>
            </div>
        </div>

        <div class="alert alert-info alert-outline shadow-sm mb-6">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <div class="text-sm text-slate-200">
                Some records cannot be deleted because they are linked to other logs (campaigns, ships, payments, crew) or locked by a recorded payment.
            </div>
        </div>

        <form method="get" action="{{ path('app_campaign_index') }}" class="mb-6">
            <fieldset class="rounded-xl border border-cyan-500/30 bg-slate-900/60 p-4">
                <legend class="px-2 text-xs uppercase tracking-[0.2em] text-cyan-300/70">Campaign search</legend>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Title</label>
                        <input type="text" name="title" value="{{ filters.title }}" class="input m-1 w-full">
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Starting year (exact)</label>
                        <input type="text" name="starting_year" value="{{ filters.starting_year }}" class="input m-1 w-full" placeholder="Year">
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Search</button>
                    <a href="{{ path('app_campaign_index') }}" class="btn btn-ghost btn-sm">Reset</a>
                </div>
            </fieldset>
        </form>

        <div class="flow-root">
            <div class="overflow-x-auto overflow-y-visible rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th class="text-right">Starting Year</th>
                            <th class="text-right">Session Day/Year</th>
                            <th class="text-right">Ships</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if campaigns|length > 0 %}
                            {% for campaign in campaigns %}
                                <tr>
                                    <td>{{ campaign.title }}</td>
                                    <td class="max-w-lg">
                                        {% if campaign.description %}
                                            <div class="truncate">{{ campaign.description }}</div>
                                        {% else %}
                                            <span class="opacity-60">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-right">{{ campaign.startingYear ?? '—' }}</td>
                                    <td class="text-right">
                                        {% if campaign.sessionDay and campaign.sessionYear %}
                                            {{ campaign.sessionDay }}/{{ campaign.sessionYear }}
                                        {% else %}
                                            <span class="opacity-60">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-right">{{ campaign.ships|length }}</td>
                                    <td class="flex items-center gap-2">
                                        {{ tooltip.link('Review campaign clock',
                                                        'Campaign details',
                                                        'icons/far-trader.html.twig',
                                                        path('app_campaign_details', {id: campaign.id}),
                                                        { dim: 14, linkClass: 'btn btn-outline btn-secondary btn-xs' }) }}
                                        {{ tooltip.link('Refine session agenda',
                                                        'Edit campaign',
                                                        'icons/action-edit.html.twig',
                                                        path('app_campaign_edit', {id: campaign.id}),
                                                        { dim: 14, linkClass: 'btn btn-outline btn-primary btn-xs' }) }}
                                        {% set can_delete = is_granted('campaign_delete', campaign) %}
                                        {{ tooltip.link('Retire campaign',
                                                        'Delete campaign',
                                                        'icons/action-trash.html.twig',
                                                        path('app_campaign_delete', {id: campaign.id}),
                                                        {
                                                            dim: 14,
                                                            linkClass: 'btn btn-outline btn-error btn-xs' ~ (can_delete ? '' : ' opacity-50 pointer-events-none'),
                                                            attrs: can_delete ? {} : {'aria-disabled': 'true'}
                                                        }) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="6">No campaigns yet.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_campaign_index',
                query: app.request.query.all
            } %}
        </div>
    </div>
{% endblock %}
