{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Edit Account{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-stretch gap-4 max-w-4xl mx-auto">

        {{ form_start(form) }}

        <div class="relative rounded-xl border border-cyan-500/30 shadow-lg mb-6 group">
            {# Background Layer #}
            <div class="absolute inset-0 overflow-hidden rounded-xl bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900">
                <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                     style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                </div>
            </div>

            {# Content Layer #}
            <div class="relative z-10 p-4 flex items-start justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/wallet.html.twig' %}
                    </div>
                    <div class="flex-1">
                        <p class="uppercase text-[10px] tracking-[0.3em] text-cyan-300/70 font-bold font-orbitron mb-0.5">
                            Banking Protocol // Edit Mode
                        </p>
                        <h3 class="font-bold text-cyan-100 text-2xl leading-tight font-orbitron uppercase">
                            {% if financial_account.id %}Update Account{% else %}New Account{% endif %}
                        </h3>
                         <p class="text-xs text-cyan-100/60 font-rajdhani tracking-widest uppercase truncate">
                            Modify account details and asset binds.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
             <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Account Details</legend>

            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.bank, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.bank, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.bank) }}
            </div>

            <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.bankName, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.bankName, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.bankName) }}
            </div>

             <div class="col-span-1 md:col-span-2">
                <div class="flex items-baseline h-5 mb-1">
                     {{ form_label(form.credits, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.credits, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50 font-mono text-cyan-400 text-xl' } }) }}
                {{ form_errors(form.credits) }}
            </div>
        </fieldset>

         <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
             <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Links & Binds</legend>

             <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.campaign, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.campaign) }}
            </div>

             <div class="col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.asset, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.asset, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                 <div class="text-[10px] text-slate-500 mt-1 pl-1">
                    {{ form_help(form.asset) }}
                </div>
                {{ form_errors(form.asset) }}
            </div>
        </fieldset>

        <div class="flex items-center justify-between gap-3 mb-10">
             {% if financial_account.id %}
                {{ include('financial_account/_delete_form.html.twig') }}
             {% else %}
                <div></div>
             {% endif %}

            <div class="flex items-center gap-3">
                <a href="{{ path('app_financial_account_index') }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Cancel</a>
                <button type="submit" class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10">
                    Save Record
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
