<form method="post" action="{{ path('app_financial_account_delete', {'id': financial_account.id}) }}" onsubmit="return confirm('Confirm deletion? This ledger cannot be recovered.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ financial_account.id) }}">
    <button class="btn btn-outline btn-error btn-sm font-orbitron text-[10px] tracking-widest">
        {% include 'icons/action-trash.html.twig' with { dim: 14 } %} Delete
    </button>
</form>
