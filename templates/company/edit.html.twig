{% extends 'base.html.twig' %}

{% block title %}Captain Log - Company{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-center gap-4">

        {{ form_start(form) }}

        <fieldset class="fieldset grid grid-cols-2 bg-base-200 border-base-300 gap-4 p-4 border rounded w-250">
            <legend class="fieldset-legend">Company</legend>

            <div class="col-span-2">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/company.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Counterparty</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Company details</h3>
                            <p class="text-sm text-cyan-100/80">Name, role, contact and signature label to reuse across contracts and documents.</p>
                        </div>
                    </div>
                </div>
            </div>

            {% if company.id %}
                <div>
                    <label class="label">Code</label>
                    <div><b>{{ company.code }}</b></div>
                </div>
                <div></div>
            {% endif %}

            <div>
                <div class="flex items-center gap-1">
                    {{ form_label(form.name) }}
                    {% if form.name.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                </div>
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                <div class="flex items-center gap-1">
                    {{ form_label(form.companyRole) }}
                    {% if form.companyRole.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                </div>
                {{ form_widget(form.companyRole) }}
                {{ form_errors(form.companyRole) }}
            </div>

            <div>
                {{ form_label(form.contact) }}
                {{ form_widget(form.contact) }}
                {{ form_errors(form.contact) }}
            </div>

            <div>
                {{ form_label(form.signLabel) }}
                {{ form_widget(form.signLabel) }}
                {{ form_errors(form.signLabel) }}
            </div>

            <div class="col-span-2">
                {{ form_label(form.notes) }}
                {{ form_widget(form.notes) }}
                {{ form_errors(form.notes) }}
            </div>

        </fieldset>

        <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">Save</button>
        <a href="{{ path('app_company_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form) }}
    </div>

{% endblock %}
