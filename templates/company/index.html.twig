{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Companies{% endblock %}

{% block pageContent %}

    <div class="p-10">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/company.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Partners registry</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Companies</h1>
                        <p class="text-sm text-cyan-100/80">Counterparties, roles and contacts ready for contracts and documents.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Register counterparty',
                                    'Add company',
                                    'icons/company.html.twig',
                                    path('app_company_new'),
                                    { dim: 18, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        <form id="company-filters" method="get" action="{{ path('app_company_index') }}" class="mb-6">
            <fieldset class="rounded-xl border border-cyan-500/30 bg-slate-900/60 p-4">
                <legend class="px-2 text-xs uppercase tracking-[0.2em] text-cyan-300/70">Company search</legend>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Name</label>
                        <input type="text" name="name" value="{{ filters.name }}" class="input m-1 w-full">
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Role</label>
                        <select name="role" class="select m-1 w-full">
                            <option value="">All roles</option>
                            {% for role in roles %}
                                <option value="{{ role.id }}" {% if filters.role == role.id %}selected{% endif %}>
                                    {{ role.shortDescription ?? role.code }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Contact</label>
                        <input type="text" name="contact" value="{{ filters.contact }}" class="input m-1 w-full">
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Search</button>
                    <a href="{{ path('app_company_index') }}" class="btn btn-ghost btn-sm">Reset</a>
                </div>
            </fieldset>
        </form>

        <div class="flow-root">

            <div class="overflow-x-auto overflow-y-visible rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Contact</th>
                        <th>Sign label</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if companies|length > 0 %}
                        {% for company in companies %}
                            <tr>
                                <td>{% include 'components/code_with_copy.html.twig' with { code: company.code } %}</td>
                                <td>{{ company.name }}</td>
                                <td>{{ company.companyRole.description }}</td>
                                <td>{{ company.contact ?? '-' }}</td>
                                <td>{{ company.signLabel ?? '-' }}</td>
                                <td class="flex items-center gap-2">
                                    {{ tooltip.link('Update counterparty',
                                                    'Edit company',
                                                    'icons/action-edit.html.twig',
                                                    path('app_company_edit', {id: company.id}),
                                                    { dim: 16, linkClass: 'btn btn-outline btn-primary btn-xs' }) }}
                                    {{ tooltip.link('Retire counterparty',
                                                    'Delete company',
                                                    'icons/action-trash.html.twig',
                                                    path('app_company_delete', {id: company.id}),
                                                    { dim: 16, linkClass: 'btn btn-outline btn-error btn-xs' }) }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6">Insert a new Company</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_company_index',
                query: app.request.query.all
            } %}

        </div>

    </div>

{% endblock %}
