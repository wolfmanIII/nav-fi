{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Nav-Fi - Ships{% endblock %}

{% block pageContent %}

    <div class="">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/crew.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Bridge crew</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Crew</h1>
                        <p class="text-sm text-cyan-100/80">Roles, captains and shifts ready for undocking, all linked to your ships.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Recruit crew member',
                                    'Add crew member',
                                    'icons/crew.html.twig',
                                    path('app_crew_new'),
                                    { dim: 24, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>



        {% set filter_fields %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Name / Surname</label>
                <input type="text" name="search" value="{{ filters.search }}" class="input m-1 w-full">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Asset</label>
                <select name="asset" class="select m-1 w-full">
                    <option value="">All assets</option>
                    {% for asset in assets %}
                        <option value="{{ asset.id }}" {% if filters.asset == asset.id %}selected{% endif %}>{{ asset.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Mission</label>
                <select name="campaign" class="select m-1 w-full">
                    <option value="">All missions</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            form_id: 'crew-filters',
            action: path('app_crew_index'),
            legend: 'Crew search',
            grid_class: 'md:grid-cols-3',
            fields: filter_fields,
            reset_path: path('app_crew_index'),
            is_filtered: filters.search or filters.asset or filters.campaign
        } %}

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
            {% if crew|length > 0 %}
                {% for member in crew %}
                    <div class="group relative flex flex-col rounded-xl border border-indigo-500/20 bg-gradient-to-br from-slate-900 via-slate-800 to-indigo-950 p-4 shadow-lg transition-all hover:border-indigo-500/50 hover:shadow-indigo-500/10 hover:-translate-y-1">
                        {# Card Header: Actions & REF #}
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-2">
                                <div class="px-2 py-1 rounded border border-indigo-500/20 bg-indigo-500/5 text-xs font-mono tracking-widest text-indigo-400/80 uppercase">
                                    D_ID: {{ member.code }}
                                </div>
                                {% if member.mortgageSigned %}
                                    <span class="px-2 py-1 rounded bg-cyan-500/10 text-xs font-bold tracking-tighter uppercase border border-cyan-500/30 text-cyan-400 flex items-center gap-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                        VERIFIED
                                    </span>
                                {% endif %}
                            </div>
                            <div class="flex items-center gap-1">
                                {{ tooltip.link('Update crew profile', '', 'icons/action-edit.html.twig', path('app_crew_edit', {id: member.id}), { dim: 16, linkClass: 'p-2 rounded-lg hover:bg-indigo-500/20 text-indigo-400' }) }}
                                {% set CAN_DELETE = constant('App\\Security\\Voter\\CrewVoter::DELETE') %}
                                {% set can_delete = is_granted(CAN_DELETE, member) %}
                                {{ tooltip.link('Release crew member', '', 'icons/action-trash.html.twig', path('app_crew_delete', {id: member.id}), {
                                    dim: 16,
                                    linkClass: 'p-2 rounded-lg hover:bg-red-500/20 text-red-400' ~ (can_delete ? '' : ' opacity-50 pointer-events-none')
                                }) }}
                            </div>
                        </div>

                        {# Card Body: Identity #}
                        <div class="mb-4">
                            <h2 class="text-2xl font-bold text-indigo-100 group-hover:text-indigo-400 transition-colors uppercase tracking-tight font-orbitron">
                                {{ member.name }} {{ member.surname }}
                            </h2>
                            {% if member.nickname %}
                                <p class="text-sm font-medium text-indigo-300/60 font-rajdhani tracking-widest uppercase">
                                    // CALLSIGN: {{ member.nickname }}
                                </p>
                            {% endif %}
                        </div>

                        {# Card Detail: Roles #}
                        <div class="flex flex-wrap gap-2 mb-6">
                            {% for role in member.assetRoles %}
                                <span class="px-2 py-0.5 rounded-full bg-slate-800/80 border border-slate-700 text-[10px] font-bold text-slate-300 uppercase tracking-wider font-rajdhani">
                                    {{ role.name }}
                                </span>
                            {% endfor %}
                            {% if member.assetRoles|length == 0 %}
                                <span class="px-2 py-0.5 rounded-full bg-slate-800/40 border border-slate-800 text-[10px] font-bold text-slate-500 uppercase tracking-wider font-rajdhani italic">
                                    Unassigned
                                </span>
                            {% endif %}
                        </div>

                        {# Card Footer: Assignment #}
                        <div class="mt-auto pt-4 border-t border-indigo-500/10 flex flex-col gap-2">
                            <div class="flex items-center justify-between text-xs font-rajdhani tracking-wider">
                                <span class="text-slate-500 uppercase">Hull Assignment</span>
                                <span class="text-indigo-300 font-bold uppercase">
                                    {% if member.asset %}{{ member.asset.name }}{% else %}<span class="text-slate-600">N/A</span>{% endif %}
                                </span>
                            </div>
                            <div class="flex items-center justify-between text-xs font-rajdhani tracking-wider">
                                <span class="text-slate-500 uppercase">Sector / Mission</span>
                                <span class="text-teal-400 font-bold uppercase flex items-center gap-1.5">
                                    {% if member.asset and member.asset.campaign %}
                                        {% include 'icons/alien-structure-1.html.twig' %}
                                        {{ member.asset.campaign.title }}
                                    {% else %}
                                        <span class="text-slate-600">Deep Space</span>
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full py-12 text-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <p class="text-slate-500 font-rajdhani tracking-widest uppercase mb-4 text-sm">Manifest is empty // No personnel detected</p>
                    {{ tooltip.link('Recruit crew member',
                                    'Initialize Recruitment',
                                    'icons/crew.html.twig',
                                    path('app_crew_new'),
                                    { dim: 20, linkClass: 'btn btn-primary btn-sm btn-outline' }) }}
                </div>
            {% endif %}
        </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_crew_index',
                query: app.request.query.all
            } %}

        </div>
{% endblock %}
