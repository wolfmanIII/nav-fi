<div class="drawer-side">
    <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>

    <div class="min-h-full w-64 bg-gradient-to-b from-slate-800 via-slate-900 to-slate-950 text-cyan-100 flex flex-col items-start border-r border-cyan-500/30">
        <div class="w-full bg-gradient-to-r from-teal-600 via-slate-800 to-slate-900 text-cyan-100 flex items-center justify-center gap-2 py-2 px-3 text-xs uppercase tracking-[0.25em] border-b border-cyan-500/30">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <span>Beacon // Dock Ready</span>
        </div>
        <ul class="menu w-full grow">
            <li>
                <a href="{{ path('app_home') }}"
                   class="{% if controller_name == constant('App\\Controller\\HomeController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    <!-- icona home -->
                    {% include 'icons/bridge-panels.html.twig' %}
                    <span>Bridge</span>
                </a>
            </li>

            <li class="menu-title">
                <span class="text-cyan-200/70 text-xs uppercase tracking-[0.2em]">Operations</span>
            </li>
            <li>
                <a href="{{ path('app_operation_guide') }}"
                   class="{% if controller_name == 'OperationGuideController' %}menu-active{% endif %}">
                    {% include 'icons/operations-checklist.html.twig' %}
                    <span>Checklist</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_operations_flow') }}"
                   class="{% if controller_name == 'OperationsFlowController' %}menu-active{% endif %}">
                    {% include 'icons/operations-flow.html.twig' %}
                    <span>Flow</span>
                </a>
            </li>

            <li class="menu-title">
                <span class="text-cyan-200/70 text-xs uppercase tracking-[0.2em]">Directory</span>
            </li>

            <li>
                <a href="{{ path('app_campaign_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\CampaignController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    {% include 'icons/alien-structure-1.html.twig' %}
                    <span>Campaign</span>
                </a>
            </li>

            <li>
                <a href="{{ path('app_company_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\CompanyController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    {% include 'icons/company.html.twig' %}
                    <span>Companies</span>
                </a>
            </li>

            <li>
                <a href="{{ path('app_ship_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\ShipController::CONTROLLER_NAME') or controller_name == constant('App\\Controller\\ShipAmendmentController::CONTROLLER_NAME') %} menu-active {% endif %}"
                >
                    <!-- icona ships -->
                    {% include 'icons/far-trader.html.twig' %}
                    <span>Shipyard</span>
                </a>
            </li>

            <li>
                <a href="{{ path('app_crew_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\CrewController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    <!-- icona crew -->
                    {% include 'icons/crew.html.twig' with {'dim': '24'} %}
                    <span>Crew</span>
                </a>
            </li>

            <li class="menu-title">
                <span class="text-cyan-200/70 text-xs uppercase tracking-[0.2em]">Nav</span>
            </li>
            <li>
                <a href="{{ path('app_route_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\RouteController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    {% include 'icons/routes.html.twig' %}
                    <span>Routes</span>
                </a>
            </li>

            <li class="menu-title">
                <span class="text-cyan-200/70 text-xs uppercase tracking-[0.2em]">Fund</span>
            </li>

            <li>
                <a href="{{ path('app_mortgage_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\MortgageController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    <!-- icona mortgages -->
                    {% include 'icons/handbook.html.twig' %}
                    <span>Mortgages</span>
                </a>
            </li>

            <li>
                <a href="{{ path('app_cost_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\CostController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    {% include 'icons/cost.html.twig' %}
                    <span>Costs</span>
                </a>
            </li>

            <li>
                <a href="{{ path('app_income_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\IncomeController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    {% include 'icons/income.html.twig' %}
                    <span>Income</span>
                </a>
            </li>

            <li>
                <a href="{{ path('app_annual_budget_index') }}"
                   class="{% if controller_name == constant('App\\Controller\\AnnualBudgetController::CONTROLLER_NAME') %}menu-active{% endif %}"
                >
                    {% include 'icons/annual-budget.html.twig' %}
                    <span>Annual Budget</span>
                </a>
            </li>

            <li class="menu-title">
                <span class="text-cyan-200/70 text-xs uppercase tracking-[0.2em]">— // —</span>
            </li>

            {% if is_granted('ROLE_ADMIN') %}
                <li>
                    <a href="{{ path('admin') }}">
                        {% include 'icons/admin.html.twig' %}
                        <span>Admin</span>
                    </a>
                </li>
            {% endif %}

            <li>
                <a href="{{ path('app_profile') }}"
                   class="{% if controller_name == 'ProfileController' %}menu-active{% endif %}">
                    {% include 'icons/crew.html.twig' with {'dim': '24'} %}
                    <span>Profile</span>
                </a>
            </li>

        </ul>
    </div>
</div>
