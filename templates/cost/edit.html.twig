{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Cost{% endblock %}

{% block pageContent %}
    {% set CAN_CREATE = constant('App\\Security\\Voter\\CostVoter::CREATE') %}
    {% set CAN_EDIT = constant('App\\Security\\Voter\\CostVoter::EDIT') %}
    {% set can_create = is_granted(CAN_CREATE, cost) %}
    {% set can_edit = is_granted(CAN_EDIT, cost) %}
    {% import '_tooltip.html.twig' as tooltip %}

        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/cost.html.twig',
            theme: 'amber',
            subheader: 'Asset expense // Logistical Outlay',
            title: 'LOG COSTS',
            titleSuffix: '// Expenses',
            description: 'Fuel, life support and repairs: keep the hull pressurized.'
        } %}
            {% import '_tooltip.html.twig' as tooltip %}
            {% block content %}
                {# Session Date Indicator #}
                {% set campaign = cost.financialAccount.asset.campaign ?? cost.financialAccount.campaign ?? null %}
                {% if campaign %}
                    <div class="flex flex-wrap gap-2 mt-3">
                        <div class="badge badge-neutral gap-1.5 px-2.5 py-1.5 text-[10px] font-mono border border-slate-700">
                            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span class="font-bold tracking-wider text-slate-400">{{ campaign.title }}:</span>
                            <span class="text-slate-300">{{ campaign.sessionDay|imperial_date(campaign.sessionYear) }}</span>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}
            {% block actions %}
                {% if cost.id %}
                    {{ tooltip.link('Open cost PDF', 'Cost PDF', 'icons/pdf.html.twig', path('app_cost_pdf', { id: cost.id }), { dim: 16, linkClass: 'btn btn-outline btn-warning btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase', position: 'tooltip-left', attrs: { target: '_blank', rel: 'noopener' } }) }}
                {% endif %}
                <a href="{{ path('app_cost_index') }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
            {% endblock %}
        {% endembed %}

        {% if cost.paymentDay is not null and cost.paymentYear is not null %}
            <div class="alert alert-info alert-outline shadow-sm mb-6 border-cyan-500/50 bg-cyan-500/5">
                <div class="animate-spin-slow text-cyan-500">
                    {% include 'icons/radar.html.twig' with { dim: 24 } %}
                </div>
                <div class="text-sm font-rajdhani uppercase tracking-widest font-bold text-cyan-200">
                    Cost is marked as <span class="text-cyan-500">PAID</span>. Handle modifications with tactical caution to maintain log integrity.
                </div>
            </div>
        {% endif %}



        {{ form_start(form) }}
        {{ form_widget(form._token) }}

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Primary Data</legend>

            <div class="col-span-2">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.title, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.title, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700 focus:border-cyan-500/50' } }) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.campaign, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.campaign) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.financialAccount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.financialAccount) }}
                {{ form_errors(form.financialAccount) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                {% set amount_help_id = form.amount.vars.id ~ '-help' %}
                <div class="flex items-baseline justify-between h-5 mb-1">
                    {{ form_label(form.amount, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                    <label for="{{ amount_help_id }}" class="text-[9px] cursor-pointer text-cyan-500/50 hover:text-cyan-400 transition-colors uppercase font-bold tracking-widest"><b>[info]</b></label>
                </div>
                {{ form_widget(form.amount, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.amount) }}
                <input type="checkbox" id="{{ amount_help_id }}" class="modal-toggle hidden" />
                <div class="modal" role="dialog">
                    <div class="modal-box bg-slate-900 border border-slate-700 shadow-2xl">
                        <h3 class="font-bold text-cyan-100 font-orbitron uppercase tracking-widest text-sm mb-4">Internal Sensor: Amount</h3>
                        <p class="py-2 text-sm text-slate-300 font-rajdhani">Auto-calculated from the detail items (qty × cost). If the total is 0, the field stays empty.</p>
                        <div class="modal-action">
                            <label for="{{ amount_help_id }}" class="btn btn-primary btn-sm btn-outline font-orbitron uppercase text-[10px]">Acknowledge</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-span-2 md:col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.paymentDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                <div class="flex gap-2">
                    {{ form_widget(form.paymentDate.display, { attr: { class: 'input input-bordered flex-1 bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                </div>
                {{ form_widget(form.paymentDate.year) }}
                {{ form_widget(form.paymentDate.day) }}
                {{ form_errors(form.paymentDate.display) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-amber-500/80 uppercase">Logistics & Classification</legend>
            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.company, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.company, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.company) }}
            </div>
            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.costCategory, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.costCategory, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.costCategory) }}
            </div>
            <div class="col-span-2">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.localLaw, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.localLaw, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.localLaw) }}
            </div>
        </fieldset>

        {{ include('cost/_detail_items_form.html.twig', { form: form }) }}

        <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-8 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-slate-400 uppercase">Operational Notes</legend>
            <div>
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.note, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.note, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-24 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Enter tactical notes here...' } }) }}
                {{ form_errors(form.note) }}
            </div>
        </fieldset>

        <div class="flex items-center justify-end gap-3 mb-10">
            <a href="{{ path('app_cost_index') }}" class="btn btn-ghost font-orbitron uppercase text-[10px] tracking-widest text-slate-500 hover:text-slate-300 font-bold">Abort Changes</a>
            <button type="submit"
                    class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10"
                    {% if not (cost.id ? can_edit : can_create) %} disabled {% endif %}
            >
                Confirm Entry // Commit to Log
            </button>
        </div>

        {{ form_end(form, { render_rest: false }) }}

{% endblock %}
