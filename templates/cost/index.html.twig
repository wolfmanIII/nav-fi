{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Costs{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="p-10">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/cost.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Mission outflows</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Costs</h1>
                        <p class="text-sm text-cyan-100/80">Maintenance, crew gear and travel: map every credit you spend before the next jump.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Log a new cost',
                                    'Add cost',
                                    'icons/cost.html.twig',
                                    path('app_cost_new'),
                                    { dim: 18, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        <form method="get" action="{{ path('app_cost_index') }}" class="mb-6">
            <fieldset class="rounded-xl border border-cyan-500/30 bg-slate-900/60 p-4">
                <legend class="px-2 text-xs uppercase tracking-[0.2em] text-cyan-300/70">Cost search</legend>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Title</label>
                        <input type="text" name="title" value="{{ filters.title }}" class="input m-1 w-full">
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Category</label>
                        <select name="category" class="select m-1 w-full">
                            <option value="">All categories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}" {% if filters.category == category.id %}selected{% endif %}>
                                    {{ category.description }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Ship</label>
                        <select name="ship" class="select m-1 w-full">
                            <option value="">All ships</option>
                            {% for ship in ships %}
                                <option value="{{ ship.id }}" {% if filters.ship == ship.id %}selected{% endif %}>{{ ship.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Campaign</label>
                        <select name="campaign" class="select m-1 w-full">
                            <option value="">All campaigns</option>
                            {% for campaign in campaigns %}
                                <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Search</button>
                    <a href="{{ path('app_cost_index') }}" class="btn btn-ghost btn-sm">Reset</a>
                </div>
            </fieldset>
        </form>

        <div class="flow-root">

            <div class="overflow-x-auto overflow-y-visible rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Ship</th>
                        <th class="text-right">Amount</th>
                        <th class="text-right">Payment (Cr)</th>
                        <th>Campaign</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if costs|length > 0 %}
                        {% for cost in costs %}
                            <tr>
                                <td>{% include 'components/code_with_copy.html.twig' with { code: cost.code } %}</td>
                                <td>{{ cost.title }}</td>
                                <td>{{ cost.costCategory.description }}</td>
                                <td>{{ cost.ship.name }}</td>
                                <td class="text-right">{{ cost.amount|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td class="text-right">
                                    {% if cost.paymentDay is not null and cost.paymentYear is not null %}
                                        {{ cost.paymentDay }}/{{ cost.paymentYear }}
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if cost.ship.campaign %}
                                        <div class="flex items-center gap-2">
                                            {% include 'icons/alien-structure-1.html.twig' %}
                                            <span>{{ cost.ship.campaign.title }}</span>
                                        </div>
                                    {% else %}
                                        <span class="opacity-60">—</span>
                                    {% endif %}
                                </td>
                                <td class="flex items-center gap-2">
                                    {{ tooltip.link('Adjust cost entry',
                                                    'Edit cost',
                                                    'icons/action-edit.html.twig',
                                                    path('app_cost_edit', {id: cost.id}),
                                                    { dim: 16, linkClass: 'btn btn-outline btn-primary btn-xs' }) }}
                                    {{ tooltip.link('Void cost entry',
                                                    'Delete cost',
                                                    'icons/action-trash.html.twig',
                                                    path('app_cost_delete', {id: cost.id}),
                                                    { dim: 16, linkClass: 'btn btn-outline btn-error btn-xs' }) }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8">Insert a new Cost</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_cost_index',
                query: app.request.query.all
            } %}

        </div>

    </div>

{% endblock %}
