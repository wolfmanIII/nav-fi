{% extends 'base_plain.html.twig' %}

{% block title %}2FA Verification{% endblock %}

{% block pageContent %}
<div class="min-h-screen flex flex-col justify-center items-center bg-slate-900 text-cyan-100 selection:bg-cyan-500 selection:text-white">
    <div class="w-full max-w-md p-8 bg-slate-800 rounded-lg shadow-2xl border border-cyan-500/30 relative overflow-hidden">
        
        <!-- Decorative elements imitating a sci-fi interface -->
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-cyan-500 via-blue-500 to-cyan-500 opacity-70"></div>
        <div class="absolute bottom-0 right-0 w-16 h-16 border-b-2 border-r-2 border-cyan-500/20 rounded-br-lg"></div>
        <div class="absolute top-0 left-0 w-16 h-16 border-t-2 border-l-2 border-cyan-500/20 rounded-tl-lg"></div>

        <div class="text-center mb-8">
            <div class="inline-block p-3 rounded-full bg-slate-900 border border-cyan-500/30 mb-4 shadow-[0_0_15px_rgba(6,182,212,0.15)]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
            <h1 class="text-2xl font-bold tracking-wider uppercase text-cyan-400 mb-2 font-mono">Security Check</h1>
            <p class="text-slate-400 text-sm">Authentication Required</p>
        </div>

        <form class="space-y-6" action="{{ checkPathUrl ? checkPathUrl : path(checkPathRoute) }}" method="post">
            {% if authenticationError %}
                <div class="alert alert-error bg-red-900/20 border border-red-500/50 text-red-200 text-sm rounded-md flex items-start gap-3 p-3">
                    <div class="animate-spin-slow text-current">
                        {% include 'icons/radar.html.twig' with { dim: 20 } %}
                    </div>
                    <span>{{ authenticationError|trans(authenticationErrorData, 'SchebTwoFactorBundle') }}</span>
                </div>
            {% endif %}

            <div>
                <label for="_auth_code" class="block text-xs font-semibold uppercase tracking-widest text-cyan-500/80 mb-2">
                    Access Code
                </label>
                <div class="relative">
                    <input 
                        id="_auth_code" 
                        type="text" 
                        name="{{ authCodeParameterName }}" 
                        autocomplete="one-time-code" 
                        required 
                        autofocus
                        class="block w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded text-cyan-100 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500 transition-all duration-300 font-mono text-center text-lg tracking-[0.2em]"
                        placeholder="000 000"
                    />
                </div>
                <p class="mt-2 text-xs text-slate-500 text-center">
                    Enter the code from your Google Authenticator app
                </p>
            </div>

            {% if trustedOption %}
                <div class="flex items-center justify-center gap-2">
                    <label class="cursor-pointer label">
                        <input type="checkbox" name="{{ trustedOptionParameterName }}" class="checkbox checkbox-xs checkbox-info rounded-sm border-slate-600" />
                        <span class="label-text text-slate-400 text-xs ml-2">Trust this terminal for 30 days</span>
                    </label>
                </div>
            {% endif %}

            {% if isCsrfProtectionEnabled %}
                <input type="hidden" name="{{ csrfParameterName }}" value="{{ csrf_token(csrfTokenId) }}">
            {% endif %}

            <div>
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded shadow-sm text-sm font-bold uppercase tracking-widest text-slate-900 bg-cyan-500 hover:bg-cyan-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-800 focus:ring-cyan-500 transition-all duration-300 shadow-[0_0_20px_rgba(6,182,212,0.3)] hover:shadow-[0_0_30px_rgba(6,182,212,0.5)]">
                    Verify Identity
                </button>
            </div>
            
            <div class="text-center">
                <a href="{{ path('app_logout') }}" class="text-xs text-slate-500 hover:text-cyan-400 transition-colors uppercase tracking-wide">
                    // Abort Sequence
                </a>
            </div>
        </form>
    </div>
    
    <div class="mt-8 text-slate-600 text-xs font-mono">
        SYSTEM: SECURE // ENCRYPTION: ACTIVE
    </div>
</div>
{% endblock %}
