{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Nav-Fi&sup3; - Annual Budget{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="">

    {% embed 'components/_hero_header.html.twig' with {
        icon: 'icons/annual-budget.html.twig',
        theme: 'teal',
        subheader: 'FINANCIAL ROUTE // PROJECTION',
        title: 'ANNUAL BUDGET',
        titleSuffix: '// System',
        description: 'Set the time window to monitor your asset.'
    } %}
        {% import '_tooltip.html.twig' as tooltip %}
        {% block content %}
             {# Session Date Modal Trigger #}
            {% if campaigns|length > 0 %}
                <div class="flex flex-wrap gap-2 mt-3">
                    <label for="session-dates-modal-budget" class="badge badge-neutral gap-1.5 px-2.5 py-1.5 text-[10px] font-mono cursor-pointer hover:bg-slate-800 transition-colors border border-slate-700">
                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span class="font-bold tracking-wider uppercase">Mission Session Dates</span>
                        <span class="text-slate-500">({{ campaigns|length }})</span>
                    </label>
                </div>
            {% endif %}
        {% endblock %}
        {% block actions %}
            {{ tooltip.link('Open new year ledger',
                            'Add annual budget',
                            'icons/annual-budget.html.twig',
                            path('app_annual_budget_new'),
                            { dim: 16, linkClass: 'btn btn-outline btn-primary btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase', position: 'tooltip-left' }) }}
        {% endblock %}
    {% endembed %}

        {# Session Dates Modal #}
        <input type="checkbox" id="session-dates-modal-budget" class="modal-toggle" />
        <div class="modal" role="dialog">
            <div class="modal-box bg-slate-900 border border-slate-700 max-w-2xl">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="font-bold text-cyan-100 text-lg font-orbitron uppercase tracking-widest">Mission Session Dates</h3>
                    <label for="session-dates-modal-budget" class="btn btn-sm btn-circle btn-ghost">âœ•</label>
                </div>
                <p class="text-xs text-amber-400/80 italic mb-4">A Mission can be an entire campaign or a single adventure</p>
                <div class="overflow-x-auto rounded-lg border border-slate-800 bg-slate-950/40">
                    <table class="table table-xs w-full">
                        <thead>
                            <tr class="border-b border-slate-800">
                                <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50">Mission</th>
                                <th class="font-rajdhani uppercase tracking-widest text-[11px] text-slate-400 bg-slate-900/50 text-right">Session Date</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-800/50">
                            {% for campaign in campaigns %}
                                <tr class="hover:bg-cyan-500/5 transition-colors">
                                    <td class="p-3 font-semibold text-cyan-100">{{ campaign.title }}</td>
                                    <td class="p-3 font-mono text-sm text-slate-300 text-right">
                                        {{ campaign.sessionDay|imperial_date(campaign.sessionYear) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="modal-action">
                    <label for="session-dates-modal-budget" class="btn btn-outline btn-primary btn-sm font-orbitron uppercase text-[10px]">Close</label>
                </div>
            </div>
            <label class="modal-backdrop" for="session-dates-modal-budget"></label>
        </div>



        {% set filter_fields %}
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">ASSET_NAV</label>
                <select name="asset" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ANY_ASSET</option>
                    {% for asset in assets %}
                        <option value="{{ asset.id }}" {% if filters.asset == asset.id %}selected{% endif %}>{{ asset.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">TEMPORAL_START</label>
                <input type="text" name="start" value="{{ filters.start }}" class="input w-full bg-slate-950/50 border-slate-800 text-cyan-100 placeholder:text-slate-600 focus:border-cyan-500/50" placeholder="Day/Year or Year">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">TEMPORAL_END</label>
                <input type="text" name="end" value="{{ filters.end }}" class="input w-full bg-slate-950/50 border-slate-800 text-cyan-100 placeholder:text-slate-600 focus:border-cyan-500/50" placeholder="Day/Year or Year">
            </div>
            <div>
                <label class="label text-xs uppercase tracking-[0.2em] text-cyan-500/60 font-bold">OPS_CAMPAIGN</label>
                <select name="campaign" class="select w-full bg-slate-950/50 border-slate-800 text-cyan-100 focus:border-cyan-500/50">
                    <option value="">ALL_OPERATIONS</option>
                    {% for campaign in campaigns %}
                        <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endset %}
        {% include 'components/index_filters.html.twig' with {
            action: path('app_annual_budget_index'),
            legend: 'Annual budget search',
            fields: filter_fields,
            reset_path: path('app_annual_budget_index'),
            is_filtered: filters.asset or filters.start or filters.end or filters.campaign
        } %}

        <div class="grid grid-cols-1 gap-6 mb-8">
            {% if budgets|length > 0 %}
                {% for budget in budgets %}
                    <div class="group relative flex flex-col xl:flex-row gap-8 rounded-xl border border-teal-500/20 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-4 shadow-lg transition-all hover:border-teal-500/50 hover:shadow-teal-500/10 hover:-translate-y-1">
                        {# Left: Core Data #}
                        <div class="flex-1">
                            {# Card Header: Actions & Metadata #}
                            <div class="flex items-center justify-between mb-4">
                                <div class="px-2.5 py-1 rounded border border-teal-500/20 bg-teal-500/5 text-xs font-mono tracking-widest text-teal-400/80 uppercase">
                                    CYCLE_LEDGER: {{ budget.code }}
                                </div>
                                <div class="flex items-center gap-1">
                                    {{ tooltip.link('Edit', '', 'icons/action-edit.html.twig', path('app_annual_budget_edit', {id: budget.id}), { dim: 16, linkClass: 'p-2 rounded-lg hover:bg-teal-500/20 text-teal-400' }) }}
                                    {{ tooltip.link('Delete', '', 'icons/action-trash.html.twig', path('app_annual_budget_delete', {id: budget.id}), { dim: 16, linkClass: 'p-2 rounded-lg hover:bg-red-500/20 text-red-400' }) }}
                                </div>
                            </div>

                            <div class="mb-6 flex items-start justify-between">
                                <div>
                                    <h3 class="text-2xl font-bold text-teal-100 group-hover:text-teal-400 transition-colors uppercase tracking-wider">
                                        {{ budget.asset.name }}
                                    </h3>
                                    <p class="text-sm text-slate-500 font-mono mt-1">
                                        SP_SYSTEM: {{ (budget.startDay is not null and budget.startYear is not null) ? (budget.startDay|imperial_date(budget.startYear)) : '???' }} 
                                        <span class="mx-2 text-slate-700">>></span> 
                                        {{ (budget.endDay is not null and budget.endYear is not null) ? (budget.endDay|imperial_date(budget.endYear)) : '???' }}
                                    </p>
                                </div>
                                <div class="text-right">
                                    {{ tooltip.link('Inspect Chart', '', 'icons/chart.html.twig', path('app_annual_budget_chart', {id: budget.id}), { dim: 20, linkClass: 'p-3 rounded-xl bg-teal-500/10 border border-teal-500/30 text-teal-400 hover:bg-teal-500/20' }) }}
                                </div>
                            </div>

                            {# Budget Matrix - Larger icons/fonts for full width #}
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-2">
                                <div class="p-6 rounded-lg bg-slate-950/50 border border-slate-800 flex flex-col items-center group/metric transition-colors hover:border-emerald-500/20">
                                    <span class="text-xs uppercase text-emerald-500/70 font-bold mb-2 tracking-widest">Incomes</span>
                                    <span class="text-xl font-mono text-emerald-400 font-bold">{{ budget.totalIncomeAmount|format_number({ max_fraction_digit: 0 }, 'decimal', 'default', locale) }}</span>
                                </div>
                                <div class="p-6 rounded-lg bg-slate-950/50 border border-slate-800 flex flex-col items-center group/metric transition-colors hover:border-amber-500/20">
                                    <span class="text-xs uppercase text-amber-500/70 font-bold mb-2 tracking-widest">Costs</span>
                                    <span class="text-xl font-mono text-amber-400 font-bold">{{ budget.totalCostsAmount|format_number({ max_fraction_digit: 0 }, 'decimal', 'default', locale) }}</span>
                                </div>
                                <div class="p-6 rounded-lg bg-slate-950/50 border border-slate-800 flex flex-col items-center group/metric transition-colors hover:border-red-500/20">
                                    <span class="text-xs uppercase text-red-500/70 font-bold mb-2 tracking-widest">Mortgage</span>
                                    <span class="text-xl font-mono text-red-400 font-bold">{{ budget.asset.mortgage.calculate.total_annual_payment|format_number({ max_fraction_digit: 0 }, 'decimal', 'default', locale) }}</span>
                                </div>
                            </div>
                        </div>

                        {# Right: Surplus & Actions #}
                        <div class="xl:w-80 flex flex-col justify-between border-t xl:border-t-0 xl:border-l border-slate-800 pt-6 xl:pt-0 xl:pl-8 mt-auto xl:mt-0">
                            <div class="mt-auto p-8 rounded-xl bg-teal-900/10 border-x-2 border-teal-500/40 flex items-center justify-between">
                                <div class="flex flex-col">
                                    <span class="text-xs uppercase font-bold text-teal-600 tracking-widest leading-none mb-1">Net Surplus</span>
                                    <div class="text-3xl font-mono font-bold text-teal-300 {{ budget.actualBudget < 0 ? 'text-red-400' : 'text-teal-300' }}">
                                        {{ budget.actualBudget|format_number({ min_fraction_digit: 0, max_fraction_digit: 0 }, 'decimal', 'default', locale) }}
                                        <span class="text-sm text-teal-600 font-normal">Cr</span>
                                    </div>
                                </div>
                                <div class="h-14 w-14 rounded-full border-[6px] border-slate-800 flex items-center justify-center bg-slate-950 shadow-inner">
                                    <span class="text-xs font-bold {{ budget.actualBudget < 0 ? 'text-red-500' : 'text-teal-500' }}">%CY</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-full py-20 flex flex-col items-center justify-center rounded-xl border border-dashed border-slate-700 bg-slate-900/50">
                    <div class="text-slate-500 mb-2">{% include 'icons/annual-budget.html.twig' with {'dim': 48} %}</div>
                    <p class="text-slate-400 uppercase tracking-widest text-sm mb-6">No annual data modules found</p>
                    <a href="{{ path('app_annual_budget_new') }}" class="text-teal-400 hover:text-teal-300 text-xs font-bold uppercase underline underline-offset-4 decoration-teal-500/30 transition-colors">Initialize new cycle documentation</a>
                </div>
            {% endif %}
        </div>

        {% include 'components/pagination.html.twig' with {
            pagination: pagination,
            route: 'app_annual_budget_index',
            query: app.request.query.all
        } %}

    </div>

{% endblock %}
