{% extends 'base.html.twig' %}
{% import '_tooltip.html.twig' as tooltip %}

{% block title %}Captain Log - Annual Budget{% endblock %}

{% block pageContent %}

    {% set locale = app.request.locale ?? 'en' %}

    <div class="p-10">

        <div class="relative rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg mb-6">
            <div class="absolute inset-0 rounded-xl opacity-30 mix-blend-screen pointer-events-none"
                 style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
            </div>
            <div class="relative p-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex items-start gap-4">
                    <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                        {% include 'icons/annual-budget.html.twig' %}
                    </div>
                    <div>
                        <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Financial route</p>
                        <h1 class="text-3xl font-semibold text-cyan-100 leading-tight">Annual Budget</h1>
                        <p class="text-sm text-cyan-100/80">Set the time window to monitor your ship: start and end of period to keep credits on course.</p>
                    </div>
                </div>
                <div class="flex gap-2">
                    {{ tooltip.link('Open new year ledger',
                                    'Add annual budget',
                                    'icons/annual-budget.html.twig',
                                    path('app_annual_budget_new'),
                                    { dim: 24, linkClass: 'btn btn-outline btn-primary btn-sm' }) }}
                </div>
            </div>
        </div>

        <div class="alert alert-info alert-outline shadow-sm mb-6">
            <span class="flex items-center justify-center animate-spin-slow">
                {% include 'icons/radar.html.twig' %}
            </span>
            <div class="text-sm text-slate-200">
                Some records cannot be deleted because they are linked to other logs (campaigns, ships, payments, crew) or locked by a recorded payment.
            </div>
        </div>

        <form method="get" action="{{ path('app_annual_budget_index') }}" class="mb-6">
            <fieldset class="rounded-xl border border-cyan-500/30 bg-slate-900/60 p-4">
                <legend class="px-2 text-xs uppercase tracking-[0.2em] text-cyan-300/70">Annual budget search</legend>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Ship</label>
                        <select name="ship" class="select m-1 w-full">
                            <option value="">All ships</option>
                            {% for ship in ships %}
                                <option value="{{ ship.id }}" {% if filters.ship == ship.id %}selected{% endif %}>{{ ship.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Start</label>
                        <input type="text" name="start" value="{{ filters.start }}" class="input m-1 w-full" placeholder="Start >= Day/Year or Year">
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">End</label>
                        <input type="text" name="end" value="{{ filters.end }}" class="input m-1 w-full" placeholder="End <= Day/Year or Year">
                    </div>
                    <div>
                        <label class="label text-xs uppercase tracking-[0.2em] text-slate-400">Campaign</label>
                        <select name="campaign" class="select m-1 w-full">
                            <option value="">All campaigns</option>
                            {% for campaign in campaigns %}
                                <option value="{{ campaign.id }}" {% if filters.campaign == campaign.id %}selected{% endif %}>{{ campaign.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-outline btn-primary btn-sm">Search</button>
                    <a href="{{ path('app_annual_budget_index') }}" class="btn btn-ghost btn-sm">Reset</a>
                </div>
            </fieldset>
        </form>

        <div class="flow-root">

            <div class="overflow-x-auto overflow-y-visible rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Ship</th>
                        <th class="text-right">Start</th>
                        <th class="text-right">End</th>
                        <th class="text-right">Income(Cr)</th>
                        <th class="text-right">Costs(Cr)</th>
                        <th class="text-right">Annual Mortgage(Cr)</th>
                        <th class="text-right">Budget(Cr)</th>
                        <th>Chart</th>
                        <th>Campaign</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if budgets|length > 0 %}
                        {% for budget in budgets %}
                            <tr>
                                <td>{% include 'components/code_with_copy.html.twig' with { code: budget.code } %}</td>
                                <td>{{ budget.ship.name }}</td>
                                <td class="text-right">{{ budget.startDay }}/{{ budget.startYear }}</td>
                                <td class="text-right">{{ budget.endDay }}/{{ budget.endYear }}</td>
                                <td class="text-right">{{ budget.totalIncomeAmount|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td class="text-right">{{ budget.totalCostsAmount|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td class="text-right">{{ budget.ship.mortgage.calculate.total_annual_payment|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td class="text-right">{{ budget.actualBudget|format_number({ min_fraction_digit: 2, max_fraction_digit: 2, grouping_used: true }, 'decimal', 'default', locale) }}</td>
                                <td>
                                    {{ tooltip.link('Inspect budget timeline',
                                                    'View chart',
                                                    'icons/chart.html.twig',
                                                    path('app_annual_budget_chart', {id: budget.id}),
                                                    { dim: 14, linkClass: 'btn btn-outline btn-primary btn-xs' }) }}
                                </td>
                                <td>
                                    {% if budget.ship.campaign %}
                                        <div class="flex items-center gap-2">
                                            {% include 'icons/alien-structure-1.html.twig' %}
                                            <span>{{ budget.ship.campaign.title }}</span>
                                        </div>
                                    {% else %}
                                        <span class="opacity-60">â€”</span>
                                    {% endif %}
                                </td>
                                <td class="flex items-center gap-2">
                                    {{ tooltip.link('Tune year ledger',
                                                    'Edit annual budget',
                                                    'icons/action-edit.html.twig',
                                                    path('app_annual_budget_edit', {id: budget.id}),
                                                    { dim: 14, linkClass: 'btn btn-outline btn-primary btn-xs' }) }}
                                    {{ tooltip.link('Retire year ledger',
                                                    'Delete annual budget',
                                                    'icons/action-trash.html.twig',
                                                    path('app_annual_budget_delete', {id: budget.id}),
                                                    { dim: 14, linkClass: 'btn btn-outline btn-error btn-xs' }) }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="11">Insert a new Annual Budget</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>

            {% include 'components/pagination.html.twig' with {
                pagination: pagination,
                route: 'app_annual_budget_index',
                query: app.request.query.all
            } %}

        </div>

    </div>

{% endblock %}
