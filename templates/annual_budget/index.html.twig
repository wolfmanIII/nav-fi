{% extends 'base.html.twig' %}

{% block title %}Captain Log - Annual Budget{% endblock %}

{% block pageContent %}

    <div class="p-10">

        <header class="prose">
            <h1>Annual Budget</h1>
        </header>

        <div class="alert alert-info alert-outline shadow-sm mb-4 mt-4">
            <div class="flex items-center gap-3">
                {% include 'icons/annual-budget.html.twig' %}
                <div>
                    <h3 class="font-semibold">Financial route</h3>
                    <p class="text-sm opacity-80">Set the time window to monitor your ship: start and end of period to keep credits on course.</p>
                </div>
            </div>
        </div>

        <div class="flow-root">
            <a href="{{ path('app_annual_budget_new') }}" role="button" class="btn btn-outline btn-primary btn-xs mt-5 mb-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            </a>
        </div>

        <div class="flow-root">

            <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
                <table class="table border-separate border-spacing-0 inner-bordered-table">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Ship</th>
                        <th class="text-right">Start</th>
                        <th class="text-right">End</th>
                        <th class="text-right">Income(Cr)</th>
                        <th class="text-right">Costs(Cr)</th>
                        <th class="text-right">Annual Mortgage(Cr)</th>
                        <th class="text-right">Budget(Cr)</th>
                        <th>Chart</th>
                        <th>Campaign</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if budgets|length > 0 %}
                        {% for budget in budgets %}
                            <tr>
                                <td>{% include 'components/code_with_copy.html.twig' with { code: budget.code } %}</td>
                                <td>{{ budget.ship.name }}</td>
                                <td class="text-right">{{ budget.startDay }}/{{ budget.startYear }}</td>
                                <td class="text-right">{{ budget.endDay }}/{{ budget.endYear }}</td>
                                <td class="text-right">{{ budget.totalIncomeAmount|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ budget.totalCostsAmount|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ budget.ship.mortgage.calculate.total_annual_payment|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ budget.actualBudget|number_format(2, ',', '.') }}</td>
                                <td>
                                    <a href="{{ path('app_annual_budget_chart', {id: budget.id}) }}" role="button" class="btn btn-outline btn-primary btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 14 10 8 14 12 20 6"></polyline><polyline points="14 6 20 6 20 12"></polyline></svg>
                                    </a>
                                </td>
                                <td>
                                    {% if budget.ship.campaign %}
                                        <div class="flex items-center gap-2">
                                            {% include 'icons/campaign.html.twig' %}
                                            <span>{{ budget.ship.campaign.title }}</span>
                                        </div>
                                    {% else %}
                                        <span class="opacity-60">â€”</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_annual_budget_edit', {id: budget.id}) }}" role="button" class="btn btn-outline btn-primary btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon></svg>
                                    </a>
                                    <a href="{{ path('app_annual_budget_delete', {id: budget.id}) }}" role="button" class="btn btn-outline btn-error btn-xs">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="11">Insert a new Annual Budget</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>

        </div>

    </div>

{% endblock %}
