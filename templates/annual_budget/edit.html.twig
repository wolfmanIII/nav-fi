{% extends 'base.html.twig' %}

{% block title %}Nav-Fi&sup3; - Annual Budget{% endblock %}

{% block pageContent %}

        {% embed 'components/_hero_header.html.twig' with {
            icon: 'icons/annual-budget.html.twig',
            theme: 'teal',
            subheader: 'Financial window // Log Protocol',
            title: 'ANNUAL BUDGET',
            titleSuffix: '// Setup',
            description: 'Set window: plan credits and missions on the imperial calendar.'
        } %}
            {% block content %}
                {# Session Date Indicator #}
                {% set campaign = budget.asset.campaign ?? (budget.campaign ?? null) %}
                {% if campaign %}
                    <div class="flex flex-wrap gap-2 mt-3">
                        <div class="badge badge-neutral gap-1.5 px-2.5 py-1.5 text-[10px] font-mono border border-slate-700">
                            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            <span class="font-bold tracking-wider text-slate-400">{{ campaign.title }}:</span>
                            <span class="text-slate-300">{{ campaign.sessionDay|imperial_date(campaign.sessionYear) }}</span>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}
            {% block actions %}
                <a href="{{ path('app_annual_budget_index') }}" class="btn btn-outline btn-sm gap-2 font-orbitron text-[10px] tracking-widest uppercase">
                    {% include 'icons/back.html.twig' %}
                </a>
            {% endblock %}
        {% endembed %}

        {{ form_start(form) }}
        {{ form_widget(form._token) }}



        {% if form_errors(form) %}
            <div class="alert alert-error bg-red-500/10 border-red-500/30 text-red-500 text-xs rounded-lg mb-6 py-2">
                <div class="flex gap-2 items-center">
                    <div class="animate-spin-slow text-current">
                        {% include 'icons/radar.html.twig' with { dim: 16 } %}
                    </div>
                    <span>{{ form_errors(form) }}</span>
                </div>
            </div>
        {% endif %}

        <fieldset class="grid grid-cols-1 md:grid-cols-2 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-6 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-cyan-500/80 uppercase">Primary Data</legend>

            <div class="col-span-2 md:col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.startDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.startDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.startDate.year) }}
                {{ form_widget(form.startDate.day) }}
                {{ form_errors(form.startDate.display) }}
            </div>

            <div class="col-span-2 md:col-span-1" data-controller="imperial-date">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.endDate, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.endDate.display, { attr: { class: 'input input-bordered w-full bg-slate-950/50 border-slate-700', 'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                {{ form_widget(form.endDate.year) }}
                {{ form_widget(form.endDate.day) }}
                {{ form_errors(form.endDate.display) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.campaign, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.campaign, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.campaign) }}
            </div>

            <div class="col-span-2 md:col-span-1">
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.asset, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.asset, { attr: { class: 'select select-bordered w-full bg-slate-950/50 border-slate-700' } }) }}
                {{ form_errors(form.asset) }}
            </div>
        </fieldset>

        <fieldset class="grid grid-cols-1 bg-slate-900/40 border border-slate-800 gap-6 p-6 rounded-xl shadow-inner mb-8 relative">
            <legend class="px-3 py-1 rounded bg-slate-800 border border-slate-700 text-[10px] font-bold font-orbitron tracking-[0.3em] text-slate-400 uppercase">Operational Notes</legend>
            <div>
                <div class="flex items-baseline h-5 mb-1">
                    {{ form_label(form.note, null, { label_attr: { class: 'mb-0 text-slate-300 text-[10px] uppercase tracking-widest font-bold font-orbitron opacity-50' } }) }}
                </div>
                {{ form_widget(form.note, { attr: { class: 'textarea textarea-bordered w-full bg-slate-950/50 border-slate-700 h-24 focus:border-cyan-500/50 font-rajdhani', placeholder: 'Enter tactical notes here...' } }) }}
                {{ form_errors(form.note) }}
            </div>
        </fieldset>

        <div class="flex items-center justify-end gap-3 mb-10">
            <a href="{{ path('app_annual_budget_index') }}" class="btn btn-outline btn-sm font-orbitron uppercase text-[10px] tracking-widest">Abort Changes</a>
            <button type="submit" class="btn btn-primary px-8 font-orbitron uppercase text-[10px] tracking-widest font-bold shadow-lg shadow-cyan-500/10">
                Confirm Entry // Commit to Log
            </button>
        </div>

        {{ form_end(form, { render_rest: false }) }}


{% endblock %}
