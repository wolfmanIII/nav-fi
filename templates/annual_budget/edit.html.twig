{% extends 'base.html.twig' %}

{% block title %}Captain Log - Annual Budget{% endblock %}

{% block pageContent %}

    <div class="flex flex-col items-center gap-4">

        {{ form_start(form) }}

        <fieldset class="fieldset grid grid-cols-4 bg-base-200 border-base-300 gap-4 p-4 border rounded w-full">
            <legend class="fieldset-legend">Annual Budget</legend>

            {{ form_widget(form._token) }}

            <div class="col-span-4">
                <div class="relative overflow-hidden rounded-xl border border-cyan-500/30 bg-gradient-to-r from-slate-900 via-slate-800 to-cyan-900 shadow-lg">
                    <div class="absolute inset-0 opacity-30 mix-blend-screen pointer-events-none"
                         style="background: radial-gradient(circle at 20% 20%, rgba(59,130,246,0.25), transparent 35%), radial-gradient(circle at 80% 30%, rgba(14,165,233,0.25), transparent 35%);">
                    </div>
                    <div class="relative p-4 flex items-start gap-3">
                        <div class="p-3 rounded-lg bg-cyan-500/10 border border-cyan-400/40">
                            {% include 'icons/annual-budget.html.twig' %}
                        </div>
                        <div>
                            <p class="uppercase text-xs tracking-[0.25em] text-cyan-300/70">Mission window</p>
                            <h3 class="font-semibold text-cyan-100 text-xl leading-tight">Annual budget</h3>
                            <p class="text-sm text-cyan-100/80">Set start and end for the ship budget: plan credits and missions on the imperial calendar.</p>
                        </div>
                    </div>
                </div>
            </div>

            {% if form_errors(form) %}
                <div class="col-span-4">
                    <div class="alert alert-error alert-outline flex items-center gap-2">
                        <span class="animate-spin-slow">
                            {% include 'icons/radar.html.twig' %}
                        </span>
                        <div>
                            {{ form_errors(form) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if budget.id %}
                <div class="col-span-4">
                    <label class="label">Code</label>
                    <div><b>{{ budget.code }}</b></div>
                </div>
            {% endif %}

            <div class="col-span-4 grid grid-cols-2 gap-4">
                <div data-controller="imperial-date">
                    <div class="flex items-center gap-1">
                        {{ form_label(form.startDate) }}
                        {% if form.startDate.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                    </div>
                    {{ form_widget(form.startDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                    {{ form_widget(form.startDate.year) }}
                    {{ form_widget(form.startDate.day) }}
                    {{ form_errors(form.startDate) }}
                </div>

                <div data-controller="imperial-date">
                    <div class="flex items-center gap-1">
                        {{ form_label(form.endDate) }}
                        {% if form.endDate.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                    </div>
                    {{ form_widget(form.endDate.display, { attr: {'data-imperial-date-prev-icon': '«', 'data-imperial-date-next-icon': '»'} }) }}
                    {{ form_widget(form.endDate.year) }}
                    {{ form_widget(form.endDate.day) }}
                    {{ form_errors(form.endDate) }}
                </div>
            </div>

            <div class="col-span-4 grid grid-cols-1 gap-4">
                <div class="alert alert-info alert-outline shadow-sm mt-2">
                    <span class="flex items-center justify-center animate-spin-slow">
                        {% include 'icons/radar.html.twig' %}
                    </span>
                    <div class="text-xs text-slate-200">
                        Select a campaign to unlock the ship list for this budget.
                    </div>
                </div>
            </div>

            <div class="col-span-4 grid grid-cols-2 gap-4" data-controller="campaign-ship">
                <div>
                    <div class="flex items-center gap-1">
                        {{ form_label(form.campaign) }}
                        {% if form.campaign.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                    </div>
                    {{ form_widget(form.campaign) }}
                    {{ form_errors(form.campaign) }}
                </div>
                <div>
                    <div class="flex items-center gap-1">
                        {{ form_label(form.ship) }}
                        {% if form.ship.vars.required %}{% include 'icons/required.html.twig' %}{% endif %}
                    </div>
                    {{ form_widget(form.ship) }}
                    {{ form_errors(form.ship) }}
                </div>
            </div>

            <div class="col-span-4">
                {{ form_label(form.note) }}
                {{ form_widget(form.note) }}
                {{ form_errors(form.note) }}
            </div>

        </fieldset>

        <button type="submit" class="btn btn-outline btn-primary mt-4 mb-4 mr-4">
            Save
        </button>
        <a href="{{ path('app_annual_budget_index') }}" role="button" class="btn btn-outline btn-default mt-4 mb-4 mr-4">Cancel</a>

        {{ form_end(form, { render_rest: false }) }}

    </div>

{% endblock %}
