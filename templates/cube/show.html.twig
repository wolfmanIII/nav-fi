{% extends 'base.html.twig' %}

{% block layout_class %}bg-scifi-texture{% endblock %}

{% block title %}Contract Manifest #{{ opportunity.id }}{% endblock %}

{% block pageContent %}
<div class="max-w-4xl mx-auto space-y-6">

    {# HEADER / NAV #}
    <div class="flex justify-between items-center">
        <a href="{{ path('app_cube_index', {session_id: opportunity.session.id}) }}" class="btn btn-sm btn-outline border-slate-700 text-slate-400 hover:text-cyan-400 hover:border-cyan-500/50 uppercase font-orbitron text-[10px] tracking-widest group">
            <span class="group-hover:-translate-x-1 transition-transform mr-2">&larr;</span> Return
        </a>
        <div class="flex items-center gap-2 px-3 py-1 bg-slate-900 rounded border border-slate-800">
            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
            <span class="text-[9px] font-mono uppercase text-slate-500 tracking-wider">Secure Connection // {{ opportunity.session.seed }}</span>
        </div>
    </div>

    {# DIGITAL MANIFEST CARD #}
    <div class="card bg-slate-950 border border-slate-800 shadow-2xl overflow-hidden relative group">
        {# Decoration #}
        <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: radial-gradient(circle at 50% 50%, #22d3ee 1px, transparent 1px); background-size: 24px 24px;"></div>
        <div class="absolute top-0 right-0 w-48 h-48 bg-cyan-500/5 blur-[60px] pointer-events-none"></div>

        {# MANIFEST HEADER #}
        <div class="p-8 border-b border-slate-800 relative z-10 bg-slate-950/50 backdrop-blur-sm">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                <div>
                     <div class="flex items-center gap-3 mb-2">
                         <div class="p-2 rounded bg-cyan-500/10 border border-cyan-500/20 text-cyan-500">
                            {% include 'icons/cube.html.twig' with { dim: 20 } %}
                         </div>
                        <h1 class="text-2xl font-bold font-orbitron text-white tracking-wider flex items-center gap-2">
                            MANIFEST <span class="text-slate-700">#{{ '%06d'|format(opportunity.id) }}</span>
                        </h1>
                    </div>
                    <div class="flex items-center gap-3 text-xs font-mono text-cyan-400/60 uppercase tracking-[0.2em]">
                        <span>Trade Authority Standard</span>
                        <span class="text-slate-700">|</span>
                        <span>Digital Contract</span>
                    </div>
                </div>
                <div class="text-right">
                    {% if opportunity.data.type == 'TRADE' and opportunity.data.details.markup_estimate is defined %}
                        {% set revenue = opportunity.amount * opportunity.data.details.markup_estimate %}
                        <div class="inline-flex items-center gap-3 border border-amber-500/20 bg-amber-950/10 px-5 py-3 rounded-lg mr-2">
                             <div class="text-right leading-none">
                                  <div class="text-[10px] uppercase font-bold text-amber-600 tracking-widest mb-1">Est. Revenue</div>
                                 <div class="text-amber-400 font-bold font-mono text-xl">{{ revenue|format_number({ min_fraction_digit: 0, max_fraction_digit: 0 }, 'decimal', 'default', app.request.locale) }} <span class="text-sm align-top opacity-50 ml-1">Cr</span></div>
                             </div>
                         </div>
                    {% endif %}

                    <div class="inline-flex items-center gap-3 border border-emerald-500/20 bg-emerald-950/10 px-5 py-3 rounded-lg">
                        <div class="text-right leading-none">
                             <div class="text-[10px] uppercase font-bold text-emerald-600 tracking-widest mb-1">Total Value</div>
                            <div class="text-emerald-400 font-bold font-mono text-2xl drop-shadow-[0_0_8px_rgba(16,185,129,0.3)]">{{ opportunity.amount|format_number({ min_fraction_digit: 0, max_fraction_digit: 0 }, 'decimal', 'default', app.request.locale) }} <span class="text-sm align-top opacity-50 ml-1">Cr</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# MANIFEST BODY #}
        <div class="p-8 grid grid-cols-1 lg:grid-cols-3 gap-8 relative z-10">
            
            {# LEFT COL: Route & Meta #}
            <div class="space-y-8">
                {# Route Visualizer #}
                <div class="relative pl-6 border-l-2 border-slate-800 space-y-6">
                     {# Origin #}
                    <div class="relative">
                        <div class="absolute -left-[29px] top-1 w-3 h-3 rounded-full bg-slate-800 border-2 border-slate-600"></div>
                        <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Origin</label>
                        <div class="text-white font-mono text-sm">{{ opportunity.data.details.origin|default('Unknown') }}</div>
                        <div class="text-[10px] text-slate-600 font-mono">HEX {{ opportunity.session.originHex }}</div>
                    </div>
                    
                    {# Destination #}
                    <div class="relative">
                        <div class="absolute -left-[29px] top-1 w-3 h-3 rounded-full bg-cyan-900 border-2 border-cyan-500 animate-pulse"></div>
                        <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Destination</label>
                        <div class="text-cyan-300 font-mono text-lg font-bold">{{ opportunity.data.details.destination|default('Unknown') }}</div>
                        <div class="text-xs text-cyan-500/70 font-mono mt-0.5">HEX {{ opportunity.data.details.dest_hex|default('????') }}</div>
                    </div>
                </div>

                {# Meta Stats #}
                <div class="grid grid-cols-2 gap-4 pt-4 border-t border-slate-800/50">
                    <div>
                        <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Distance</label>
                        <div class="text-white font-mono">{{ opportunity.data.distance|default('-') }} PC</div>
                    </div>
                    <div>
                         <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Type</label>
                        <div class="inline-block px-2 py-0.5 rounded bg-slate-800 text-slate-300 text-[10px] uppercase font-bold tracking-wider">
                            {{ opportunity.data.type }}
                        </div>
                    </div>
                </div>
            </div>

            {# RIGHT COL: Manifest Details #}
            <div class="lg:col-span-2 space-y-6">
                 <div>
                    <div class="flex items-center justify-between mb-4">
                        <label class="text-[10px] uppercase tracking-widest text-slate-500 font-bold">Cargo Manifest</label>
                         {% if opportunity.data.signature is defined %}
                            <div class="text-[9px] font-mono text-emerald-500/70 border border-emerald-500/20 px-2 py-0.5 rounded flex items-center gap-1">
                                <span>VERIFIED SIG:</span>
                                <span class="bg-emerald-500/10 px-1">{{ opportunity.data.signature|slice(0, 8) }}</span>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="bg-slate-900/40 border border-slate-800 rounded-lg p-5 font-mono text-sm leading-relaxed text-slate-300 relative overflow-hidden">
                        <div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
                             {% include 'icons/cube.html.twig' with { dim: 128 } %}
                        </div>

                        {# Narrative Header #}
                        <div class="mb-6 border-b border-slate-800 pb-4">
                            {% if opportunity.data.details.difficulty is defined %}
                            <div class="flex items-center gap-2 mb-2">
                                <span class="px-2 py-0.5 rounded text-[10px] uppercase font-bold tracking-widest
                                    {% if opportunity.data.details.difficulty == 'Black Ops' %}bg-rose-950 text-rose-500 border border-rose-900
                                    {% elseif opportunity.data.details.difficulty == 'Hazardous' %}bg-amber-950 text-amber-500 border border-amber-900
                                    {% else %}bg-emerald-950 text-emerald-500 border border-emerald-900{% endif %}">
                                    {{ opportunity.data.details.difficulty|default('Standard') }}
                                </span>
                                <span class="text-[10px] font-mono text-slate-500 uppercase">Risk Assessment</span>
                            </div>
                            {% endif %}
                            
                            <p class="text-white text-lg font-bold font-orbitron tracking-wide mb-2">{{ opportunity.summary }}</p>

                            {# Rich Briefing Block #}
                            {% if opportunity.data.details.briefing is defined %}
                                <div class="p-4 bg-slate-950 border border-slate-800 rounded text-sm text-cyan-100 font-mono leading-relaxed mb-4 relative group">
                                    <div class="absolute top-0 right-0 w-2 h-2 border-t border-r border-cyan-500/50"></div>
                                    <div class="absolute bottom-0 left-0 w-2 h-2 border-b border-l border-cyan-500/50"></div>
                                    <strong class="block text-[10px] uppercase tracking-widest text-slate-500 mb-1">Mission Briefing</strong>
                                    {{ opportunity.data.details.briefing }}
                                </div>
                            {% endif %}
                            
                            {% if opportunity.data.details.twist is defined and opportunity.data.details.twist != 'None' %}
                                <div class="mt-3 p-3 bg-rose-500/10 border border-rose-500/20 rounded text-xs text-rose-400 font-mono relative overflow-hidden">
                                    <div class="absolute inset-0 bg-rose-500/5 animate-pulse pointer-events-none"></div>
                                    <strong class="text-rose-500 uppercase tracking-widest mr-2 glitch-text relative z-10">Intelligence Update:</strong>
                                    <span class="relative z-10 glitch-text">{{ opportunity.data.details.twist }}</span>
                                </div>
                            {% endif %}
                        </div>
                        
                        {# Dynamic Details Grid #}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4 text-xs relative z-10">
                            {% for key, value in opportunity.data.details %}
                                {% if key not in ['origin', 'destination', 'dest_hex', 'dest_dist', 'difficulty', 'mission_type', 'twist', 'tier', 'briefing', 'patron', 'company_id', 'variables'] %}
                                    <div class="flex items-baseline justify-between border-b border-dashed border-slate-800 pb-1">
                                        <span class="text-slate-500 uppercase tracking-wider text-[10px]">{{ key|replace({'_': ' '}) }}</span>
                                        <span class="text-cyan-100 font-bold text-right">
                                            {% if value is iterable %}
                                                {{ value|json_encode }}
                                            {% else %}
                                                {{ value }}
                                            {% endif %}
                                        </span>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        <div class="mt-8 pt-4 flex items-center justify-between text-[9px] text-slate-600 font-mono uppercase tracking-widest">
                            <span>Timestamp: {{ opportunity.createdAt|date("Y.m.d H:i:s") }}</span>
                            <span>Auth: TAS-{{ opportunity.id }}</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        {# FOOTER ACTIONS #}
        <div class="bg-slate-950/80 border-t border-slate-800 p-6 flex justify-between items-center relative z-10 backdrop-blur-sm">
            <a href="{{ path('app_cube_index', {session_id: opportunity.session.id}) }}" class="btn btn-outline border-slate-700 text-slate-500 hover:text-cyan-400 hover:border-cyan-500/50 uppercase font-orbitron text-[10px] tracking-widest group">
                <span class="group-hover:-translate-x-1 transition-transform mr-2">&larr;</span> Return
            </a>

            <div class="flex gap-3">
                {% if opportunity.status != 'CONVERTED' %}
                <button onclick="document_accept_modal.showModal()" class="btn bg-emerald-900/20 border border-emerald-500/50 text-emerald-400 hover:bg-emerald-500 hover:text-black uppercase font-orbitron font-bold tracking-[0.2em] text-[10px] shadow-[0_0_15px_rgba(16,185,129,0.2)] hover:shadow-[0_0_25px_rgba(16,185,129,0.6)] transition-all px-8">
                    Accept Contract
                </button>
                {% else %}
                 <button disabled class="btn btn-disabled border-slate-800 text-slate-600 uppercase font-orbitron font-bold tracking-[0.2em] text-[10px]">
                    Contract Signed
                </button>
                {% endif %}
            </div>
        </div>
    </div>

    {# ACCEPTANCE MODAL #}
    <dialog id="document_accept_modal" class="modal bg-black/80 backdrop-blur-sm">
        <div class="modal-box bg-slate-900 border border-emerald-500/30 shadow-[0_0_50px_rgba(16,185,129,0.1)] max-w-lg">
            <h3 class="font-bold text-lg text-emerald-400 font-orbitron uppercase tracking-wider mb-4">Confirm Acceptance</h3>
            
            <form method="POST" action="{{ path('app_cube_contract_accept', {id: opportunity.id}) }}">
                <p class="py-4 text-slate-300">Select the Asset responsible for this contract. <br>
                <span class="text-xs text-slate-500">Financial records will be attached to this asset.</span>
                </p>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div class="form-control w-full">
                        <label class="label">
                            <span class="label-text text-slate-400 text-xs uppercase font-bold">Target Asset</span>
                        </label>
                        <select name="asset_id" class="select select-bordered bg-slate-950 border-slate-700 text-white w-full" required>
                            <option value="" disabled selected>// Select Ship</option>
                            {% for asset in assets %}
                                <option value="{{ asset.id }}">{{ asset.name }} ({{ asset.type }})</option>
                            {% endfor %}
                        </select>
                    </div>

                    {% if opportunity.data.type != 'TRADE' %}
                        {% set dateLabel = 'Date' %}
                        {% if opportunity.data.type == 'FREIGHT' %}{% set dateLabel = 'Pickup Date' %}
                        {% elseif opportunity.data.type == 'PASSENGERS' %}{% set dateLabel = 'Departure Date' %}
                        {% elseif opportunity.data.type == 'MAIL' %}{% set dateLabel = 'Dispatch Date' %}
                        {% elseif opportunity.data.type == 'CONTRACT' %}{% set dateLabel = 'Start Date' %}{% endif %}

                        <div class="form-control w-full">
                             <label class="label">
                                <span class="label-text text-slate-400 text-xs uppercase font-bold">{{ dateLabel }}</span>
                            </label>
                            <div class="flex gap-2" data-controller="imperial-date">
                                <input type="text" class="input input-bordered bg-slate-950 border-slate-700 text-white w-full cursor-pointer" 
                                       readonly
                                       placeholder="Select Date"
                                       data-imperial-date-target="display"
                                       data-action="click->imperial-date#toggle"
                                       data-imperial-date-initial-day="{{ opportunity.data.details.start_day|default(1) }}"
                                       data-imperial-date-initial-year="{{ opportunity.data.details.start_year|default(1105) }}">
                                
                                <input type="hidden" name="day" data-imperial-date-target="day" value="{{ opportunity.data.details.start_day|default(1) }}">
                                <input type="hidden" name="year" data-imperial-date-target="year" value="{{ opportunity.data.details.start_year|default(1105) }}" data-min-year="1100" data-max-year="1200">
                            </div>
                            <div class="text-[9px] text-slate-500 mt-1 uppercase font-mono">Mission Timeline Adjustment</div>
                        </div>
                    {% endif %}
                </div>

                {% if opportunity.data.type == 'CONTRACT' %}
                    <div class="form-control w-full mb-6 p-4 bg-slate-950/50 border border-slate-800 rounded-lg">
                        <label class="label pt-0">
                            <span class="label-text text-slate-400 text-[10px] uppercase font-bold tracking-widest">Optional: Contract Deadline</span>
                        </label>
                        <div class="flex gap-2" data-controller="imperial-date">
                            <input type="text" class="input input-bordered input-sm bg-slate-900 border-slate-800 text-white w-full cursor-pointer" 
                                   readonly
                                   placeholder="Select Deadline"
                                   data-imperial-date-target="display"
                                   data-action="click->imperial-date#toggle"
                                   data-imperial-date-initial-day=""
                                   data-imperial-date-initial-year="{{ opportunity.data.details.start_year|default(1105) }}">

                            <input type="hidden" name="deadline_day" data-imperial-date-target="day">
                            <input type="hidden" name="deadline_year" data-imperial-date-target="year" value="{{ opportunity.data.details.start_year|default(1105) }}" data-min-year="1100" data-max-year="1200">
                        </div>
                        <div class="text-[9px] text-slate-600 mt-2 italic">Leave empty if no strict deadline is enforced by the patron.</div>
                    </div>
                {% endif %}

                {% if opportunity.data.details.patron is defined %}
                    <div class="form-control w-full mb-6 p-4 bg-slate-950/50 border border-slate-800 rounded-lg">
                        <label class="label pt-0">
                            <span class="label-text text-slate-400 text-[10px] uppercase font-bold tracking-widest">Counterparty Registration</span>
                        </label>
                        <div class="flex flex-col gap-3">
                            <div class="flex items-center gap-3">
                                <div class="px-3 py-2 bg-slate-900 border border-slate-700 rounded text-cyan-400 font-mono text-xs flex-1">
                                    {{ opportunity.data.details.patron }}
                                </div>
                                <div class="text-[9px] text-slate-500 uppercase font-bold">Patron Name</div>
                            </div>
                            
                            {% if existingPatron %}
                                <div class="p-3 bg-emerald-900/10 border border-emerald-500/20 rounded flex items-center justify-between">
                                    <div class="flex flex-col">
                                        <span class="text-[9px] text-emerald-500 uppercase font-bold tracking-widest">Recognized Entity</span>
                                        <span class="text-xs text-white">{{ existingPatron.name }}</span>
                                    </div>
                                    <div class="text-[10px] bg-emerald-500/10 text-emerald-400 px-2 py-0.5 rounded border border-emerald-500/20">
                                        {{ existingPatron.companyRole.shortDescription|default(existingPatron.companyRole.code) }}
                                    </div>
                                </div>
                                <input type="hidden" name="patron_company_id" value="{{ existingPatron.id }}">
                                <div class="text-[9px] text-slate-500 italic">This patron is already in your ledger. It will be linked automatically.</div>
                            {% else %}
                                <select name="patron_role_id" class="select select-bordered select-sm bg-slate-900 border-slate-800 text-white w-full">
                                    <option value="" selected>// Register as Company? (Select Role)</option>
                                    {% for role in companyRoles %}
                                        <option value="{{ role.id }}">{{ role.shortDescription|default(role.code) }}</option>
                                    {% endfor %}
                                </select>
                                <div class="text-[9px] text-slate-600 italic">If a role is selected, a new Company entity will be created automatically.</div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                <div class="form-control w-full mb-6">
                    <label class="label">
                        <span class="label-text text-slate-400 text-xs uppercase font-bold">Local Law (Jurisdiction)</span>
                    </label>
                    <select name="localLaw" class="select select-bordered bg-slate-950 border-slate-700 text-white w-full" required>
                        <option value="" disabled selected>// Select Current System Law</option>
                        {% for law in localLaws %}
                             <option value="{{ law.id }}">{{ law.shortDescription|default(law.code) }}</option>
                        {% endfor %}
                    </select>
                </div>

                {% if opportunity.data.type == 'TRADE' %}
                <div class="alert bg-amber-950/30 border border-amber-500/20 text-amber-200 text-xs mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-4 w-4" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                    <span>Warning: Accepting this trade will immediately deduct <strong>{{ opportunity.amount|format_number({ min_fraction_digit: 0, max_fraction_digit: 0 }, 'decimal', 'default', app.request.locale) }} Cr</strong> from the asset's account.</span>
                </div>
                {% endif %}

                <div class="modal-action flex justify-between">
                    <button type="button" class="btn btn-ghost hover:bg-slate-800 text-slate-400" onclick="document_accept_modal.close()">Cancel</button>
                    <button type="submit" class="btn bg-emerald-600 hover:bg-emerald-500 text-white border-0 font-orbitron tracking-widest text-xs">Sign & Execute</button>
                </div>
            </form>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>

</div>
{% endblock %}
