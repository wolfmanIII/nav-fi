{% extends 'base.html.twig' %}

{% block title %}Contract Manifest #{{ opportunity.id }}{% endblock %}

{% block pageContent %}
<div class="max-w-4xl mx-auto space-y-6">

    {# HEADER / NAV #}
    <div class="flex justify-between items-center">
        <a href="{{ path('app_cube_index', {session_id: opportunity.session.id}) }}" class="flex items-center gap-2 text-slate-400 hover:text-cyan-400 transition-colors uppercase text-xs font-bold tracking-widest font-mono group">
            <span class="group-hover:-translate-x-1 transition-transform">&larr;</span> Back to Console
        </a>
        <div class="flex items-center gap-2 px-3 py-1 bg-slate-900 rounded border border-slate-800">
            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
            <span class="text-[9px] font-mono uppercase text-slate-500 tracking-wider">Secure Connection // {{ opportunity.session.seed }}</span>
        </div>
    </div>

    {# DIGITAL MANIFEST CARD #}
    <div class="card bg-slate-950 border border-slate-800 shadow-2xl overflow-hidden relative group">
        {# Decoration #}
        <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: radial-gradient(circle at 50% 50%, #22d3ee 1px, transparent 1px); background-size: 24px 24px;"></div>
        <div class="absolute top-0 right-0 w-48 h-48 bg-cyan-500/5 blur-[60px] pointer-events-none"></div>

        {# MANIFEST HEADER #}
        <div class="p-8 border-b border-slate-800 relative z-10 bg-slate-950/50 backdrop-blur-sm">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                <div>
                     <div class="flex items-center gap-3 mb-2">
                         <div class="p-2 rounded bg-cyan-500/10 border border-cyan-500/20 text-cyan-500">
                            {% include 'icons/cube.html.twig' with { dim: 20 } %}
                         </div>
                        <h1 class="text-2xl font-bold font-orbitron text-white tracking-wider flex items-center gap-2">
                            MANIFEST <span class="text-slate-700">#{{ '%06d'|format(opportunity.id) }}</span>
                        </h1>
                    </div>
                    <div class="flex items-center gap-3 text-xs font-mono text-cyan-400/60 uppercase tracking-[0.2em]">
                        <span>Trade Authority Standard</span>
                        <span class="text-slate-700">|</span>
                        <span>Digital Contract</span>
                    </div>
                </div>
                <div class="text-right">
                    <div class="inline-flex items-center gap-3 border border-emerald-500/20 bg-emerald-950/10 px-5 py-3 rounded-lg">
                        <div class="text-right leading-none">
                             <div class="text-[10px] uppercase font-bold text-emerald-600 tracking-widest mb-1">Total Value</div>
                            <div class="text-emerald-400 font-bold font-mono text-2xl drop-shadow-[0_0_8px_rgba(16,185,129,0.3)]">{{ opportunity.amount|number_format }} <span class="text-sm align-top opacity-50 ml-1">Cr</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# MANIFEST BODY #}
        <div class="p-8 grid grid-cols-1 lg:grid-cols-3 gap-8 relative z-10">
            
            {# LEFT COL: Route & Meta #}
            <div class="space-y-8">
                {# Route Visualizer #}
                <div class="relative pl-6 border-l-2 border-slate-800 space-y-6">
                     {# Origin #}
                    <div class="relative">
                        <div class="absolute -left-[29px] top-1 w-3 h-3 rounded-full bg-slate-800 border-2 border-slate-600"></div>
                        <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Origin</label>
                        <div class="text-white font-mono text-sm">{{ opportunity.data.details.origin|default('Unknown') }}</div>
                        <div class="text-[10px] text-slate-600 font-mono">{{ opportunity.session.originHex }}</div>
                    </div>
                    
                    {# Destination #}
                    <div class="relative">
                        <div class="absolute -left-[29px] top-1 w-3 h-3 rounded-full bg-cyan-900 border-2 border-cyan-500 animate-pulse"></div>
                        <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Destination</label>
                        <div class="text-cyan-300 font-mono text-lg font-bold">{{ opportunity.data.details.destination|default('Unknown') }}</div>
                        <div class="text-xs text-cyan-500/70 font-mono mt-0.5">HEX {{ opportunity.data.details.dest_hex|default('????') }}</div>
                    </div>
                </div>

                {# Meta Stats #}
                <div class="grid grid-cols-2 gap-4 pt-4 border-t border-slate-800/50">
                    <div>
                        <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Distance</label>
                        <div class="text-white font-mono">{{ opportunity.data.distance|default('-') }} PC</div>
                    </div>
                    <div>
                         <label class="block text-[9px] uppercase tracking-widest text-slate-500 font-bold mb-1">Type</label>
                        <div class="inline-block px-2 py-0.5 rounded bg-slate-800 text-slate-300 text-[10px] uppercase font-bold tracking-wider">
                            {{ opportunity.data.type }}
                        </div>
                    </div>
                </div>
            </div>

            {# RIGHT COL: Manifest Details #}
            <div class="lg:col-span-2 space-y-6">
                 <div>
                    <div class="flex items-center justify-between mb-4">
                        <label class="text-[10px] uppercase tracking-widest text-slate-500 font-bold">Cargo Manifest</label>
                         {% if opportunity.data.signature is defined %}
                            <div class="text-[9px] font-mono text-emerald-500/70 border border-emerald-500/20 px-2 py-0.5 rounded flex items-center gap-1">
                                <span>VERIFIED SIG:</span>
                                <span class="bg-emerald-500/10 px-1">{{ opportunity.data.signature|slice(0, 8) }}</span>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="bg-slate-900/40 border border-slate-800 rounded-lg p-5 font-mono text-sm leading-relaxed text-slate-300 relative overflow-hidden">
                        <div class="absolute top-0 right-0 p-4 opacity-5 pointer-events-none">
                             {% include 'icons/cube.html.twig' with { dim: 128 } %}
                        </div>

                        {# Narrative Header #}
                        <div class="mb-6 border-b border-slate-800 pb-4">
                            {% if opportunity.data.details.difficulty is defined %}
                            <div class="flex items-center gap-2 mb-2">
                                <span class="px-2 py-0.5 rounded text-[10px] uppercase font-bold tracking-widest
                                    {% if opportunity.data.details.difficulty == 'Black Ops' %}bg-rose-950 text-rose-500 border border-rose-900
                                    {% elseif opportunity.data.details.difficulty == 'Hazardous' %}bg-amber-950 text-amber-500 border border-amber-900
                                    {% else %}bg-emerald-950 text-emerald-500 border border-emerald-900{% endif %}">
                                    {{ opportunity.data.details.difficulty|default('Standard') }}
                                </span>
                                <span class="text-[10px] font-mono text-slate-500 uppercase">Risk Assessment</span>
                            </div>
                            {% endif %}
                            <p class="text-white text-lg font-bold font-orbitron tracking-wide">{{ opportunity.summary }}</p>
                            
                            {% if opportunity.data.details.twist is defined and opportunity.data.details.twist != 'None' %}
                                <div class="mt-3 p-3 bg-rose-500/10 border border-rose-500/20 rounded text-xs text-rose-400 font-mono">
                                    <strong class="text-rose-500 uppercase tracking-widest mr-2">Inte-lligence Update:</strong>
                                    {{ opportunity.data.details.twist }}
                                </div>
                            {% endif %}
                        </div>
                        
                        {# Dynamic Details Grid #}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4 text-xs relative z-10">
                            {% for key, value in opportunity.data.details %}
                                {% if key not in ['origin', 'destination', 'dest_hex', 'dest_dist', 'difficulty', 'mission_type', 'twist', 'tier'] %}
                                    <div class="flex items-baseline justify-between border-b border-dashed border-slate-800 pb-1">
                                        <span class="text-slate-500 uppercase tracking-wider text-[10px]">{{ key|replace({'_': ' '}) }}</span>
                                        <span class="text-cyan-100 font-bold text-right">
                                            {% if value is iterable %}
                                                {{ value|json_encode }}
                                            {% else %}
                                                {{ value }}
                                            {% endif %}
                                        </span>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        <div class="mt-8 pt-4 flex items-center justify-between text-[9px] text-slate-600 font-mono uppercase tracking-widest">
                            <span>Timestamp: {{ opportunity.createdAt|date("Y.m.d H:i:s") }}</span>
                            <span>Auth: TAS-{{ opportunity.id }}</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        {# FOOTER ACTIONS #}
        <div class="bg-slate-950/80 border-t border-slate-800 p-6 flex justify-between items-center relative z-10 backdrop-blur-sm">
            <button class="btn btn-ghost btn-sm text-slate-500 hover:text-rose-400 uppercase font-mono text-[10px] tracking-widest" data-action="cube#unsave" data-cube-id-param="{{ opportunity.id }}">
                <i class="lucide-trash-2 w-3 h-3 mr-2"></i> Delete & Return
            </button>

            <div class="flex gap-3">
                 <button class="btn btn-outline border-slate-700 text-slate-400 hover:text-white hover:border-slate-500 uppercase font-orbitron text-[10px] tracking-widest">
                    <i class="lucide-printer w-3 h-3 mr-2"></i> Print Pdf
                </button>
                <button class="btn btn-primary px-6 font-orbitron font-bold uppercase tracking-widest shadow-lg shadow-cyan-500/20 group">
                    <span class="group-hover:hidden">Attach to Mission</span>
                    <span class="hidden group-hover:inline">Select Campaign</span>
                    <i class="lucide-chevron-right w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"></i>
                </button>
            </div>
        </div>
    </div>

</div>
{% endblock %}
