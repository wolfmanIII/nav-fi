{% extends 'base.html.twig' %}

{% block title %}Contract Manifest #{{ opportunity.id }}{% endblock %}

{% block pageContent %}
<div class="max-w-4xl mx-auto space-y-6">

    <!-- Header / Nav -->
    <div class="flex justify-between items-center">
        <a href="{{ path('app_cube_index') }}" class="flex items-center gap-2 text-slate-400 hover:text-cyan-400 transition-colors uppercase text-xs font-bold tracking-widest font-mono">
            <i class="lucide-arrow-left w-4 h-4"></i> Back to Console
        </a>
        <div class="flex items-center gap-2 px-3 py-1 bg-slate-900 rounded border border-slate-800">
            <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
            <span class="text-[10px] font-mono uppercase text-slate-400">Secure Connection</span>
        </div>
    </div>

    <!-- Digital Manifest Card -->
    <div class="card bg-slate-950 border border-slate-800 shadow-2xl overflow-hidden relative group">
        <!-- Decoration -->
        <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: radial-gradient(circle at 50% 50%, #22d3ee 1px, transparent 1px); background-size: 24px 24px;"></div>
        <div class="absolute top-0 right-0 w-32 h-32 bg-cyan-500/10 blur-[50px] pointer-events-none"></div>

        <!-- Manifest Header -->
        <div class="p-8 border-b border-slate-800 relative z-10">
            <div class="flex justify-between items-start">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        {% include 'icons/cube.html.twig' with { dim: 24, class: 'text-cyan-500' } %}
                        <h1 class="text-2xl font-bold font-orbitron text-white tracking-wider flex items-center gap-2">
                            MANIFEST <span class="text-slate-600">//#{{ '%06d'|format(opportunity.id) }}</span>
                        </h1>
                    </div>
                    <p class="text-xs font-mono text-cyan-400/60 uppercase tracking-[0.2em]">Trade Authority Standard // Digital Contract</p>
                </div>
                <div class="text-right">
                    <div class="inline-flex items-center gap-2 border border-emerald-500/30 bg-emerald-950/20 px-4 py-2 rounded">
                        <span class="text-emerald-400 font-bold font-mono text-xl">{{ opportunity.amount|number_format }}</span>
                        <span class="text-[10px] uppercase font-bold text-emerald-600">Credits</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Manifest Body -->
        <div class="p-8 grid grid-cols-1 md:grid-cols-3 gap-8 relative z-10">
            
            <!-- Left Column: Route Info -->
            <div class="space-y-6">
                <div>
                    <label class="block text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">Contract Type</label>
                    <div class="text-lg font-rajdhani font-bold text-amber-100">{{ opportunity.data.type }}</div>
                </div>
                
                <div class="relative pl-4 border-l-2 border-slate-800">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">Origin</label>
                            <div class="text-brand-white font-mono">{{ opportunity.data.origin|default('Unknown') }}</div>
                        </div>
                        
                        <!-- Connector -->
                        <div class="w-px h-4 bg-slate-700 ml-1"></div>

                        <div>
                            <label class="block text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">Destination</label>
                            <div class="text-cyan-300 font-mono">{{ opportunity.data.destination|default('Unknown') }}</div>
                            <div class="text-[10px] text-slate-600 font-mono mt-0.5">{{ opportunity.data.dest_hex|default('????') }} // {{ opportunity.data.distance }} PC</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Middle Column: Cargo/Pax Details -->
            <div class="md:col-span-2 space-y-6">
                 <div>
                    <label class="block text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-2">Manifest Details</label>
                    <div class="bg-slate-900/50 border border-slate-800 rounded p-4 font-mono text-sm leading-relaxed text-slate-300">
                        <p class="mb-2 text-white font-bold">{{ opportunity.summary }}</p>
                        
                        <!-- Dynamic Details Table -->
                        <div class="grid grid-cols-2 gap-y-2 mt-4 text-xs">
                            {% for key, value in opportunity.data %}
                                {% if key not in ['type', 'origin', 'destination', 'dest_hex', 'summary', 'distance', 'signature'] %}
                                    <div class="text-slate-500 uppercase">{{ key|replace({'_': ' '}) }}</div>
                                    <div class="text-slate-200">
                                        {% if value is iterable %}
                                            {{ value|json_encode }}
                                        {% else %}
                                            {{ value }}
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        <div class="mt-6 pt-4 border-t border-slate-800/50 flex items-center justify-between text-[10px] text-slate-600">
                            <span>SIG: {{ opportunity.data.signature|default('UNSIGNED') }}</span>
                            <span>TS: {{ "now"|date("Y.m.d H:i:s") }}</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Footer Actions -->
        <div class="bg-slate-950/80 border-t border-slate-800 p-6 flex justify-between items-center relative z-10 backdrop-blur-sm">
            <button class="btn btn-outline btn-sm border-slate-700 text-slate-500 hover:text-rose-400 hover:border-rose-500/50 hover:bg-rose-950/10 font-mono uppercase text-[10px] tracking-widest">
                <i class="lucide-trash-2 w-3 h-3 mr-2"></i> Archive Only
            </button>

            <button class="btn btn-primary px-8 font-orbitron font-bold uppercase tracking-widest shadow-lg shadow-cyan-500/20 group">
                <span class="group-hover:hidden">Awaiting Execution</span>
                <span class="hidden group-hover:inline">Select for Route</span>
                <i class="lucide-chevron-right w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"></i>
            </button>
        </div>
    </div>

</div>
{% endblock %}
